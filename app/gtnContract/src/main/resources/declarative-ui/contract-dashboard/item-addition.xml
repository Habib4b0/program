
<VerticalLayout styleName="custom-margin" caption="ItemAddition" width="100%" height="100%"  xmlns:ef="urn:import:org.asi.ui.extfilteringtable">
    <HorizontalLayout id="hlayout" spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
        <CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%">
            <OptionGroup id="searchType" enabled="true" /> 
            <Label value="Search Field"  contentMode="HTML" immediate="true"  />
            <ComboBox id="searchFields" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One-" immediate="true" />          
            <Label value="Value"  contentMode="HTML" immediate="true"   />
            <TextField id="searchValue" enabled="true" immediate="true" />
            <ComboBox id="valueList" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One-" immediate="true" />            
            <Button id="searchBtn" caption="Search" immediate="true" width="80" />
        </CssLayout>
    </HorizontalLayout>
    <Label value=" " />

    <HorizontalLayout id="hlayout2" styleName="dataTransferGridForIFP" spacing="false" margin="false" immediate="true">
        <CssLayout spacing="true" immediate="true" width="100%" height="100%">
            <VerticalLayout id="availableTableLayout">                
            </VerticalLayout>           
            <HorizontalLayout immediate="true" styleName="move-button-group-allignment-ifp">
                <CssLayout  immediate="true" styleName="NavButtonsForIFP" >
                    <Button id="btnMove"  caption="&gt;" immediate="true" width="70px" />
                    <Button id="btnRemove"  caption="&lt;" immediate="true" width="70px" />
                    <Button id="btnMoveAll"  caption="&gt;&gt;" immediate="true" width="70px" />
                    <Button id="btnRemoveAll"  caption="&lt;&lt;" immediate="true" width="70px" />
                </CssLayout>
            </HorizontalLayout>         
            <VerticalLayout id="selectedTableLayout">           
            </VerticalLayout>            
        </CssLayout>
    </HorizontalLayout>
    <VerticalLayout id="viewSelectedTableLayout" spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
        <HorizontalLayout id="controlLayout"/>
    </VerticalLayout>
</VerticalLayout>           
