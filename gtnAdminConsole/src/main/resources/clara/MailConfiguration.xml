<VerticalLayout styleName="responsiveTabGrid" xmlns:el="urn:import:com.stpl.app.ui.errorhandling">
<el:ErrorLabel id="errorMsg" />      
    <Panel caption="Mail Server Configuration">
            <VerticalLayout>
                     <HorizontalLayout margin="false">
                               <CssLayout>
                     <Label id="labelusesmtp" value="SMTP" contentMode="HTML" stylename="mandatory" width="160px"/>
                      <ComboBox id="usesmtp" inputPrompt="" />
                        </CssLayout>
                      </HorizontalLayout>
                          <HorizontalLayout margin="false">
                               <CssLayout>
                           <Label id="labelhostname" value="Host Name" contentMode="HTML" stylename="mandatory" width="160px"/>
                      <TextField id="hostname" inputPrompt="" />
                       </CssLayout>
                       </HorizontalLayout>
                      <HorizontalLayout margin="false">
                          <CssLayout>
                     <Label id="labelemail" value="Email Address" contentMode="HTML" stylename="mandatory" width="160px"/>
                      <TextField id="email" inputPrompt="" />
                          </CssLayout>
                      </HorizontalLayout>
                      
                   <HorizontalLayout margin="false">
                   <CssLayout>
                       <Label id="labelpassword" value="Password" contentMode="HTML" width="160px"/>
                      <PasswordField id="password" inputPrompt="" height="25px" width="200px"/>
                   </CssLayout>
                   </HorizontalLayout>
                     <HorizontalLayout margin="false">
                         <CssLayout>
                      <Label id="labelportno" value="Port Number" contentMode="HTML" stylename="mandatory" width="160px"/>
                      <TextField id="portno" inputPrompt="" />
                         </CssLayout>
                     </HorizontalLayout>
                     <HorizontalLayout margin="false">
                         <CssLayout>
                      <Label id="labeltestmailadd" value="Test Mail Address" contentMode="HTML" width="160px"/>
                      <TextField id="testmailadd" inputPrompt="" />
                         </CssLayout>
                  </HorizontalLayout>  
<!--            <HorizontalLayout id="testMailLayout" margin="true">
            <Button id="testmail" caption="Test Mail"/>
            </HorizontalLayout>-->
                <HorizontalLayout margin="true" id="hlayout" styleName="responsiveTabGrid">
                    <Button id="savebtn" caption="Save" immediate="true"/>
                    <!--<Button id="editbtn" caption="Edit" immediate="true"/>-->
                    <Button id="viewbtn" caption="View" immediate="true"/>
                </HorizontalLayout>
                <HorizontalLayout id="horizonallayout" margin="true" styleName="responsiveTabGrid">
                    <Button id="backbtn" caption="Back" immediate="true"/>
                </HorizontalLayout>
            </VerticalLayout>
    </Panel>
</VerticalLayout>