<VerticalLayout margin="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield">
    
    <HorizontalLayout id="hLayout" styleName="responsiveTabGrid">
        <CssLayout id="cssLayout" width="100%" height="100%">
        
            <Label id="companyFamilyPlanIdLB" value="CFP ID" styleName= "mandatory" contentMode="HTML" />
            <TextField id="companyFamilyPlanId" inputPrompt="" />
        
            <Label id="companyFamilyPlanNoLB" value="CFP No" styleName= "mandatory" contentMode="HTML" />
            <TextField id="companyFamilyPlanNo" inputPrompt="" />
        
            <Label id="companyFamilyPlanNameLB" value="CFP Name" styleName= "mandatory" contentMode="HTML" />
            <TextField id="companyFamilyPlanName" inputPrompt="" />
        
        
            <Label id="companyFamilyPlanStatusLB" value="CFP Status" styleName= "mandatory" contentMode="HTML" />
            <ComboBox id="companyFamilyPlanStatus" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 


            <Label id="companyFamilyPlanStartDateLB" value="CFP Start Date" styleName= "mandatory" contentMode="HTML" />
            <PopupDateField id="companyFamilyPlanStartDate" />  
                    
                    
            <Label id="companyFamilyPlanEndDateLB" value="CFP End Date"
        contentMode="HTML" />
            <PopupDateField id="companyFamilyPlanEndDate" />  
                    
                    
            <Label id="companyFamilyPlanTypeLB" value="CFP Type" contentMode="HTML" />
            <ComboBox id="companyFamilyPlanType" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                              
            <Label id="companyFamilyPlanCategoryLB" value="CFP Category" contentMode="HTML" />
            <ComboBox id="companyFamilyPlanCategory" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" />
                              
                                                  
            <Label id="companyFamilyPlanTradeClassLB" value="CFP Trade Class" contentMode="HTML" />
            <ComboBox id="companyFamilyPlanTradeClass" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                              
            <Label id="companyFamilyPlanDesignationLB" value="CFP Designation" contentMode="HTML" />
            <ComboBox id="companyFamilyPlanDesignation" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" />     
                                         
            <Label id="parentCompanyFamilyPlanIdLB" value="Parent CFP ID" contentMode="HTML"  />
            <b:CustomTextField id="parentCompanyFamilyPlanId" styleName="searchicon" 
                                      />
                                       
            <Label id="parentCompanyFamilyPlanNameLB" value="Parent CFP Name" contentMode="HTML"  />
            <b:CustomTextField id="parentCompanyFamilyPlanName" styleName="searchicon" 
                                     /> 
            <Label id="salesInclusionLB" value="Sales Inclusion" styleName= "mandatory" contentMode="HTML" />
            <ComboBox id="salesInclusion" nullSelectionAllowed="false"
                              inputPrompt="-Select One-" immediate="true" />     
                    
                                       
            <Label id="createdByLB" value="Created By" contentMode="HTML" />
            <TextField id="createdBy" inputPrompt="" />
        
        
            <Label id="createdDateLB" value="Created Date"
                  contentMode="HTML" />
            <PopupDateField id="createdDate" />  
                    
                    
            <Label id="modifiedByLB" value="Modified By" contentMode="HTML" />
            <TextField id="modifiedBy" inputPrompt="" />
        
        
            <Label id="modifiedDateLB" value="Modified Date"
                  contentMode="HTML" />
            <PopupDateField id="modifiedDate" />  
                                                                              
                              
        </CssLayout>
    </HorizontalLayout>
</VerticalLayout>