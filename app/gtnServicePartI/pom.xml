<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.stpl.app</groupId>
		<artifactId>global-parent</artifactId>
		<version>1.0</version>
	</parent>
	<groupId>com.stpl.app</groupId>
	<artifactId>gtnServicePartI</artifactId>
	<version>1.0</version>
	<name>gtnServicePartI</name>
	
    <dependencies>
        <dependency>
            <groupId>com.stpl.portal</groupId>
            <artifactId>portal-service</artifactId>
            <version>${com.stpl.portal.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.stpl.portal</groupId>
            <artifactId>util-java</artifactId>
            <version>${com.stpl.portal.version}</version>
            <scope>provided</scope>
        </dependency>
<!--        <dependency>
            <groupId>com.stpl.ifs</groupId>
            <artifactId>gtnUtility</artifactId>
            <version>${com.stpl.ifs.version}</version>
            <scope>provided</scope>
        </dependency>-->
        <dependency>
            <groupId>org.asi.ui.galderma</groupId>
            <artifactId>extfilteringtable</artifactId>
            <version>1.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.logging</groupId>
            <artifactId>jboss-logging</artifactId>
            <version>3.3.0.Final</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>${commons.lang.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>com.stpl.maven.plugins</groupId>
				<artifactId>stpl-maven-plugin</artifactId>
				<version>${com.stpl.portal.version}</version>
				<configuration>
                                        <autoDeployDir>${liferay.auto.deploy.dir}</autoDeployDir>
                                        <appServerDeployDir>${liferay.app.server.deploy.dir}</appServerDeployDir>
                                        <appServerLibGlobalDir>${liferay.app.server.lib.global.dir}</appServerLibGlobalDir>
                                        <appServerPortalDir>${liferay.app.server.portal.dir}</appServerPortalDir>
                                        <liferayVersion>${com.stpl.portal.version}</liferayVersion>
                                        <pluginName>gtnPartI</pluginName>
                                        <pluginType>portlet</pluginType>
					<webappBaseDir>${basedir}/../gtnServicePartI</webappBaseDir>
					<apiBaseDir>${basedir}/../gtnServicePartI</apiBaseDir>
				</configuration>
			</plugin>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-compiler-plugin</artifactId>
                                <configuration>
                                <fork>true</fork>
                                <meminitial>128m</meminitial>
                                <maxmem>1024m</maxmem>
                                </configuration>
                        </plugin>                        
		</plugins>
	</build>
	
</project>
