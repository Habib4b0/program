<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" >
        <Panel id="RebatePlanPanel" caption="Search Criteria">
            <GridLayout id="gLayout" rows="2" columns="6" margin="true" spacing="true">
                <Label caption="Rebate Plan ID:" contentMode="HTML" />
                <TextField id="rebatePlanId" inputPrompt=""  />
                <Label caption="Rebate Plan No:" contentMode="HTML" />
                <TextField id="rebatePlanNo" inputPrompt=""  />
                <Label caption="Rebate Plan Name:" contentMode="HTML" />
                <TextField id="rebatePlanName" inputPrompt=""  />
                <Label caption="Rebate Plan Status" contentMode="HTML" width = "155px"></Label>
                <ComboBox id="rebatePlanStatus"  immediate = "true" width = "205px" />
                <Label caption="Rebate Plan Type" contentMode="HTML"></Label>
                <ComboBox id="rebatePlanType"   immediate = "true" width = "205px" />
            </GridLayout>
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="searchBtnRPL" caption="SEARCH"  />
            <Button id="resetBtnRPL" caption="RESET"  />
        </HorizontalLayout>
        <Panel caption="Results" width="100%" >
            <a:ExtFilterTable id="resultsTableRPL" width="100%" height="50%" styleName="table-header-normal" immediate="true" />
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="selectBtnRPL" caption="SELECT"  />
            <Button id="cancelBtnRPL" caption="CANCEL"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
