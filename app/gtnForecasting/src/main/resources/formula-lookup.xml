<?xml version="1.0" encoding="UTF-8"?>
<Panel id="lookup"   xmlns:p="urn:vaadin:parent" xmlns:el="urn:import:com.stpl.app.ui.errorhandling"> 
    <VerticalLayout styleName="custom-margin" spacing="true">

        <!--<el:ErrorLabel id="errorMsg" />-->
<VerticalLayout immediate="true"  height="100%">
        <HorizontalLayout id="hlayout" spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
            <CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
                
                <Label id="formulaTypeLabel" value="Formula Type" contentMode="HTML" immediate="true" />
                 <ComboBox id="formulaType" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
		
                <Label id="formulaIDLabel" value="Formula ID" contentMode="HTML" immediate="true" />
                <TextField id="formulaID" enabled="true" immediate="true" />
			
                <Label id="formulaNoLabel" value="Formula No" contentMode="HTML" immediate="true" />
                <TextField id="formulaNo" enabled="true" immediate="true" />
			
                <Label id="formulaNameLabel" value="Formula Name" contentMode="HTML" immediate="true" />
                <TextField id="formulaName" enabled="true" immediate="true" />                	
				
            </CssLayout>
        </HorizontalLayout>

        <HorizontalLayout immediate="true" spacing="true" margin="true">
            <Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
            <Button id="resetBtn" caption="RESET" immediate="true" width="80" />
        </HorizontalLayout>
        <Panel>
            <HorizontalLayout immediate="true" spacing="true">
                <Panel caption="Results">
                    <VerticalLayout>
                        <VerticalLayout id="tablelayout" spacing="true"/>  
                        <HorizontalLayout id="controlLayout" immediate="true" spacing="true"/>
                    </VerticalLayout>	
                </Panel>
                <Panel caption="Formula Details">
                    <VerticalLayout>
                        <VerticalLayout id="detailsTableLayout" immediate="true"/>
                        <HorizontalLayout id="detailsControlLayout" immediate="true" spacing="true"/>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>  
        </Panel>
         </VerticalLayout>
              
       
        <HorizontalLayout immediate="true" spacing="true">
            <Button id="selectBtn" caption="SELECT" immediate="true" width="80" />
            <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
            <Button id="detailsBtn" caption="DETAILS" immediate="true" width="80" />
        </HorizontalLayout>

    </VerticalLayout>
</Panel>