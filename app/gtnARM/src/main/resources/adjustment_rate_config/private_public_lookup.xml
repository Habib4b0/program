<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" 
       xmlns:ef="urn:import:com.stpl.ifs.ui"  xmlns:cu="urn:import:org.asi.ui.customcombobox"
       xmlns:ept="urn:import:org.​asi.​ui.​extfilteringtable.​paged">
    <VerticalLayout spacing = "true"  width="100%" height="100%">
        <Panel caption = "View Search" spacing = "true" width="100%" height="100%">
            <HorizontalLayout immediate="true">
                <GridLayout margin="true" spacing="true" immediate="true" columns="2" rows="1">

                    <!--<Label id="labelViewTypeEpl" value="View Type" immediate="true" styleName="label-margin-top-size" />-->
                    <!--<cu:CustomComboBox id="viewTypeDdlbEpl" enable="true" immediate="true" width="205px"/>-->

                    <Label id="labelViewNameEpl" value="View Name" immediate="true"/>
                    <TextField id="viewNameEpl" enable="true" immediate="true"/>
                    
                </GridLayout>
        </HorizontalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="true" immediate="true">
            <Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
            <Button id="resetBtn" caption="RESET" immediate="true" width="80" />
        </HorizontalLayout>
        <Panel caption="Search Results" spacing="true" width="100%" height="100%">
            <VerticalLayout spacing="true" >
                <VerticalLayout  id="resultsTableLayoutEpl" spacing="true"  width="100%" height="100%">
               
                </VerticalLayout>
                <HorizontalLayout immediate="true" spacing="true">
                    <Button id="selectBtn" caption="SELECT" immediate="true" width="80" />
                    <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
        </HorizontalLayout>
    </VerticalLayout>
            
</Panel>
    </VerticalLayout>
</Panel>
