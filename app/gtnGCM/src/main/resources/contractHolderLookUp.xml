<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" >
        <Panel id="ContractHolderPanel" caption="Search Criteria">
            <GridLayout id="gLayout" rows="2" columns="6" margin="true" spacing="true">
                <Label caption="Contract Holder ID:" contentMode="HTML" />
                <TextField id="contractHolderId" inputPrompt=""  />
                <Label caption="Contract Holder No:" contentMode="HTML" />
                <TextField id="contractHolderNo" inputPrompt=""  />
                <Label caption="Contract Holder Name:" contentMode="HTML" />
                <TextField id="contractHolderName" inputPrompt=""  />
                <Label value="Contract Holder Status" contentMode="HTML" width = "155px"></Label>
                <ComboBox id="contractHolderStatus" nullSelectionAllowed="true"  immediate = "true" width = "205px" />
                <Label value="Contract Holder Type" contentMode="HTML"></Label>
                <ComboBox id="contractHolderType" nullSelectionAllowed="true"  immediate = "true" width = "205px" />
            </GridLayout>
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="searchBtnCHL" caption="SEARCH"  />
            <Button id="resetBtnCHL" caption="RESET"  />
        </HorizontalLayout>
        <Panel caption="Results" width="100%" >
            <a:ExtFilterTable id="resultsTableCHL" width="100%" height="50%" styleName="table-header-normal" immediate="true" />
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="selectBtnCHL" caption="SELECT"  />
            <Button id="cancelBtnCHL" caption="CANCEL"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
