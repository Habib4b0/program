<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout  spacing="true" xmlns:el="urn:import:com.stpl.app.ui.errorhandling" xmlns:p="urn:vaadin:parent" >
	<el:ErrorLabel id="errorMsg" />
        <Panel id="infoPanel"  >
            <HorizontalLayout id="infoLayout" margin="true" styleName="responsiveTabGrid">
                <CssLayout id="infoCssLayout" width="100%" height="100%">
                    <Label id="labelInfoId" contentMode="HTML" />
                    <TextField id="infoId" inputPrompt="" />

                    <Label id="labelInfoNo" contentMode="HTML" />
                    <TextField id="infoNo" inputPrompt="" />

                    <Label id="labelInfoName" contentMode="HTML" />
                    <TextField id="infoName" inputPrompt="" />
                </CssLayout>    
            </HorizontalLayout>    
        </Panel>
	<TabSheet id="tabSheet" immediate="true" />

	<HorizontalLayout id="buttonLayout" spacing="true" margin="true" immediate="true">

		<Button id="saveBtn" caption="SAVE" enabled="true" immediate="true" />
<!--  delete Button for edit mode. Need to make visible in edit mode -->
		<Button id="deleteBtn" caption="DELETE" enabled="true" visible="true" immediate="true" />

		<Button id="backBtn" caption="BACK" enabled="true" immediate="true" />

		<Button id="resetBtn" caption="RESET" enabled="true" immediate="true" />
		
	</HorizontalLayout>
</VerticalLayout>
