<?xml version="1.0" encoding="UTF-8"?>
<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout  id="mainLayout" margin="false"
                     spacing="false"  >
  
        <Panel caption="Selection Criteria" width="100%" >
            <VerticalLayout  id="seletedVertical" margin="false"
                             spacing="false"  >
                <Panel  >
                    <HorizontalLayout margin="true"
                                      spacing="true" styleName="width-auto">
                        <Label caption="Item No: " contentMode="HTML" />
                        <TextField id="itemNo" inputPrompt="" />
                   
                        <Label caption="Item Name: " contentMode="HTML" />
                        <TextField id="itemName" inputPrompt="" />
                   
                        <Label caption="Item Desc: " contentMode="HTML" />
                        <TextField id="itemDesc" inputPrompt="" />
                   
                        <Label caption="Therapeutic Class: " contentMode="HTML" />
                        <TextField id="therapeuticClass" inputPrompt="" />
                   
                        <Label caption="Brand: " contentMode="HTML" />
                        <TextField id="brand" inputPrompt="" />

                    </HorizontalLayout>
                </Panel>
                <Panel  caption="Search Criteria" width="100%" >
                    <VerticalLayout  id="searchCri" margin="false"
                                     spacing="false"  >
                        <HorizontalLayout margin="false"
                                       spacing="true">
                           
                                <GridLayout margin="true" spacing="true" columns="4"
                                        rows="3">

                                    <Label caption="IFP ID:" contentMode="HTML" />
                                    <b:CustomTextField id="ifpId" inputPrompt="" />
                     
                                    <Label caption="IFP Status:" contentMode="HTML" />
                                    <ComboBox id="ifpStatus"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                          immediate="true" styleName="comboxsize"/>
                    
                                    <Label caption="IFP No:" contentMode="HTML" />
                                    <b:CustomTextField id="ifpNo" inputPrompt="" />
                    
                                     <Label caption="IFP Type:" contentMode="HTML" />
                                    <ComboBox id="ifpType"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                          immediate="true" styleName="comboxsize"/>
                    
                                   <Label caption="IFP Name:" contentMode="HTML" />
                                    <b:CustomTextField id="ifpName" inputPrompt="" />
                    
                                   
                                </GridLayout>
                                
                            
                        </HorizontalLayout>
                        <Button caption="SEARCH" id="searchBtn" />
                    </VerticalLayout>
                </Panel>
        
                <Panel id="currentDetails" caption="Current - IFP Details">
                    <VerticalLayout id="contractVertical" margin="false"
                                    spacing="true" >
          
<!--                        <a:ExtFilterTable  styleName="table-header-normal"
                                           id="currentContractTable" width="1100px" immediate="true" height="200px" />-->
                        <!--<Button caption="POPULATE" id="populateBtn" />-->
                    </VerticalLayout>
                </Panel>
            
                <Panel id="componentDetails" caption="Component - Details Search">
                    <VerticalLayout id="componentsVertical" margin="false"
                                    spacing="true" >
                        <HorizontalLayout margin="true"
                                          spacing="true">
                            <Label caption="Search Field: " contentMode="HTML" />
                            <ComboBox id="searchField" nullSelectionAllowed="false" inputPrompt="-Select One-"
                                      immediate="true" styleName="comboxsize" />
                            <Label caption="Search Value: " contentMode="HTML" />
                            <TextField id="searchValue" inputPrompt="" /> 
                            <Button caption="SEARCH" id="componentSearch" />
                        </HorizontalLayout>
                
<!--                        <a:ExtFilterTable  styleName="table-header-normal"
                                           id="DetailsComponentTable" width="1100px" immediate="true" height="200px" />-->
                    </VerticalLayout>
                </Panel>
            
<!--                <HorizontalLayout margin="true"
                                  spacing="true">
                    <Button caption="CLOSE" id="closeBtn" />
                    <Button caption="NEXT" id="nextBtn" />
                  
                </HorizontalLayout>-->
            </VerticalLayout>             
        </Panel>
    </VerticalLayout>
</Panel>