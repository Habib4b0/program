<VerticalLayout margin="true"  spacing="true" immediate="true" width="100%" height="100%"  
                xmlns:b="urn:import:org.asi.ui.customtextfield" xmlns:c="urn:import:org.asi.ui.customcombobox"      
                xmlns:a="urn:import:org.asi.ui.extfilteringtable"
                xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling">
    <errorMsg:ErrorLabel id="errorMsg"/>
    <Panel caption="Item Search" id = "itemSearchPanel">
            <HorizontalLayout immediate="true" styleName="responsiveTabGrid">
                <CssLayout id="cssLayout2" immediate="true" width="100%" height="100%">
                    <Label id="typeLb" value="Item Type" contentMode="HTML"  />
                    <ComboBox id="itemTypeDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" /> 
                    <Label id="itemDescLb" value="Item Desc" contentMode="HTML" immediate="true"/>
                    <TextField id="itemDesc" enabled="true" immediate="true" />
                    <Label id="brandLb" value="Brand" contentMode="HTML" immediate="true"/>
                    <ComboBox id="brandDdlb" enabled="true" immediate="true" />
                    <Label id="strengthLb" value="Strength" contentMode="HTML" immediate="true"/>
                    <ComboBox id="strengthDdlb" enabled="true" immediate="true" />
                    <Label id="itemLb" value="Item No" contentMode="HTML"  />
                    <TextField id="item" enabled="true" immediate="true" />                    
                    <Label id="therapeuticClassLb" value="Therapeutic Class" contentMode="HTML"  />
                    <ComboBox id="therapeuticclassDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />                     
                    <Label id="formLb" value="Form" contentMode="HTML" immediate="true"/>
                    <ComboBox id="formDdlb" enabled="true" immediate="true" />                    
                </CssLayout>
            </HorizontalLayout>
    </Panel>
    <HorizontalLayout id = "searchHLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
        <CssLayout immediate="true" width="100%" height="100%">
            <Button id="searchBtn" caption="SEARCH" immediate="true"/>  
            <Button id="resetBtn" caption="RESET" immediate="true" />       
        </CssLayout>
    </HorizontalLayout>
    <Panel caption="Results" id = "availableResultsPanel" spacing="true" >
         <VerticalLayout id="availResultsTableLayout" margin = "true" spacing = "true" />
<!--        <VerticalLayout spacing="true" margin="true">
            <a:ExtFilterTable id="availableContractsTable" selectable="true" immediate="true" />
        </VerticalLayout>-->
    </Panel>
    <HorizontalLayout id="includeButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
        <Button id="addBtn" caption="ADD" immediate="true"/>
        <Button id="addallBtn" caption="ADD ALL" immediate="true" />
        <Button id="exportBtn" caption="" immediate="true" />
    </HorizontalLayout>
    <Panel caption="Selected Items" id = "selectedResultsPanel" spacing="true" height = "630px" >
         <VerticalLayout id="selectedResultsTableLayout" margin = "true" spacing = "true" />
<!--        <VerticalLayout spacing="true" margin="true">
            <a:ExtFilterTable id="availableCustomersTable" selectable="true" immediate="true" />
        </VerticalLayout>-->
    </Panel>
    <HorizontalLayout id="excludeButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
        <Button id="removeBtn" caption="REMOVE" immediate="true"/>
        <Button id="removeallBtn" caption="REMOVE ALL" immediate="true" />
        <Button id="exportButton" caption="" immediate="true" />
    </HorizontalLayout>
</VerticalLayout>