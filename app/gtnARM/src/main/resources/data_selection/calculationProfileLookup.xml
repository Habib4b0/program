<Panel xmlns="urn:import:com.vaadin.ui"  xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout margin="true" spacing = "true"  width="100%" height="100%">
        <Panel caption = "Profile Options" width="100%" height="100%">
            <HorizontalLayout spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true" immediate="true" columns="4" rows="2">
                    <Label value="Mode" contentMode="HTML" immediate="true"  />
                    <OptionGroup id="modeOptionGroup" enable="true" immediate="true" styleName="horizontal"/>
                    <Label id="labelViewNameEpl" value="View" immediate="true" styleName="label-margin-top-size" width="136px" />
                    <b:CustomTextField id="viewLookUp" styleName="searchText" inputPrompt=""  width="205px"/>
                    
                    <Label value="Profile Name" contentMode="HTML" immediate="true"  />
                    <TextField id="profileName" enable="true" immediate="true" width="205px"/>
                    <Label value="Profile Description" immediate="true" styleName="label-margin-top-size" width="136px" />
                    <TextField id="profileDescription" enable="true" immediate="true" width="205px"/>
                    
                </GridLayout>
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="true" immediate="true">
            <Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
            <Button id="resetBtn" caption="RESET" immediate="true" width="80" />
        </HorizontalLayout>
        <Panel caption="Search Results" spacing="true" width="100%" height="100%">
            <VerticalLayout id="resultsTableLayout" spacing="true"  width="100%" height="100%"/>   
        </Panel>
        <Panel caption="Calculation" spacing="true" width="100%" height="100%">
           
            <VerticalLayout id="calculationLayout" spacing="true"  width="100%" height="100%">   
                <a:ExtFilterTable id="calculationTable" selectable="true" immediate="true" />
                <HorizontalLayout margin = "true" immediate="true" spacing="true">
                    <Button id="upBtn" caption="UP" immediate="true" width="80" />
                    <Button id="downBtn" caption="DOWN" immediate="true" width="80" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout margin = "true" immediate="true" spacing="true">
            <Button id="submitBtn" caption="SUBMIT" immediate="true" width="80" />
            <Button id="saveBtn" caption="SAVE" immediate="true" width="80" />
            <Button id="resetTableBtn" caption="RESET" immediate="true" width="80" />
            <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
            <Button id="saveViewBtn" caption="SAVE VIEW" immediate="true"  />
            <Button id="deleteViewBtn" caption="DELETE VIEW" immediate="true"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>