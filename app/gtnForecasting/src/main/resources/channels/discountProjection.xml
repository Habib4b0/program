                <Panel width="100%">
                    <VerticalLayout margin="true" styleName=" width-auto adjustCaption forecast-tab-adjust">  
                        <HorizontalLayout>
<!--                        <GridLayout rows="1" columns="13" margin="false" spacing="false" styleName="forecast-tab" > -->
                            <Label value="Level: " contentMode="HTML" />
                            <ComboBox id="levelDdlb" enabled="true" immediate="true" />
                            <Button id="expandBtn" caption="EXPAND" />
                            <Button id="collapseBtn" caption="COLLAPSE" />
                            <Label value="Level Filter: " contentMode="HTML" />
                            <ComboBox id="levelFilterDdlb" enabled="true" immediate="true" />
                            <Label value="View:  " contentMode="HTML" />
                            <OptionGroup id="view" enabled="true" immediate="true" />
                            <ComboBox id="viewDdlb" enabled="true" immediate="true" />
                            <Button id="newBtn" caption="NEW" />
                            <Button id="editBtn" caption="EDIT" />

                        <!--</GridLayout>-->   
                        </HorizontalLayout>            
                    </VerticalLayout>
                </Panel>
                
                <VerticalLayout id="resultsTableLayout"  styleName="projectionTable" spacing ="true">
                </VerticalLayout>
                <VerticalLayout id="excelTableLayout">
                </VerticalLayout>
                <HorizontalLayout spacing="true" margin="false">
                <Button id="excelExport" primaryStyleName="link"/>   
                <Button id="refreshBtn" caption="REFRESH" />
                </HorizontalLayout>
