<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout spacing="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui" xmlns:pf="urn:import:org.asi.ui.extfilteringtable.paged">    
    <HorizontalLayout id="hlayout" styleName="dataTransferGridForIFP" spacing="false" margin="false" immediate="true">
        <CssLayout spacing="true" immediate="true" width="100%" height="100%">
         <Panel caption="Available Formulas">
            <VerticalLayout id="availableTableLayout">  
                <pf:ExtPagedFilterTable id="availableTable"  />
            </VerticalLayout>   
            </Panel>           
            <HorizontalLayout immediate="true" styleName="move-button-group-allignment-ifp">
                <CssLayout  immediate="true" styleName="NavButtonsForIFP" >
                    <Button id="btnMove"  caption="&gt;" immediate="true" width="70px" />
                    <Button id="btnRemove"  caption="&lt;" immediate="true" width="70px" />
                    <Button id="btnMoveAll"  caption="&gt;&gt;" immediate="true" width="70px" />
                    <Button id="btnRemoveAll"  caption="&lt;&lt;" immediate="true" width="70px" />
                </CssLayout>
            </HorizontalLayout>  
            <Panel caption="Selected Formulas">
            <VerticalLayout id="selectedTableLayout">           
                <ef:CustomePagedFilterTable id="selectedTable"/>                
            </VerticalLayout>            
            </Panel>       
        </CssLayout>
    </HorizontalLayout>
    <Button id="submitButton" caption="Submit" />
</VerticalLayout>