<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable"  >
    <VerticalLayout  id="mainLayout" margin="false"
                     spacing="false"  >          
        <Panel  caption="Search Criteria" width="100%"  styleName="adjustCaption">
            <VerticalLayout  id="searchCr" margin="false"
                             spacing="false" styleName = "width-auto" >
                <HorizontalLayout >

                    <GridLayout margin="true" spacing="true" columns="8"
                                rows="4" styleName = "forecast-tab">
                        <Label caption="Contract No:" contentMode="HTML"  />
                        <TextField id="contractNo" inputPrompt="" />  
                        <Label caption="Contract Name:" contentMode="HTML" />
                        <TextField id="contractName" inputPrompt="" />
                        <Label caption="Contract Holder:" contentMode="HTML"  />
                        <TextField id="contractHolder" inputPrompt="" />
                        <Label caption="Market Type:" contentMode="HTML"  />
                        <ComboBox id="marketType"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>   
                        <Label caption="Company Family Plan No:" contentMode="HTML"  />
                        <TextField id="companyFamilyPlanNo" inputPrompt="" /> 
                        <Label caption="Item Family Plan No:" contentMode="HTML" />
                        <TextField id="itemFamilyPlanNo" inputPrompt="" />
                        <Label caption="Price Schedule No:" contentMode="HTML"  />
                        <TextField id="priceScheduleNo" inputPrompt="" /> 
                        <Label caption="All Items:" contentMode="HTML"  />
                        <ComboBox id="allItems"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                        <Label caption="Rebate Schedule Id:" contentMode="HTML"  />
                        <TextField id="rebateScheduleId" inputPrompt="" />   
                        <Label caption="Rebate Schedule Name: " contentMode="HTML" />
                        <TextField id="rebateScheduleName" inputPrompt="" />
                        <Label caption="Rebate Schedule  Type: " contentMode="HTML" />
                        <ComboBox id="rebateScheduleType" inputPrompt="" />
                        <Label caption="RAR Category:" contentMode="HTML"  />
                        <ComboBox id="rarCategory"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>   
                        <Label caption="Rebate Schedule No:" contentMode="HTML"  />
                        <TextField id="rebateScheduleNo" inputPrompt="" />       
                        <Label caption="Rebate Schedule Category:" contentMode="HTML"  />
                        <ComboBox id="rebateScheduleCategory"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>  
                        <Label caption="Rebate Program Type:" contentMode="HTML" />
                        <ComboBox id="rebateProgramType"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                        <Label caption="Rebate Schedule Alias:" contentMode="HTML" />
                        <TextField id="rebateScheduleAlias" inputPrompt="" />
                    </GridLayout>
                </HorizontalLayout>
                <HorizontalLayout margin="true" spacing="false">
                    <Button caption="RESET" id="reset1" />
                    <Button caption="SEARCH" id="search" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel  styleName="adjustCaption" id="MassUpdatePanel1" caption="Mass Update" >
            <HorizontalLayout id="horizontalLayout3" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="MassUpdateLayout" immediate="true" columns="10" rows="1">
                    <OptionGroup multiSelect="false" id="massUpdateRadio" immediate="true" enable="true" styleName = "horizontal"/>
                    <Label caption="Field:" contentMode="HTML" />
                    <ComboBox id="field" immediate="true" width="150px"/>
                    <Label caption="Value:" contentMode="HTML" />
                    <TextField id="massUpdateValue" immediate="true" width="150px"/>
                    <Label caption="Start Date: " contentMode="HTML" />
                    <PopupDateField id="massStartDate" dateFormat="MM/dd/yyyy" styleName="align-center"/>
                    <Label caption="End Date: " contentMode="HTML" />
                    <PopupDateField id="massEndDate" dateFormat="MM/dd/yyyy"  styleName="align-center"/>
                    <Button id="populateBtn" caption="POPULATE" />
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
        <Panel  styleName="adjustCaption" id="Available Contracts" caption="Available Contracts">
            <HorizontalLayout>
                <VerticalLayout styleName = "width-auto" id="contractVertical" margin="false"
                            spacing="true"  >
                    <!--<Table id="currentContract1" width="1100px" immediate="true" height="200px"/>-->
                    <!--      <a:ExtFilterTable  styleName="table-header-normal"
                    id="currentContractTable" width="1100px" immediate="true" height="200px" />-->
                    
                    <HorizontalLayout margin="true" spacing="false">
                        <Button caption="RESET" id="reset2" />
                        <OptionGroup multiSelect="false" id="availablemassUpdateRadio" immediate="true" Yes="true" styleName = "horizontal" caption="Transfer sales Projection"/>
                        <Button caption="SUBMIT" id="submit" />
                        <Button caption="" id="export" />
                    
                    </HorizontalLayout>
                </VerticalLayout>
            </HorizontalLayout>
        </Panel>
        <Panel  styleName="adjustCaption" id="componentInformation" caption="Component Information" width="100%" >
            <VerticalLayout  id="componentInfo" margin="false"
                             spacing="false" styleName = "width-auto"  >
                <HorizontalLayout id="componentInfoLayout"  margin="true"
                                  spacing="true" >
                </HorizontalLayout>
                <!--                <Table id="currentContract2" width="1100px" immediate="true" height="200px"/>-->
                <Button id="panelexport" caption=""/>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout margin="true"
                          spacing="true">
            <Button id="next" caption="NEXT"/>
            <Button id="close" caption="CLOSE"/>
            <Button id="tabexport" caption=""/>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>

        
        