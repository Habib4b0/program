<?xml version="1.0" encoding="UTF-8"?>
<Panel id="lookup" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:el="urn:import:com.stpl.app.ui.errorhandling"
       xmlns:c="urn:import:org.asi.ui.customcombobox"> 
    <VerticalLayout margin="true" spacing="true">

        <el:ErrorLabel id="errorMsg" />

        
		<Panel caption="Search Criteria" width="100%" spacing="true">			

                 <GridLayout id="searchLayout" margin="true" spacing="true" columns="4"
                        rows="2">
                <Label id="ruleTypeLabel" value="Rule Type" contentMode="HTML" immediate="true" />
                <c:CustomComboBox id="combo1" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />		
                
                <Label id="ruleNoLabel" value="Rule No" contentMode="HTML" immediate="true" />
                <TextField id="text6" enabled="true" immediate="true" />
			
                <Label id="ruleNameLabel" value="Rule Name" contentMode="HTML" immediate="true" />
                <TextField id="text7" enabled="true" immediate="true" />
                
                <Label id="ruleCategoryLabel" value="Rule Category" contentMode="HTML" immediate="true" />
                <c:CustomComboBox id="combo6" enabled="true" immediate="true" />
		</GridLayout>

        </Panel>	

        <HorizontalLayout immediate="true" spacing="true">
            <Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
            <Button id="resetBtn" caption="RESET" immediate="true" width="80" />
        </HorizontalLayout>
	
        <VerticalLayout id="tablelayout" spacing="true"/>        
        <HorizontalLayout id="controlLayout"/>
        <HorizontalLayout immediate="true" spacing="true">
            <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
            <Button id="selectBtn" caption="SELECT" immediate="true" width="80" />
            <Button id="excelExport" immediate="true" /> 
        </HorizontalLayout>

    </VerticalLayout>
</Panel>
