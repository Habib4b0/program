<VerticalLayout id="root" margin="true" caption="Prie Protection" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ct="urn:import:com.stpl.ifs.ui" xmlns:c="urn:import:org.asi.ui.customcombobox">
	<HorizontalLayout id="massLayout" caption="Mass Update" spacing="false" margin="false" immediate="true">
		<CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%">
			<OptionGroup id="massCheck" enabled="true" />
			<c:CustomComboBox id="massField" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="valueforddlb" value="Value"  contentMode="HTML" immediate="true" width="80px" />
			<PopupDateField id="massDate" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			<TextField id="massValue" enabled="true" immediate="true" />
			<c:CustomComboBox id="massSelect" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			<c:CustomComboBox id="massPriceType" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <HorizontalLayout spacing="true" margin="false">
                            <Button id="btnPopulate" caption="Populate" immediate="true" />
                            <Button id="btnAllPopulate" caption="Populate All" immediate="true"  />
                        </HorizontalLayout>	
		</CssLayout>
	</HorizontalLayout>
        <HorizontalLayout>
            <Label value="Record: "  contentMode="HTML" immediate="true"  />
            <OptionGroup  multiSelect="true" id="record" immediate="true" enable="true" styleName = "horizontal"/>
        </HorizontalLayout>
	<Panel id="mainPanel" caption="Results">
		<ExtPagedTable id="itemDetailsTable" />
	</Panel>
	<HorizontalLayout>
	<HorizontalLayout id="controlLayout" spacing="false" margin="false" immediate="true" />
        <CssLayout immediate="true" width="100%" height="100%">
                <Button id="excel" immediate="true" primaryStyleName="link" />
        </CssLayout>
        </HorizontalLayout>
</VerticalLayout>