<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout margin="true" xmlns:p="urn:vaadin:parent"
                xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling" spacing="true">
    <Panel caption="Search">
        <VerticalLayout margin="true" spacing="true">
            <HorizontalLayout id="hLayout" styleName="responsiveTabGrid" spacing = "true">
                <CssLayout id="cssLayout" width="100%" height="100%" spacing ="true">
                    <errorMsg:ErrorLabel id="errorMsg"/>

                    <Label id="labelTableName" value="Table Name" contentMode="HTML" />
                    <TextField id="tableName" inputPrompt="" immediate="true" />

                    <Label id="labelFieldName" value="Field Name" contentMode="HTML" />
                    <TextField id="fieldName" inputPrompt="" immediate="true" />
                </CssLayout>
            </HorizontalLayout>
            <Button id="searchBtn" caption="SEARCH" immediate="true"/>
        </VerticalLayout>
    </Panel>
    <HorizontalLayout id="hLayout1" styleName="responsiveTabGrid" spacing = "true" >
        <!--<CssLayout id="cssLayout1" width="100%" height="100%" spacing ="true">-->
            <VerticalLayout margin="true" spacing="true">
                <VerticalLayout id="tableResultsLayout">
                    <HorizontalLayout id="tableResultsControlLayout"/>
                </VerticalLayout>
                <Button id="excelExportTables" />
            </VerticalLayout>
            <VerticalLayout margin="true" spacing="true">
                <VerticalLayout id="fieldResultsLayout">
                    <HorizontalLayout id="fieldResultsControlLayout"/>
                </VerticalLayout>
                <Button id="excelExportFields" />
            </VerticalLayout>
        <!--</CssLayout>-->
    </HorizontalLayout>
    <HorizontalLayout spacing="true">
        <Button id="updateBtn" caption="UPDATE" immediate="true"/>
        <Button id="closeBtn" caption="CLOSE" immediate="true"/>
    </HorizontalLayout>
    
</VerticalLayout>
