<Panel caption="Company Family Plan Search" xmlns:customTable="urn:import:org.asi.ui.extfilteringtable" 
       xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent">  
    <VerticalLayout spacing="true" margin="true">
        <errorMsg:ErrorLabel id="errorLB" />
        <HorizontalLayout styleName="responsiveTabGrid">
            <CssLayout id="cssLayout" width="100%" height="100%">
                <Label id="companyFamilyPlanIdLB" value="Company Family Plan ID"  contentMode="HTML" immediate="true"   />
                <TextField id="companyFamilyPlanId" enabled="true" immediate="true" />
            
                <Label id="companyFamilyPlanNoLB" value="Company Family Plan No"  contentMode="HTML" immediate="true"   />
                <TextField id="companyFamilyPlanNo" enabled="true" immediate="true" />
            
                <Label id="companyFamilyPlanNameLB" value="Company Family Plan Name"  contentMode="HTML" immediate="true"   />
                <TextField id="companyFamilyPlanName" enabled="true" immediate="true" />
            
                <Label id="companyFamilyPlanTypeLB" value="Company Family Plan Type"  contentMode="HTML" immediate="true"  />
                <ComboBox id="companyFamilyPlanType" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />
          
                <Label id="companyFamilyPlanStatusLB" value="Company Family Plan Status"  contentMode="HTML" immediate="true"  />
                <ComboBox id="companyFamilyPlanStatus" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />
            
                <Label id="companyIdLB" value="Company ID"  contentMode="HTML" immediate="true"   />
                <TextField id="companyId" enabled="true" immediate="true" />
            
                <Label id="companyNoLB" value="Company No"  contentMode="HTML" immediate="true"   />
                <TextField id="companyNo" enabled="true" immediate="true" />
            
                <Label id="companyNameLB" value="Company Name"  contentMode="HTML" immediate="true"   />
                <TextField id="companyName" enabled="true" immediate="true" />
            </CssLayout>
        </HorizontalLayout>
        <HorizontalLayout styleName="responsiveTabGrid">
            <CssLayout id="cssLayoutButton" width="100%" height="100%">
                <Button id="search" caption="Search" />
                <Button id="reset" caption="Reset" />
            </CssLayout>
        </HorizontalLayout>
        <HorizontalLayout styleName="prev-next-layout">
            <Button id="prevColumn" caption="&lt;&lt;" styleName="prev-column-button"></Button>
            <Button id="nextColumn" caption="&gt;&gt;" styleName="next-column-button"></Button>
        </HorizontalLayout>
        <customTable:ExtFilterTable id="resultTable" immediate="true" /> 
         <HorizontalLayout immediate="true" spacing="true">
            <Button id="selectBtn" caption="SELECT" immediate="true" width="80" />
            <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
        </HorizontalLayout>
     </VerticalLayout>
</Panel>