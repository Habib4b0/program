<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout spacing="true" margin="true" immediate="true">
        <HorizontalLayout spacing="true" margin="true">
            <VerticalLayout spacing="true">
                <Panel caption="Transfer Details">
                    <VerticalLayout margin = "true">
                        <TreeTable id="toResultTableItem" styleName="table-header-normal" pageLength="10"/>
                        <HorizontalLayout spacing = "true">
                            <Button id="fromPopulateBtn" caption="POPULATE" alignment="BOTTOM_LEFT" />
                            <Button id="fromtransferBtn" caption="TRANSFER" alignment="BOTTOM_LEFT" />  
                        </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
                <Panel caption="Component Information">
                    <!--<VerticalLayout>-->
                        <HorizontalLayout spacing = "true" margin = "true">
                            <GridLayout spacing="true" immediate="true" columns="6" rows="2">
                            <Label caption="IFP ID: " contentMode="HTML" />
                            <TextField id="ifpId" immediate="true" />
                            <Label caption="IFP Number: " contentMode="HTML" />
                            <TextField id="ifpNumber" immediate="true" />
                            <Label caption="IFP Name: " contentMode="HTML" />
                            <TextField id="ifpName" immediate="true" />
<!--                        </HorizontalLayout>
                        <HorizontalLayout>-->
                            <Label caption="Status: " contentMode="HTML" />
                            <TextField id="status" immediate="true" />
                            <Label caption="Start Date: " contentMode="HTML" />
                            <TextField id="startDate" immediate="true" />
                            <Label caption="End Date: " contentMode="HTML" />
                            <TextField id="endDate" immediate="true" />
                            </GridLayout>
                        </HorizontalLayout>
                    <!--</VerticalLayout>-->
                </Panel>
                <Panel caption="Component Details">
                    <table:ExtFilterTable id="componentDetailsTable" styleName="table-header-normal" pageLength="10"/>
                </Panel>
            </VerticalLayout>
            <Panel caption="Item Family Plan Details">
                <VerticalLayout spacing="true" margin="true">
                    <Panel caption="Cross Reference View">
                        <HorizontalLayout>
                            <OptionGroup id="matchGroup" immediate="true" />
                            <CheckBox id="allComponents" contentMode="HTML" />
                        </HorizontalLayout>
                    </Panel>
                    <Panel caption="Mass Update">
                        <HorizontalLayout spacing = "true" margin = "true">
                            <OptionGroup id="massEnable" immediate="true" />
                            <Label caption="Field: " contentMode="HTML" />
                            <ComboBox id="massField" contentMode="HTML" />
                            <Label caption="Value: " contentMode="HTML" />
                            <Button id="massPopulate" caption="POPULATE" alignment="BOTTOM_LEFT" />
                        </HorizontalLayout>
                    </Panel>
                    <table:ExtFilterTable id="ifpResults" styleName="table-header-normal" pageLength="23"/>
                    <Button id="ifpReset" caption="RESET" alignment="BOTTOM_LEFT" />
                </VerticalLayout>
            </Panel>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
