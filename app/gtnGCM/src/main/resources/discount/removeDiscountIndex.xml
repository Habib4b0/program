<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable"
        xmlns:a="urn:import:org.asi.ui.extfilteringtable" 
        xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="promoteTpToChVerticalLayout" spacing="true"
                    margin="true" immediate="true" styleName = "width-auto">
        
        <Panel id="removeDiscountPanel1" caption="Search Criteria">
            <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="promoteTpToChLayout" immediate="true" columns="6" rows="4">
                    <Label caption="Contract Holder: " contentMode="HTML" />
                    <b:CustomTextField id="contractHolder" inputPrompt="" immediate="true"
                                       styleName="searchicon" />
                    <Label caption="Market Type: " contentMode="HTML" />
                    <ComboBox id="marketType" immediate="true" width="205px"/>
                    <Label caption="Company Family Plan: " contentMode="HTML" />
                    <b:CustomTextField id="cfpName" inputPrompt="" immediate="true"
                                        styleName="searchicon" />
                    
                    <Label caption="Contract No: " contentMode="HTML" />
                    <TextField id="contractNo" immediate="true" />
                    <Label caption="Start Date: " contentMode="HTML" />
                    <PopupDateField id="contractstartDate" inputPrompt="" required="true"/> 
                    <Label caption="Item Family Plan: " contentMode="HTML" />
                    <b:CustomTextField id="ifpName" inputPrompt="" immediate="true"
                                       styleName="searchicon" />
                    
                    <Label caption="Contract Name: " contentMode="HTML" />
                    <TextField id="contractName" immediate="true" />
                    <Label caption="End Date: " contentMode="HTML" />
                    <PopupDateField id="contractendDate" inputPrompt="" required="true"/> 
                    <Label caption="Price Schedule: " contentMode="HTML" />
                    <b:CustomTextField id="psName" inputPrompt="" immediate="true"
                                        styleName="searchicon" />
                    
                    <Label caption="Customer: " contentMode="HTML" />
                    <b:CustomTextField id="customer" inputPrompt="" immediate="true"
                                        styleName="searchicon" />
                    <Label caption="Item: " contentMode="HTML" />
                    <b:CustomTextField id="item" inputPrompt="" immediate="true"
                                        styleName="searchicon" />
                    <Label caption="Rebate Schedule: " contentMode="HTML" />
                    <b:CustomTextField id="rsName" inputPrompt="" immediate="true"
                                        styleName="searchicon" />
                </GridLayout>
                <Panel id="removeDiscountPanel1.1" caption="Alias Details">
                    <HorizontalLayout spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="aliasLayout" immediate="true" columns="4" rows="2">
                        <Label caption="Type: " contentMode="HTML" />
                        <ComboBox id="aliastype" immediate="true" width="205px"/>
                        <Label caption="Start Date: " contentMode="HTML" />
                        <PopupDateField id="aliasStartDate" inputPrompt="" required="true"/> 
                        <Label caption="Number: " contentMode="HTML" />
                        <TextField id="aliasnumber" immediate="true" />
                        <Label caption="End Date: " contentMode="HTML" />
                        <PopupDateField id="aliasEndDate" inputPrompt="" required="true"/> 
                    </GridLayout>
                    </HorizontalLayout>
                </Panel>
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout >
            <Button id="searchBtn" caption="SEARCH"  />
            <Button id="resetSearch" caption="RESET"  />
        </HorizontalLayout>
        <Panel id="removeDiscountPanel2" caption="Results">
            <VerticalLayout styleName="width-auto" >
                <VerticalLayout id="promoteTpToChDtoTableLayout"  width="1750px"  immediate="true">
                </VerticalLayout>
                <HorizontalLayout spacing="true" margin="true">
                    <Button id="resetBtn" caption="RESET"  />
                    <Button id="addBtn" caption="ADD"  /> 
                    <Button id="removeBtn" caption="REMOVE"  />   
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
