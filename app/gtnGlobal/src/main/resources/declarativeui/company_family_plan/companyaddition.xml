<VerticalLayout id="mainLayout" spacing="false" styleName="custom-margin" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui">
        <VerticalLayout id="addLayout" spacing="false"  width="100%" height="100%"  xmlns:ef="urn:import:com.stpl.ifs.ui" xmlns:c="urn:import:org.asi.ui.customcombobox">
   
            <HorizontalLayout id="hlayout" spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
                <CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%">
                    <Label value="Search Field"  contentMode="HTML" immediate="true"  />
                    <ComboBox id="searchFields" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One-" immediate="true" />
          
                    <Label value="Value"  contentMode="HTML" immediate="true"   />
                    <TextField id="searchValue" enabled="true" immediate="true" />
                    <ComboBox id="searchDdlb" enableed="true" immediate="true"/>

                    <Button id="searchBtn" caption="Search" immediate="true" width="80" />
                </CssLayout>
            </HorizontalLayout>
            <Label value=" " />
            <HorizontalLayout id="hlayout2" styleName="dataTransferGrid" spacing="false" margin="false" immediate="true">
                <CssLayout spacing="true" immediate="true" width="100%" height="100%">
                    <VerticalLayout id="availableTableLayout">
                        <ef:CustomePagedFilterTable id="availableTable"  />
                    </VerticalLayout>   
                    <HorizontalLayout immediate="true" styleName="move-button-group-allignment-ifp">
                        <CssLayout  immediate="true" styleName="NavButtonsCFP" >
                            <Button id="btnMove"  caption="&gt;" immediate="true" width="70px" />
                            <Button id="btnRemove"  caption="&lt;" immediate="true" width="70px" />
                            <Button id="btnMoveAll"  caption="&gt;&gt;" immediate="true" width="70px" />
                            <Button id="btnRemoveAll"  caption="&lt;&lt;" immediate="true" width="70px" />	
                        </CssLayout>
                    </HorizontalLayout>         
                    <VerticalLayout id="selectedTableLayout">           
                        <ef:CustomePagedFilterTable id="selectedTable"/>
                    </VerticalLayout>		
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
    <HorizontalLayout spacing="false" styleName="prev-next-layout">
        <Button id="prevColumn" caption="&lt;&lt;" styleName="prev-column-button" visible="false"></Button>
        <Button id="nextColumn" caption="&gt;&gt;" styleName="next-column-button" visible="false"></Button>
    </HorizontalLayout>
    <VerticalLayout id="viewLayout" >     
        <ef:CustomePagedFilterTable id="viewResultsTable"  width="100%" />
    </VerticalLayout> 
</VerticalLayout>
