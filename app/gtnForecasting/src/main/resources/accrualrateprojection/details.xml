<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel" xmlns:d="urn:import:org.asi.ui.custommenubar">
    <VerticalLayout id="mainVerticalLayout" spacing="true" margin="true" immediate="true" >
        <Panel id="dataSelectionPanel" styleName = "forecast-tab" caption="Selection Criteria">
            <VerticalLayout styleName = "width-auto"  margin="true">  
                <HorizontalLayout spacing="true" margin="false">   
                    <GridLayout id="gridLayout" spacing="true" margin="false" immediate="true" rows="2" columns="6" >
                        <Label value="Frequency: " contentMode="HTML" styleName="labelresultalign" />
                        <ComboBox id="frequencyDdlb" immediate="true" />
                        <Label caption="Variables:" contentMode="HTML" styleName="labelresultalign" />
                        <d:CustomMenuBar id="variablesMenuBar" styleName="custommenumulticheck"/>             
                        <Label caption="Brand:" contentMode="HTML" styleName="labelresultalign" />
                        <ComboBox id="brandDdlb" enabled="true"  styleName="comboxsize" nullSelectionAllowed = "true" />                  
                        <Label caption="History: " contentMode="HTML" styleName="labelresultalign"/>
                        <ComboBox id="historyDdlb" enabled="true"  styleName="comboxsize" nullSelectionAllowed = "true" />
                        <Label caption="Customer:" contentMode="HTML" styleName="labelresultalign" />
                        <ComboBox id="customerDdlb" enabled="true"  styleName="comboxsize" nullSelectionAllowed = "true" width="178px"/>                  
                        <Label caption="Product: " contentMode="HTML" styleName="labelresultalign"/>
                        <ComboBox id="productDdlb" enabled="true"  styleName="width-178" nullSelectionAllowed = "true"/>
                    </GridLayout>          
                    <Panel caption="Time Period" id="timePeriodPanel">                          
                        <HorizontalLayout spacing="true" margin="true" immediate="true" >
                            <Label value="From: " contentMode="HTML" width="80px" />
                            <ComboBox id="fromDdlb" immediate="true" />
                            <Label value="To: " contentMode="HTML" width="80px" />
                            <ComboBox id="toDdlb" immediate="true" />
                        </HorizontalLayout>                           
                    </Panel>
                </HorizontalLayout>     
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false"> 
            <Button id="resetBtn" caption="RESET"/>
            <Button id="generateBtn" caption="GENERATE"/>            
        </HorizontalLayout>               
        <Panel caption="P&amp;L View" id="tablePanel">            
            <VerticalLayout id="tableVerticalLayout" spacing="false" margin="false" immediate="true"/>                                                                  
        </Panel>	
        <Button id="excelBtn" primaryStyleName="link" ></Button>
    </VerticalLayout>
</Panel>