<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.stpl.gtn.gtn2o.esa</groupId>
    <artifactId>gtn-resource-subsystem</artifactId>
    <version>1.0</version>
    <packaging>esa</packaging>
    <name>Gtn Resource-Subsystem</name>
    <properties>
        <gtn.resources.subsystem.order>6</gtn.resources.subsystem.order>
    </properties>
    <parent>
        <groupId>com.stpl.gtn.gtn2o</groupId>
        <artifactId>GtnResources</artifactId>
        <version>1.0</version>
    </parent>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.vaadin</groupId>
                <artifactId>vaadin-bom</artifactId>
                <version>${vaadin.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.vaadin.alump.beforeunload.galderma</groupId>
            <artifactId>beforeunload-addon</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>org.asi.ui</groupId>
            <artifactId>calendarfield</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.asi.ui.galderma</groupId>
            <artifactId>customcombobox</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.asi.ui</groupId>
            <artifactId>customdatefield</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.asi.ui.galderma</groupId>
            <artifactId>custommenubar</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.asi.ui.galderma</groupId>
            <artifactId>customtextfield</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>com.stpl.app.galderma</groupId>
            <artifactId>CustomTreeContainer</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.asi.ui.galderma</groupId>
            <artifactId>customwindow</artifactId>
            <version>1.3</version>
        </dependency>

        <dependency>
            <groupId>org.asi.container</groupId>
            <artifactId>ext-container</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.asi.ui.galderma</groupId>
            <artifactId>extcustomcheckbox</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>org.asi.ui</groupId>
            <artifactId>extfilteringtable</artifactId>
            <version>1.8</version>
        </dependency>
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>tableexport</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.stpl.gtn.gtn20.widgetset</groupId>
            <artifactId>GtnVaadinWidgetset</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
    <build>
        <finalName>${gtn.resources.subsystem.order}.${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.aries</groupId>
                <artifactId>esa-maven-plugin</artifactId>
                <version>1.0.2</version>
                <extensions>true</extensions>
                <configuration>
                    <generateManifest>true</generateManifest>
                    <startOrder>dependencies</startOrder>
                    <instructions>
                        <Subsystem-Type>osgi.subsystem.feature</Subsystem-Type>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>