<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling" xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout spacing="true" margin="true" immediate="true" >
        <p:ErrorLabel id="errorMsg"/>
     
            <VerticalLayout spacing="true" margin="false" immediate="true" >
        
                <Panel caption="Item Group Information" width="100%">
                    <VerticalLayout spacing="true" margin="true" immediate="true" >
                    <HorizontalLayout styleName="responsiveTabGrid">
                        <CssLayout id="cssLayout" width="100%" height="100%">
                            <Label value="Item Group Name" contentMode="HTML" />
                            <TextField id="itemGroupName"  immediate="true" />
                            <Label  value="Item Group No" contentMode="HTML" />
                            <TextField id="itemGroupNo"  immediate="true" />
                            <Label  value="Item Group Description"  contentMode="HTML" />
                            <TextField id="itemGroupDesc"  immediate="true" />
                            <Label value="Company"  contentMode="HTML" />
                            <ComboBox id="companyDdlb"  immediate="true" nullSelectionAllowed="true" inputPrompt="-Select One-" />
                        </CssLayout>
                    </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
         
                <Panel caption="Item Search" id="searchPanel" width="100%">
                    <VerticalLayout spacing="true" margin="true" immediate="true" >
                    <HorizontalLayout margin="false" styleName="responsiveTabGrid">
                        <CssLayout id="isCssLayout" width="100%" height="100%"> 
                            <Label value="Item Type" contentMode="HTML" />
                            <ComboBox id="itemTypeDdlb"  immediate="true" nullSelectionAllowed="true" inputPrompt="-Select One-" />
                            <Label value="Item Desc" contentMode="HTML" />
                            <TextField id="itemDesc"  immediate="true" />
                            <Label value="Brand" contentMode="HTML" />
                            <ComboBox id="brandDdlb"  immediate="true" nullSelectionAllowed="true" inputPrompt="-Select One-"/>
                            <Label value="Strength" contentMode="HTML" />
                            <TextField id="strength"  immediate="true" />
                            <Label value="Item No" contentMode="HTML" />
                            <TextField id="itemNo"  immediate="true" />
                            <Label value="Therapeutic Class"  contentMode="HTML" />
                            <ComboBox id="therapeuticClassDdlb"  immediate="true" nullSelectionAllowed="true" inputPrompt="-Select One-"/>
                            <Label value="Form" contentMode="HTML" />
                            <ComboBox id="formDdlb"  immediate="true" nullSelectionAllowed="true" inputPrompt="-Select One-"/>
                     
                        </CssLayout>
                    </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
              <HorizontalLayout spacing="true" id="searchButtonLayout" margin="false" styleName="responsiveTabGrid">
                    <Button id="search" caption="SEARCH" immediate="true"/>
                    <Button id="reset" caption="RESET" immediate="true" />
                </HorizontalLayout>
                <Panel caption="Results" id="resultTablePanel" width="100%">
                    <a:ExtFilterTable id="resultsTable" selectable="true" immediate="true"/>
            
                </Panel>
                <HorizontalLayout spacing="true" id="includeButtonLayout" margin="false" styleName="responsiveTabGrid">
                    <Button id="add" caption="ADD" immediate="true"/>
                    <Button id="addAll" caption="ADD ALL" immediate="true" />
                    <Button id="availableResultsExcelExport" immediate="true" primaryStyleName="link" />
                </HorizontalLayout>
        
                <Panel caption="Selected Items" id="selectedItemsTable" width="100%">
                    <a:ExtFilterTable id="selectedResultsTable" selectable="true" immediate="true"/>
            
                </Panel>
                <HorizontalLayout spacing="true" id="excludeButtonLayout" margin="false" styleName="responsiveTabGrid">
                    <Button id="remove" caption="REMOVE" immediate="true"/>
                    <Button id="removeAll" caption="REMOVE ALL" immediate="true" />
                    <Button id="selectedResultsExcelExport" immediate="true" primaryStyleName="link" />
                </HorizontalLayout> 
            </VerticalLayout>
        <HorizontalLayout id="excludeButtonLayout1" spacing="true" margin="false" styleName="responsiveTabGrid">
            <Button id="backButton" caption="BACK" immediate="true"/>
            <Button id="save" caption="SAVE" immediate="true" />
            <Button id="resetAll" caption="RESET" immediate="true" />
        </HorizontalLayout> 
    </VerticalLayout>
</Panel>
