
<VerticalLayout id="root" margin="true" caption="ItemAddition" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable"
	xmlns:c="urn:import:org.asi.ui.customcombobox">
	<HorizontalLayout id="hlayout" spacing="false" margin="false" immediate="true" >
		<CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%"  styleName="responsiveTabGrid" >
                        <OptionGroup id="searchType" enabled="false" /> 
			<Label value="Search Field" id= "searchFieldsLB" contentMode="HTML" immediate="true"  />
			<c:CustomComboBox id="searchFields" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			<Label value="Value" id="searchValueLB" contentMode="HTML" immediate="true"   />
			<TextField id="searchValue" enabled="true" immediate="true" />
			<Button id="searchBtn" caption="Search" immediate="true" width="80" />
		</CssLayout>
	</HorizontalLayout>
	<Label value=" " />

	<HorizontalLayout id="hlayout2" spacing="false" margin="false" immediate="true">
		<CssLayout spacing="true" immediate="true" width="100%" height="100%">
			<ef:ExtFilterTable id="availableTable"  />
			<HorizontalLayout spacing="false" margin="false" immediate="true" styleName="move-button-group-allignment-ps">
				<CssLayout  spacing="true" immediate="true" styleName="NavButtonsforPS" >
					<Button id="addBtn" immediate="true" styleName="buttonspace" width="70px" />
					<Button id="removeBtn" immediate="true" styleName="buttonspace" width="70px" />
				</CssLayout>
			</HorizontalLayout>
			<ef:ExtFilterTable id="selectedTable"/>
		</CssLayout>
	</HorizontalLayout>
</VerticalLayout>