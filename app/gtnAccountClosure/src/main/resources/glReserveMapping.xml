<?xml version="1.0" encoding="UTF-8"?>
<Panel    xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout  spacing="true"   immediate="true" margin="true" >
        <Panel spacing="true"  immediate="true" width="100%">
            <HorizontalLayout spacing="true"  immediate="true">   
                <GridLayout columns="2" rows="2" spacing="true" immediate="true">
                    <Panel caption="view" immediate="true" spacing="true">
                        <HorizontalLayout  spacing="true" margin="true" immediate="true">
                            <OptionGroup multiSelect="false" id="componentitems" immediate="true" enable="true" styleName = "horizontal"/> 
                            <Button id="generatebtn" caption="Generate" />
                        </HorizontalLayout>
                   
                    </Panel>
                    <Panel caption="Search Criteria" immediate="true" width="1000px">
                        <HorizontalLayout  spacing="true" margin="true" immediate="true" >
                            <GridLayout spacing="true"   immediate="true" columns="6" rows="1" >
                                <Label value="Business Unit: " contentMode="HTML" width="150px" />
                                <ComboBox id="businessUnit" immediate="true" width="205px"/>  
                                <Label value="Deduction Type: " contentMode="HTML" width="150px" />
                                <ComboBox id="programType" immediate="true" width="205px"/>
                                <Label value="Deduction Sub-Type: " contentMode="HTML" width="154px" />
                                <ComboBox id="programsubType" immediate="true" width="205px"/>
                                <Label value="Frequency: " contentMode="HTML" />
                                <ComboBox id="frequency" immediate="true" width="205px"/>
                            </GridLayout>
                        </HorizontalLayout> 
                    </Panel>
                    <Panel spacing="true"  immediate="true" width="360px" Height="623px">
                        <VerticalLayout  spacing="true"   immediate="true"  id="selectiontbl">
                        </VerticalLayout> 
                    </Panel>
                    <VerticalLayout spacing="true">
                        <HorizontalLayout  spacing="true"  immediate="true">
                            <Button id="searchbtn" caption="SEARCH" />
                            <Button id="reasetbtn" caption="RESET" />
                        </HorizontalLayout> 
                        <Panel  spacing="true" immediate="true" width="1000px">
                            <VerticalLayout id="resultstbl" spacing="true" immediate="true">
                                <!--  <a:ExtFilterTable id="searchtable"  styleName="table-header-normal"  immediate="true" />-->
                            </VerticalLayout>
                        </Panel>
                        <HorizontalLayout>
                            <Button id="reasetbtnbottom" caption="RESET" />
                            <Button id="addbtn" caption="ADD" />
                            <Button id="editbtn" caption="EDIT" />
                            <Button id="viewbtn" caption="VIEW" />
                            <Button id="deletebtn" caption="DELETE" />
                            <Button id="copybtn" caption="COPY" />
                            <Button id="exportbtn" />
                        </HorizontalLayout>
                        <HorizontalLayout spacing="true"  immediate="true"  id="exportlayout">
          
                        </HorizontalLayout>
                    </VerticalLayout>
                </GridLayout>
            </HorizontalLayout>
        </Panel>
    </VerticalLayout>

</Panel>