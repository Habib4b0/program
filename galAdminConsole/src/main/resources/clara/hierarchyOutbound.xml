<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling">
    <VerticalLayout  id="mainPanel" spacing="true" margin="true" >
        <p:ErrorLabel id="errorMsg"/>
        <Panel id="outboundPanel" caption="Hierarchy Search Criteria" height="238px">
            <VerticalLayout spacing="true" >
                <HorizontalLayout spacing="true" margin="true" styleName="responsiveTabGrid" >
                   <GridLayout spacing="false" margin="false" immediate="true" columns="4" rows="3">
                       
                            <Label id="hierarchyNameLB" value="Hierarchy Name:" contentMode="HTML"/>
                            <TextField id="hierarchyName" contentMode="HTML" />
                            <Label id="hierarchyTypeLB" value="Hierarchy Type:" contentMode="HTML" />
                            <OptionGroup multiSelect="false" id="hierarchyType" immediate="true" enable="true" styleName = "horizontal"/>
                            <Label id="creationDateFromLB" value="Creation Date From:"  contentMode="HTML"/>
                            <PopupDateField id="createdDateFrom" dateFormat="MM/dd/yyyy" />
                            <Label id="creationDateToLB" value="Creation Date To:"  contentMode="HTML"/>
                            <PopupDateField id="createdDateTo" dateFormat="MM/dd/yyyy" />
                            <Label id="hierarchyCategoryLB" value="Hierarchy Category:"  contentMode="HTML"/>
                            <ComboBox id="hierarchyCategory" immediate="true" nullSelectionAllowed="true" pageLength="7" inputPrompt="-Select One-"  width="206px" />
                    </GridLayout>
                </HorizontalLayout>
                <HorizontalLayout margin="true">
                    <Button id="searchBtn" caption="SEARCH" />
                </HorizontalLayout>
                
            </VerticalLayout>    
        </Panel>

        <Panel id="resultpanel" caption="Results"  >
            <VerticalLayout id="tableLayout">
                <HorizontalLayout id="controlLayout"/>
            </VerticalLayout>   
        </Panel>
        <HorizontalLayout margin="true">
            <Button id="outboundBtn" caption="GENERATE OUTBOUND" />
            <Button id="closeBtn" caption="CLOSE" />
        </HorizontalLayout>

    </VerticalLayout>
</Panel>