<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <HorizontalLayout id="horizontalLayoutMain" spacing="true" margin="false" immediate="true">
        <VerticalLayout id="dsVerticalLayout" spacing="true" margin="true" immediate="true">
            <Panel id="panel1" caption="Mail Server Configuration" width="475px">
                <HorizontalLayout id="horizontalLayout" spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="dsLayout" immediate="true" columns="2" rows="6">
                        <Label caption="User SMTP*: " contentMode="HTML" />
                        <ComboBox id="smtp" immediate="true" width="205px"/>
                        <Label caption="Host Name*: " contentMode="HTML" />
                        <TextField id="hostName" immediate="true" />
                        <Label caption="Email Address*: " contentMode="HTML" />
                        <TextField id="emailAddr" immediate="true" />
                        <Label caption="Password*: " contentMode="HTML" />
                        <TextField id="password" immediate="true" />
                        <Label caption="Port No*: " contentMode="HTML" />
                        <TextField id="portNo" immediate="true" />
                        <Label caption="Test Mail Addresses: " contentMode="HTML" />
                        <TextField id="testMailAddr" immediate="true" />
                        <VerticalLayout>
                            <Button id="tesMail" caption="TEST MAIL" />
                        </VerticalLayout>
                    </GridLayout>
                </HorizontalLayout>
            </Panel>
            <HorizontalLayout>
                <Button id="saveBtn" caption="SAVE" />
                <Button id="editBtn" caption="EDIT" />
                <Button id="viewBtn" caption="VIEW" />
            </HorizontalLayout>
        </VerticalLayout>
    </HorizontalLayout>
</Panel>
