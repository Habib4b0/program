<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui" xmlns:ct="urn:import:org.asi.ui.customtextfield"
       xmlns:eft="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout margin = "true" spacing = "true" width="100%" height="100%">
        <Panel caption = "View"  spacing="true" width="100%" height="100%">
            <VerticalLayout spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true" immediate="true" columns="4" rows="1">
                    <Label  value="Private View" immediate="true" styleName="label-margin-top-size" />
                    <ct:CustomTextField id="privateView" enable="true" immediate="true" width="205px"/>
            
                    <Label  value="Public View" immediate="true" styleName="label-margin-top-size" />
                    <ct:CustomTextField id="publicView" enable="true" immediate="true" width="205px"/>
                </GridLayout>
            </VerticalLayout>            
        </Panel>
        <Panel caption = "Exclusion Details" width="100%" height="100%">
           
            <VerticalLayout margin = "true" spacing = "true" >           
                <HorizontalLayout>
                    <GridLayout spacing="false" immediate="true" columns="2" rows="1">
                        <Label caption="Field Name:" contentMode="HTML" width="50px" ></Label>
                        <ComboBox id="feildName" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                    </GridLayout>
                </HorizontalLayout>
                <HorizontalLayout>
                    <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                        <eft:ExtFilterTable  width="400px" height="300px" id="availableCustomers" styleName="table-header-normal" immediate="true" selectable="true"/>
                        <GridLayout  spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                            <Button id="moveLeftBtn" caption="&gt;" width="50px"></Button>
                            <Button id="moveRightBtn" caption="&lt;" width="50px"></Button>
                            <Button id="moveAllBtn" caption="ALL" width="50px"></Button>
                        </GridLayout>
                        <eft:ExtFilterTable id="selectedCustomer" width="400px" height="300px" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />
                    </GridLayout>
                </HorizontalLayout>
            </VerticalLayout>
                   
        </Panel>
        <HorizontalLayout id="buttonLay" spacing="true" margin="false" width="100%">
            <Button id="submitBtn" caption="SUBMIT" />
            <Button id="resetBtn" caption="RESET" />
            <Button id="closeBtn" caption="CLOSE" />
            <HorizontalLayout id="rightAligned" spacing="true" margin="false">
            <Button id="saveViewBtn" caption="SAVE VIEW" />
            <Button id="deleteViewBtn" caption="DELETE VIEW " />
            </HorizontalLayout>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
