<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="promoteTpToChVerticalLayout" spacing="true" margin="true" immediate="true">
        <Panel id="transferContractPanel1" caption="Contract Header Details">
            <HorizontalLayout id="horizonatalLayout1" spacing="false" margin="false" immediate="true">
                <VerticalLayout id="verticalLayout1" spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="transferContractLayout1" immediate="true" columns="6" rows="4">
                        <Label caption="Contract No: " contentMode="HTML" />
                        <TextField id="contractNo" immediate="true" />
                        <Label caption="Contract Holder: " contentMode="HTML" />
                        <TextField id="contractHolder" immediate="true" />
                        <Label caption="Start Date: " contentMode="HTML" />
                        <PopupDateField id="startDate" dateFormat="dd/mm/yyyy" />
                        <Label caption="Contract Name: " contentMode="HTML" />
                        <TextField id="contractName" immediate="true" />
                        <Label caption="Market Type: " contentMode="HTML" />
                        <ComboBox id="marketType" immediate="true" width="205px"/>
                        <Label caption="End Date: " contentMode="HTML" />
                        <PopupDateField id="endDate" dateFormat="dd/mm/yyyy" />
                        <Label caption="CFP Name: " contentMode="HTML" />
                        <TextField id="cfpName" immediate="true" />
                         <Label caption="CFP No: " contentMode="HTML" />
                        <TextField id="cfpNo" immediate="true" />
                         <Label caption="CFP ID: " contentMode="HTML" />
                        <TextField id="cfpId" immediate="true" />
                         <Label caption="CFP Status: " contentMode="HTML" />
                        <ComboBox id="cfpStatus" immediate="true" />
                        <Label caption="CFP Start Date: " contentMode="HTML" />
                        <PopupDateField id="cfpSDate" dateFormat="dd/mm/yyyy" />
                        <Label caption="CFP End Date: " contentMode="HTML" />
                        <PopupDateField id="cfpEDate" dateFormat="dd/mm/yyyy" />
                    </GridLayout>
                    <HorizontalLayout>
                        <Button id="populateBtn1" caption="POPULATE"/>     
                    </HorizontalLayout>
                </VerticalLayout>
                <VerticalLayout id="verticalLayout2" spacing="true" margin="true" immediate="true">
                    <Panel caption="Alias Details" >
                        <GridLayout spacing="true" id="aliasLayout" immediate="true" columns="4" rows="2" width="684px">
                            <Label caption="Type: " contentMode="HTML" />
                            <ComboBox id="type" immediate="true" width="205px"/>
                            <Label caption="Start Date: " contentMode="HTML" />
                            <PopupDateField id="aliasStartDate" dateFormat="dd/mm/yyyy" />
                            <Label caption="Number: " contentMode="HTML" />
                            <TextField id="number" immediate="true" />
                            <Label caption="End Date: " contentMode="HTML" />
                            <PopupDateField id="aliasEndDate" dateFormat="dd/mm/yyyy" />
                        </GridLayout>
                    </Panel> 
                </VerticalLayout>
            </HorizontalLayout>
        </Panel>
    </VerticalLayout>
</Panel>