<Panel  xmlns="urn:import:com.vaadin.ui" xmlns:ct="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout margin = "true">
        <HorizontalLayout spacing = "true">
            <OptionGroup multiSelect="false" id="viewOption" immediate="true" enable="true" styleName = "horizontal">
            </OptionGroup>
        </HorizontalLayout>
        <HorizontalLayout spacing = "true">
            <Label value="View Name: " contentMode="HTML"/>
            <ct:CustomTextField id= "viewName" />
        </HorizontalLayout>
        <HorizontalLayout spacing = "true">
            <Button id = "cancel" caption = "CANCEL"></Button>
            <Button id = "add" caption = "ADD"></Button>
            <Button id = "update" caption = "UPDATE"></Button>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
