<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout spacing="true" margin="true"  styleName="bootstrap-forecast">
        <Panel caption="Data Selection"  width="100%" styleName="textbold" > 
            <VerticalLayout spacing="true" margin="true" immediate="true">

           <GridLayout spacing="true" margin="false" immediate="true"
                            columns="5" rows="3">
                     <!--First row start--> 

                    <Label value="Mode: " contentMode="HTML" width="76px"  />
                    <OptionGroup multiSelect="false" id="modeOption"
                                     immediate="true" enable="true" styleName="horizontal">
                     </OptionGroup>
                     <Label value="" contentMode="HTML" width="188px" />
                     <Label value="" contentMode="HTML"  />
                     <Label value="" contentMode="HTML"  />
                   
                     <!--second row start--> 
                    <Label value="Name:" contentMode="HTML" />
                    <TextField id="name"></TextField>
                    <Label value="" contentMode="HTML" width="188px" />
                    <Label value="Product Group: " contentMode="HTML" width="125px"/>
                    
                    <b:CustomTextField id="productGroup" styleName="searchicon"
                                       inputPrompt="" immediate="true"  />
                     <!--third row start--> 
                    <Label value="Company:" contentMode="HTML" />
                    <ComboBox id="company" nullSelectionAllowed="false" width="206px" height="26px"
                              inputPrompt="-Select One-" immediate="true"/>
                     <Label value="" contentMode="HTML" width="188px" />
                    <Label value="Therapeutic Class: " contentMode="HTML" width="125px"/>
                    <ComboBox id="therapeuticClass" nullSelectionAllowed="false" width="206px" height="26px"
                              inputPrompt="-Select One-" immediate="true"/>
                    <!--/fourth row start--> 
                    <Label value="Business Unit: " contentMode="HTML" width="125px"/>
                    <ComboBox id="businessUnit" nullSelectionAllowed="false" width="206px" height="26px"
                              inputPrompt="-Select One-" immediate="true"/>
                    <Label value="" contentMode="HTML" />
                    
                </GridLayout>


                <GridLayout spacing="true" margin="false" immediate="true"
                            columns="3" row="1">
                    <VerticalLayout>
                       
                        <a:ExtFilterTable styleName="table-header-normal textbold" caption="Available Products"
                                          id="availableProducts" selectable="true" width="300px" height="175px"
                                          immediate="true"  />
                    </VerticalLayout>
                    <!-- </Panel> -->
                    <VerticalLayout spacing="true" margin="false">
                    
                        <Label value="" contentMode="HTML" />
                        <Label value="" contentMode="HTML" />
                        <Button id="moveLeftProduct" caption="&gt;" width="50px" immediate="true">
                        </Button>
                        <Button id="moveRightProduct" caption="&lt;" width="50px" immediate="true">
                        </Button>
                        <Button id="allProductLeftBtn" caption="&gt;&gt;" width="50px" immediate="true">
                        </Button>
                        <Button id="allProductRightBtn" caption="&lt;&lt;" width="50px" immediate="true">
                        </Button>
                    </VerticalLayout>
                    <VerticalLayout>

                        
                        <a:ExtFilterTable styleName="table-header-normal textbold" caption="Selected Products"
                                          id="selectedProducts" selectable="true" width="300px" height="175px"
                                          immediate="true" />

                    </VerticalLayout>
                </GridLayout>
            
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false" immediate="true">
            <Button id="generateBtn" caption="GENERATE" immediate="true"></Button>
            <Button id="searchBtn" caption="SEARCH" immediate="true"></Button>
        </HorizontalLayout>

        <Panel caption="Results" styleName="textbold" >
            <VerticalLayout id="resultsTableLayout" spacing="true" margin="false">


            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="editBtn" caption="EDIT" enabled="false" immediate="true"></Button>
            <Button id="viewBtn" caption="VIEW" enabled=" false" immediate="true"></Button>
            <Button id="deleteBtn" caption="DELETE" enabled=" false" immediate="true"></Button>
        </HorizontalLayout>

    </VerticalLayout>

</Panel>
