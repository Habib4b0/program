<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable"
        xmlns:a="urn:import:org.asi.ui.extfilteringtable" 
        xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="promoteTpToChVerticalLayout" spacing="true"
                    margin="true" immediate="true" styleName = "width-auto">
        
        <Panel id="removeDiscountPanel1" caption="Search Criteria">
            <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="promoteTpToChLayout" immediate="true" columns="8" rows="4">
                    <Label caption="IFP No: " contentMode="HTML" />
                    <TextField id="ifpNo" inputPrompt="" immediate="true"/>
                    <Label caption="IFP Type: " contentMode="HTML" />
                    <ComboBox id="ifpType" immediate="true" width="205px"/>
                    <Label caption="IFP Status: " contentMode="HTML" />
                    <ComboBox id="ifpStatus" immediate="true" width="205px"/>   
                    <Label caption="IFP End Date:" contentMode="HTML" />
                    <PopupDateField id="ifpEndDate" inputPrompt="" />                  
                    
                    
                    <Label caption="IFP Name: " contentMode="HTML" />
                    <TextField id="ifpName" inputPrompt="" immediate="true"/>
                     <Label caption="IFP Category " contentMode="HTML" />
                    <ComboBox id="ifpCategory" inputPrompt="" immediate="true" width="205px"/>              
                    <Label caption="IFP Start Date:" contentMode="HTML" />
                    <PopupDateField id="ifpStartDate" inputPrompt="" /> 
                    
                    
                                        
                </GridLayout>                
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout >
            <Button id="searchBtn" caption="SEARCH"  />
            <Button id="resetBtn" caption="RESET"  />
        </HorizontalLayout>
        <Panel id="removeDiscountPanel2" caption="Results">
            <VerticalLayout styleName="width-auto" >
                <VerticalLayout id="ifpTableLayout"  immediate="true">
                </VerticalLayout>
                <HorizontalLayout spacing="true" margin="true">
                    <Button id="selectBtn" caption="SELECT"  />
                    <Button id="closeBtn" caption="CLOSE"  />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
