<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" id="mainPanel">
    <VerticalLayout id="dsVerticalLayout" spacing="false"
		margin="true" immediate="true" >

        <Panel id="panel1" caption="PPA Projection Results Selection" styleName = "forecast-tab" >
            <VerticalLayout styleName = "width-auto"  margin="true">   
                <GridLayout spacing="true" margin="false" id="dsLayout" immediate="true" columns="6" rows="2"  styleName="adjustCaption">
                    <Label caption="Frequency: " contentMode="HTML" />
                    <ComboBox id="frequency" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize"/>
                    <!--				<Label caption=" " contentMode="HTML" immediate="true" />
                    <Label caption=" " contentMode="HTML" immediate="true" />-->
                    <!--				<OptionGroup multiSelect="false" id="discount" width="300px"
                    enabled="true" immediate="true" />-->
                    <Label caption="Projection Period Order: " contentMode="HTML" width = "165px" />
                    <HorizontalLayout>
                        <OptionGroup multiSelect="false" id="periodOrder" styleName="optiongroupwidth"
                                     enabled="true" immediate="true" />
                    </HorizontalLayout>
                    <Label caption="Actuals/Projections: " contentMode="HTML" />
                    <OptionGroup multiSelect="false" id="actualOrProj" width="300px" 
                                 enabled="true" immediate="true" />
                    <Label caption="History: " contentMode="HTML" />
                    <ComboBox id="history" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize"/>
				
                    <Label caption="Pivot View: " contentMode="HTML" styleName="labelresultalign"/>
                    <HorizontalLayout width="200px">
                        <OptionGroup multiSelect="false" id="pivotView" styleName="optiongroupwidth" enabled="true" immediate="true" />
                    </HorizontalLayout>
                </GridLayout>
            </VerticalLayout>
        </Panel>
        <Panel styleName = "forecast-tab" >
            <VerticalLayout styleName = "width-auto"  margin="true">   
                <GridLayout spacing="true" margin="false" immediate="true" columns="15" rows="1"  styleName="adjustCaption">
                    <Button id="generateBtn" caption="GENERATE"></Button>
                    <Button id="resetBtn" caption="RESET"></Button>
                    <Label caption="Level: " contentMode="HTML" />
                    <ComboBox id="level" nullSelectionAllowed="true" styleName="comboxsize"/>
                    <Button id="expandBtn" caption="EXPAND"></Button>
                    <Button id="collapseBtn" caption="COLLAPSE"></Button>
                    <Label caption="Group:" id="groupLabel" contentMode="HTML" />
                    <ComboBox id="group" nullSelectionAllowed="true"
                          immediate="true" styleName="comboxsize"/>
                    <Label caption="Level Filter: " contentMode="HTML" width = "100px"/>
                    <ComboBox id="levelFilter" nullSelectionAllowed="true" immediate="true" styleName="comboxsize"/>
                    <Label caption="View: " contentMode="HTML"></Label>
                    <OptionGroup multiSelect="false" id="view" enabled="true" immediate="true" />
                    <ComboBox id="customDdlb" nullSelectionAllowed="true" immediate="true" styleName="comboxsize"/>
                    <Button id="newBtn" caption="NEW"></Button>
                    <Button id="editBtn" caption="EDIT"></Button>
                </GridLayout>
            </VerticalLayout>
        </Panel>
        <Panel id="resultsCaption" caption="Period Pivot View">
            <VerticalLayout spacing="false" margin="false" immediate="true">
                <VerticalLayout id="verticalLayout" spacing="false"
                                margin="false" immediate="true">
                </VerticalLayout>
                <HorizontalLayout spacing="false" margin="false">
                    <Button id="excelBtn" styleName="link"></Button>
                    <Button id="graphBtn" styleName="link"></Button>
                    <Button id="detailsBtn" caption="Details"></Button>
                </HorizontalLayout>
                            
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>