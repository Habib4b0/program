<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable"
        xmlns:a="urn:import:org.asi.ui.extfilteringtable" 
        xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="promoteTpToChVerticalLayout" spacing="true"
                    margin="true" immediate="true" styleName = "width-auto">
        
        <Panel id="removeDiscountPanel1" caption="Search Criteria">
            <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="promoteTpToChLayout" immediate="true" columns="8" rows="2">
                    <Label caption="CFP ID: " contentMode="HTML" />
                    <TextField id="cfpId" inputPrompt="" immediate="true"/>
                     <Label caption="CFP Name: " contentMode="HTML" />
                    <TextField id="cfpName" inputPrompt="" immediate="true"/>
                    <Label caption="CFP Category:" contentMode="HTML" />
                    <ComboBox id="cfpCategory" inputPrompt="" immediate="true" width="205px"/>
                    <Label caption="CFP Start Date:" contentMode="HTML" />
                    <PopupDateField id="cfpStartDate" inputPrompt="" /> 
                   
                     <Label caption="CFP No: " contentMode="HTML" />
                    <TextField id="cfpNo" inputPrompt="" immediate="true"/>
                     <Label caption="CFP Type: " contentMode="HTML" />
                    <ComboBox id="cfpType" immediate="true" width="205px"/>
                    <Label caption="CFP Status: " contentMode="HTML" />
                    <ComboBox id="cfpStatus" immediate="true" width="205px"/>
                     <Label caption="CFP End Date:" contentMode="HTML" />
                    <PopupDateField id="cfpEndDate" inputPrompt="" /> 
                    
                   
                                        
                </GridLayout>                
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout >
            <Button id="searchBtn" caption="SEARCH"  />
            <Button id="resetBtn" caption="RESET"  />
        </HorizontalLayout>
        <Panel id="removeDiscountPanel2" caption="Results">
            <VerticalLayout styleName="width-auto" >
                <VerticalLayout id="cfpTableLayout"  immediate="true">
                </VerticalLayout>
                <HorizontalLayout spacing="true" margin="true">
                    <Button id="selectBtn" caption="SELECT"  />
                    <Button id="closeBtn" caption="CLOSE"  />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
