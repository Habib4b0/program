<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"   xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" styleName="bootstrap-forecast">
        <Panel id="ProductGroupPanel" caption="Search Criteria">
            <VerticalLayout spacing="true" margin="true" height = "100px">
            <GridLayout id="gLayout" rows="2" columns="2" spacing="true" margin="false">
                <Label value="Product Group Name:" contentMode="HTML"  width="149px"/>
                <TextField id="productGroupName" inputPrompt="" />
                <Label value="Product Group#:" contentMode="HTML" width="148px"/>
                <TextField id="productGroup" inputPrompt=""  />
            </GridLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="searchBtnPGL" caption="SEARCH"  />
            <Button id="resetBtnPGL" caption="RESET"  />
        </HorizontalLayout>
        <Panel caption="Results" width="101%">
    <!--<a:ExtFilterTable id="resultsTablePGL" width="100%" height="75%" styleName="table-header-normal" immediate="true"/>-->
      <VerticalLayout id="resultsTableLayout"></VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="selectBtnPGL" caption="SELECT"  />
            <Button id="cancelBtnPGL" caption="CANCEL"  />
            <Button id="resultResetBtnPGL" caption="RESET"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
