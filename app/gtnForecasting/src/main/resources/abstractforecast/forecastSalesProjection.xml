                                  immediate="true" enable="true" />                        
                    </HorizontalLayout>
                    <Label value="Therapeutic Class: " contentMode="HTML" width="125px" />
                    <ComboBox multiSelect="false" id="therapeuticClass" inputPrompt="-Select One-"
                              immediate="true" enable="true" />
                </GridLayout>
            </VerticalLayout>
        </Panel>  
