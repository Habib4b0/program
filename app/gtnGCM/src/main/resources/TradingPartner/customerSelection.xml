<?xml version="1.0" encoding="UTF-8"?>

<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="customerSelectionVerticalLayout" spacing="true"
                    margin="true" immediate="true">
        
        <Panel id="selectedCustomers" caption = "Selected Customers ">
            <VerticalLayout>
                <VerticalLayout id="selectedCustomersTableLayout" spacing="true" margin="false" immediate="true">
                </VerticalLayout>
                <HorizontalLayout  margin = "true" id="Excellayout">
                    <Button id="selectedCustomersExport" alignment="BOTTOM_LEFT" primaryStyleName="link"/>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        
        
      
        <Panel id="companySearch" caption = "Search Criteria">
            <HorizontalLayout spacing="true" margin="true" immediate="true">
                <VerticalLayout>
                    <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                        <GridLayout spacing="true" immediate="true" columns="10" rows="2">
                            <Label caption="Company ID: " contentMode="HTML" />
                            <TextField id="companyId" immediate="true" />
                            <Label caption="Company Name: " contentMode="HTML" />
                            <TextField id="companyName" immediate="true" />
                            <Label caption="Company Category: " contentMode="HTML" />
                            <ComboBox id="companyCategory" immediate="true" width="205px"/>
                            <Label caption="Identifier Type: " contentMode="HTML" />
                            <ComboBox id="identifierType" immediate="true" width="205px"/>
                            <Label caption="Parent No: " contentMode="HTML" width="100px" />
                            <b:CustomTextField id="parentNo" styleName="searchText" inputPrompt=""/>
                            <Label caption="Company Type: " contentMode="HTML" />
                            <ComboBox id="companyType" immediate="true" width="205px"/>
                            <Label caption="Company No: " contentMode="HTML" />
                            <TextField id="companyNo" immediate="true" />
                            <Label caption="Trade Class: " contentMode="HTML" />
                            <ComboBox id="tradeClass" immediate="true" width="205px"/>
                            <Label caption="Identifier: " contentMode="HTML" />
                            <TextField id="identifier" immediate="true" />
                            <Label caption="Parent Name: " contentMode="HTML" width="100px" />
                            <b:CustomTextField id="parentName" styleName="searchText" inputPrompt=""/>
                        </GridLayout>
                    </HorizontalLayout>
                    <HorizontalLayout spacing = "true" margin = "true" immediate="true">
                        <GridLayout spacing="true" immediate="true" columns="3" rows="1">
                            <Button id="searchBtn" caption="SEARCH" alignment="BOTTOM_LEFT" />
                            <Button id="resetBtn" caption="RESET" alignment="BOTTOM_LEFT" />
                        </GridLayout>
                    </HorizontalLayout>
                </VerticalLayout>
            </HorizontalLayout>
        </Panel>
        <Panel id="companySearchResults" caption = "Results ">
            <VerticalLayout>
                <VerticalLayout id="companySearchResultsLayout" spacing="true" margin="false" immediate="true">
                </VerticalLayout>
                <HorizontalLayout  margin = "true" id="resultExcelLayout">
                    <Button id="searchResultsExport" alignment="BOTTOM_LEFT" primaryStyleName="link"/>
                    <Button id="listViewResetBtn" caption="RESET" alignment="BOTTOM_LEFT" />
                    <Button id="transferBtn" caption="TRANSFER" alignment="BOTTOM_LEFT" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        
        <Panel id="transferCustomerPanel" caption = "Transfer Customers">
            <VerticalLayout>
                <VerticalLayout id="transferCustomerTableLayout" spacing="true" margin="false" immediate="true">
                </VerticalLayout>
                <HorizontalLayout  margin = "true" id="transferExcelLayout">
                    <Button id="transferCustomersExport" alignment="BOTTOM_LEFT" primaryStyleName="link"/>
                    <Button id="removeBtn" caption="REMOVE" alignment="BOTTOM_LEFT" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
                
        <HorizontalLayout margin = "true">
            <Button id="NextBtn" caption="NEXT" alignment="BOTTOM_LEFT" />
            <Button id="closeBtn" caption="CLOSE" alignment="BOTTOM_LEFT" /> 
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
