<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel">
    <VerticalLayout id="dsVerticalLayout" spacing="true"
                    margin="true" immediate="true" width="100%" styleName="bootstrap-forecast">

        <Panel id="projectionResultsSelection" caption="Projection Results Selection" width="100%" height="156px">
            <VerticalLayout margin="true" styleName="width-auto">
                <GridLayout spacing="true" margin="false" id="dsLayout"
                        immediate="true" columns="6" rows="2">
                    <Label value="Frequency: " contentMode="HTML" />
                    <ComboBox id="frequencyDdlb" nullSelectionAllowed="true"
                          immediate="true" styleName="comboxsize"/>
                    <Label value="Sales/Units: " contentMode="HTML" immediate="true" width="133px"/>
                    <OptionGroup multiSelect="false" id="salesOrUnitsOpg" width="378px"
                             enabled="true" immediate="true" />
                    <Label value="Projection Period Order: " contentMode="HTML" width="175px"/>
                    <HorizontalLayout>
                        <OptionGroup multiSelect="false" id="periodOrderOpg"
                                 enabled="true" immediate="true" />
                    </HorizontalLayout>

                    <Label value="History: " contentMode="HTML" width="80px"/>
                    <ComboBox id="historyDdlb" nullSelectionAllowed="true" immediate="true" styleName="comboxsize"/>
                    <Label value="Actuals/Projections: " contentMode="HTML" />
                    <OptionGroup multiSelect="false" id="actualOrProjectionsOpg"
                             width="378px" enabled="true" immediate="true" />
                    <Label value="Pivot View: " contentMode="HTML" />
                    <HorizontalLayout width="200px">
                        <OptionGroup multiSelect="false" id="pivotViewOpg" 
                                 enabled="true" immediate="true" />
                    </HorizontalLayout>
                </GridLayout>
            </VerticalLayout>
        </Panel>

        <Panel>
        <HorizontalLayout spacing="true"  margin="true" styleName="component-layout">
            <Button id="generateBtn" caption="GENERATE"></Button>
            <Button id="resetBtn" caption="RESET"></Button>
            <Label caption="Level: " contentMode="HTML" />
            <ComboBox id="levelDdlb" nullSelectionAllowed="true" styleName="comboxsize"/>
            <Button id="expandBtn" caption="EXPAND"></Button>
            <Button id="collapseBtn" caption="COLLAPSE"></Button>
            <Label id="groupDdlbLabel" caption="Group:" contentMode="HTML" />
            <ComboBox id="groupDdlb" nullSelectionAllowed="true"
                                  immediate="true" styleName="comboxsize"/>
            <Label caption="Level Filter: " contentMode="HTML" />
            <ComboBox id="levelFilterDdlb" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize" />
            <Label caption="View: " contentMode="HTML"></Label>
            <OptionGroup multiSelect="false" id="viewOpg" enabled="true"
                                 immediate="true"/>
            <ComboBox id="customDdlb" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize"/>
            <Button id="newBtn" caption="NEW"></Button>
            <Button id="editBtn" caption="EDIT"></Button>
        </HorizontalLayout>
        </Panel>
        <Panel id="tablePanel">
            <VerticalLayout id="verticalLayout" spacing="true"
                            margin="true" immediate="true">
                <VerticalLayout id="tableVerticalLayout" spacing="false"
                                margin="false" immediate="true">
             
                    <!--<a:FreezeFilterTreeTable id="periodTableId" caption="" width="100%" immediate="true" height="100%" styleName="valo-theme-extfiltertable" />-->					
                </VerticalLayout>
                <HorizontalLayout spacing="true" margin="true">
                    <Button id="graphBtn" primaryStyleName="link"></Button>
                    <Button id="excelBtn" primaryStyleName="link"></Button>
                                       
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
	
    </VerticalLayout>



</Panel>
