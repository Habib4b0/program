
<VerticalLayout styleName="custom-margin" caption="Rebate Setup" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable"
	xmlns:c="urn:import:org.asi.ui.customcombobox" xmlns:cf="urn:import:com.stpl.ifs.ui" xmlns:f="urn:import:org.asi.ui.customtextfield" >
	<HorizontalLayout id="hlayout" immediate="true" caption="Mass Update" styleName="responsiveTabGrid" spacing="true">
		<CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%">

			<OptionGroup id="massCheck" enabled="true" />
                        <Label Value="Field" id="massFieldLB" immediate="true" />
			<c:CustomComboBox id="massField" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label Value="Value" id="valueLB" immediate="true" width="50px" />
			<PopupDateField id="massDate" immediate="true" />
			<TextField id="massValue" enabled="true" immediate="true" />
			<c:CustomComboBox id="rebatePlanNameDdlb" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <f:CustomTextField id="massLookup"  styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			
                        <Button id="btnPopulate" immediate="true" caption="Populate" />

			<Button id="btnAllPopulate" immediate="true" caption="Populate All" />


		</CssLayout>
	</HorizontalLayout>
        <HorizontalLayout>
            <Label value="Record: "  contentMode="HTML" immediate="true"  />
            <OptionGroup multiSelect="true" id="record" immediate="true" enable="true" styleName = "horizontal"/>
        </HorizontalLayout>
        <HorizontalLayout>
            <OptionGroup id="periodCheckBox" visible="false" />            
        </HorizontalLayout>	
	<Panel id ="resultsPanel" caption="Results">
		<VerticalLayout id="tableLayout"/>                                 
	</Panel>	
        <HorizontalLayout margin="true" spacing="true">
        <HorizontalLayout id="controlLayout"/>
        <CssLayout immediate="true" width="100%" height="100%">
                <Button id="excel" immediate="true" primaryStyleName="link" />
        </CssLayout>
        </HorizontalLayout>
</VerticalLayout>