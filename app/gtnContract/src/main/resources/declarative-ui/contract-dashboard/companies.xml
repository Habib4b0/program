<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout margin="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui" xmlns:c="urn:import:org.asi.ui.customtextfield" xmlns:eh="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout>
        <HorizontalLayout id="commonLayout" styleName="responsiveTabGrid" margin="true" spacing="true">
            <Label value="Level:"  contentMode="HTML" immediate="true"   />
            <OptionGroup multiSelect="false" id="level" immediate="true" enable="true" styleName = "horizontal"/>
            <Label id="viewLB" value="View:"  contentMode="HTML" immediate="true"   />
            <OptionGroup multiSelect="false" id="view" immediate="true" enable="true" styleName = "horizontal"/>
        </HorizontalLayout>
    </VerticalLayout>
    <Panel id="infoPanel" >
        <VerticalLayout immediate="true" margin="true" spacing="true" >
            <HorizontalLayout styleName="responsiveTabGrid" spacing="true" id="componentLayout">
                <CssLayout width="100%" height="100%">
                    <Label  value="CFP ID" contentMode="HTML"  styleName="mandatory" />  
                    <TextField id="companyFamilyPlanId"  immediate="true" />  
                    <Label  value="CFP No" contentMode="HTML"  styleName="mandatory" />  
                    <TextField id="companyFamilyPlanNo"  immediate="true" /> 
                    <Label  value="CFP Name" contentMode="HTML"  styleName="mandatory" />  
                    <TextField id="companyFamilyPlanName"  immediate="true" /> 
                    <Label  value="CFP Status" contentMode="HTML"  styleName="mandatory"/> 
                    <ComboBox id="cfpStatus" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true"  />  
                    <Label  value="CFP Start Date" contentMode="HTML"  styleName="mandatory"/> 
                    <PopupDateField id="companyFamilyPlanStartDate"  inputPrompt="" />
                    <Label  value="CFP End Date" contentMode="HTML"  /> 
                    <PopupDateField id="companyFamilyPlanEndDate"  inputPrompt=""/>
                    <Label  value="CFP Type" contentMode="HTML"  /> 
                    <ComboBox id="cfptype" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" />  
                        
                    <Label  value="CFP Category" contentMode="HTML"  /> 
                    <ComboBox id="cfpCategory" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" />  
                        
                    <Label  value="CFP Trade Class" contentMode="HTML"  /> 
                    <ComboBox id="cfptrade" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                         
                    <Label  value="CFP Designation" contentMode="HTML"  /> 
                    <ComboBox id="cfpDesignation" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" />  
                    <Label  value="Parent CFP ID" contentMode="HTML"  />
                    <c:CustomTextField id="parentCfp" styleName="searchicon" inputPrompt=""/>
                    <Label  value="Parent CFP Name" contentMode="HTML"  />
                    <c:CustomTextField id="parentCfpName"  inputPrompt="" styleName="searchicon"/>
                    <Label  value="Sales Inclusion" contentMode="HTML"  styleName="mandatory"/> 
                    <ComboBox id="salesInclusion" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true"  />  
                    <Label  value="Created By" contentMode="HTML"  /> 
                    <TextField id="createdBy"  immediate="true" /> 
                              
                    <Label  value="Created Date " contentMode="HTML"  /> 
                    <TextField id="createddate"  inputPrompt="" /> 
                    <Label  value="Modified  By" contentMode="HTML"  /> 
                    <TextField id="ModifiedBy"  immediate="true" /> 
                    <Label  value="Modified  Date " contentMode="HTML"  /> 
                    <TextField id="Modifieddate"  inputPrompt="" /> 
                        
                       
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>
    <Panel  id="tablePanel" styleName="custom-margin" margin="true" >
        <VerticalLayout id="HeadertblLayout">
            <eh:ExtFilterTable id="HeaderCompanyDetailsTable" visible="false" immediate="true" />
        </VerticalLayout>
    </Panel>
            
    <VerticalLayout id="detailsLayout">
        <Panel caption="Mass Update" id="massPanel" spacing="true"  >
            <VerticalLayout spacing="true" margin="true">
                <HorizontalLayout  id="hLayout" styleName="responsiveTabGrid">
                    <CssLayout id="cssLayout" width="100%" height="100%">
                        <OptionGroup multiSelect="false" id="massCheck"
                                     immediate="true" enable="true" styleName = "horizontal"/>
                        <ComboBox id="massField" nullSelectionAllowed="false"
                                  inputPrompt="-Select One" immediate="true" /> 
                              
                        <PopupDateField id="massDate" immediate="true"/>  
                        <ComboBox id="massValue" nullSelectionAllowed="false"
                                  inputPrompt="-Select One" immediate="true" />   
                              
                        <Button id="btnPopulate" caption="Populate" />
                        <Button id="btnAllPopulate" caption="Populate All" />
                    </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout id="recordLayout">
            <Label value="Record: "  contentMode="HTML" immediate="true"  />
            <OptionGroup multiSelect="true" id="record" immediate="true" enable="true" styleName = "horizontal"/>
        </HorizontalLayout> 
        <Panel id="resultPanel" caption="Results" >
            <VerticalLayout id="resultsTableLayout" spacing="true">
                <ef:CustomePagedFilterTable id="companyDetailsTable" immediate="true" />        	
                <Table id="viewCompanyDetailsTable" visible="false" immediate="true" />
            </VerticalLayout> 
                                            
        </Panel> 
                
        <HorizontalLayout id="paginationLayout"  />  
        <HorizontalLayout>      
            <Button id="btnRemove" caption="Remove" />
        </HorizontalLayout>
    </VerticalLayout>
    <Button id="excelBtn" immediate="true" />
</VerticalLayout>