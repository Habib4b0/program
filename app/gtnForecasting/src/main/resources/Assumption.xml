<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout margin="true" styleName = "forecast-tab">
        <Panel id="cidtPanel" caption="Customer ID Transfer" spacing="false" 
               margin="false" immediate="true" visible="false" styleName="forecast-assumptions">
            <VerticalLayout>
                <ExtCustomTable id="cidtTable" styleName="table-header-normal"
                       width="100%" immediate="true" height="100%" />
                <HorizontalLayout styleName = "nmAssumptionsDivider" >
                    <Button id="cidtExcel" immediate="true" primaryStyleName="link"  margin="true" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel id="pvsPanel" caption="Projection Variance SnapShot">
            <VerticalLayout spacing="false" margin="false" immediate="true">
                    
                <Panel caption="Mass Update">
                    <VerticalLayout styleName = "width-auto"  margin="true"  >
                        <GridLayout rows="1" columns="7" margin="false" spacing="true" styleName="adjustCaption">                        
                            <OptionGroup id="massUpdatePVS" enable="true" immediate="true"  styleName="horizontal" />
                            <Label caption="Field:" contentMode="HTML" />
                            <ComboBox id="fieldDdlbPVS" nullSelectionAllowed="true" immediate="true" styleName="comboxsize" />
                            <Label caption="Value:" contentMode="HTML" />
                            <ComboBox id="valueDdlbPVS" nullSelectionAllowed="true" immediate="true" styleName="comboxsize" />
                            <TextField id="populateCommentry" visible="false" />             
                            <Button id="populateBtnPVS" caption="POPULATE" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
                 <VerticalLayout spacing="false" margin="false"
                                immediate="true" id="pvsTableLayout"  styleName="projectionTable">
				    </VerticalLayout>       
                
                <HorizontalLayout spacing="true" margin="false" styleName = "nmAssumptionsDivider">
                    <Button id="pvsExcel" immediate="true" primaryStyleName="link" />
                    <Button id="addLine" immediate="true" caption="Add Line" />
                    <Button id="removeLine" immediate="true" caption="Remove Line" />
                </HorizontalLayout>      
            </VerticalLayout>
        </Panel>

        <Panel id="salesPanel" caption="Trading Partner Maintenance – Sales" spacing="false" margin="false" immediate="true">
            <VerticalLayout>
                <VerticalLayout spacing="false" margin="false"
                                immediate="true" id="salesTableLayout"  styleName="projectionTable">
				    </VerticalLayout>
<!--                <ExtCustomTable id="salesTable" styleName="table-header-normal"
                       width="100%" immediate="true" height="100%" />-->
                <HorizontalLayout styleName = "nmAssumptionsDivider" >
                    <Button id="salesExcel" immediate="true" primaryStyleName="link"   margin="true" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
                    
        <Panel id="discountPanel" caption="Trading Partner Maintenance – Discount" spacing="false" margin="false" immediate="true">
            <VerticalLayout>
                <VerticalLayout spacing="false" margin="false"
                                immediate="true" id="discountTableLayout"  styleName="projectionTable">
				    </VerticalLayout>
<!--                <ExtCustomTable id="discountTable" styleName="table-header-normal"
                       width="100%" immediate="true" height="100%" />-->
                <HorizontalLayout styleName = "nmAssumptionsDivider" >
                    <Button id="discountExcel" immediate="true" primaryStyleName="link"   margin="true" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
                    
        <Panel id="ppaPanel" caption="Trading Partner Maintenance – PPA" spacing="false" margin="false" immediate="true">
            <VerticalLayout>
                <VerticalLayout spacing="false" margin="false"
                                immediate="true" id="ppaTableLayout"  styleName="projectionTable">
				    </VerticalLayout>
<!--                <ExtCustomTable id="ppaTable" styleName="table-header-normal"
                       width="100%" immediate="true" height="100%" />-->
                <HorizontalLayout styleName = "nmAssumptionsDivider" > 
                    <Button id="ppaExcel" immediate="true" primaryStyleName="link"   margin="true" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>


</Panel>