<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.tepi.filtertable" xmlns:b="urn:import:org.asi.ui.extfilteringtable" id="mainPanel" width="100%">
    <VerticalLayout id="mainLayout" spacing="true" margin="true" immediate="true" styleName="bootstrap-forecast" >

        <Panel caption="Selection Criteria">
            <VerticalLayout spacing="true" styleName = "width-auto" margin="false"
                            immediate="true">
                <GridLayout rows="1" columns="2" spacing="true" margin="false"
                            immediate="true" >                            
                    <VerticalLayout spacing="true" styleName = "width-auto" margin="true"
                                    immediate="true">
                        <GridLayout margin="false" spacing="false" immediate="true" rows="5" columns="1">	
                            <HorizontalLayout spacing="true" margin="true" immediate="true">						    
                            <Label value="Customer: " contentMode="HTML" width="81px"/>
                            <ComboBox id="customerDdlb" nullSelectionAllowed="true "
                                      immediate="true" styleName="comboxsize"/>
                            </HorizontalLayout>
                            <HorizontalLayout spacing="true" margin="true" immediate="true">					
                            <Label value="Contract: " contentMode="HTML" width="81px" />
                            <ComboBox id="contractDdlb" nullSelectionAllowed="true"
                                      immediate="true" styleName="comboxsize"/>
                            </HorizontalLayout>
                            <HorizontalLayout spacing="true" margin="true" immediate="true">
                            <Label value="Frequency: " contentMode="HTML" width="81px"/>
                            <ComboBox id="frequencyDdlb" nullSelectionAllowed="true"
                                      immediate="true" styleName="comboxsize"/>
                            </HorizontalLayout>
<!--                            <Label value="" contentMode="HTML" />	
-->                            <Label caption="" contentMode="HTML" />	
                            <HorizontalLayout spacing="true" margin="true"
                                              immediate="true">
                                <Button id="generateBtn" caption="GENERATE"></Button>
                                <Button id="resetBtn" caption="RESET"></Button>
                            </HorizontalLayout>
                        </GridLayout>
                    </VerticalLayout>
                        
                    <VerticalLayout spacing="true" styleName = "width-auto" margin="false"
                                        immediate="true">	
                        <GridLayout spacing="true" margin="false" immediate="true"
                                columns="3" rows="1">

                            <b:ExtFilterTable id="availableProducts" caption="Available Products"
                               pageLength="5" immediate="true" width="300px"
                               selectable="true" styleName="table-header-normal" />
                            <VerticalLayout spacing="true" margin="false"
                                        immediate="true">
                                <Label value=" " contentMode="HTML" />
                                <Button id="nextBtn" caption="&gt;"></Button>
                                <Button id="previousBtn" caption="&lt;"></Button>
                                <Button id="allBtn" caption="ALL"></Button>
                            </VerticalLayout>
                            <b:ExtFilterTable id="selectedProducts" caption="Selected Products" styleName="table-header-normal"
                               width="300px" pageLength="5" immediate="true" selectable="true" />
                        </GridLayout>
                    </VerticalLayout>
                    <!--</HorizontalLayout>-->
                </GridLayout >
                       
            </VerticalLayout>
            <!--</GridLayout>-->
        </Panel>


        <HorizontalLayout spacing="true" immediate="true" >
            <Panel caption="Customer/Contract History">
                <VerticalLayout spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true" margin="false" immediate="true" columns="2" rows="1">
                        <GridLayout spacing="true" margin="false" immediate="true" columns="1" rows="7">
                            <Label caption="  " contentMode="HTML" />
                            <Label caption="  " contentMode="HTML" />                                
                            <Label caption="  " contentMode="HTML" />
                            <Label value="Actual Sales: " contentMode="HTML" styleName="pmpy-label"/>
                            <Label value="Projected Sales: " contentMode="HTML" styleName="pmpy-label" width="112px"/>
                            <Label value="Actual Units: " contentMode="HTML" styleName="pmpy-label"/>
                            <Label value="Projected Units: " contentMode="HTML" styleName="pmpy-label" width="112px"/>
                            <Label value="Lives: " contentMode="HTML" styleName="pmpy-label"/>
                            <Label value=" " contentMode="HTML" />
                        </GridLayout>
                        <VerticalLayout id="tableLayout" spacing="true" margin="false" immediate="true">
<!--                        <b:ExtFilterTable id="pmpyTable" pageLength="5" immediate="true" selectable="true" styleName="table-header-normal"/>                                        -->
                        </VerticalLayout>
                    </GridLayout>
                    <HorizontalLayout spacing="true" margin="false" immediate="true">
                        <Button id="graphBtn" primaryStyleName="link"></Button>
                        <Button id="excelBtn" primaryStyleName="link"></Button>                                         
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
            <Panel caption="Calculator" >

                <GridLayout spacing="true" margin="true" immediate="true"
                                columns="3" rows="7" >
                    
                    <Label value="Variable: " contentMode="HTML" />
                    <OptionGroup id="SalesOrUnits" enabled="true" immediate="true"  styleName = "horizontal" />
                    <Button id="populate" caption="POPULATE"></Button>
                    
                    <Label value="Sales/Units: " contentMode="HTML" width="159px" />
                    <TextField id="sales" immediate="true" width="150px" styleName="pmpy-disabled"/>
                    <Label caption=" " contentMode="HTML" />

                    <Label value="Analog Lives: " width="150px" contentMode="HTML" />
                    <TextField id="lives" immediate="true" width="150px"/>
                    <Button id="livesCalcBtn" caption="CALCULATE"></Button>

                    <Label value="Value per Life: " contentMode="HTML" />
                    <TextField id="valuePerLife" immediate="true" width="150px" styleName="pmpy-disabled"/>
                    <Label value=" " contentMode="HTML" />

                    <Label value="Total Lives: " contentMode="HTML" />
                    <TextField id="totalLives" immediate="true" width="150px"/>
                    <Button id="totLivesCalcBtn" caption="CALCULATE"></Button>

                    <Label value="Total Sales/Units: " contentMode="HTML" />
                    <TextField id="totalSales" immediate="true" width="150px" styleName="pmpy-disabled"/>
                    <Label caption=" " contentMode="HTML" />

                    <Label value="Projection Period Total: " contentMode="HTML" width="159px"/>
                    <TextField id="projPeriodTotal" immediate="true" width="150px" styleName="pmpy-disabled"/>
                    <Label value=" " contentMode="HTML" />                    
                    
                </GridLayout>
            </Panel>
        </HorizontalLayout>

        <HorizontalLayout id="buttonLayout" spacing="true" margin="false"
                          immediate="true">
                <Label value="Effective Period: " contentMode="HTML" />
                <ComboBox id="effectivePeriod" nullSelectionAllowed="true " immediate="true" styleName="comboxsize"/>
                <Button id="resetCalcBtn" caption="RESET"></Button>
                <Button id="importBtn" caption="IMPORT"></Button>
                <Button id="closeBtn" caption="CLOSE"></Button>
                <Button id="excelCalcBtn" primaryStyleName="link"></Button>
        </HorizontalLayout>
        
    </VerticalLayout>

</Panel>