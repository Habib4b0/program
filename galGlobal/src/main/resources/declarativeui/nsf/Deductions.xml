<VerticalLayout margin="true"  spacing="true" immediate="true" width="100%" height="100%"  
                xmlns:b="urn:import:org.asi.ui.customtextfield" xmlns:c="urn:import:org.asi.ui.customcombobox"      
                xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:ef="urn:import:com.stpl.ifs.ui" >
    <Panel caption="Deduction Options">
        <VerticalLayout margin="true" immediate="true">
            <HorizontalLayout immediate="true" styleName="responsiveTabGrid">
                <CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
                    <Label id="formulaTypeLB" styleName="mandatory" value="Formula Type" contentMode="HTML" immediate="true" />
                    <ComboBox id="formulaType" enable="true"  immediate="true" />
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
                        
    </Panel>
    <Panel caption="Search Criteria">
        <VerticalLayout margin="true" immediate="true">
            <HorizontalLayout immediate="true" styleName="responsiveTabGrid">
                <CssLayout id="cssSearchLayout" immediate="true" width="100%" height="100%">
                    <Label id="contractNoLB"  value="Contract No" contentMode="HTML" immediate="true" />
                    <TextField id="contractNo" enable="false" immediate="true" />
                    <Label id="contractNameLB" value="Contract Name" contentMode="HTML" />
                    <TextField id="contractName" enable="false" immediate="true" />
                    <Label id="contractHolderLB" value="Contract Holder" contentMode="HTML" />
                    <TextField id="contractHolder" enable="false" immediate="true" />
                    <Label id="marketTypeLB" value="Market Type" contentMode="HTML" />
                    <ComboBox id="marketType" enable="false"  immediate="true" />
                    <Label id="companyFamilyPlanNoLB" value="Company Family Plan No" contentMode="HTML" />
                    <TextField id="companyFamilyPlanNo" enable="false" immediate="true" />
                    <Label id="itemFamilyPlanNoLB" value="Item Family Plan No" contentMode="HTML" />
                    <TextField id="itemFamilyPlanNo" enable="false" immediate="true" />
                    <Label id="priceScheduleNoLB" value="Price Schedule No" contentMode="HTML" />
                    <TextField id="priceScheduleNo" enable="false" immediate="true" />
                    <Label id="deductionNoLB" value="Deduction No" contentMode="HTML" />
                    <TextField id="deductionNo" enable="false" immediate="true" />
                    <Label id="companyFamilyPlanNameLB" value="Company Family Plan Name" contentMode="HTML" />
                    <TextField id="companyFamilyPlanName" enable="false" immediate="true" />                    
                    <Label id="itemFamilyPlanNameLB" value="Item Family Plan Name" contentMode="HTML" />
                    <TextField id="itemFamilyPlanName" enable="false"  immediate="true" />
                    <Label id="priceScheduleNameLB" value="Price Schedule Name" contentMode="HTML" />
                    <TextField id="priceScheduleName" enable="false"  immediate="true" />
                    <Label id="deductionNameLB" value="Deduction Name" contentMode="HTML" />
                    <TextField id="deductionName" enable="false"  immediate="true" />
                    <Label id="deductionTypeLB" value="Deduction Type" contentMode="HTML" />
                    <ComboBox id="deductionType" enable="true"  immediate="true" />
                    <Label id="deductionSubTypeLB" value="Deduction Sub Type" contentMode="HTML" />
                    <ComboBox id="deductionSubType" enable="true"  immediate="true" />
                    <Label id="deductionCategoryLB" value="Deduction Category" contentMode="HTML" />
                    <ComboBox id="deductionCategory" enable="true"  immediate="true" />
                    <Label id="deductionAliasLB" value="Deduction Alias" contentMode="HTML" />
                    <TextField id="deductionAlias" enable="false" immediate="true" />
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>                       
    </Panel>
    <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid" >
        <CssLayout immediate="true" width="100%" height="100%">
            <Button id="resetBtn" caption="RESET" immediate="true" />
            <Button id="searchBtn" caption="SEARCH" immediate="true"/>         
        </CssLayout>
    </HorizontalLayout>
    
    <Panel id ="deductionPanel" caption="Available Deductions" spacing="true" >
     
        <ExtPagedTable id="availableDeductionTable" selectable="true" immediate="true" />  
    </Panel>  
    <HorizontalLayout id="controlLayout" spacing="false" margin="false" immediate="true" />  
    <HorizontalLayout id="includeButtonLayout1"  margin="false" styleName="responsiveTabGrid" >    
        <Button id="addBtn" caption="ADD" immediate="true"/>   
        <Button id="resetAvailBtn" caption="RESET" immediate="true" />     
    </HorizontalLayout>
    <Panel caption="Selected Deductions" spacing="true" >
        <VerticalLayout spacing="true" margin="true">
            <Panel caption="Mass Update" spacing="true"  >
             <VerticalLayout spacing="true" margin="true">
              <HorizontalLayout id="massUpdateLayout"  styleName="responsiveTabGrid">
                    <CssLayout id="cssMassLayout" spacing="true" width="100%" height="100%">
                        <OptionGroup multiSelect="false" id="massCheck" immediate="true" enable="true" styleName = "horizontal"/>
                        <ComboBox id="massField" inputPrompt="-Select One" immediate="true" /> 
                      <b:CustomTextField id="massValue" enable="true" styleName="searchicon" immediate="true" />   
                        <ComboBox id="massCombo"  inputPrompt="-Select One" immediate="true" />                              
                        <Button id="btnPopulate" caption="POPULATE" enable="false"/>
                    </CssLayout>
              </HorizontalLayout>   
              </VerticalLayout>    
          </Panel>
        <ExtPagedTable id="selectedDeductionTable" selectable="true" immediate="true" />
        <HorizontalLayout id="controlLayout2" spacing="false" margin="false" immediate="true" />   
        <HorizontalLayout id="excludeButtonLayout"  margin="false" styleName="responsiveTabGrid" >       
            <Button id="resetTableBtn" caption="RESET" immediate="true"/>
            <Button id="removeBtn" caption="REMOVE" immediate="true" />
            <Button id="excelExport" immediate="true" />                
        </HorizontalLayout>
        </VerticalLayout>
    </Panel>
</VerticalLayout>
