<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel">
    <VerticalLayout id="dsVerticalLayout" spacing="true" margin="true" immediate="true" >

        <Panel id="panel1"  styleName = "forecast-tab" caption="Sales Projection Selection">
            <VerticalLayout styleName = "width-auto"  margin="true">      
                <GridLayout spacing="true" margin="false" id="dsLayout"
                            immediate="true" columns="6" rows="2"  styleName="adjustCaption">
                    <Label caption="Frequency: " contentMode="HTML" />
                    <ComboBox id="frequency" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize"/>
                    <Label caption="Sales/Units: " contentMode="HTML" immediate="true" />
                    <OptionGroup multiSelect="false" id="salesOrUnits" 
                                 enabled="true" immediate="true" styleName="horizontal" />
                    <Label caption="Projection Period Order: " contentMode="HTML" width = "165px"/>
                    <!--<HorizontalLayout width="200px">-->
                        <OptionGroup multiSelect="false" id="periodOrder"
                                     enabled="true" immediate="true" styleName="horizontal"/>
                    <!--</HorizontalLayout>-->

                    <Label caption="History: " contentMode="HTML" />
                    <ComboBox id="history" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize"/>
                    <Label caption="Actuals/Projections: " contentMode="HTML" />
                    <OptionGroup multiSelect="false" id="actualOrProj" styleName="horizontal"
                                  enabled="true" immediate="true" />
                    <Label caption="Pivot View: " contentMode="HTML" styleName="labelresultalign"/>
                    <!--<HorizontalLayout width="200px">-->
                        <OptionGroup multiSelect="false" id="pivotView" styleName="horizontal"
                                     enabled="true" immediate="true" />
                    <!--</HorizontalLayout>-->
                </GridLayout>
            </VerticalLayout>
        </Panel>

        <Panel width = "100%"  styleName = "forecast-tab">
            <VerticalLayout spacing="true" margin="true" styleName = "width-auto">      
            <GridLayout immediate="true" rows="1" columns="15" margin="false" spacing="true"  styleName="adjustCaption"> 
                <!--<HorizontalLayout spacing="false" margin="false"immediate="true">-->
                <Button id="generateBtn" caption="GENERATE"></Button>
                <Button id="resetBtn" caption="RESET"></Button>
                <Label caption="Level: " contentMode="HTML" />
                <ComboBox id="level" nullSelectionAllowed="true" styleName="comboxsize"  immediate="true" />
                <Button id="expandBtn" caption="EXPAND"></Button>
                <Button id="collapseBtn" caption="COLLAPSE"></Button>
<!--                <Label id="groupFilterLabel" caption="Group:" contentMode="HTML" />
                <ComboBox id="groupFilter" nullSelectionAllowed="true"
                      immediate="true" styleName="comboxsize" />-->
                <Label caption="Level Filter: " contentMode="HTML" width="100px" />
                <ComboBox id="levelFilter" nullSelectionAllowed="true"
                      immediate="true" styleName="comboxsize" />
                <Label caption="View: " contentMode="HTML"></Label>
                <OptionGroup multiSelect="false" id="view" enabled="true"
                         immediate="true" styleName = "horizontal"/>
                <ComboBox id="customDdlb" nullSelectionAllowed="true"
                      immediate="true" styleName="comboxsize"/>
                <Button id="newBtn" caption="NEW"></Button>
                <Button id="editBtn" caption="EDIT"></Button>
                <!--</HorizontalLayout>-->
            </GridLayout>
            </VerticalLayout>
        </Panel>

        <Panel id = "pivotViewPanel">
            <VerticalLayout id="verticalLayout" spacing="true"
                            margin="true"  immediate="true">
                <VerticalLayout id="tableVerticalLayout" spacing="false"
                                margin="false" immediate="true">
                </VerticalLayout>
                <!--                <a:FreezeFilterTreeTable styleName="valo-theme-extfiltertable"
                id="periodTableId" caption="" width="100%" immediate="true" height="100%" />-->
                <!--                <b:ExtCustomTreeTable styleName="table-header-normal"
                id="exportTable" caption="" width="100%" immediate="true" height="100%" visible = "false"/>-->
                <VerticalLayout spacing="true" margin="false" immediate="true">
                    <HorizontalLayout spacing="true" margin="true">
                        <Button id="excelBtn" primaryStyleName="link"></Button>
                        <Button id="graphBtn" primaryStyleName="link"></Button>
                    </HorizontalLayout>
                </VerticalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
