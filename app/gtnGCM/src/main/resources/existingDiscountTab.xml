<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="parentVerticalLayout" spacing="true"
                    margin="true" immediate="true">
        <Panel id="selectionCriteria" caption="Selection Criteria">
            <HorizontalLayout id="selectionCriteriahoriLayout" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="selectionCriteriaGridLayout" immediate="true" columns="10" rows="1">
                    
                    <Label value="Contract No:" contentMode="HTML" width="93px" />
                    <TextField id="contractNo" immediate="true" enable="false"/>
                    
                    <Label value="Contract Name:" contentMode="HTML" width="111px"/>
                    <TextField id="contractName"  immediate="true" />
                    
                    <Label value="Contract Type:" contentMode="HTML" width="104px" />
                    <TextField id="contractType" immediate="true" />
                    
                    <Label value="Start Date:" contentMode="HTML" width="79px"/>
                    <TextField id="startDate" immediate="true" />
                    
                    <Label value="End Date:" contentMode="HTML" width="74px"/>
                    <TextField id="endDate" immediate="true" />
                    
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
       
        <Panel id="contractProcessingDashboard" caption="Contract Processing Dashboard">
            <VerticalLayout width="100%">
                 <HorizontalLayout width="100%">
                <VerticalLayout spacing="true"  width="60%">
                    <Panel id="componentSelection" caption="Component Selection" width="100%" height="30%">
                        <VerticalLayout styleName="width-auto">
                                <HorizontalLayout id="componentSelectionLayout" spacing="true" margin="true" immediate="true" >
                                    <GridLayout spacing="true"  id="componentSelectionGrid" immediate="true" columns="7" rows="1" >
                                        <Label caption="Component Type: " contentMode="HTML" />
                                        <ComboBox id="componentTypeDdlb" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                                        <Label caption="Search Field: " contentMode="HTML" />
                                        <ComboBox id="searchFieldDdlb" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                                        <Label caption="Value: " contentMode="HTML" />
                                        <GridLayout spacing="true"   immediate="true" columns="2" rows="1" >
                                             <TextField id="valueTxt" inputPrompt="" immediate="true" width="140px"/>
                                             <ComboBox id="searchValueStatusDdlb" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                                        </GridLayout>
                                        <Button id="searchBtn" caption="SEARCH" />
                                    </GridLayout>
                                </HorizontalLayout>
                                 </VerticalLayout>
                            </Panel>
                            
                            <Panel id="componentResults" caption="Component Results" width="100%">
                                <VerticalLayout spacing="true" margin="true">
                                    <VerticalLayout id="componentResultsTable" 
                                                    spacing="true" width="100%">
                                
                                    </VerticalLayout>
                                    <HorizontalLayout spcing="true" margin="true">
                                        <GridLayout spacing="true"  immediate="true" columns="3" rows="1" >
                                            <Button id="populateBtn" caption="POPULATE" />
                                            <Label caption="Component Type: " contentMode="HTML" />
                                            <ComboBox id="resultsComponentTypeDdlb" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                                        </GridLayout>
                                    </HorizontalLayout>
                                </VerticalLayout>
                            </Panel>
                    <Panel id="componentInformation" caption="Component Information" width="100%" height="20%">
                        <VerticalLayout spacing="true" margin="true" styleName="width-auto" >
                        <GridLayout spacing="true"  id="componentInformationGrid" immediate="true" columns="6" rows="3"  >
                            <Label id="componentInformationID" value="RS ID:" contentMode="HTML" />
                            <TextField id="rsId" immediate="true" width="140px"/>
                            <Label value="Status:" contentMode="HTML" />
                            <TextField id="statusDdlb" immediate="true" width="140px"/>
                            <Label id="rebateFrequency" value="Rebate Frequency:" contentMode="HTML" width="128px" />
                            <TextField id="rebateFrequencyDdlb"  width="140px"/>
                        
                            <Label id="componentInformationNo" value="RS Number:" contentMode="HTML" />
                            <TextField id="rsNumber" immediate="true"  width="140px"/>
                            <Label value="Start Date:" contentMode="HTML" />
                            <TextField id="startDate_" immediate="true" width="140px"/>
                            <Label id="rarType" value="RAR Type:" contentMode="HTML" />
                            <TextField id="rarDdlb" immediate="true" width="140px"/>
                                            
                            <Label id="componentInformationName" value="RS Name:" contentMode="HTML" />
                            <TextField id="rsName" immediate="true"  width="140px" />
                            <Label value="End Date:" contentMode="HTML" />
                            <TextField id="rsEndDate" immediate="true"  width="140px"/>
                            <Label id="rsBasic" value="Basis:" contentMode="HTML" />
                            <TextField id="basicDdlb" immediate="true" width="140px"/>
                        
                        </GridLayout>
                        </VerticalLayout>
                    </Panel>
                   
                    <Panel id="componentDetailsSelectedItemPanel" caption="Component Details-Selected Items" width="100%" height="30%">
                        <VerticalLayout spacing="true" margin="true">
                            <VerticalLayout id="componentDetailsSelectedItem" 
                                           spacing="true" width="100%">
                            </VerticalLayout>
                            <HorizontalLayout spcing="true" margin="true">
                                <Button id="addToTree" caption="ADD TO TREE" />
                            </HorizontalLayout>
                        </VerticalLayout>
                    </Panel>
                </VerticalLayout>
                
                <VerticalLayout spacing="true" width="40%" height="100%">
                    <Panel id="contractDashBoardResults" caption="Contract DashBoard Results" width="100%" height="100%">
                        <VerticalLayout>
                            <TreeTable id="dashboardResultsTable" 
                                          styleName="table-header-normal"  pageLength="8" immediate="true" />
                        
                            <HorizontalLayout spcing="true" margin="true">
                                <Button id="levelRemoveBtn" caption="REMOVE" />
                                 <Button id="levelPopulateBtn" caption="POPULATE" />
                            </HorizontalLayout>
                        </VerticalLayout>
                    </Panel>
                
                    <Panel id="contractComponentDetails" caption="Contract Component Details" width="100%" height="100%">
                        <VerticalLayout spacing="true" margin="true" styleName="width-auto">
                            <GridLayout spacing="true"  id="contractDetailsGrid" immediate="true" columns="4" rows="1">
                                <Label id="fromCDLabelNo" Value="Rebate Schedule No:" contentMode="HTML" width="160px"/>
                                <TextField id="fromCDNo" inputPrompt="" immediate="true" visible="true" />
                                <Label id="fromCDLabelName" value="Rebate Schedule Name:" contentMode="HTML" width="160px"/>
                                <TextField id="fromCDName" inputPrompt="" immediate="true" visible="true" />
                            </GridLayout>
                            <a:ExtFilterTable id="levelDetailsResultsTable" 
                                          styleName="table-header-normal"   immediate="true" />
                            
                        </VerticalLayout>
                    </Panel>
                </VerticalLayout>
                </HorizontalLayout>
           </VerticalLayout>
        </Panel>
        
        
    </VerticalLayout>
</Panel>