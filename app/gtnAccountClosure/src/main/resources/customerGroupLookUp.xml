<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" >
        <Panel id="CustomerGroupPanel" caption="Search Criteria">
            <GridLayout id="gLayout" rows="2" columns="2" margin="true" spacing="true">
                <Label caption="Customer Group Name:" contentMode="HTML" />
                <TextField id="customerGroupName" inputPrompt=""  />
                <Label caption="Customer Group No:" contentMode="HTML" />
                <TextField id="customerGroup" inputPrompt=""  />
            </GridLayout>
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="searchBtnCGL" caption="SEARCH"  />
            <Button id="resetBtnCGL" caption="RESET"  />
        </HorizontalLayout>
        <Panel caption="Results" >
            <VerticalLayout id ="resultsLayout">
                <a:ExtFilterTable id="resultsTableCGL" width="100%" height="50%" styleName="table-header-normal" immediate="true" />
            </VerticalLayout>
            
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="selectBtnCGL" caption="SELECT"  />
            <Button id="cancelBtnCGL" caption="CANCEL"  />
            <Button id="resultResetBtnCGL" caption="RESET"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
