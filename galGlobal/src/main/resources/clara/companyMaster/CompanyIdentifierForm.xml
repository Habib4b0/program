<VerticalLayout margin="true" spacing="true" 
                 xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" 
                 xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling"
                 xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout  id="verticalLayout">
        <Panel caption="Identifier Information" styleName="responsiveTabGrid" spacing="true">
            <VerticalLayout margin="true">
                <HorizontalLayout id="hLayout" styleName="responsiveTabGrid" spacing="true">
                    <CssLayout id="cssLayout" width="100%" height="100%">
                        <errorMsg:ErrorLabel id="errorMsg"/>

                        
                
                        <Label id="labelCompanyCrtQualifierNameDDLB" value="Company Qualifier Name" styleName= "mandatory" contentMode="HTML" />
                        <ComboBox id="companyCrtQualifierNameDDLB" inputPrompt="" />
                
                        <Label id="labelCompanyIdentifier" value="Company Identifier" styleName= "mandatory" contentMode="HTML" />
                        <TextField id="companyIdentifier" inputPrompt="" />
                 
                        <Label id="labelIdentifierStatus" value="Identifier Status" styleName= "mandatory" contentMode="HTML" />
                        <ComboBox id="identifierStatus" inputPrompt="" />
               
                        <Label id="labelStartDate" value="Start Date" styleName= "mandatory" contentMode="HTML" />
                        <PopupDateField id="startDate" immediate="true"/>
                
                        <Label id="labelEndDate" value="End Date" contentMode="HTML" />
                        <PopupDateField id="endDate" immediate="true"/>
                
                    </CssLayout>
                </HorizontalLayout>  
                <HorizontalLayout spacing="true" >
                    <Button id="attachButton" caption="ATTACH" immediate="true"/>
                </HorizontalLayout> 
            </VerticalLayout>
        </Panel>              
    </VerticalLayout>
  
    <Panel caption="Results" spacing="true" >
        <VerticalLayout id="resultsId"> </VerticalLayout>
    </Panel>
    <HorizontalLayout>
        <Button id="removeButton" caption="REMOVE" immediate="true"/>
        <Button id="excelExport" />
    </HorizontalLayout>
</VerticalLayout>

