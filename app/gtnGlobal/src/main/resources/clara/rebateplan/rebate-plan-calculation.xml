<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout id="rpCalculationLayout" spacing="true" styleName="custom-margin" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.extfilteringtable" xmlns:h="urn:import:org.asi.ui.customtextfield" >
   <Panel id="tierPanel">  
    <HorizontalLayout id="mainLayout" spacing="true">
        <VerticalLayout  id="cssLayoutMain"  styleName="custom-margin" spacing="true" width="440px">
                        <HorizontalLayout spacing="true">   
                            <Label id="rebateStructureLabel" value="Rebate Structure" styleName= "mandatory" contentMode="HTML" />
                            <ComboBox id="rebateStructure"  immediate="true" />
                        </HorizontalLayout>
       
                        <HorizontalLayout spacing="true">            
                            <Label id="rebateRangeBasedOnLabel" value="Range Based On" styleName= "mandatory" contentMode="HTML" />
                            <ComboBox id="rebateRangeBasedOn"  immediate="true" />
                        </HorizontalLayout>
     
                        <HorizontalLayout spacing="true">          
                            <Label id="netSalesFormulaLabel" value="Net Sales Formula" contentMode="HTML" />
                            <h:CustomTextField id="netSalesFormulaName"  styleName="searchicon" enable="true" nullSelectionAllowed="true" immediate="true" />
                        </HorizontalLayout>
     
                        <HorizontalLayout spacing="true">          
                            <Label id="netSalesRuleLabel" value="Net Sales Rule" contentMode="HTML" />
                            <h:CustomTextField id="netSalesRule"  styleName="searchicon" enable="true" nullSelectionAllowed="true" immediate="true" />
                        </HorizontalLayout>
         
                        <HorizontalLayout spacing="true">          
                            <Label id="rebateBasedOnLabel" value="Rebate Based On" styleName= "mandatory" contentMode="HTML"  />
                            <ComboBox id="rebateBasedOn"  immediate="true" />
                        </HorizontalLayout>
      
                        <HorizontalLayout spacing="true">          
                            <Label id="selfGrowthIndicatorLabel" value="Self Growth Indicator" contentMode="HTML" />
                            <TextField id="selfGrowthIndicator"  immediate="true" />
                        </HorizontalLayout>
       
                        <HorizontalLayout spacing="true">          
                            <Label id="selfGrowthReferenceLabel" value="Self Growth Reference" contentMode="HTML" />
                            <TextField id="selfGrowthReference"  immediate="true" />
                        </HorizontalLayout>
      
                        <HorizontalLayout spacing="true">          
                            <Label id="selfGrowthFromLabel" value="Self Growth From" contentMode="HTML" />
                            <PopupDateField id="selfGrowthFrom"  immediate="true" />
                        </HorizontalLayout>
         
                        <HorizontalLayout spacing="true">          
                            <Label id="selfGrowthToLabel" value="Self Growth To" contentMode="HTML" />
                            <PopupDateField id="selfGrowthTo"  immediate="true" />
                        </HorizontalLayout>
     
                        <HorizontalLayout spacing="true">          
                            <Label id="marketShareIndicatorLabel" value="Market Share Indicator" contentMode="HTML" />
                            <TextField id="marketShareIndicator"  immediate="true" />
                        </HorizontalLayout>
        
                        <HorizontalLayout spacing="true">          
                            <Label id="marketShareReferenceLabel" value="Market Share Reference" contentMode="HTML" />
                            <TextField id="marketShareReference"  immediate="true" />
                        </HorizontalLayout>
       
                        <HorizontalLayout spacing="true">          
                            <Label id="marketShareFromLabel" value="Market Share From" contentMode="HTML" />
                            <PopupDateField id="marketShareFrom"  immediate="true" />
                        </HorizontalLayout>
        
                        <HorizontalLayout spacing="true">          
                            <Label id="marketShareToLabel" value="Market Share To" contentMode="HTML" />
                            <PopupDateField id="marketShareTo"  immediate="true" />
                        </HorizontalLayout>
   
            </VerticalLayout>
           
            <VerticalLayout id="tierLayout" styleName="custom-margin" spacing="true">
            
                <HorizontalLayout styleName="responsiveTabGrid">                
                    <CssLayout id="cssLayout" width="100%" height="100%"> 
                        
                        <TextField id="tierLevel"  immediate="true" visible="false"/>
                       
                        <Label id="fromLabel" value="From" styleName= "mandatory" contentMode="HTML" />
                        <TextField id="from"  immediate="true" />
                    
                        <Label id="toLabel" value="To" contentMode="HTML" />
                        <TextField id="tierTo"  immediate="true" />
                                        
                        <Label id="operatorLabel" value="Operator" styleName= "mandatory" contentMode="HTML" />
                        <ComboBox id="operator"  immediate="true" />
                                        
                        <Label id="valueLabel" value="Value" styleName= "mandatory" contentMode="HTML" />
                        <ComboBox id="selectOne"  immediate="true" visible="true"/>
                        <ComboBox id="percentvalueDDLB"  immediate="true" visible="false"/>
                        <ComboBox id="valueDDLB"  immediate="true" visible="false"/>
					
                        <Label id="tierToleranceLabel" value="Tier Tolerance" contentMode="HTML" />
                        <TextField id="tierTolerance"  immediate="true" />
                                        
                        <Label id="tierFormulaLB" value="Tier Formula" contentMode="HTML" />
                        <h:CustomTextField id="tierFormula"  styleName="searchicon" enable="true" nullSelectionAllowed="true" immediate="true" />	
                    
                        <Label id="secondaryRebatePlanNoLabel" value="Secondary Rebate Plan" contentMode="HTML" />				
                        <h:CustomTextField id="secondaryRebatePlanNo"  styleName="searchicon" enable="true" nullSelectionAllowed="true" immediate="true" />		                                           
                                 
                    </CssLayout>
                </HorizontalLayout>
             
                <b:ExtFilterTable id="calculationResultsTable" />  
             
                <HorizontalLayout styleName="responsiveTabGrid">                
                    <CssLayout id="cssLayout1" width="100%" height="100%">      
                        <Button id="calculationAdd" caption="Add"/>
                        <Button id="calculationRemove" caption="Remove"/>
                        <Button id="calculationReset" caption="Reset"/>              
                    </CssLayout>
                </HorizontalLayout>             
            </VerticalLayout>
    </HorizontalLayout>
       </Panel>
</VerticalLayout>