<VerticalLayout margin="true" spacing="true" 
                xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" 
                xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling"
                xmlns:a="urn:import:org.asi.ui.extfilteringtable"
                xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout id="verticalLayout">
       
        <Panel caption="Parent Company Information" styleName="responsiveTabGrid">
            <VerticalLayout margin="true">
                <HorizontalLayout id="hLayout" styleName="responsiveTabGrid">
                    <CssLayout id="cssLayout" width="100%" height="100%">
                        <errorMsg:ErrorLabel id="errorMsg"/>
               
                        <Label id="labelParentCompanyNo" value="Parent Company No"  contentMode="HTML" />
                        <b:CustomTextField id="parentCompanyNo" inputPrompt="" />
                
                        <Label id="labelParentCompanyName" value="Parent Company Name" contentMode="HTML" />
                        <TextField id="parentCompanyName" inputPrompt="" />
                
                        <Label id="labelParentStartDate" value="Parent Company Start Date"  contentMode="HTML" />
                        <PopupDateField id="parentStartDate" immediate="true"/>
                
                        <Label id="labelParentEndDate" value="Parent Company End Date" contentMode="HTML" />
                        <PopupDateField id="parentEndDate" immediate="true"/>
                
                        <TextField id="parentSysId" inputPrompt="" visible="false"/>
                    </CssLayout>
                </HorizontalLayout>  
                <HorizontalLayout spacing="true" >
                    <Button id="attachButton" caption="ATTACH" immediate="true"/>
                </HorizontalLayout> 
            </VerticalLayout>
        </Panel>              
    </VerticalLayout>

    <Panel caption="Results"  >
        <VerticalLayout  id="parentDetailsTableLayout" >
        </VerticalLayout>
    </Panel>
    <HorizontalLayout>
        <Button id="removeButton" caption="REMOVE" immediate="true"/>
        <Button id="parentExcelExport" />
    </HorizontalLayout>
   
</VerticalLayout>



