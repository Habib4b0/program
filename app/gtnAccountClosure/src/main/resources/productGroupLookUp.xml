<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" >
        <Panel id="ProductGroupPanel" caption="Search Criteria">
            <GridLayout id="gLayout" rows="2" columns="2" margin="true" spacing="true">
                <Label caption="Product Group Name:" contentMode="HTML" />
                <TextField id="productGroupName" inputPrompt=""  />
                <Label caption="Product Group No:" contentMode="HTML" />
                <TextField id="productGroup" inputPrompt=""  />
            </GridLayout>
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="searchBtnPGL" caption="SEARCH"  />
            <Button id="resetBtnPGL" caption="RESET"  />
        </HorizontalLayout>
        <Panel caption="Results" >
            <VerticalLayout id="resultsLayout">
                <a:ExtFilterTable id="resultsTablePGL" width="100%" height="50%" styleName="table-header-normal" immediate="true" />
            </VerticalLayout>
            
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="selectBtnPGL" caption="SELECT"  />
            <Button id="cancelBtnPGL" caption="CANCEL"  />
            <Button id="resultResetBtnPGL" caption="RESET"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
