<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.stpl.app</groupId>
        <artifactId>global-parent</artifactId>
        <version>1.0</version>
    </parent>
    <groupId>com.stpl.app</groupId>
    <artifactId>gtnPartI</artifactId>
    <version>1.0</version>
    <packaging>war</packaging>
    <name>gtnPartI</name>
    <properties>
        <vaadin.plugin.version>${vaadin.version}</vaadin.plugin.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-server</artifactId>
            <version>${vaadin.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>guava</artifactId>
                    <groupId>com.google.guava</groupId>
                </exclusion>
            </exclusions>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.stpl.app</groupId>
            <artifactId>gtnServicePartI</artifactId>
            <version>1.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.stpl.portal</groupId>
            <artifactId>portal-service</artifactId>
            <version>${com.stpl.portal.version}</version>
             <scope>provided</scope>
        </dependency>
    </dependencies>

   
    <build>
        <finalName>${artifactId}</finalName>
        <resources>
            <resource>
                <directory>${basedir}/../gtnServicePartI/src/main/resources/META-INF</directory>
                <targetPath>../gtnPartI/WEB-INF/classes/META-INF</targetPath>
            </resource>
            <resource>
                <directory>${basedir}/../gtnPartI/src/main/resources</directory>
                <targetPath>../gtnPartI/WEB-INF/classes</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>com.stpl.maven.plugins</groupId>
                <artifactId>stpl-maven-plugin</artifactId>
                <version>${com.stpl.portal.version}</version>
                <configuration>
                    <autoDeployDir>${liferay.auto.deploy.dir}</autoDeployDir>
                    <appServerDeployDir>${liferay.app.server.deploy.dir}</appServerDeployDir>
                    <appServerLibGlobalDir>${liferay.app.server.lib.global.dir}</appServerLibGlobalDir>
                    <appServerPortalDir>${liferay.app.server.portal.dir}</appServerPortalDir>
                    <liferayVersion>${com.stpl.portal.version}</liferayVersion>
                    <pluginName>gtnPartI</pluginName>
                    <pluginType>portlet</pluginType>
                    <webappBaseDir>${basedir}/../gtnServicePartI</webappBaseDir>
                    <apiBaseDir>${basedir}/../gtnServicePartI</apiBaseDir>
                </configuration>
            </plugin>
        </plugins>  
    </build>
            
            
            
</project>
