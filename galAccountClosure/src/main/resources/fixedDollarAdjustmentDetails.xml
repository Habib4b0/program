<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <HorizontalLayout id="horizontalLayoutMain" spacing="true" margin="false" immediate="true">
        <VerticalLayout id="dsVerticalLayout" spacing="true" margin="true" immediate="true">
            <Panel id="panel1" caption="Selection" width="600px">
                <HorizontalLayout id="horizontalLayout" spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="dsLayout" immediate="true" columns="2" rows="10">
                        <Label value="Company: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="companyId" immediate="true" />
                        <Label value="Market Type: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="marketType" immediate="true" />
                        <Label value="Disc/Acct Type:&lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="acctType" immediate="true" />
                        <Label caption="Disc/Acct Sub-Type: " contentMode="HTML" />
                        <ComboBox id="acctSubType" immediate="true" />
                        <Label value="Adjustment Type: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="adjustmentType" immediate="true" />
                        <Label value="Accrual Period: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt; " contentMode="HTML" />
                        <ComboBox id="accrualPeriod" immediate="true" />
                        <Label caption="Customer/Group: " contentMode="HTML" />
                        <b:CustomTextField id="customerGroup" styleName="searchicon" width="180px" />
                        <Label value="Contract: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="contract" immediate="true" />
                        <Label caption="Product/Group: " contentMode="HTML" />
                        <b:CustomTextField id="productGroup" styleName="searchicon" width="180px" />
                        <Label value="Product: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="product" immediate="true" />
                        <Label value="Product Identifier: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" />
                        <ComboBox id="ndc" immediate="true" />
                    </GridLayout>
                </HorizontalLayout>
            </Panel>
            <HorizontalLayout>
                <Button id="populateBtn1" caption="POPULATE" />
                <Button id="resetBtn1" caption="RESET" />
            </HorizontalLayout>
            <Panel id="panel2" caption="Customer/Product" width="600px">
                <VerticalLayout spacing="true" immediate="true" margin = "true">
                    <!--<GridLayout spacing="true" id="custmerProdTable" immediate="true" columns="4" rows="1">-->
                    <!--                        <ExtFilterTreeTable id="availableCustomer" width="470px" styleName="table-header-normal" height="410px"  pageLength="8" immediate="true" selectable="true" />-->
                    <VerticalLayout id="availableTableLayout" immediate="true" >
                    </VerticalLayout>	
                    <!--</GridLayout>-->
                    <HorizontalLayout>
                        <Button id="populateBtn2" caption="POPULATE" />
                        <Button id="resetBtn2" caption="RESET" />
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
        </VerticalLayout>
        <VerticalLayout id="dsVerticalLayout2" spacing="true" margin="true" immediate="true">
            <Panel id="panel3" caption="Adjustment Selection">
                <HorizontalLayout id="horizontalLayout2" spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="adjustmentSec1" immediate="true" columns="6" rows="4">
                        <Label caption="Allocation Method: " contentMode="HTML" />
                        <ComboBox id="allocationMethod" immediate="true" />
                        <Label caption="GL Impact Date: " contentMode="HTML" />
                        <PopupDateField id="glImpactDate" dateFormat="dd/mm/yyyy" />
                        <Label caption="Suggested Adj: " contentMode="HTML" />
                        <b:CustomTextField id="suggestedAdj"  immediate="true" styleName="searchicon" width="180px" />
                        <Label caption="Sales Basis: " contentMode="HTML" />
                        <ComboBox id="salesBasis" immediate="true" /> 
                        <Label caption="Start Date: " contentMode="HTML" />
                        <TextField id="startDate"  immediate="true" />
                        <Label caption="Release Type: " contentMode="HTML" />
                        <OptionGroup multiSelect="false" id="releaseTypeRadio" immediate="true" enable="true" styleName = "horizontal"/>
                        <Label caption="Methodology Date Range: From" contentMode="HTML" />
                        <ComboBox id="fromDate" immediate="true" />
                        <Label caption="Business Days: " contentMode="HTML" />
                        <TextField id="businessDays"  immediate="true" />
                        <Label caption="Release Amount: " contentMode="HTML" />
                        <TextField id="releaseAmount"  immediate="true" />
                        <Label value="                           To:" contentMode="HTML" />
                        <ComboBox id="toDate" immediate="true" />
                        <Label caption="Rate Correction: " contentMode="HTML" />
                        <TextField id="rateCorrection"  immediate="true" />
                        <Label caption="Total Fixed $ Adj: " contentMode="HTML" />
                        <TextField id="totFixedDollAdj"  immediate="true" />
                    </GridLayout>
                </HorizontalLayout>
            </Panel>
            <HorizontalLayout>
                <Button id="resetBtn3" caption="RESET" />
                <Button id="calculateBtn" caption="CALCULATE" />
            </HorizontalLayout>
            <Panel id="panel4" caption="Results" width="1020px">
                <!--<HorizontalLayout>-->
                <VerticalLayout id="horizontalLayout3" spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="resultSec1" immediate="true" columns="5" rows="1">
                        <Label caption="View: " contentMode="HTML" />
                        <OptionGroup multiSelect="false" id="viewTypeRadio" immediate="true" enable="true" styleName = "horizontal"/>
                        <Label caption="Filter: " contentMode="HTML" />
                        <ComboBox id="filterDdlb" immediate="true" />
                        <Button id="exportBtn" caption="EXPORT" />
                    </GridLayout>
           
                        <!--                           <TreeTable id="resultsTable" width="990px" styleName="table-header-normal" height="350px"  pageLength="8" immediate="true" selectable="true" />-->
                        <VerticalLayout id="resultsTableLayout" immediate="true" >
                        </VerticalLayout>
                 
                </VerticalLayout>
                <!--                </HorizontalLayout>-->
            </Panel>
            <Panel id="panel5" caption="Adjustment Impact" width="1020px">
                 <VerticalLayout spacing="true" margin="true" immediate="true">
                <!--                <GridLayout spacing="true"  id="adjustmentImpactLayout" immediate="true" columns="1" rows="1">
                    <TreeTable id="adjImpactResTable" width="990px" styleName="table-header-normal" height="197px"  pageLength="8" immediate="true" selectable="true" />
                </GridLayout>-->
                 <GridLayout spacing="true"  id="adjimpact" immediate="true" columns="2" rows="1">
                        <Label caption="View: " contentMode="HTML" />
                        <OptionGroup multiSelect="false" id="adjimpviewTypeRadio" immediate="true" enable="true" styleName = "horizontal"/>
                 </GridLayout>
                <VerticalLayout id="adjustmentImpactLayout" spacing="true" margin="false" immediate="true">
                </VerticalLayout>
                 </VerticalLayout>
            </Panel>
        </VerticalLayout>
    </HorizontalLayout>
</Panel>
