<?xml version="1.0" encoding="UTF-8"?>

<VerticalLayout margin="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" 
                xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling">
    <Panel id="mainPanel" >
        <HorizontalLayout id="hLayout" styleName="responsiveTabGrid" margin = "true" >
            <CssLayout id="cssLayout" width="100%" height="100%">
                <errorMsg:ErrorLabel id="errorMsg"/>
                <Label id="labelMode" value="Mode" contentMode="HTML" />
                <ComboBox id="modeDdlb" inputPrompt="-Select One-" />
                <Label id="labelMonth" value="Month" contentMode="HTML" />
                <ComboBox id="monthDdlb" inputPrompt="-Select One-" />
                <Label id="labelBusinessDay" value="Business Day" contentMode="HTML" />
                <ComboBox id="businessDayDdlb" inputPrompt="-Select One-" />
                <Label id="labelHour" value="Hour" contentMode="HTML" />
                <ComboBox id="hourDdlb" inputPrompt="-Select One-" />
                <Label id="labelMinute" value="Minute" contentMode="HTML" />
                <ComboBox id="minuteDdlb" inputPrompt="-Select One-" />
                <Label id="labelCalender" value="Calendar" contentMode="HTML" />
                <ComboBox id="calenderDdlb" inputPrompt="-Select One-" />
                <Label id="labelYear" value="Year" contentMode="HTML" />
                <ComboBox id="yearDdlb" inputPrompt="-Select One-" />
            </CssLayout>
        </HorizontalLayout>
    </Panel>
    <HorizontalLayout margin = "true" spacing = "true">
        <Button id="resetButton" caption="RESET" immediate="true"/>
        <Button id="closeButton" caption="CLOSE" immediate="true"/>
        <Button id="openButton" caption="OPEN" immediate="true"/>
    </HorizontalLayout>
    <Panel caption="History" margin = "true" spacing = "true" >
        <VerticalLayout  id="parentDetailsTableLayout" >
        </VerticalLayout>
    </Panel>
</VerticalLayout>