<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>GtnFrameworkCommon</artifactId>
    <packaging>jar</packaging>

    <parent>
        <groupId>com.stpl.gtn.gtn2o</groupId>
        <artifactId>Gtn-All-Parent</artifactId>
        <version>1.0</version>
    </parent>
    
		<dependencies>
			<dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>${springmvc}</version>
            
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.databind.version}</version>
            
        </dependency>
        <dependency>
            <groupId>com.stpl.gtn.gtn2o</groupId>
            <artifactId>GtnWsSecurity</artifactId>
            <version>${gtnsecurity.version}</version>
            <type>jar</type>
            
        </dependency>
        <dependency>
            <groupId>com.stpl.gtn.gtn2o</groupId>
            <artifactId>GtnFrameworkPropertyManager</artifactId>
            <version>${GtnFrameworkPropertyManager.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.stpl.gtn.gtn2o</groupId>
            <artifactId>GtnLogger</artifactId>
            <version>1.0</version>
            <type>jar</type> 
        </dependency>
    </dependencies>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>
<!--    <profiles>
        <profile>
            <id>OSGI-BUILD</id>-->
    <build>
        <plugins>  
            <plugin>
                <groupId>biz.aQute.bnd</groupId>
                <artifactId>bnd-maven-plugin</artifactId>
                <version>3.3.0</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>bnd-process</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin> 
			<plugin>
				<groupId>com.liferay</groupId>
				<artifactId>com.liferay.portal.tools.bundle.support</artifactId>
				<version>2.0.1</version>
				<executions>
					<execution>
						<id>default-deploy</id>
						<goals>
							<goal>deploy</goal>
						</goals>
						<phase>pre-integration-test</phase>
					</execution>
				</executions>
				<configuration>
					<liferayHome>${env.LIFERAY_HOME}</liferayHome>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <archive>
                        <manifestFile>
                            ${project.build.outputDirectory}/META-INF/MANIFEST.MF
                        </manifestFile>
                    </archive>
                </configuration>
            </plugin> 
        </plugins>
    </build>
<!--        </profile>
    </profiles>-->
</project>