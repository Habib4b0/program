<VerticalLayout spacing="true"  immediate="true">
    <Panel  margin="true" immediate="true" spacing="true" caption="Data Selection" xmlns:d="urn:import:org.asi.ui.custommenubar">
        <VerticalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
            <GridLayout spacing="true" id="dataSelecionGrid"
                        immediate="true" columns="10" rows="1">
                <Label caption="Deduction Level : " id="deductionLevel" contentMode="HTML" />
                <ComboBox id="deductionLevelDdlb" nullSelectionAllowed="false"
                          immediate="true" />
                <Label caption=" Deduction Value : "  contentMode="HTML" />
                <d:CustomMenuBar id="deductionValueDdlb" styleName="custommenumulticheck"/>
                <Label caption=" Rate Basis : " contentMode="HTML" />
                <ComboBox id="rateBasisDdlb" nullSelectionAllowed="false"
                          immediate="true" />
                <Label id="rateFrequencyDdlbLabel" caption=" Rate Frequency : " contentMode="HTML" />
                <ComboBox id="rateFrequencyDdlb" nullSelectionAllowed="false"
                          immediate="true" />
                <Label id="ratePeriodDdlbLabel" caption=" Rate Period : " contentMode="HTML" />
                <ComboBox id="ratePeriodDdlb" nullSelectionAllowed="true" nullSelectionItemId="-Select One-"
                          immediate="true" />
            </GridLayout>
        </VerticalLayout>
    </Panel>  
    <HorizontalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
        <Button id="reset" caption="RESET" />
        <Button id="generate" caption="GENERATE" />
    </HorizontalLayout> 
</VerticalLayout>