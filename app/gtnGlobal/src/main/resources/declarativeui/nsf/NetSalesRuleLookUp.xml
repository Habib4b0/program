<?xml version="1.0" encoding="UTF-8"?>
<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable" spacing="true">
      <VerticalLayout margin="true" spacing="true"  xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling"  >
      <errorMsg:ErrorLabel id="errorLB" />
        <Panel id="searchPanel" caption="Net Sales Rule Search" width="100%" spacing="true">			

            <GridLayout id="searchLayout" margin="true" spacing="true" columns="4"
                        rows="2">

                <Label value="Rule Type " contentMode="HTML" />
                <ComboBox id="ruleType" nullSelectionAllowed="false" immediate="true" width="206px" height="26px" />
                <Label value="Rule No " contentMode="HTML" />
                <TextField id="ruleNo" inputPrompt="" width="198px" height="26px" />
                <Label value="Rule Name " contentMode="HTML" width="96px"/>
                <TextField id="ruleName" inputPrompt="" width="198px" height="26px" />
                <Label value="Rule Category " contentMode="HTML" width="120px"/>
                <ComboBox id="ruleCategory" nullSelectionAllowed="false" immediate="true" width="206px" height="26px"/>
									
            </GridLayout>

        </Panel>

        <HorizontalLayout margin="false"
                          spacing="true">
            <Button caption="SEARCH" id="searchBtn" />
            <Button caption="RESET" id="resetBtn" />
        </HorizontalLayout>
        <Panel  width="100%" >
        <HorizontalLayout margin="false"
                          spacing="true">
        <Panel id="resultsPanel" caption="Results" width="50%" spacing="true">
            <VerticalLayout id="tableLayout" width="600px">
            </VerticalLayout> 
        </Panel>

        <Panel caption="Rule Details" width="50%" spacing="true">
            <VerticalLayout id="rdTableLayout" >
            </VerticalLayout> 
        </Panel>
      </HorizontalLayout>
       </Panel>
        <HorizontalLayout margin="false"
                          spacing="true">
            <Button caption="SELECT" id="selectBtn" />
            <Button caption="CLOSE" id="closeBtn" />
            <Button caption="DETAILS" id="detailsBtn" />

        </HorizontalLayout>
    </VerticalLayout>
</Panel>
