<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" styleName="bootstrap-forecast" >
        <Panel id="CustomerGroupPanel" caption="Search Criteria">
            <VerticalLayout spacing="true" margin="true" height = "100px">
                <GridLayout id="gLayout" rows="2" columns="2" margin="false" spacing="true">
                    <Label value="Customer Group Name:" contentMode="HTML" width="161px"/>
                    <TextField id="customerGroupName" inputPrompt=""  />
                    <Label value="Customer Group#:" contentMode="HTML" width="160px"/>
                    <TextField id="customerGroup" inputPrompt=""  />

                </GridLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="searchBtnCGL" caption="SEARCH"  />
            <Button id="resetBtnCGL" caption="RESET"  />
        </HorizontalLayout>
        <Panel caption="Results" >
            <!--<a:ExtFilterTable id="resultsTableCGL" width="100%" height="75%" styleName="table-header-normal" immediate="true" />-->
       <VerticalLayout id="resultsTableLayout"></VerticalLayout>
        </Panel>
        <HorizontalLayout margin="false" spacing="true">
            <Button id="selectBtnCGL" caption="SELECT"  />
            <Button id="cancelBtnCGL" caption="CANCEL"  />
            <Button id="resultResetBtnCGL" caption="RESET"  />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
