	<bean id="gtnWsSqlService" class="com.stpl.gtn.gtn2o.ws.service.GtnWsSqlService">
	</bean>

	<bean id="gtnSqlQueryEngine"
		class="com.stpl.gtn.gtn2o.queryengine.engine.GtnFrameworkSqlQueryEngine">
		<property name="sessionFactory" ref="sessionFactory"></property>
		<property name="queryLogger" ref="queryLogger"></property>
	</bean>
	<bean id="queryLogger"
		class="com.stpl.gtn.gtn2o.ws.logger.GtnQueryLogger">
