<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:p="urn:vaadin:parent" xmlns:s="urn:import:org.asi.ui.extfilteringtable.paged">
    <VerticalLayout spacing="true" margin="true" width = "100%"> 
        <Panel caption = "Search Criteria" styleName="textbold" width="100%">
            <VerticalLayout spacing="false" margin="true" styleName="width-auto"> 
                <HorizontalLayout spacing="false" margin="true" immediate="true" width="97%">
                    
                            <GridLayout spacing="true" margin="false" immediate="true" columns="4" rows="2">
                                <Label value="Financial Forecast ID" id="financialForecastIdLabel" contentMode="HTML" width="200px"/>
                                <TextField id="financialForecastId" />
                                <Label value="Type" id="typeLabel" contentMode="HTML" />
                                <ComboBox id="typeDdlb" nullSelectionAllowed="true" immediate="true" />
                                <Label value="Financial Forecast Name" id="financialForecastNameLabel" contentMode="HTML" width="200px"/>
                                <TextField id="financialForecastName"/>
                                <Label value="Status" id="statusLabel" contentMode="HTML" />
                                <ComboBox id="statusDdlb" nullSelectionAllowed="true" immediate="true" />
                            </GridLayout>
                        
                    <Panel caption = "Creation Date" styleName="textbold" spacing="true" margin="true" width="32%">
                        <HorizontalLayout spacing="false" margin="true">
                            <Label value="From:" id="creationFrom" contentMode="HTML" />
                            <PopupDateField id="creationFromDate" ></PopupDateField> 
                            <Label value="To:" id="creationTo" contentMode="HTML" />
                            <PopupDateField id="creationToDate" ></PopupDateField> 
                        </HorizontalLayout>
                    </Panel>
                    <Panel caption = "Approval Date" styleName="textbold" spacing="true" margin="true" width="32%">
                        <HorizontalLayout spacing="false" margin="true">
                            <Label value="From:" id="approvalFrom" contentMode="HTML" />
                            <PopupDateField id="approvalFromDate" ></PopupDateField> 
                            <Label value="To:" id="approvalTo" contentMode="HTML" />
                            <PopupDateField id="approvalToDate" ></PopupDateField> 
                        </HorizontalLayout>
                    </Panel>
                </HorizontalLayout>
                <HorizontalLayout margin="true" immediate="true">
                    <Button id="searchBtn" caption="SEARCH" visible ="true"/>
                    <Button id="resetBtn"  caption="RESET" visible ="true"/>            
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel caption = "Results" styleName="textbold">
            <VerticalLayout id="resultLayout">
            <!--<s:ExtPagedFilterTable id="resultTable" width="100%" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />-->
            </VerticalLayout>
        </Panel>
        <Button id="excelExport" caption="" visible ="true"/>
        <HorizontalLayout margin="true" immediate="true">
            <Button id="addBtn" caption="ADD" visible ="true"/>
            <Button id="editBtn"  caption="EDIT" visible ="true"/>
            <Button id="viewBtn"  caption="VIEW" visible ="true"/>            
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
