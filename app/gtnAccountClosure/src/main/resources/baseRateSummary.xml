<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="bsSummaryVerticalLayout" spacing="true"
                    margin="true" immediate="true" styleName="width-auto">
        <Panel id="bsSummaryPanel1" caption="Selection Criteria">
            <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="bsSummaryLayout" immediate="true" columns="8" rows="3">
                    <Label caption="Company: " contentMode="HTML" />
                    <TextField id="companyId" immediate="true"  enabled="false"/>
                    <Label caption="Disc/Acct Type: " contentMode="HTML" />
                    <TextField id="acctType" immediate="true"  enabled="false"/>
                    <Label caption="Customer/Group: " contentMode="HTML" />
                    <TextField id="customerGroup"  immediate="true"  enabled="false"/>
                    <Label caption="Product/Group: " contentMode="HTML" />
                    <TextField id="productGroup" immediate="true"  enabled="false" />
                    <Label caption="Market Type: " contentMode="HTML" />
                    <TextField id="marketType" immediate="true"  enabled="false"/>
                    <Label caption="Disc/Acct Sub-Type: " contentMode="HTML" />
                    <TextField id="acctSubType" immediate="true"  enabled="false"/>
                    <Label caption="Contract: " contentMode="HTML" />
                    <TextField id="contractId" immediate="true"  enabled="false"/>
                    <Label caption="Product: " contentMode="HTML" />
                    <TextField id="productName" immediate="true"  enabled="false"/>
                </GridLayout>
            </HorizontalLayout>
        </Panel>
        <Panel id="bsMassUpdatePanel1" caption="Mass Update">
            <HorizontalLayout id="horizontalLayout2" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="bsMassUpdateLayout" immediate="true" columns="6" rows="1">
                    <OptionGroup multiSelect="false" id="massUpdateRadio" immediate="true" enable="true" styleName = "horizontal"/>
                    <Label caption="Field:" contentMode="HTML" />
                    <ComboBox id="fieldDdlb" immediate="true" width="150px"/>                    
                    <Label caption="Value:" contentMode="HTML" />
                    <ComboBox id="valueDdlb" immediate="true" width="150px"/>
                    <TextField id="textDdlb" immediate="true" visible = "false"/>
                    <Button id="populateBtn" caption="POPULATE" />
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
        <Panel id="bsSummaryPanel2" caption="Summary">
            <VerticalLayout>
                <VerticalLayout id="brVerSummaryTableLayout">
                <HorizontalLayout id="brSummaryTableLayout"  margin="false" immediate="true">
                </HorizontalLayout>
                </VerticalLayout>
                <HorizontalLayout>
                    <Button id="resetBtn" caption="RESET" alignment="BOTTOM_LEFT" />
                    <Button id="deleteBtn" caption="DELETE" alignment="BOTTOM_LEFT" />
                    <Button id="excelBtn" primaryStyleName="link"></Button>   
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>