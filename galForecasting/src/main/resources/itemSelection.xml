<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="parentVerticalLayout" spacing="true"
                    margin="true" immediate="true" height="100%">
        <Panel immediate="true" caption="Search Criteria-Items">
           
            <HorizontalLayout  spacing="true" margin="true" >
                <GridLayout columns="6" rows="4" spacing="true">
                    <Label caption="Business Unit No: " contentMode="HTML" width="90px"/>
                    <TextField id="businessUnitNo" immediate="true" width="205px"/>
                    <Label caption="Item No: " contentMode="HTML" />
                    <TextField id="itemNo" immediate="true" width="205px"/>
                    <Label caption="Item Name: " contentMode="HTML" />
                    <TextField id="itemName" immediate="true" width="205px"/>
                    <Label caption="Business Unit Name: " contentMode="HTML" width="90px"/>
                    <TextField id="businessUnitName" immediate="true" width="205px"/>
                    <Label caption="Therapeutic Class: " contentMode="HTML" />
                    <ComboBox id="theraputicClass" immediate="true" width="205px"/>
                    <Label caption="Item Identifier Type: " contentMode="HTML" />
                    <ComboBox id="itemIdentifierType" immediate="true" width="205px"/>
                    <Label caption="Brand : " contentMode="HTML" width="90px" />
                    <ComboBox id="brand" immediate="true" width="205px"/>
                    <Label caption="Item Identifier: " contentMode="HTML" />
                    <TextField id="itemIdentifier" immediate="true" width="205px"/>
                    <Label caption="" contentMode="HTML" />
                    <Label caption="" contentMode="HTML" />
                    
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout  spacing="true" margin="true" >
            <Button id="searchBtn" caption="SEARCH" />
            <Button id="resetBtn" caption="RESET" />
        </HorizontalLayout>
        
        <Panel caption="Results"  width="100%">
            <VerticalLayout spacing="true" margin="true">
                <Panel caption="Available Items">
                    <VerticalLayout id="availableItemsTableLayout" spacing="true" margin="false" immediate="true">
                    </VerticalLayout>
                </Panel>
                 
                <HorizontalLayout columns="3" rows="1" spacing="true">
                    <Button id="addBtn" caption="ADD"  />
                    <Button id="addAllBtn" caption="ADD ALL"  /> 
                      <Button id="excelBtn" primaryStyleName="link"  />
                </HorizontalLayout>
                <Panel caption="Selected Items">
                    <VerticalLayout id="selectedItemsTableLayout" spacing="true" margin="false" immediate="true">
                    </VerticalLayout>
                            
                </Panel>
                <HorizontalLayout columns="3" rows="1" spacing="true">
                    <Button id="remove" caption="REMOVE"  />
                    <Button id="removeAllBtn" caption="REMOVE ALL"  /> 
                    <Button id="selectedExport" primaryStyleName="link"  />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel> 
        
    </VerticalLayout>

</Panel>