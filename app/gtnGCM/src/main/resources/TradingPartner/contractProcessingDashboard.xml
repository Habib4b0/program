<Panel  id="contarctProcessing" caption = "Contract Processing Dashboard" >
    <VerticalLayout id="summaryTabVerticalLayout" spacing="true" 
                    margin="true" immediate="true">

<Panel>
        <HorizontalLayout id="horizontalLayout1" spacing="true"   immediate="true" >
          
            <Panel id = "addTradingPartner" caption = "Add Customer Results"  width="1200px" height="420px" >
                <VerticalLayout margin = "true">
                    <VerticalLayout id="addTradingPartnerTableLayout" spacing="true" margin="false" immediate="true">
                    </VerticalLayout>
                    <HorizontalLayout spacing="true" margin="true">
                    <Button id = "remove" caption="REMOVE" alignment="BOTTOM_LEFT" />
                    <Button id = "excelBtn" primaryStyleName="link"/>
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
            <Panel id = "contractDashboard" caption = "Contract Dashboard Results" width="700px" height="420px">
                <VerticalLayout margin = "true">
                    <VerticalLayout id="contractDashboardTableLayout" spacing="true" margin="false"  immediate="true">
                    </VerticalLayout>
                    <HorizontalLayout spacing="true" margin="true">
                        <Button id = "removeContract" caption="REMOVE" alignment="BOTTOM_LEFT" />
                        <Button id = "populate" caption="POPULATE" alignment="BOTTOM_LEFT" />
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
            
        </HorizontalLayout>
</Panel>
        <Panel id = "componentInfo" caption = "Component Information">
              
                    <HorizontalLayout id="horizontalLayout2" spacing="true" margin="true" immediate="true">
                        <GridLayout spacing="true"  id="componentInformationGrid" immediate="true" columns="10" rows="3">
                           <Label   id="cIdLabel" caption="RS ID: " contentMode="HTML" />
                            <TextField id="cId" immediate="true" enabled="false"/>
                    
                            <Label id="cNumberLabel" caption="RS Number: " contentMode="HTML" />
                            <TextField id="cNumber" enabled="false"/>
                    
                            <Label id="cNameLabel" caption="RS Name: " contentMode="HTML" />
                            <TextField id="cName" enabled="false"/>
                    
                            <Label id="statusLabel" caption="Status: " contentMode="HTML" />
                            <TextField id="status" enabled="false"/>
                    
                            <Label id="startDateLabel" caption="Start Date: " contentMode="HTML" />
                            <TextField id="startDate" enabled="false"/>
                    
                            <Label id="endDateLabel" caption="End Date: " contentMode="HTML" />
                            <TextField id="endDate" enabled="false"/>
                    
                            <Label  id="typeLabel" caption="Type: " contentMode="HTML" />
                            <TextField id="type" enabled="false" />
                            
                            <Label id="rebateFrequencyLabel" caption="Rebate Frequency: " contentMode="HTML" />
                            <TextField id="rebateFrequency" enabled="false" />
                   
                            <Label   id="basisLabel"  caption="Basis: " contentMode="HTML" />
                            <TextField id="basis" enabled="false" />
                            
                            <Label   id="rsTypeLabel"  caption="RS Type: " contentMode="HTML" />
                            <TextField id="rsType" enabled="false" />
                            
                            <Label   id="rsProgramTypeLabel"  caption="RS Program Type: " contentMode="HTML" />
                            <TextField id="rsProgramType" enabled="false" />
                            
                            <Label   id="rsCategoryLabel"  caption="RS Category: " contentMode="HTML" />
                            <TextField id="rsCategory" enabled="false" />
                    
                            <Label   id="paymentFrequencyLabel"  caption="Payment Frequency: " contentMode="HTML" />
                            <TextField id="paymentFrequency" enabled="false" />
                            
                            <Label   id="rebatePlanLevelLabel"  caption="Rebate Plan Level: " contentMode="HTML" />
                            <TextField id="rebatePlanLevel" enabled="false" />
                    
                        </GridLayout>
                    </HorizontalLayout>
               
        </Panel>
        
        <Panel id = "componentDetails" caption = "Component Details">
            <VerticalLayout id="componentDetailsTableLayout" spacing="true" margin="false" immediate="true">
            </VerticalLayout>
        </Panel>
        <Button id = "excelCompBtn" primaryStyleName="link"/>
    </VerticalLayout>
</Panel>
