<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" spacing="true" margin="true" immediate="true">
    <VerticalLayout spacing="true" margin="true" immediate="true" width="100%">
        <GridLayout spacing="true" margin="true" rows="1" columns="2" width="100%">           
            <VerticalLayout spacing="true" margin="false" immediate="true" >
                <Panel caption="Product Selection" spacing="true" margin="false" immediate="true">
                    <GridLayout rows="1" columns="4" spacing="true" margin="true">
                        <Label caption="Brand:" contentMode="HTML" />
                        <ComboBox id="brand" inputPrompt="-Select One-"  />
                        <Label caption="NDC:" contentMode="HTML" />
                        <ComboBox id="ndc" inputPrompt="-Select One-"  />
                    </GridLayout>
                </Panel>
                <HorizontalLayout spacing="true" margin="false" immediate="true">
                    <Button id="generate" caption="GENERATE" />
                    <Button id="reset" caption="RESET" />
                </HorizontalLayout>
            </VerticalLayout>     
            <VerticalLayout spacing="true"  immediate="true" width="100%">       
                <Panel caption="CPI Alternate For Line Extensions" spacing="true"  immediate="true" width="100%">
                    <HorizontalLayout spacing="true" margin="true" immediate="true" width="100%">
                        <Table id="cpiTable" selectable="true" immediate="true" pageLength="3" width="100%"/>
                    </HorizontalLayout>
                </Panel>
            </VerticalLayout>     
        </GridLayout>
        <VerticalLayout spacing="true" immediate="true" width="100%">   
        <Panel caption="Price Types" immediate="true" width="100%" height = "500px">
                <VerticalLayout id="verticalLayout" spacing="true"
                            margin="true" immediate="true">
            <VerticalLayout id="tableVerticalLayout" spacing="true"
                                 margin="false" immediate="true">
              
                </VerticalLayout> 
            <VerticalLayout spacing="true" immediate="true">               
                <Button id="excelBtn" primaryStyleName="link" />
            </VerticalLayout>
               </VerticalLayout> 
        </Panel>
        </VerticalLayout>   
        <HorizontalLayout spacing="true" margin="false">
            <Button id="calculate" caption="CALCULATE" />
            <Button id="tableReset" caption="RESET" />
            <Button id="submitBtn" caption="SUBMIT" />
            <Button id="close" caption="CLOSE" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
