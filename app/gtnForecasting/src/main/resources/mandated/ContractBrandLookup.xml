<?xml version="1.0" encoding="UTF-8"?>
<Panel    xmlns:p="urn:vaadin:parent"  xmlns:a="urn:import:org.asi.ui.extfilteringtable">

    <VerticalLayout spacing="true" margin="true" caption="Contract"
                 immediate="true" styleName="bootstrap-forecast">
        <HorizontalLayout spacing="true" margin="true" immediate="true" >		
            <Panel caption="Contract" width="600px" height="732px" margin="true">
                <VerticalLayout spacing="true" margin="true" caption="Contract"
                      immediate="true" >
                    <GridLayout  spacing="true" margin="true" immediate="true" width="100%" rows="3" columns="1">	
                    <Panel caption="Search Criteria" height="270px">
                          <VerticalLayout styleName = "width-auto" margin="true" immediate="true">
                        <GridLayout spacing="true" margin="true" immediate="true" rows="3" columns="2">
                            <Label id="customerDdlbLabel" value="Customer: " contentMode="HTML"/>
                            <ComboBox id="customerDdlb" enabled="true" immediate="true" styleName="comboxsize" />
                            <Label id="contractNoLb" value="Contract Number:" contentMode="HTML" width="126px"/> 
                            <TextField id="contractNo" inputPrompt="" immediate="true" />
                            <Label id="contractNameLb" value="Contract Name:" contentMode="HTML" width="126px"/> 
                            <TextField id="contractName" inputPrompt="" immediate="true" />  
                            <Label id="customerIdLb" value="Customer ID:" contentMode="HTML" width="126px"/>
                            <TextField id="customerId" inputPrompt="" immediate="true" />
                            <Label id="contractHolderNameLb" value="Contract Holder Name:" contentMode="HTML" width="126px"/>
                            <TextField id="contractHolderName" inputPrompt="" immediate="true" />
                        </GridLayout>
                          </VerticalLayout>
                    </Panel>
                    <HorizontalLayout spacing="true" margin="false" immediate="true">
                        <Button id="searchContract" caption="SEARCH"></Button>
                        <Button id="resetContract" caption="RESET"></Button>
                    </HorizontalLayout>
			
                    <Panel caption="Results" width="100%">
                        <a:ExtFilterTable id="contractResultsTable" width="100%" height="200px" immediate="true"/>		
                    </Panel>
                    </GridLayout>
                </VerticalLayout>
            </Panel>
		
			
            <!-- Brand -->
			
            <Panel caption="Brand" width="450px" height="732px" margin="true">
                <VerticalLayout spacing="true" margin="true"  caption="Contract" immediate="true">
                    <GridLayout width="100%" spacing="true" margin="true" immediate="true" rows="3" columns="1">
                    <Panel caption= "Search Criteria" height="270px">
                        <HorizontalLayout spacing="true" margin="true" immediate="true" >
                            <Label value="Brand Search:" contentMode="HTML" /> 
                            <TextField id="brandSearch" inputPrompt="" immediate="true" />
                        </HorizontalLayout>
                    </Panel>
			
                    <HorizontalLayout spacing="true" margin="false" immediate="true">
                        <Button id="searchBrand" caption="SEARCH"></Button>
                        <Button id="resetBrand" caption="RESET"></Button>
                    </HorizontalLayout>
			
                    <Panel caption="Results" width="100%">
                        <a:ExtFilterTable id="brandResultsTable" width="100%" height="200px" immediate="true"/>		
                    </Panel>
                    </GridLayout>
                </VerticalLayout>
            </Panel>
        </HorizontalLayout>
        <HorizontalLayout spacing="true" margin="true" immediate="true">
            <Button id="importBtn" caption="IMPORT"></Button>
            <Button id="closeBtn" caption="CLOSE"></Button>
        </HorizontalLayout> 
    </VerticalLayout>
</Panel>