                                </GridLayout>
                                <TreeTable id="selectedCustomer" width="400px" height="300px" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />
                            </GridLayout>
                        </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
