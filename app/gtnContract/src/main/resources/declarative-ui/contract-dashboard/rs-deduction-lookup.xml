<?xml version="1.0" encoding="UTF-8"?>
<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable" spacing="true">
    <VerticalLayout margin="true" spacing="true" >
        <!--<errorMsg:ErrorLabel id="errorLB" />-->
        <Panel caption="Search Criteria" width="100%" spacing="true">			

            <GridLayout id="searchLayout" margin="true" spacing="true" columns="4"
                        rows="2">

                <Label value="Deduction Calendar No: " contentMode="HTML" />
                <TextField id="deductionNo" inputPrompt="" width="198px" height="26px" />
                <Label value="Deduction Calendar Name: " contentMode="HTML" width="198px"/>
                <TextField id="deductionName" inputPrompt="" width="198px" height="26px" />
                <Label value="Deduction Calendar Desc: " contentMode="HTML" width="96px"/>
                <TextField id="deductionDesc" inputPrompt="" width="198px" height="26px" />
                <Label value="Category: " contentMode="HTML" />
                <ComboBox id="category" nullSelectionAllowed="false" immediate="true" width="206px" height="26px"/>
									
            </GridLayout>

        </Panel>

        <HorizontalLayout margin="false"
                          spacing="true">
            <Button caption="SEARCH" id="searchBtn" />
            <Button caption="RESET" id="resetBtn" />
        </HorizontalLayout>
      
        <Panel id="resultsPanel" caption="Results" width="100%" spacing="true">
            <VerticalLayout id="tableLayout" >
            </VerticalLayout> 
        </Panel>
       
        <HorizontalLayout margin="false"
                          spacing="true">
            <Button caption="SELECT" id="selectBtn" />
            <Button caption="CLOSE" id="closeBtn" />

        </HorizontalLayout>
    </VerticalLayout>
</Panel>
