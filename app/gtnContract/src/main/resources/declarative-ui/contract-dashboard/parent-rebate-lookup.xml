<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout margin="true" spacing="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" 
xmlns:errorMsg="urn:import:com.stpl.ifs.ui.errorhandling" xmlns:b="urn:import:org.asi.ui.extfilteringtable">
	 <errorMsg:ErrorLabel id="errorLB" />
	 <HorizontalLayout styleName="responsiveTabGrid">
		<CssLayout id="cssLayout" width="100%" height="100%">	
		
			<Label id="rebateScheduleIDLabel" value="Rebate Schedule ID:" contentMode="HTML" />
			<TextField id="rebateScheduleID"  immediate="true" />
			
			<Label id="rebateScheduleNameLabel" value="Rebate Schedule Name:" contentMode="HTML" />
			<TextField id="rebateScheduleName"  immediate="true" />
			
			<Label id="rebateScheduleNoLabel" value="Rebate Schedule No:" contentMode="HTML" />
			<TextField id="rebateScheduleNo"  immediate="true" />
			
			<Label id="rebateScheduleStatusLabel" value="Rebate Schedule Status:" contentMode="HTML" />
			<ComboBox id="rebateScheduleStatus"  immediate="true" />
			
			<Label id="rebateScheduleTypeLabel" value="Rebate Schedule Type:" contentMode="HTML" />
			<ComboBox id="rebateScheduleType"  immediate="true" />
			
			<Label id="rebateProgramTypeLabel" value="Program Type:" contentMode="HTML" />
			<ComboBox id="rebateProgramType"  immediate="true" />
			
		</CssLayout>
	</HorizontalLayout>
	<HorizontalLayout>
		<Button id="searchBtn" caption="SEARCH" immediate="true"/>
		<Button id="resetBtn" caption="RESET" immediate="true"/>
	</HorizontalLayout>
	<HorizontalLayout styleName="prev-next-layout">
		<Button id="previousColumnBtn" caption="&lt;&lt;" styleName="prev-column-button" immediate="true"/>
		<Button id="nextColumnBtn" caption="&gt;&gt;" styleName="next-column-button" immediate="true"/>
	</HorizontalLayout>
	<b:ExtFilterTable id="resultsTable" />
</VerticalLayout>