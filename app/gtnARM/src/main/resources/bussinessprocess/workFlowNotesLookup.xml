<VerticalLayout id="vlayout" spacing="true" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable">
    <Panel>     
        <HorizontalLayout id="root" margin="true" space="true" width="100%" height="100%" >
            <Panel caption="Notes" styleName="attachmentpanel" >
                <VerticalLayout margin="true" >
                    <VerticalLayout>
                        <CssLayout id="cssNewNote" width="100%" height="100%">
                            <VerticalLayout id="reasoncodeLayout">
                                
                                <VerticalLayout styleName="addInfoBtnSpace">
                                    <Label value="Enter New Note" styleName="noteslabel" />
                                    <TextArea id="notes" styleName="addInfoText" />
                                </VerticalLayout>
                               
                                <HorizontalLayout immediate="true" styleName="v-slot-no-rt-pad">
                                    <Label value="File Name" contentMode="HTML" styleName="file-name-label" immediate="true" />
                                    <TextField id="fileNameField"  enabled="true" immediate="true" />
                                </HorizontalLayout>
                                
                                <HorizontalLayout immediate="true">
                                    <CssLayout id ="cssLayout1" immediate="true" width="100%" height="100%" styleName="attachemt-label" >
                                    </CssLayout>
                                </HorizontalLayout>
                                
                                <HorizontalLayout immediate="true">
                                    <CssLayout immediate="true" width="100%" height="100%">
                                        <Label value="Attachments" contentMode="HTML" immediate="true" styleName="attachment" />
                                        <VerticalLayout id="tableLayout" spacing="true" >
                                            <ef:ExtFilterTable id="table" />
                                            <Button id="remove" caption="REMOVE" immediate="true" />
                                        </VerticalLayout>
                                    </CssLayout>
                                </HorizontalLayout>
                                
                            </VerticalLayout>
                        </CssLayout>
                    </VerticalLayout>
                    
                    <VerticalLayout id="addNoteBtnlayout" styleName="addInfoBtnSpace">
                        <Button id="okBtn" caption="OK" />
                    </VerticalLayout>
                    
                </VerticalLayout>
            </Panel>
        </HorizontalLayout>
    </Panel>
</VerticalLayout>



