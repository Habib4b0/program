<?xml version="1.0" encoding="UTF-8"?>
<Panel spacing="true" immediate="true"  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" width="100%" height="100%">
    <VerticalLayout spacing="true" immediate="true" margin="true" width="100%" >
        <Panel spacing="true" immediate="true" margin="true">
            <VerticalLayout spacing="true" immediate="true" margin="true">
                <GridLayout columns="1" rows="5" spacing="true" immediate="true" height="100%" width="100%">
                    <HorizontalLayout spacing="true"  immediate="true">
                        <GridLayout columns="4" rows="1" spacing="true" immediate="true">
                            <OptionGroup multiSelect="false" id="componentmode" immediate="true" enable="true" styleName = "horizontal"/>
                            <Label caption="Category Filter: " contentMode="HTML" />
                            <ComboBox id="CategoryProcess" immediate="true" width="205px"/>  
                            <Button id="searchbtnRU" caption="SEARCH" />
                        </GridLayout>
                    </HorizontalLayout>
                    <HorizontalLayout spacing="true"  immediate="true" width="100%" >
                        <a:ExtFilterTable id="searchtableAvailable"  styleName="table-header-normal"  immediate="true" />
                    </HorizontalLayout>
                    <HorizontalLayout spacing="true"  immediate="true">
                        <Button id="AddRu" caption="ADD" /> 
                        <Button id="ExportRu" />
                    </HorizontalLayout>
                    <HorizontalLayout spacing="true"  immediate="true" width="100%">
                        <a:ExtFilterTable id="searchtableselected"  styleName="table-header-normal"  immediate="true" />
                    </HorizontalLayout>
                    <HorizontalLayout spacing="true"  immediate="true">
                        <Button id="RemoveRu" caption="REMOVE" /> 
                        <Button id="ExportRubottom"  />
                    </HorizontalLayout>
                </GridLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true"  immediate="true">
            <Button id="ReasetbtnRU" caption="RESET" /> 
            <Button id="savebtnRU" caption="SAVE" />
        </HorizontalLayout>
        <HorizontalLayout spacing="true"  immediate="true"  id="exportlayoutavailable">
          
        </HorizontalLayout>
        <HorizontalLayout spacing="true"  immediate="true"  id="exportlayoutselected">
          
        </HorizontalLayout>
    </VerticalLayout>
    
</Panel>