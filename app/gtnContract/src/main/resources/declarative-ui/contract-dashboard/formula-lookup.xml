<?xml version="1.0" encoding="UTF-8"?>
<Panel id="lookup" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent"> 
    <VerticalLayout styleName="custom-margin" spacing="true">

        <!--<el:ErrorLabel id="errorMsg" />-->
        <Panel caption="Search Criteria" width="100%" spacing="true">			

            <GridLayout id="searchLayout" margin="true" spacing="true" columns="4"
                        rows="2">
		
                <Label id="formulaTypeLB" value="Formula Type" styleName="labelsize" contentMode="HTML" />
                <ComboBox id="formulaType" nullSelectionAllowed="false" immediate="true" width="206px" height="26px" />
                <Label id="formulaNoLB" value="Formula No" styleName="labelsize" contentMode="HTML" immediate="true" />
                <TextField id="formulaNo"  enabled="true" immediate="true" />
                <Label id="formulaIDLabel" styleName="labelsize" value="Formula ID" contentMode="HTML" immediate="true" />
                <TextField id="formulaID" enabled="true" immediate="true" />
                <Label id="formulaNameLabel" styleName="labelsize" value="Formula Name" contentMode="HTML" immediate="true" />
                <TextField id="formulaName" enabled="true" immediate="true" />      
                
            </GridLayout>

        </Panel>          	
				

        <HorizontalLayout immediate="true" spacing="true">
            <Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
            <Button id="resetBtn" caption="RESET" immediate="true" width="80" />
        </HorizontalLayout>
	
        <Panel  width="100%" >
        <HorizontalLayout margin="false"
                          spacing="true">
        <Panel id="resultsPanel" caption="Results" width="50%" spacing="true">
            <VerticalLayout id="tableLayout" >
            </VerticalLayout> 
        </Panel>

        <Panel caption="Formula Details" width="50%" spacing="true">
            <VerticalLayout id="fdTableLayout" >
            </VerticalLayout> 
        </Panel>
      </HorizontalLayout>
       </Panel>
        <HorizontalLayout margin="false"
                          spacing="true">
            <Button caption="SELECT" id="selectBtn" />
            <Button caption="CLOSE" id="closeBtn" />
            <Button caption="DETAILS" id="detailsBtn" />

        </HorizontalLayout>
    </VerticalLayout>
        </Panel>          	
