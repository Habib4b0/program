<VerticalLayout xmlns:p="urn:vaadin:parent" xmlns:a="urn:import:org.asi.ui.extfilteringtable"
                xmlns:s="urn:import:org.asi.ui.extfilteringtable.paged" 
                xmlns:e="urn:import:com.stpl.app.ui.errorhandling"   spacing="true">
    <HorizontalLayout spacing="true" width="100%">
        <Panel id="searchCriteria" caption="Search Criteria" styleName="textbold" height="325px">
            <VerticalLayout>
                <HorizontalLayout margin="true" width="100%">
                    <e:ErrorLabel id="errorLabel" contentMode="HTML"/>
                </HorizontalLayout>
                <GridLayout spacing="true" margin="false" columns="2" rows="5">                    
                    <Label id="latestEstimateLabel" value="Latest Estimate" contentMode="HTML" width = "200px" />
                    <ComboBox id="latestEstimate" nullSelectionAllowed="true" immediate="true"  styleName="comboxsize" />
                    <Label id="latestEstimateNameLabel" value="Latest Estimate Name" contentMode="HTML" width = "200px"/>
                    <TextField id="latestEstimateName" immediate="true"/>
                    <Label id="updateCycleLabel" value="Update Cycle" contentMode="HTML" width = "200px" />
                    <ComboBox id="updateCycle" nullSelectionAllowed="true" immediate="true" styleName="comboxsize" />
                    <Label id="updateCycleNameLabel" value="Update Cycle Name" contentMode="HTML" width = "200px"/>
                    <TextField id="updateCycleName" immediate="true" />
                    <Label id="statusLabel" value="Status" contentMode="HTML" width = "200px"/>
                    <TextField id="status" immediate="true" />
                </GridLayout>
            </VerticalLayout>    
        </Panel>
        <Panel id="approvalDetails" caption="Approval Details" styleName="textbold" height="325px">
            <VerticalLayout id="approvalLayout">
                
            </VerticalLayout>
        </Panel>
    </HorizontalLayout>
    <Button id="resetBtn" caption="RESET"/>
    <Panel id="result" caption="Result" styleName="textbold">
        <VerticalLayout>
            <VerticalLayout id="resultLayout">
                
            </VerticalLayout>
            <Button id="excelExport" caption="" visible ="true"/>
            <HorizontalLayout id="bottombuttonLayout" spacing="true" width="100%" margin="true" >
                <Button id="approveBtn" caption="APPROVE"/>
                <Button id="rejectBtn" caption="REJECT"/>
                <Button id="deleteBtn" caption="DELETE"/>
                <Button id="cancelBtn" caption="CANCEL"/>
                <Button id="submitBtn" caption="SUBMIT"/>
                <Button id="closeBtn" caption="CLOSE"/>
            </HorizontalLayout>  
        </VerticalLayout>
    </Panel>
      
    
</VerticalLayout>
