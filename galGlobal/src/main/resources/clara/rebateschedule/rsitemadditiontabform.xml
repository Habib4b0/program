
<VerticalLayout margin="true" caption="Item Addition" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable"
	xmlns:c="urn:import:org.asi.ui.customcombobox">
		<HorizontalLayout id="hlayout"  immediate="true">
			<CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
				
                                <OptionGroup id="searchType" enabled="false" />
                            
                                <Label value="Search Field" contentMode="HTML" immediate="true" />
				
				<c:CustomComboBox id="searchField" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
				
				<Label value="Value" contentMode="HTML" immediate="true" />
				
				<TextField id="ifpNo" enabled="true" immediate="true" />
				
				<TextField id="ifpName" enabled="true" immediate="true" />
				
				<c:CustomComboBox id="ifpType" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			
				<PopupDateField id="ifpStartDate" immediate="true"/> 
				
				<PopupDateField id="ifpEndDate" immediate="true"/> 
				
				<TextField id="itemNo" enabled="true" immediate="true" />
				
				<TextField id="itemName" enabled="true" immediate="true" />
                                
                                <c:CustomComboBox id="ifpCategory" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                                
                                <c:CustomComboBox id="ifpStatus" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                                
				<Button id="searchBtn" caption="Search" immediate="true" width="80" />
			</CssLayout>
		</HorizontalLayout>

	<Label caption=" " />
      
	<HorizontalLayout id="hlayout2" spacing="false" margin="false" immediate="true">
		<CssLayout spacing="true" immediate="true" width="100%" height="100%">
			<ef:ExtFilterTable id="availableTable" />
			<HorizontalLayout id="hlayout3" spacing="false" margin="false" immediate="true" styleName="move-button-group-allignment-ps">
				<CssLayout spacing="true" immediate="true" styleName="NavButtonsforPS">
					<Button id="addBtn" immediate="true"  width="70px" />
					<Button id="removeBtn" immediate="true"  width="70px" />
				</CssLayout>
			</HorizontalLayout>
                       
			<ef:ExtFilterTable id="selectedTable" />
		</CssLayout>
	</HorizontalLayout>
        
        <HorizontalLayout id="hlayout4" visible="false" spacing="true" margin="true" immediate="true" styleName="prev-next-layout">
		<Button id="prevColumn" caption="&lt;&lt;" immediate="true" styleName="prev-column-button" />

		<Button id="nextColumn" caption="&gt;&gt;" immediate="true" styleName="next-column-button" />

	</HorizontalLayout>
      <Panel id="tablePanel" caption="Results" visible="false" >
        <Table id="resultsTable" />
         
    </Panel>
        
        
</VerticalLayout>