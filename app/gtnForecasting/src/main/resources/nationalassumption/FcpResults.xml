<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:p="urn:vaadin:parent">
  
                <VerticalLayout spacing="true" margin="true" immediate="true" width="100%" styleName="bootstrap-forecast">
                    <Panel id="panel1" caption="National Assumptions Results Selection"
               spacing="true" margin="false" immediate="true" width="100%">
            
                        <VerticalLayout spacing="false" margin="true" styleName = "width-auto" height="150px" >
                            <GridLayout id="gridLayout" spacing="true" margin="false" immediate="true"
                            columns="8" rows="3" >

                    <Label value="History: " contentMode="HTML" />
                    <ComboBox id="historyDdlb" nullSelectionAllowed="false" immediate="true" />
			
                    <Label value="Therapeutic Class: " contentMode="HTML" width="133px"/>
                    <ComboBox id="therapeuticDdlb" nullSelectionAllowed="false"
                          immediate="true"  />
                    
                    <Label value="Variable: " contentMode="HTML" width="133px"/>
                    <OptionGroup multiSelect="false" id="variables"
                             immediate="true" enable="true" styleName="horizontal">
                    </OptionGroup>
								
                    <Label value="Projection Period Order: " contentMode="HTML" width="173px"/>
				
                    <OptionGroup multiSelect="false" id="periodOrder"
                             immediate="true" enable="true" styleName="horizontal">
                    </OptionGroup>
                    
                    <Label value="Price Basis: " contentMode="HTML" width="84px"/>
                    <ComboBox id="priceBasisDdlb" nullSelectionAllowed="false"
                                          immediate="true"/>	
				
                    <Label value="Brand: " contentMode="HTML" />
                    <ComboBox id="brandDdlb" nullSelectionAllowed="false"
                          immediate="true"/> 
				
                    <Label value="Actuals/Projections: " contentMode="HTML" width="136px"/>
                    <OptionGroup multiSelect="false" id="actualOrProj"
                             immediate="true" enable="true" styleName="horizontal">
                    </OptionGroup>
								
                    <Label value="View: " contentMode="HTML" />
				
                    <OptionGroup multiSelect="false" id="view" immediate="true"
                             enable="true"  styleName="horizontal">
                    </OptionGroup>
		
                   				
                    <Label value="Price Type:  " contentMode="HTML" />
<!--                    <OptionGroup multiSelect="true" id="priceType"
                             immediate="true" enable="true" styleName="horizontal">
                    </OptionGroup>-->
                </GridLayout>
            </VerticalLayout>
        </Panel>

        <HorizontalLayout spacing="true" margin="false"
                          immediate="true">
            <Button id="generateBtn" caption="GENERATE" immediate="true"></Button>
            <Button id="resetBtn" caption="RESET" immediate="true"></Button>
        </HorizontalLayout>

        <Panel id="tablePanel" caption="Period View" margin="true"
            spacing="true">
            <VerticalLayout id="verticalLayout" spacing="true"
                            margin="true" immediate="true">
<!--                <HorizontalLayout spacing="true" margin="false">-->
                    <!--<Label value="NDC: " visible="false" contentMode="HTML" />-->
                    <ComboBox id="ndcFilterDdlb" nullSelectionAllowed="false" visible="false"
                              immediate="true" />
<!--                </HorizontalLayout>-->
                <VerticalLayout id="tableVerticalLayout" spacing="true"
                                 margin="false" immediate="true">
              
                </VerticalLayout> 
                <HorizontalLayout spacing="true" margin="false">
                    <Button id="excelBtn" primaryStyleName="link"></Button>
                    <Button id="expand" caption="EXPAND" immediate="true" ></Button>
                    <Button id="collapse" caption="COLLAPSE" immediate="true" ></Button>
                     <ComboBox id="levelDdlb" nullSelectionAllowed="false"
                                          immediate="true"/>
                    <Button id="nonFampBtn" caption="Non-FAMP"></Button>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>


    </VerticalLayout>

</Panel>