<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" spacing="true" margin="true" immediate="true">
    <VerticalLayout spacing="true" margin="true" width="100%"  styleName="bootstrap-forecast">
        <Panel caption="New NDC Setup" spacing="true" margin="false" immediate="true">
            <VerticalLayout>
                <HorizontalLayout spacing="true" margin="true" immediate="true">
                    <Label value="NDC: " contentMode="HTML" />
                   <ComboBox id="ndc" nullSelectionAllowed="true"
                              inputPrompt="-Select One-" immediate="true" width="175px"/>
                    <Label value="WAC: " contentMode="HTML" />
                    <TextField id="wac" inputPrompt="" />
                </HorizontalLayout>
                <HorizontalLayout spacing="true" margin="true">
                    <Panel caption="Base Year">
                        <GridLayout spacing="true" margin="true" rows="2" columns="2"
                                immediate="true">
                            <Label value="AMP: " contentMode="HTML" width="47px" />
                            <TextField id="baseAMP" inputPrompt="" />
                            <Label value="CPI: " contentMode="HTML" width="47px"/>
                            <TextField id="baseYearCPI" inputPrompt="" />
                        </GridLayout>
                    </Panel>
                    <Label value="" contentMode="HTML" />
                    <Panel caption="Forecast">
                        <GridLayout spacing="true" margin="true" rows="2" columns="2"
                                immediate="true">
                            <Label value="AMP: " contentMode="HTML"  width="78px"/>
                            <TextField id="forecastAMP" inputPrompt="" />
                            <Label value="Best Price: " contentMode="HTML" />
                            <TextField id="bestPrice" inputPrompt="" />
                        </GridLayout>
                    </Panel>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="populate" caption="POPULATE" />
            <Button id="reset" caption="RESET" immediate="true" />
        </HorizontalLayout>
        <Panel caption="New NDC's/Line Extentions">
                <a:ExtFilterTable styleName="table-header-normal"
                                  id="ndcTable" selectable="true" width="830px" height="250px"
                                  immediate="true" />
        </Panel>
    </VerticalLayout>

</Panel>
