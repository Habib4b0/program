<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:p="urn:vaadin:parent">
<VerticalLayout margin="true" spacing="true" styleName="bootstrap-forecast">
<Panel id="SearchPanel" caption="Search Criteria" >
    <!--width="1155px" height="25px"-->
<HorizontalLayout id="hori1" spacing="true" margin="true" height="76px">
<Label  value="Hierarchy Type:" contentMode="HTML" />
<OptionGroup  id="hierarchyType" multiSelect="false" enabled="true" immediate="true" styleName = "horizontal"/>
<Label  value="Hierarchy Name" contentMode="HTML" />
<TextField id="hierarchyName" inputPrompt="" />
</HorizontalLayout>

</Panel>
<HorizontalLayout margin="false" spacing="true">
<Button id="searchBtn" caption="SEARCH"  />
<Button id="resetBtn" caption="RESET"  />
</HorizontalLayout>
<Panel caption="Results">
<!--<a:ExtFilterTable id="resultsTable" width="100%" styleName="table-header-normal" immediate="true" />-->
<VerticalLayout id="resultsTableLayout"></VerticalLayout>
</Panel>
<HorizontalLayout margin="false" spacing="true">
<Button id="selectBtn" caption="SELECT"  />
<Button id="cancelBtn" caption="CANCEL"  />
<Button id="resultResetBtn" caption="RESET"  />
</HorizontalLayout>
</VerticalLayout>
</Panel>