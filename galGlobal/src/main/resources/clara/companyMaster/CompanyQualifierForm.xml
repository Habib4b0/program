<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:import:com.stpl.app.ui.errorhandling">
    <VerticalLayout margin="true" spacing="true" >
        <p:ErrorLabel id="errorMsg"/>
     
        <HorizontalLayout width="100%">
            <a:ExtFilterTable id="qualifierTable" selectable="true" immediate="true"/>
        </HorizontalLayout>
        <HorizontalLayout>
            <VerticalLayout>
                <HorizontalLayout>
                    <Label value="Identifier Code Qualifier" contentMode="HTML" />
                    <TextField id="companyQualifier" inputPrompt="" />
                    <Label value="Effective Dates" contentMode="HTML" />
                    <ComboBox id="effectiveDates" inputPrompt="" />
                </HorizontalLayout>
                <HorizontalLayout>
                    <Label value="Identifier Code Qualifier Name" contentMode="HTML" />
                    <TextField id="companyCrtQualifierName" inputPrompt="" />
                </HorizontalLayout>
            </VerticalLayout>
            <HorizontalLayout>
                    <Label value="Notes" contentMode="HTML" />
                    <TextArea id="notes" styleName="addInfoText" />
            </HorizontalLayout>
        </HorizontalLayout>
        <HorizontalLayout>
            <Button id="QualifierSave" caption="SAVE" immediate="true"/>
            <Button id="QualifierDelete" caption="DELETE" immediate="true" />
            <Button id="IdentifierRemove" caption="RESET" immediate="true" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
