<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">



    <bean id="gtnSqlQueryEngine"
          class="com.stpl.gtn.gtn2o.queryengine.engine.GtnFrameworkSqlQueryEngine">
        <property name="sessionFactory">
            <ref bean="sessionFactory" />
        </property>
        <property name="queryLogger">
            <ref bean="queryLogger" />
        </property>
        
    </bean>
    <bean id="queryLogger" class="com.stpl.gtn.gtn2o.ws.logger.GtnQueryLogger">
    </bean>
    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource">
            <ref bean="dataSource" />
        </property>
    </bean>
    <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
        <!--<property name="jndiName" value="java:comp/env/jdbc/appDataPool" /> -->
        <property name="jndiName" value="java:jboss/datasources/jdbc/appDataPool" />
        <property name="lookupOnStartup" value="true" />
        <!-- <property name="username" value="${jdbc.username}" /> -->
        <!-- <property name="password" value="${jdbc.password}" /> -->
    </bean>

    <bean id="gtnWsReportController" class="com.stpl.gtn.gtn2o.ws.report.controller.GtnWsReportController">
        <property name="sessionFactory" ref="sessionFactory"></property>
        <property name="gtnSqlQueryEngine" ref="gtnSqlQueryEngine"></property>
    </bean>

    <bean id="mongoCLientFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
        <property name="jndiName" value="java:global/MyMongoClient" />
    </bean>
    <bean id="sqlPropertyBean"
          class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations" value="classpath:/sqlresource/sqlqueries.xml" />
    </bean>
    
    <bean id="gtnDisplayFormatMasterBean"
          class="com.stpl.gtn.gtn2o.ws.report.service.displayformat.service.GtnDisplayFormatMasterBean" init-method="init">
          <property name="gtnSqlQueryEngine" ref="gtnSqlQueryEngine"></property>
    </bean>
    
    <bean id="gtnReportJsonService"
    	class="com.stpl.gtn.gtn2o.ws.report.service.GtnReportJsonService">
    </bean>
    
</beans>