<?xml version="1.0" encoding="UTF-8"?>
<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout width="100%" spacing="true" margin="true" styleName="bootstrap-forecast">

        <Panel caption="Projection Search">
            <GridLayout columns="2"
                        rows="1">

                <GridLayout margin="true" spacing="true" columns="6" rows="3">

                    <Label value="WorkFlow Status:" contentMode="HTML" width="122px"/>
                    <ComboBox id="workFlowStatus" nullSelectionAllowed="false" inputPrompt="-Select One-"
                              immediate="true" width="206px" />
                    <Label value="Market Type:" contentMode="HTML" width="96px" />
                    <TextField id="marketType" inputPrompt=""  />
                    <Label value="Brand:" contentMode="HTML" />
                    <TextField id="brand" inputPrompt="" />
                    <Label value="Projection Name:" contentMode="HTML" width="122px"/>
                    <TextField id="projectionName" inputPrompt="" />
                    <Label value="Customer:" contentMode="HTML" />
                    <TextField id="customer" inputPrompt="" />
                    <Label value="NDC:" contentMode="HTML" />
                    <TextField id="ndc" inputPrompt=""  />
                    <Label value="Description:" contentMode="HTML" />
                    <TextField id="description" inputPrompt=""  />
                    <Label value="Contract:" contentMode="HTML" />
                    <TextField id="contract" inputPrompt=""  />
                    <Label value="NDC Name:" contentMode="HTML" width="88px" />
                    <TextField id="ndcName" inputPrompt=""  />
                </GridLayout>
                <VerticalLayout  spacing="true" margin="true" >
                    <Panel id="timeperiod" caption="Created Date" margin="true" spacing="true" >
                       <VerticalLayout  spacing="true" margin="true" >                       
                        <GridLayout id="gridLayout" margin="false" spacing="true" 
                                    immediate="true" columns="2" rows="2">
                            <Label value="From: " contentMode="HTML" />
                            <PopupDateField id="fromDate" dateFormat="dd/mm/yyyy" />
                            <Label value="To: " contentMode="HTML" width="50px" />
                            <PopupDateField id="toDate" dateFormat="dd/mm/yyyy" />
                        </GridLayout>
                         </VerticalLayout>
                    </Panel>
                </VerticalLayout>
            </GridLayout>
              
        </Panel>

        <HorizontalLayout spacing="true">
            <Button caption="SEARCH" id="searchBtn" />
            <Button caption="RESET" id="resetBtn" />
        </HorizontalLayout>
        <Panel caption="Results" width="100%" >
            <!--<HorizontalLayout spacing="true" margin="true" width="100%" >-->
<!--                <a:ExtFilterTable 
                                   id="resultsTable" immediate="true" width="100%" />-->
              <VerticalLayout  id="verticalLayout" immediate="true" width="100%"   />                     
            <!--</HorizontalLayout>-->
        </Panel>
        <HorizontalLayout spacing="false">
            <Button id="addBtn" caption="ADD" immediate="true" />
        </HorizontalLayout>

        <Panel caption="Projections" width="100%" >
            <HorizontalLayout  margin="true"
                               spacing="true" width="100%">
                <a:ExtFilterTable 
                                  id="projectionTable" immediate="true" width="100%" />
            </HorizontalLayout>
        </Panel>

        <HorizontalLayout spacing="true">
            <Button caption="SUBMIT" id="submitBtn" />
            <Button caption="RESET" id="projectionResetBtn" />
            <Button caption="CLOSE" id="closeBtn" />
            <Button caption="REMOVE" id="removeBtn" />

        </HorizontalLayout>
    </VerticalLayout>
</Panel>