
<VerticalLayout margin="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable" xmlns:el="urn:import:com.stpl.app.ui.errorhandling"
	xmlns:c="urn:import:org.asi.ui.customcombobox">

	<el:ErrorLabel id="errorMsg" />

	<HorizontalLayout id="hlayout" spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
		<CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%">
			<Label id="priceScheduleIdLb" value="Price Schedule ID" contentMode="HTML" immediate="true" />
			<TextField id="priceScheduleId" enabled="true" immediate="true" />
			<Label id="priceScheduleNoLb" value="Price Schedule No" contentMode="HTML" immediate="true" />
			<TextField id="priceScheduleNo" enabled="true" immediate="true" />
			<Label id="priceScheduleNameLb" value="Price Schedule Name" contentMode="HTML" immediate="true" />
			<TextField id="priceScheduleName" enabled="true" immediate="true" />
			<Label id="priceScheduleTypeLb" value="Price Schedule Type" contentMode="HTML" immediate="true" />
			<c:CustomComboBox id="priceScheduleType" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			<Label id="priceScheduleStatusLb" value="Price Schedule Status" contentMode="HTML" immediate="true" />
			<c:CustomComboBox id="priceScheduleStatus" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
			<Label id="itemIdLb" value="Item ID" contentMode="HTML" immediate="true" />
			<TextField id="itemId" enabled="true" immediate="true" />
			<Label id="itemNoLb" value="Item No" contentMode="HTML" immediate="true" />
			<TextField id="itemNo" enabled="true" immediate="true" />
			<Label id="itemNameLb" value="Item Name" contentMode="HTML" immediate="true" />
			<TextField id="itemName" enabled="true" immediate="true" />
		</CssLayout>
	</HorizontalLayout>

	<HorizontalLayout immediate="true" spacing="true" margin="true">
		<Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
		<Button id="resetBtn" caption="RESET" immediate="true" width="80" />
	</HorizontalLayout>
	<ef:ExtFilterTable id="table" />
         <HorizontalLayout immediate="true" spacing="true" margin="true" >
            <Button id="selectBtn" caption="SELECT" immediate="true" width="80" />
            <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
        </HorizontalLayout>

</VerticalLayout>

