<VerticalLayout styleName="custom-margin" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:e="urn:import:org.asi.ui.extfilteringtable" xmlns:ef="urn:import:com.stpl.ifs.ui" xmlns:b="urn:import:org.asi.ui.customtextfield" xmlns:c="urn:import:org.asi.ui.customcombobox">
    
    <HorizontalLayout id="commonLayout" styleName="responsiveTabGrid" margin="true" spacing="true">
        <Label value="Level:"  contentMode="HTML" immediate="true"   />
        <OptionGroup multiSelect="false" id="level" immediate="true" enable="true" styleName = "horizontal"/>
        <Label id="viewLB" value="View:"  contentMode="HTML" immediate="true"   />
        <OptionGroup multiSelect="false" id="view" immediate="true" enable="true" styleName = "horizontal"/>
    </HorizontalLayout>
    
    
    <VerticalLayout id="detail">
        <Panel>
            <VerticalLayout>
                <HorizontalLayout caption="Mass Update" id="hLayout" styleName="responsiveTabGrid">
                    <CssLayout id="cssLayout" width="100%" height="100%">
                        <OptionGroup multiSelect="false" id="massCheck"
                                     immediate="true" enable="true" styleName = "horizontal"/>
                        <ComboBox id="massField" nullSelectionAllowed="false"
                                  inputPrompt="-Select One" immediate="true" /> 
                              
                        <PopupDateField id="massDate" />  
                        <ComboBox id="massValue" nullSelectionAllowed="false"
                                  inputPrompt="-Select One" immediate="true" />   
                        <TextField id="massText" immediate="true" />                              
                        <Button id="btnPopulate" caption="Populate" />
                        <Button id="btnAllPopulate" caption="Populate All" />
                    </CssLayout>
                </HorizontalLayout>
                <HorizontalLayout>
                    <Label value="Records: "  contentMode="HTML" immediate="true"  />
                    <OptionGroup multiSelect="true" id="record" immediate="true" enable="true" styleName = "horizontal"/>
                </HorizontalLayout>
                 
                <Panel caption="Results" >
                    <VerticalLayout spacing="false">
                    <VerticalLayout id="resultsTableLayout" spacing="true" width="100%" height="100%">
                        <!--<e:ExtFilterTable id="viewItemDetailsTable" visible="false" immediate="true"/>-->
                    </VerticalLayout>
                    </VerticalLayout>
                </Panel> 
    
               
            </VerticalLayout>
        </Panel>
    </VerticalLayout> 
    
    <VerticalLayout id="header">
        <Panel>
            <VerticalLayout margin="true" spacing="false">
                <HorizontalLayout spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
                    <CssLayout id="cssLayoutHeader" spacing="true" immediate="true" width="100%" height="100%" >
                        <Label id="priceScheduleIdLb" value="Price Schedule ID" styleName="mandatory" contentMode="HTML" immediate="true"/>
                        <TextField id="priceScheduleId" enabled="true" immediate="true" />
                        <Label id="priceScheduleNoLb" value="Price Schedule No" styleName="mandatory" contentMode="HTML"  />
                        <TextField id="priceScheduleNo" enabled="true" immediate="true" />
                        <Label id="priceScheduleNameLb" value="Price Schedule Name" contentMode="HTML"  />
                        <TextField id="priceScheduleName" enabled="true" immediate="true" />
                        <Label id="priceScheduleStatusLb" value="Price Schedule Status" styleName="mandatory" contentMode="HTML"  />
                        <c:CustomComboBox id="priceScheduleStatus" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="priceScheduleStartDateLb" value="Price Schedule Start Date" styleName="mandatory" contentMode="HTML"  />
                        <PopupDateField id="priceScheduleStartDate"  enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="priceScheduleEndDateLb" value="Price Schedule End Date" contentMode="HTML"  />
                        <PopupDateField id="priceScheduleEndDate"  enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="priceScheduleDesignationLb" value="Price Schedule Designation" contentMode="HTML"  />
                        <c:CustomComboBox id="priceScheduleDesignation" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="parentPriceScheduleIdLb" value="Parent Price Schedule ID" contentMode="HTML"  />
                        <b:CustomTextField id="parentPriceScheduleId" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="parentPriceScheduleNameLb" value="Parent Price Schedule Name" contentMode="HTML"  />
                        <b:CustomTextField id="parentPriceScheduleName" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="priceScheduleTypeLb" value="Price Schedule Type" contentMode="HTML"  />
                        <c:CustomComboBox id="priceScheduleType" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="createdByLb" value="Created By" contentMode="HTML"  />
                        <TextField id="createdBy" enabled="true" immediate="true" />
                        <Label id="createdDateLb" value="Created Date" contentMode="HTML"  />
                        <PopupDateField id="createdDate" immediate="true" />
                        <Label id="priceScheduleCategoryLb" value="Price Schedule Category" contentMode="HTML"  />
                        <c:CustomComboBox id="priceScheduleCategory" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <Label id="modifiedByLb" value="Modified By" contentMode="HTML"  />
                        <TextField id="modifiedBy" enabled="true" immediate="true" />
                        <Label id="modifiedDateLb" value="Modified Date" contentMode="HTML"  />
                        <PopupDateField id="modifiedDate" immediate="true" />
                        <Label id="tradeClassLb" value="Price Schedule Trade Class" contentMode="HTML"  />
                        <c:CustomComboBox id="tradeClass" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                    </CssLayout>
                </HorizontalLayout> 
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
    
    <VerticalLayout id="priceProtection">
        <Panel>
            <VerticalLayout margin="true" spacing="false">
                <HorizontalLayout id="massLayout" caption="Mass Update" spacing="false" margin="false" immediate="true" styleName="responsiveTabGrid">
                    <CssLayout id="ppCssLayout" spacing="true" immediate="true" width="100%" height="100%">
                        <OptionGroup id="ppMassCheck" enabled="true" immediate="true" styleName="horizontal"/>
                        <c:CustomComboBox id="ppMassField" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <PopupDateField id="ppMassDate" immediate="true" />
                        <TextField id="ppMassValue" enabled="true" immediate="true" />
                        <c:CustomComboBox id="massSelect" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                        <b:CustomTextField id="massLookup" immediate="true" />
                        <Button id="ppBtnPopulate" caption="Populate" immediate="true" />
                        <Button id="ppBtnAllPopulate" caption="Populate All" immediate="true"  />
                    </CssLayout>
                </HorizontalLayout>
                <HorizontalLayout>
                    <Label value="Records: "  contentMode="HTML" immediate="true"  />
                    <OptionGroup multiSelect="true" id="ppRecord" immediate="true" enable="true" styleName = "horizontal"/>
                </HorizontalLayout>
                <Panel id="mainPanel" caption="Results">
                    <VerticalLayout id="ppResultsTableLayout" spacing="true">
                        <e:ExtFilterTable id="viewPriceProtectionTable" visible="false" immediate="true"/>
                    </VerticalLayout>
                </Panel>
                <HorizontalLayout>
                    <HorizontalLayout id="controlLayout" spacing="false" margin="false" immediate="true" />
                    <CssLayout immediate="true" width="100%" height="100%">
                        <Button id="excel" immediate="true" primaryStyleName="link" />
                    </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
    
    <VerticalLayout id="history">
        <Panel>
            <VerticalLayout margin="true" spacing="false">
                <Panel>
                    <VerticalLayout id="historyResultsTableLayout" spacing="true">
                        <ef:CustomePagedFilterTable id="historyPriceProtectionTable" immediate="true" /> 
                    </VerticalLayout>
                </Panel>
                
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
    <Button id="excelBtn" immediate="true" />
</VerticalLayout>
