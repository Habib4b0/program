<?xml version="1.0" encoding="UTF-8"?>

<VerticalLayout  spacing="true" xmlns:el="urn:import:com.stpl.app.ui.errorhandling" xmlns:p="urn:vaadin:parent" >
    <el:ErrorLabel id="errorMsg" />      
    <VerticalLayout  id = "deductioncalendar" >
        <Panel id="panel" caption="Deduction Calendar Information" >
            <HorizontalLayout styleName="responsiveTabGrid" margin="true" >
                <CssLayout id="cssLayout" width="100%" height="100%">
                    <Label id="deductionCalendarNoLb" value="Deduction Calendar No" styleName="mandatory" contentMode="HTML" />
                    <TextField id="deductionCalendarNo"  immediate="true" enabled="true"/>
                    <Label id="deductionCalendarNameLb" value="Deduction Calendar Name" styleName="mandatory" contentMode="HTML" />
                    <TextField id="deductionCalendarName"  immediate="true" enabled="true"/>
                    <Label id="deductionCalendarDescLb" value="Deduction Calendar Desc" contentMode="HTML" />
                    <TextField id="deductionCalendarDesc"  immediate="true" enabled="true"/>
                    <Label id="categoryLb" value="Category"  contentMode="HTML" />
                    <ComboBox id="categoryDdlb" enable="true"  immediate="true"/>
                </CssLayout>
            </HorizontalLayout>
        </Panel>   
    </VerticalLayout>        
    <TabSheet id="tabSheet" immediate="true" />

    <HorizontalLayout id="buttonLayout" spacing="true" margin="true" immediate="true">

            <Button id="backBtn"  caption="BACK" immediate="true"/>
            <Button id="reset" caption="RESET" immediate="true"/> 
            <Button id="saveBtn" caption="SAVE" immediate="true"/>

    </HorizontalLayout>
</VerticalLayout>
