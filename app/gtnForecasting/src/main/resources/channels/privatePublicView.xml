<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable"  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" >
        <Panel caption="View Search" >
            <HorizontalLayout id="hLayout" spacing="true" margin="true" height="76px">
                <Label caption="View Name:" contentMode="HTML" />
                <TextField id="viewName" inputPrompt="" />
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="searchBtn" caption="SEARCH" immediate="true"/>
            <Button id="resetBtn" caption="RESET" immediate="true" />
        </HorizontalLayout>
        <Panel caption="Results"  >

            <!--<a:ExtFilterTable id="resultTable" caption="Results" selectable="true" immediate="true" />-->
            <VerticalLayout id="resultsTableLayout"></VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="selectBtn" caption="SELECT" immediate="true"/>
            <Button id="closeBtn" caption="CLOSE" immediate="true" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>