<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout xmlns:errorMsg="urn:import:com.stpl.ifs.ui.errorhandling">

    <errorMsg:ErrorLabel id="errorLB" />
    <VerticalLayout id="vLayout" />
    <TabSheet id="tabSheet" immediate="true"/>  

    <HorizontalLayout id="buttonLayout" spacing="true"
                      margin="true" immediate="true">

        <Button id="saveBtn" width="75px" caption="Save" enabled="true" immediate="true" />
        <Button id="deleteBtn" width="75px" caption="Delete" enabled=" true" immediate="true" />
        <Button id="backBtn" width="75px" caption="Back" enabled="true" immediate="true" />
        <Button id="submitBtn" width="75px" caption="Submit" enabled="true" immediate="true" visible="false"/>
        <Button id="resetBtn" width="75px" caption="Reset" enabled="true" immediate="true" />                    
        <Button id="approveBtn" width="75px" caption="Approve" enabled="true" immediate="true" visible="false"/>                    
        <Button id="rejectBtn" width="75px" caption="Reject" enabled="true" immediate="true" visible="false"/>                    
        <Button id="cancelBtn" width="75px" caption="Cancel" enabled="true" immediate="true" visible="false"/>                    
        <Button id="closeBtn" width="75px" caption="Close" enabled="true" immediate="true" visible="false" />   
        <Button id="excelBtn" immediate="true" />
        <Button id="withdrawBtn" width="100px" caption="Withdrawal" enabled="true" immediate="true" visible="false"/> 
    </HorizontalLayout>
        
</VerticalLayout> 