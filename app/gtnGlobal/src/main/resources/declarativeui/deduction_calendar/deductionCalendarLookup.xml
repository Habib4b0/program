<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling">
    <VerticalLayout margin="true" spacing="true" >
        <p:ErrorLabel id="errorMsg"/>
        <Panel caption="Deduction Calendar">
            <VerticalLayout  id="deductioncalendar" spacing="true" margin="false" styleName = "responsiveTabGrid">
                <HorizontalLayout id="searchLayout" styleName="responsiveTabGrid" >
                    <CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
			
                        <Label id="deductionCalendarNoLb" value="Deduction Calendar No" styleName="mandatory" contentMode="HTML" immediate="true"/>
                        <TextField id="deductionCalendarNo" enabled="true" immediate="true" />
			
                        <Label id="deductionCalendarNameLb" value="Deduction Calendar Name" styleName="mandatory" contentMode="HTML" immediate="true"/>
                        <TextField id="deductionCalendarName" enabled="true" immediate="true" />
			
                        <Label id="deductionCalendarDescLb" value="Deduction Calendar Desc"  contentMode="HTML" immediate="true"/>
                        <TextField id="customerGroupDesc" enabled="true" immediate="true" /> 
                        
                        <Label id="categoryLb" value="Category" contentMode="HTML"  />
                        <ComboBox id="categoryDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />  
                    </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel> 
        
        <HorizontalLayout id="searchButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
            <Button id="searchBtn" caption="SEARCH" immediate="true"/>
            <Button id="resetBtn" caption="RESET" immediate="true" />
        </HorizontalLayout>  
        
        <Panel id="results" caption="Results">
            <VerticalLayout id="tableLayout">
                <HorizontalLayout id="controlLayout"/>
            </VerticalLayout>            
        </Panel>
        
        <HorizontalLayout id="resultButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
        <Button id="selectBtn" caption="SELECT" immediate="true"/>
        <Button id="closeBtn" caption="CLOSE" immediate="true" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>