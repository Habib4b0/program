<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable.paged" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="parentVerticalLayout" spacing="true"
                    margin="true" immediate="true">
        <Panel   immediate="true">
           
            <HorizontalLayout  spacing="true" margin="true">
                <GridLayout columns="9" rows="1" spacing="true">
                    <Label caption="Component Type: " contentMode="HTML" />
                    <ComboBox id="ComponenttypeEC" immediate="true" width="205px"/>
                    <Label caption="Search Field: " contentMode="HTML" />
                    <ComboBox id="SearchfieldEC" immediate="true" width="205px"/>
                    <Label caption="Search Value: " contentMode="HTML" />
                    <TextField id="SearchvaluedEC" immediate="true" width="205px"/>
                    <ComboBox id="SearchfieldECDDlb" immediate="true" width="205px" visible="false" />
                    <Label caption=" " contentMode="HTML" />
                    <Button id="BtnsearchEC" caption="SEARCH"  />
                </GridLayout>
            </HorizontalLayout>
            
            
        </Panel>
        <Panel caption="Component Results" spacing="true" margin="true" immediate="true">
            <VerticalLayout >
                <VerticalLayout id="componentDetailsSelectedItemLayout" immediate="true" spacing="true" > 
                </VerticalLayout> 
                <Button id="resultpop" caption="POPULATE" />  
            </VerticalLayout> 
            
        </Panel>
        <Panel spacing="true" immediate="true" >
            <VerticalLayout spacing="true" immediate="true" width="100%">
                <GridLayout spacing="true"  id="parentGrid" immediate="true" columns="2" rows="2"  width="100%" >
                    <Panel id="componentDetails" caption="Component Information"   width="100%" height="100%"  margin="true" immediate="true">
                       
                        <HorizontalLayout immediate="true" spacing="true" height="90%" align="center" margin="true" width="150%">
                            <GridLayout   id="componentInformationGrid" immediate="true" columns="6" rows="4"  height="100%" margin="true" spacing="true">
                            </GridLayout>
                        </HorizontalLayout>
                        
                    </Panel> 
                    <Panel id="contractDashBoardResults" caption="Contract DashBoard Results" width="100%" spacing="true">
                        <VerticalLayout immediate="true" width="100%">
                            <VerticalLayout id="contractDashBoardLayout" width="100%" height="100%">
                               
                            </VerticalLayout>
                            <HorizontalLayout>
                                <Button id="levelRemoveBtn" caption="REMOVE" />
                                <Button id="levelpop" caption="POPULATE" />
                            </HorizontalLayout>
                        </VerticalLayout>
                    </Panel>
                    <Panel id="componentDetailsSelectedItemPanel" caption="Component Details"    immediate="true" spacing="true"  > 
                        <VerticalLayout  immediate="true" spacing="true" width="100%">
                            <VerticalLayout  id="componentDetailsSelectedLayout"   immediate="true"   height="100%" width="100%" spacing="true" >
                            </VerticalLayout>
                            
                            <Button id="addToTree" caption="ADD TO TREE" />
                             
                        </VerticalLayout>
                    </Panel>
                  
                
                    <Panel id="contractComponentDetails" caption="Contract Component Details" spacing="true">
                        <VerticalLayout spacing="true" immediate="true" margin="true" width="100%">
                                <GridLayout spacing="true"  id="cfpDetailsGrid" immediate="true" columns="4" rows="1">
                                    <Label caption="CFP No:" contentMode="HTML" />
                                    <TextField id="cfpDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                                    <Label caption="CFP Name:" contentMode="HTML" />
                                    <TextField id="cfpDetailsName" inputPrompt="" immediate="true" visible="true"/>
                                </GridLayout>
                            
                                <GridLayout spacing="true"  id="ifpDetailsGrid" immediate="true" columns="4" rows="1">
                                    <Label caption="IFP No:" contentMode="HTML" />
                                    <TextField id="ifpDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                                    <Label caption="IFP Name:" contentMode="HTML" />
                                    <TextField id="ifpDetailsName" inputPrompt="" immediate="true" visible="true"/>
                                </GridLayout>
                            
                                <GridLayout spacing="true"  id="psDetailsGrid" immediate="true" columns="4" rows="1">
                                    <Label caption="PS No:" contentMode="HTML" />
                                    <TextField id="psDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                                    <Label caption="PS Name:" contentMode="HTML" />
                                    <TextField id="psDetailsName" inputPrompt="" immediate="true" visible="true"/>
                                </GridLayout>


                                <GridLayout spacing="true"  id="rsDetailsGrid" immediate="true" columns="4" rows="1">
                                    <Label caption="RS No:" contentMode="HTML" />
                                    <TextField id="rsDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                                    <Label caption="RS Name:" contentMode="HTML" />
                                    <TextField id="rsDetailsName" inputPrompt="" immediate="true" visible="true"/>
                                </GridLayout>
                            <VerticalLayout   id="levelDetailsResultsLayout" spacing="true" immediate="true" margin="true"  styleName = "width-auto">
                           
                            </VerticalLayout>
                        
                        </VerticalLayout>
                    </Panel>
                 
                </GridLayout>
            </VerticalLayout>
        </Panel>
     
    </VerticalLayout>
</Panel>