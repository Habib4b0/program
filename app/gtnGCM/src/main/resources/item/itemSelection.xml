<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable"  >
    <VerticalLayout  id="mainLayout" margin="false"
                     spacing="false"  >
        
        <Panel  styleName="adjustCaption" id="selectedItems" caption="Selected Items">
       
            <VerticalLayout id="Verticallay" margin="false"
                            spacing="true" >
                <VerticalLayout id="SelectItemTableLayout" margin="false"
                                spacing="true" > 
                </VerticalLayout>
               
                <!--<Table id="itemSelection" width="1100px" immediate="true" height="200px"/>-->
                <!--      <a:ExtFilterTable  styleName="table-header-normal"
                id="currentContractTable" width="1100px" immediate="true" height="200px" />-->
                    
                
                <Button caption="" id="export" />
        
            </VerticalLayout>
        </Panel>  
          
        <Panel  styleName="adjustCaption"  caption="Search Criteria" width="100%" >
            <VerticalLayout styleName = "width-auto"  id="searchCri" margin="false"
                            spacing="false"  >
                <HorizontalLayout spacing="true">

                    <GridLayout margin="true" spacing="true" columns="10"
                                rows="3">

                        <Label caption="Item ID:" contentMode="HTML" width="110px" />
                        <TextField id="itemID" inputPrompt="" width="180px"/>

                            
                        <Label caption="Item Name:" contentMode="HTML" width="147px"/>
                        <TextField id="itemName" inputPrompt="" width="180px"/>
                            
                        <Label caption="Therapeutic Class:" contentMode="HTML" width="87px" />
                        <ComboBox id="therapeuticClass"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                            
                        <Label caption="Form:" contentMode="HTML" width="87px" />
                        <ComboBox id="form"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                            
                            
                        <Label caption="Identifier Type:" contentMode="HTML" width="87px" />
                        <ComboBox id="identifierType"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                        <Label caption="Item No: " contentMode="HTML" width="57px" />
                        <TextField id="itemNo" inputPrompt="" width="180px"/>
                        <Label caption="Item Desc: " contentMode="HTML" width="70px" />
                        <TextField id="itemDesc" inputPrompt="" width="180px"/>
                        <Label caption="Brand:" contentMode="HTML" width="87px" />
                        <ComboBox id="brand"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                            
                        <Label caption="Stength:" contentMode="HTML" width="87px" />
                        <ComboBox id="strength"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                        <Label caption="Identifier:" contentMode="HTML" width="84px" />
                        <TextField id="identifier" inputPrompt="" width="180px"/>

                            
                        <Label caption="Company:" contentMode="HTML" width="87px" />
                        <ComboBox id="company"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                            
                        <Label caption="Place Holder:" contentMode="HTML" width="87px" />
                        <ComboBox id="placeHolder"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                        <Label caption="NDC 9:" contentMode="HTML" width="114px" />
                        <TextField id="ndc9" inputPrompt="" width="180px"/>
                        <Label caption="Item Category:" contentMode="HTML" width="87px" />
                        <ComboBox id="itemCategory"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                            
                        <Label caption="Item Type:" contentMode="HTML" width="87px" />
                        <ComboBox id="itemType"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                  immediate="true" styleName="comboxsize"/>
                    </GridLayout>
                </HorizontalLayout>
                <HorizontalLayout margin="true" spacing="false">
                    <Button caption="RESET" id="resetBtn" />
                    <Button caption="SEARCH" id="searchBtn" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel  styleName="adjustCaption" id="results" caption="Results">
            <VerticalLayout   id="contractVertical" margin="false"
                              spacing="true" >
                <VerticalLayout  id="resultTableLayout" margin="false"
                                 spacing="true" >
                </VerticalLayout>
                <HorizontalLayout margin="true" spacing="false">
                    <Button caption="RESET" id="resetBtncur" />
                    <Button caption="TRANSFER" id="transferBtncur" />
                    <Button caption="" id="exportBtncurr" />
                    
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        
        <Panel  styleName="adjustCaption" id="transferItems" caption="Transfer Items">
            <VerticalLayout id="componentVertical" margin="false"
                            spacing="true" >
                <VerticalLayout  id="transferItemsTable" margin="false"
                                     spacing="true" >
                </VerticalLayout>
                <HorizontalLayout margin="true" spacing="false">
                    <Button caption="REMOVE" id="removeBtncur" />
                    <Button caption="" id="exportBtncur" />
                    
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
