<Panel xmlns="urn:import:com.vaadin.ui">
    <VerticalLayout margin="true" spacing = "true"  width="100%" height="100%">
        <Panel caption = "View Search" width="100%" height="100%">
            <HorizontalLayout spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true" immediate="true" columns="4" rows="1">
                    <Label value="View Type" contentMode="HTML" immediate="true"  />
                    <OptionGroup id="viewTypeOptionGroup" enable="true" immediate="true" styleName="horizontal"/>
                    <Label id="labelViewNameEpl" value="View Name" immediate="true" styleName="label-margin-top-size" width="100px" />
                    <TextField id="viewNameEpl" enable="true" immediate="true" width="205px"/>
                </GridLayout>
            </HorizontalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="true" immediate="true">
            <Button id="searchBtn" caption="SEARCH" immediate="true" width="80" />
            <Button id="resetBtn" caption="RESET" immediate="true" width="80" />
        </HorizontalLayout>
        <Panel caption="Search Results" spacing="true" width="100%" height="100%">
            <VerticalLayout id="resultsTableLayout" spacing="true"  width="100%" height="100%"/>   
        </Panel>
        <HorizontalLayout margin = "true" immediate="true" spacing="true">
            <Button id="selectBtn" caption="SELECT" immediate="true" width="80" />
            <Button id="closeBtn" caption="CLOSE" immediate="true" width="80" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>