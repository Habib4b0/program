<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel">
    <VerticalLayout id="dsVerticalLayout" spacing="true"
                        margin="true" immediate="true" styleName="bootstrap-forecast">

        <Panel id="panel1" caption="Discount Projection Results Selection" width="100%">
            <VerticalLayout margin="true" styleName="width-auto">
                <GridLayout spacing="true" margin="false" id="dsLayout"
                                    immediate="true" columns="6" rows="2">
                    <Label value="Frequency: " contentMode="HTML" width="81px"/>
                    <ComboBox id="frequency" nullSelectionAllowed="true"
                                          immediate="true" />
                    <Label value="Discount: " contentMode="HTML" immediate="true" />
                    <OptionGroup multiSelect="false" id="discount" 
                                             enabled="true" immediate="true" styleName = "horizontal"/>
                    <Label value="Projection Period Order: " contentMode="HTML" width="170px"/>
				
                    <OptionGroup multiSelect="false" id="periodOrder" 
                                                     enabled="true" immediate="true" styleName = "horizontal"/>
				
                    <Label value="History: " contentMode="HTML" width="81px"/>
                    <ComboBox id="history" nullSelectionAllowed="true"
                                          immediate="true"/>
                    <Label value="Actuals/Projections: " contentMode="HTML" width="135px"/>
                    <OptionGroup multiSelect="false" id="actualOrProj"  
                                             enabled="true" immediate="true" styleName = "horizontal" />
                    <Label value="Pivot View: " contentMode="HTML" width="135px"/>
			
                    <OptionGroup multiSelect="false" id="pivotView" 
                                                     enabled="true" immediate="true" styleName = "horizontal"/>
				
                </GridLayout>
            </VerticalLayout>
        </Panel>

        <HorizontalLayout spacing="true" margin="false" immediate="true" styleName="component-layout">
                 
            <Button id="generateBtn" caption="GENERATE"></Button>
            <Button id="resetBtn" caption="RESET"></Button>
                   
            <HorizontalLayout spacing="true" margin="true" immediate="true" styleName="component-layout">
                <Label caption="Level: " contentMode="HTML" />
                <ComboBox id="level" nullSelectionAllowed="true"/>
            </HorizontalLayout>
            <HorizontalLayout spacing="true" margin="true" immediate="true" styleName="component-layout">
                <Button id="expandBtn" caption="EXPAND"></Button>
                <Button id="collapseBtn" caption="COLLAPSE"></Button>
            </HorizontalLayout>                  
            <HorizontalLayout spacing="true" margin="true" immediate="true" styleName="component-layout">
                <Label caption="Level Filter: " contentMode="HTML" />
                <ComboBox id="levelFilter" nullSelectionAllowed="true"
                                  immediate="true"/>
            </HorizontalLayout>
            <HorizontalLayout spacing="true" margin="true" immediate="true" styleName="component-layout">
                <Label caption="View: " contentMode="HTML"></Label>
                <OptionGroup multiSelect="false" id="view" enabled="true"
                                     immediate="true" styleName = "horizontal"/>			
                      
            </HorizontalLayout>
            <HorizontalLayout spacing="true" margin="true" immediate="true" styleName="component-layout">
                <ComboBox id="customDdlb" nullSelectionAllowed="true"
                                  immediate="true" />
                     
                <Button id="newBtn" caption="NEW"></Button>
                <Button id="editBtn" caption="EDIT"></Button>
            </HorizontalLayout>
        </HorizontalLayout>
       
         <Panel id="tablePanel" caption="Period Pivot View" margin="true"
               spacing="true">
            <VerticalLayout id="verticalLayout" spacing="true"
                           margin="true" immediate="true">
                <VerticalLayout id="tableVerticalLayout" spacing="true"
                             margin="false" immediate="true">
                </VerticalLayout>        
           
                <Button id="excel" immediate="true" primaryStyleName="link" />
           
            </VerticalLayout>        
        </Panel>
                
    </VerticalLayout>



</Panel>
