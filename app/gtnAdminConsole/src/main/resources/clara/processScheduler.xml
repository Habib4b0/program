<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <HorizontalLayout id="horizontalLayoutMain" spacing="true" margin="false" immediate="true">
        <VerticalLayout id="dsVerticalLayout" spacing="true" margin="true" immediate="true">
            <Panel id="panel1" caption="Manual Processing" width="505px" height="690px">
                <HorizontalLayout id="horizontalLayout" immediate="true">
                    <VerticalLayout id="manualProcessesTable" immediate="true">
                    </VerticalLayout>
                </HorizontalLayout>
            </Panel>
            <HorizontalLayout>
                <Button id="runBtn1" caption="RUN" />
            </HorizontalLayout>
            
            
            
            
            
            
        </VerticalLayout>
        <VerticalLayout id="dsVerticalLayout2" spacing="true" margin="true" immediate="true">
            <Panel id="panel3" caption="Scheduled Processing"  height="378px">
                <VerticalLayout id="scheduledProcessesTable" immediate="true">
                </VerticalLayout>
            </Panel>
            <Panel id="panel4" caption="Scheduled Process Editor"  height="299px">
                <VerticalLayout >
                    <HorizontalLayout spacing="true" margin="true" height="28px" immediate="true">
                        <Label Value="" contentMode="HTML"  />
                    </HorizontalLayout>   
                    <HorizontalLayout id="horizontalLayout4" spacing="true" margin="true" styleName ="pr-schd-margin-left" immediate="true">
                        <GridLayout spacing="true" margin="false" immediate="true" columns="2" rows="7">
				   
                            <Label  width="120px" Value="Process Name:" contentMode="HTML"  styleName="mandatory"/>
                            <TextField id="processName" immediate="true" width="204px" />
                       
                            <Label Value="Status:" contentMode="HTML"  styleName="mandatory"/>
                            <ComboBox id="status" immediate="true" width="213px" />
                      
                            <Label Value="Start Date: " contentMode="HTML"  styleName="mandatory"/>
                            <PopupDateField id="startDate" dateFormat="dd/mm/yyyy" immediate="true" />
						
                            <Label Value="End Date: " contentMode="HTML" styleName="mandatory"/>
                            <PopupDateField id="endDate" dateFormat="dd/mm/yyyy" immediate="true" />
                        </GridLayout>
                        <GridLayout spacing="true" margin="false" immediate="true"  columns="3" rows="4">
                        
                            <Label Value="Frequency:" contentMode="HTML" styleName="mandatory"/>
                            <OptionGroup multiSelect="false" id="frequencyRadio" immediate="true" enable="true" styleName = "horizontal"/>
                            <Label caption=" " contentMode="HTML" />
                            <Label id="runOne" Value="Run 1:" contentMode="HTML" styleName="mandatory"/>
                            <ComboBox id="hoursOne" immediate="true" />
                            <HorizontalLayout spacing="false">
                                <Label id="hoursLB1" caption="hours" contentMode="HTML" />
                                <ComboBox id="minutesOne" immediate="true" />
                                <Label id="minutesLB1" caption="minutes" contentMode="HTML" />
                            </HorizontalLayout>
                            <Label id="runTwo" Value="Run 2:" contentMode="HTML" />
                            <ComboBox id="hoursTwo" immediate="true" />
                            <HorizontalLayout spacing="false">
                                <Label id="hoursLB2" caption="hours" contentMode="HTML" />
                                <ComboBox id="minutesTwo" immediate="true" />
                                <Label id="minutesLB2" caption="minutes" contentMode="HTML" />
                            </HorizontalLayout>
                            <Label id="runThree" Value="Run 3:" contentMode="HTML" />
                            <ComboBox id="hoursThree" immediate="true" />
                            <HorizontalLayout spacing="false">
                                <Label id="hoursLB3" caption="hours" contentMode="HTML" />
                                <ComboBox id="minutesThree" immediate="true" />
                                <Label id="minutesLB3" caption="minutes" contentMode="HTML" />
                            </HorizontalLayout>
                    
                        </GridLayout>
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
            <HorizontalLayout>
                <Button id="updateBtn" caption="UPDATE" />
            </HorizontalLayout>
        </VerticalLayout>
    </HorizontalLayout>
</Panel>