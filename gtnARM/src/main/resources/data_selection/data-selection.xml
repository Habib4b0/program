<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout id="dsLayout" spacing = "true" margin = "true" styleName="forecast-dataselection" >
        <!--<VerticalLayout spacing = "true" margin = "true">-->
        <Panel id="panel1" caption="Adjustment Options"  >

            <HorizontalLayout id="horizontalLayout" spacing="true" margin="true" immediate="true">
                <VerticalLayout id = "selectionVerticalLayout">
                    <GridLayout spacing="true" margin="false" immediate="true" columns="6" rows="2">
                        <Label caption="Private Views: " contentMode="HTML" width="100px" />
                        <b:CustomTextField id="privateViewText" styleName="searchText" inputPrompt=""/>

                        <Label id = "adjustmentTypeLabel" caption="Adjustment Type: " contentMode="HTML" />
                        <ComboBox id="adjustmentType" width="206px" />
                        
                        <Label id="companyLabel" caption="Company: " contentMode="HTML" width="100px" />
                        <ComboBox id="companyDDLB" width="206px" />

                        <Label caption="Public Views: " contentMode="HTML" width="100px" styleName="labelresultalign"/>
                        <b:CustomTextField id="publicViewText" styleName="searchText" inputPrompt=""/>

                        <Label id="descriptionLabel" caption="Description: " contentMode="HTML" styleName="labelresultalign"/>
                        <b:CustomTextField id="descriptionText" width="206px"/>
                        
                        <Label id= "businessUnitLabel" caption="Business Unit:" contentMode="HTML" width="100px" />
                        <ComboBox id="businessUnit" width="206px"  />

                    </GridLayout>
                </VerticalLayout>
                <Panel id="timeperiod" caption="Time Period">
                    <VerticalLayout  spacing = "true" margin = "true" >
                        <GridLayout id="gridLayout" immediate="true" columns="4" rows="1">
                            <Label caption="From: " contentMode="HTML" width="50px"/>
                            <ComboBox id="fromDate" width="206px" />
                            <Label caption="To: " contentMode="HTML" width="40px" styleName="labelresultalign"/>
                            <ComboBox id="toDate" width="206px" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>
        </Panel>
        <Panel margin = "true" spacing = "true" width="100%" height = "100%" >
            <VerticalLayout id="panelLayout" margin = "true" spacing = "true" width="100%" height = "100%" immediate="true" >
                <HorizontalLayout immediate="true">
                    <Panel caption="Deduction Selection"  spacing="true">
                        <VerticalLayout  spacing = "true" margin = "true" styleName = "width-auto" >
                            <!--panel inserted--> 
                            <Panel>
                                <VerticalLayout margin = "true" spacing = "true" >           
                                    <HorizontalLayout>
                                        <GridLayout spacing="false" immediate="true" columns="2" rows="1">
                                            <Label caption="Level:" contentMode="HTML" width="50px" ></Label>
                                            <ComboBox id="deductionLevel" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                                        </GridLayout>
                                    </HorizontalLayout>
                                    <HorizontalLayout>
                                        <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                                            <a:ExtFilterTable  width="400px" height="300px" id="availableDeduction" styleName="table-header-normal" immediate="true" selectable="true"/>
                                            <GridLayout  spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                                                <Button id="deduction_moveLeftBtn" caption="&gt;" width="50px"></Button>
                                                <Button id="deduction_moveRightBtn" caption="&lt;" width="50px"></Button>
                                                <Button id="deduction_moveAllBtn" caption="ALL" width="50px"></Button>
                                            </GridLayout>
                                            <TreeTable id="selectedDeduction" width="400px" height="300px" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />
                                        </GridLayout>
                                    </HorizontalLayout>
                                </VerticalLayout>
                            </Panel>
                            <!-- panel inserted -->


                        </VerticalLayout>
                    </Panel>

                    <Panel caption="Customer Selection"  spacing="true">
                        <VerticalLayout  spacing = "true" margin = "true" styleName = "width-auto" >
                    

                            <!--panel inserted--> 
                            <Panel>
                                <VerticalLayout margin = "true" spacing = "true" >           
                                    <HorizontalLayout>
                                        <GridLayout spacing="true" immediate="true" columns="4" rows="2">
                                            <Label caption="Hierarchy:" contentMode="HTML" width="80px" />
                                            <b:CustomTextField id="customerHierarchy" styleName="searchText" inputPrompt="" />
                                            <Label caption="Relationship:" contentMode="HTML" width="100px" ></Label>
                                            <ComboBox id="customerRelation" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                                            <Label caption="Level:" contentMode="HTML" width="50px" ></Label>
                                            <ComboBox id="customerLevel" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                                        </GridLayout>
                                    </HorizontalLayout>
                                    <HorizontalLayout>
                                        <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                                            <a:ExtFilterTable  width="400px" height="264px" id="availableCustomer" styleName="table-header-normal" immediate="true" selectable="true"/>
                                            <GridLayout  spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                                                <Button id="customer_moveLeftBtn" caption="&gt;" width="50px"></Button>
                                                <Button id="customer_moveRightBtn" caption="&lt;" width="50px"></Button>
                                                <Button id="customer_MoveAllBtn" caption="ALL" width="50px"></Button>
                                            </GridLayout>
                                            <TreeTable id="selectedCustomer" width="400px" height="264px" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />
                                        </GridLayout>
                                    </HorizontalLayout>
                                </VerticalLayout>
                            </Panel>
                            <!-- panel inserted -->
                        </VerticalLayout>
                    </Panel>
                </HorizontalLayout>
                <Panel id="panel3" caption="Product Selection" >
                    <VerticalLayout width = "940px" spacing="true" margin="true" >
                        <Panel>
                            <VerticalLayout margin = "true" spacing = "true" >
                                <HorizontalLayout id="hLayout3" spacing="true" margin="false" >
                                    <GridLayout  spacing="true" margin="false" immediate="true" columns="4" rows="2">
                                        <Label caption="Hierarchy:" contentMode="HTML" width="80px" />
                                        <b:CustomTextField id="productHierarchy" styleName="searchText" inputPrompt="" />
                                        <Label caption="Relationship:" contentMode="HTML" width="100px"  ></Label>
                                        <ComboBox id="productRelation" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                                        
                                        <Label caption="Level:" contentMode="HTML" width="50px" ></Label>
                                        <ComboBox id="productLevel" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                                    </GridLayout>
                                </HorizontalLayout>
                                <HorizontalLayout>
                                    <VerticalLayout>
                                        <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                                            <a:ExtFilterTable id="availableProduct" width="400px" height="300px" styleName="table-header-normal" immediate="true" selectable="true" />
                                            <GridLayout  spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                                                <Button id="product_moveLeftProduct" caption="&gt;" width="50px"></Button>
                                                <Button id="product_moveRightProduct" caption="&lt;" width="50px"></Button>
                                                <Button id="product_moveAllBtn" caption="ALL" width="50px"></Button>
                                            </GridLayout>
                                            <TreeTable id="selectedProduct" width="400px" styleName="table-header-normal" height="300px" pageLength="8" immediate="true" selectable="true" />
                                        </GridLayout>
                                    </VerticalLayout>                       
                                </HorizontalLayout>
                            </VerticalLayout>
                        </Panel>
                                
                        <!--  </VericalLayout>   </Panel> -->
				
                        <!--panel Ends -->
                    </VerticalLayout>
                </Panel>
            </VerticalLayout>
        </Panel>
        

        <HorizontalLayout id="buttonLay" spacing="true" margin="false">
            <Button id="generateBtn" caption="GENERATE" />
            <Button id="resetBtn" caption="RESET" />
            <Button id="saveViewBtn" caption="SAVE VIEW" />
            <Button id="deleteViewBtn" caption="DELETE VIEW " />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>