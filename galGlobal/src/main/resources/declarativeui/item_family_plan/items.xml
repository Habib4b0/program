<VerticalLayout id="mainLayout"  margin="true"  spacing="false" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui">
<VerticalLayout margin="false"  id="hLayout" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui">
    <HorizontalLayout id="hLayout1" caption="Mass Update"  styleName="responsiveTabGrid">
        <CssLayout id="cssLayout" width="100%" height="100%">
            <OptionGroup multiSelect="false" id="massCheck"
                             immediate="true" enable="true" styleName = "horizontal"/>
            <ComboBox id="massField" nullSelectionAllowed="false"
                           inputPrompt="-Select One" immediate="true" /> 
                              
            <PopupDateField id="massDate" />  
            <ComboBox id="massValue" nullSelectionAllowed="false"
                                        inputPrompt="-Select One" immediate="true" />   
                              
            <Button id="btnPopulate" caption="Populate" />
            <Button id="btnAllPopulate" caption="Populate All" />
        </CssLayout>
    </HorizontalLayout>
    
    <HorizontalLayout id="hLayout2">
        <Label value="Record "  contentMode="HTML" immediate="true"  />
        <OptionGroup multiSelect="true" id="record" immediate="true" enable="true" styleName = "horizontal"/>
    </HorizontalLayout>
    <Panel id="resultPanel" caption="Results" >
        <ef:CustomePagedFilterTable id="itemDetailsTable" immediate="true" /> 
    </Panel> 
    
    <HorizontalLayout id="pageCreater"  />
</VerticalLayout>
          
       <VerticalLayout id="viewLayout" >    
        <ef:CustomePagedFilterTable id="viewResultsTable"  width="100%" />
        <Button id="excel" immediate="true" primaryStyleName="link" />
    </VerticalLayout> 

</VerticalLayout>
