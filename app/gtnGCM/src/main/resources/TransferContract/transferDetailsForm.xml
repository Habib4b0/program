<VerticalLayout spacing="true">
    <Panel caption="Search Criteria">
        <HorizontalLayout spacing="false" margin = "true">
            <GridLayout spacing="true" immediate="true" columns="10" rows="1">
                <Label caption="Contract No: " contentMode="HTML" />
                <TextField id="contractNo"/>
                <Label caption="Contract Name: " contentMode="HTML" />
                <TextField id="contractName"/>
                <Label caption="Market Type: " contentMode="HTML" />
                <ComboBox id="marketType"/>
                <Label caption="Start Date: " contentMode="HTML" />
                <PopupDateField id="startDate"/>
                <Label caption="End Date: " contentMode="HTML" />
                <PopupDateField id="endDate"/>
            </GridLayout>
        </HorizontalLayout>
    </Panel>
    <TabSheet id="transferDetailsTab" immediate="true"/>
    <HorizontalLayout spacing="true" margin="true">
        <Button id="closeBtn" caption="CLOSE" />
        <Button id="previousBtn" caption="PREVIOUS" />
        <Button id="nextBtn" caption="NEXT" />
    </HorizontalLayout>
</VerticalLayout>
