<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield" xmlns:c="urn:import:org.asi.ui.custommenubar">
    <VerticalLayout margin="true" spacing="true">
        <Panel caption="Projection Variance Selection" margin="true"
               spacing="false" width="100%"  styleName="adjustCaption">
            <VerticalLayout styleName = "width-auto"  margin="true" >
                <!--<GridLayout rows="2" columns="1" margin="false" spacing="false">-->
                    <GridLayout spacing="true" rows="2" columns="13" styleName = "forecast-tab" >
                        <Label caption="Comparison: " contentMode="HTML" />
                        <b:CustomTextField id="comparison" styleName="searchText" 
                                           immediate="true" enable="true" />

                        <Label caption="Level: " contentMode="HTML" width="101px" styleName="labelresultalign"/>
                        <OptionGroup id="level" multiSelect="false" enabled="true" 
                                     immediate="true" />
                        
                        <Label caption="Comparison Basis: " contentMode="HTML" />
                        <ComboBox id="comparisonBasis" nullSelectionAllowed="false"
                                  immediate="true" styleName="comboxsize"/>
                       
                                  <Label caption="Variable Category: " contentMode="HTML"/>
                        <c:CustomMenuBar id="variableCategoryCustomMenuBar" styleName="custommenumulticheck"/>
                        
                        <Label caption="Projection Period Order:" contentMode="HTML"  width = "165px"  />
                        <OptionGroup id="projectionPeriodOrder" multiSelect="false" styleName="optiongroupwidth"
                                     enabled="true" immediate="true" />
                        <Label caption="Date Range:" contentMode="HTML"  />
                        <Label caption="From:" contentMode="HTML" width="80px" />
                        <ComboBox id="fromDate" nullSelectionAllowed="true"
                                  immediate="true" styleName="comboxsize"/>

                        <Label caption="Frequency:" contentMode="HTML" />
                        <ComboBox id="frequency" nullSelectionAllowed="false"
                                  immediate="true" styleName="comboxsize"/>

                        <Label id="discountLevelLabel" caption="Discount Level:" contentMode="HTML" width = "110px" />
                        <OptionGroup id="discountLevel" enabled="true" immediate="true" contentMode="HTML"/>
                        
                         <Label value="Variables" contentMode="HTML" />
                         <c:CustomMenuBar id="customMenuBar" styleName="custommenumulticheck"/>
                        
                        <Label caption="Pivot View:" contentMode="HTML" styleName="labelresultalign"/>
                        <OptionGroup id="pivotView" multiSelect="false" styleName="optiongroupwidth"
                                     enabled="true" immediate="true" />
                        <Label caption=" " contentMode="HTML"  width="80px" />
                        <Label caption=" " contentMode="HTML" width="100px" />
                        <Label caption=" " contentMode="HTML" width="100px" />
                       
                        <Label caption="To: " contentMode="HTML" width="80px" />
                        <ComboBox id="toDate" nullSelectionAllowed="true"
                                  immediate="true" styleName="comboxsize"/>
                    </GridLayout>
<!--                    <VerticalLayout styleName = "width-auto">
                        <GridLayout rows="1" columns="5" margin="false" spacing="false" styleName = "forecast-tab" >
                            <Label caption="Variable Category: " contentMode="HTML" width="130px" styleName="labelresultalign"/>
                            <OptionGroup id="variableCategory" multiSelect="true" enabled="true" />
                            <Label caption="" contentMode="HTML" width="20px" />
                            <Label caption="Variables: " contentMode="HTML" />
                            <OptionGroup id="variables" multiSelect="true" enabled="true" />
                        </GridLayout>
                    </VerticalLayout>-->
                <!--</GridLayout>-->
            </VerticalLayout>
        </Panel>
        <Panel  styleName = "forecast-tab" >
            <VerticalLayout spacing="true" styleName = "width-auto"  margin="true"  >
                <GridLayout columns="15" rows="1" margin="false" spacing="true" styleName="adjustCaption">
                    <Button id="generateBtn" caption="GENERATE"></Button>
                    <Button id="resetBtn" caption="RESET"></Button>
                    <Label caption="Level: " contentMode="HTML" />
                    <ComboBox id="levelDdlb" nullSelectionAllowed="true" styleName="comboxsize"/>
                    <Button id="expandBtn" caption="EXPAND" enabled="true" immediate="true">  </Button>
                    <Button id="collapseBtn" caption="COLLAPSE" enabled="true" immediate="true" ></Button>
                   <Label id="groupLabel" caption="Group:" contentMode="HTML" />
                   <ComboBox id="group" enabled="true" immediate="true" nullSelectionAllowed = "true" styleName = "comboxsize" />
                    <Label caption="Level Filter: " contentMode="HTML" width = "100px"/>
                    <ComboBox id="levelFilter" nullSelectionAllowed="true"
                      immediate="true" styleName="comboxsize"/>
                    <Label caption="View: " contentMode="HTML"></Label>
                    <OptionGroup multiSelect="false" id="view" enabled="true"
                         immediate="true" />
                    <ComboBox id="customDdlb" nullSelectionAllowed="true"
                      immediate="true" styleName="comboxsize"/>
                    <Button id="newBtn" caption="NEW"></Button>
                    <Button id="editBtn" caption="EDIT"></Button>
                </GridLayout>
            </VerticalLayout>
        </Panel>
        <Panel caption="Period Pivot View" id="pivotPanel" width="100%">
            <VerticalLayout id="verticalLayout" spacing="true"
                    margin="true" immediate="true">
                  <VerticalLayout id="tableVerticalLayout" spacing="false"
                                    margin="false" immediate="true">
                                    </VerticalLayout>
<!--                <a:FreezeFilterTreeTable styleName="table-header-normal"
                                 id="periodTableId" caption="" width="1600px" immediate="true" height="100%" />-->
                <HorizontalLayout spacing="true" margin="false">
                    <Button id="excelBtn" primaryStyleName="link"></Button>
                    <Button id="graphBtn" primaryStyleName="link"></Button>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>

</Panel>