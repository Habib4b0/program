<Panel xmlns:table="urn:import:org.asi.ui.extfilteringtable"
       xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield"
       id="mainPanel">
    <VerticalLayout id="item-summary-main"
                    spacing="true" margin="true" immediate="true">
        <Panel id="itemSearch"  width="100%">
            <HorizontalLayout spacing="true" margin="true">
                <Label caption="Item No: " contentMode="HTML" />
                <TextField id="itemNo" immediate="true" width="180px"/>
                <Label caption="Item Name: " contentMode="HTML" />
                <TextField id="itemName" immediate="true"  width="180px" />
                <Label caption="Item Desc: " contentMode="HTML" />
                <TextField id="itemDesc" immediate="true"  width="180px" />
                <Label caption="Therapeutic Class: " contentMode="HTML" />
                <TextField id="TherapeuticClass" immediate="true"  width="180px" />
                <Label caption="Brand: " contentMode="HTML" />
                <TextField id="brand" immediate="true"  width="180px" />
            </HorizontalLayout>
        </Panel>
        <VerticalLayout id="item-summary-table"
                        spacing="true" margin="false" immediate="true">
        </VerticalLayout>
