<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.stpl.addons</groupId>
        <artifactId>customcomp-parent</artifactId>
        <version>2.0</version>
    </parent>
    <groupId>com.stpl.widgetset</groupId>
    <artifactId>vaadin-widgetset</artifactId>
    <name>vaadin-widgetset</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <vaadin.charts.version>3.0.0-alpha1</vaadin.charts.version>
        <vaadin.version>8.1.6</vaadin.version>  
    </properties>


    <repositories>
        <repository>
            <id>vaadin-addons</id>
            <url>http://maven.vaadin.com/vaadin-addons</url>
        </repository>
    </repositories>

    <packaging>war</packaging>
    <dependencies>
        <dependency>
            <groupId>javax.portlet</groupId>
            <artifactId>portlet-api</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.0.1</version>
        </dependency>        
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>extfilteringtable</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>customtextfield</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>customwindow</artifactId>
            <version>2.0</version>           
        </dependency>       
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>extcustomcheckbox</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>customcombobox</artifactId>
            <version>2.0</version>
        </dependency>
       
        <dependency> 
            <groupId>com.stpl.addons</groupId>
            <artifactId>customdatefield</artifactId>
            <version>2.0</version>
        </dependency> 

        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>calendarfield</artifactId>
            <version>2.0</version>
        </dependency>        
        
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>beforeunload-addon</artifactId>
            <version>2.0</version>
        </dependency>
        <dependency>
            <groupId>com.stpl.addons</groupId>
            <artifactId>clara</artifactId>
            <version>2.0</version>
        </dependency>
        
       
        
        
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.core</artifactId>
            <version>6.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.annotation</artifactId>
            <version>6.0.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>osgi.cmpn</artifactId>
            <version>6.0.0</version>
            <scope>compile</scope>
        </dependency>
                
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>de.steinwedel.vaadin.addon</groupId>
            <artifactId>messagebox</artifactId>
            <version>2.0.7</version>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-compatibility-client</artifactId>
            <version>8.1.6</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.vaadin</groupId>
            <artifactId>vaadin-compatibility-client-compiled</artifactId>
            <version>8.1.6</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>com.vaadin</groupId>
                <artifactId>vaadin-maven-plugin</artifactId>
                <version>8.1.6</version>
                <configuration>
                    <extraJvmArgs>-Xmx1G -Xss1024k</extraJvmArgs>
                    <webappDirectory>${basedir}/src/main/webapp/hookcontent/html/VAADIN/widgetsets</webappDirectory>
                    <hostedWebapp>${basedir}/src/main/webapp/hookcontent/html/VAADIN/widgetsets</hostedWebapp>
                    <noServer>true</noServer>
                    <persistentunitcachedir>${basedir}/target/tmp/gwt-unitCache</persistentunitcachedir>
                    <compileReport>true</compileReport>
                    <style>PRETTY</style>
                    <strict>true</strict>
                </configuration>
                <executions>
                    <!-- You are free to mark this as permanently ignored in Eclipse -->
                    <execution>
                        <configuration>
                            <!-- if you don't specify any modules, the plugin will find them -->
                        </configuration>
                        <goals>
                            <goal>resources</goal>
                            <goal>update-widgetset</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
