<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling" xmlns:c="urn:import:org.asi.ui.customtextfield" styleName="parentscroll" >

    <VerticalLayout styleName = "width-auto">
        <HorizontalLayout spacing="true" >
            <Panel styleName="filelookup-leftpanel" width="650px" height="890px">
                <VerticalLayout styleName = "leftMagin">
                    <Panel caption="Search Criteria" styleName = "excepttable">
                        <VerticalLayout >
                            <HorizontalLayout spacing="true" styleName="responsiveGrid">
                                <CssLayout  id="cssLayout" immediate="true" width="677px" styleName="minWidth10px" >
                                                                
                                    <Label value="File Type" contentMode="HTML" immediate="true"/>
                                    <TextField id="fileType" enabled="true" immediate="true" /> 
                                    	
                                    <Label value="Type" contentMode="HTML" immediate="true"/>
                                    <TextField id="type" enabled="true" immediate="true" /> 
                                    
                                    <Label id="companyLb" value="Company"  contentMode="HTML" immediate="true" width="100px" />
                                    <TextField id="company" enabled="true" immediate="true" /> 
                                    
                                    <Label value="Version" contentMode="HTML" immediate="true"/>
                                    <TextField id="version" enabled="true" immediate="true" /> 
                                    
                                    <Label id="businessUnitLb" value="Business Unit"  contentMode="HTML" immediate="true" width="100px" />
                                    <TextField id="businessUnit" enabled="true" immediate="true" /> 
                                    
                                    <Label value="From Date" contentMode="HTML" immediate="true"/>
                                    <PopupDateField id="fromDate" immediate="true"/>
                                    
                                    <Label value="Country" contentMode="HTML" immediate="true"/>
                                    <TextField id="country" enabled="true" immediate="true" /> 
                         
                                    <Label value="To Date" contentMode="HTML" immediate="true"/>
                                    <PopupDateField id="toDate" immediate="true"/>
                                    
                                    <Label value="File Name" contentMode="HTML" immediate="true"/>
                                    <TextField id="fileName" enabled="true" immediate="true" /> 
                                    
                                </CssLayout>
                            </HorizontalLayout>
                            
                            <HorizontalLayout spacing="true" styleName="responsiveTabGrid">
                                <Button id="search" caption="SEARCH" immediate="true"/>
                                <Button id="reset" caption="RESET" immediate="true" />
                            </HorizontalLayout>
                            
                        </VerticalLayout>
                    </Panel>
                    <Panel caption="Results" >
                        <VerticalLayout id="tableLayout">
               
                        </VerticalLayout>       
                    </Panel>
                    <HorizontalLayout spacing="true" styleName="responsiveTabGrid">
                        <Button id="details" caption="DETAILS" immediate="true" />
                        <Button id="excelExportResult" immediate="true" primaryStyleName="link" />
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
            <Panel id="FilerightPanel" styleName="filelookup-rightpanel" width="887px" height="890px">
                <VerticalLayout>
                    <Panel caption="Summary" id="summaryPanel" styleName="rightsummary" width="100%" >
                        <VerticalLayout styleName="width-auto" >
                            <CssLayout id="cssLayoutForecastSection" width="810px" >
                                <Label value="Forecast Name" contentMode="HTML" immediate="true"/>
                                <TextField id="forecastName" enabled="true" immediate="true" />  
                         
                                <Label value="Forecast Date" contentMode="HTML" immediate="true"/>
                                <TextField id="forecastDate" enabled="true" immediate="true" />  
                         
                                <Label value="Forecast Version" contentMode="HTML" immediate="true"/>
                                <TextField id="forecastVersion" enabled="true" immediate="true" /> 
                         
                                <Label value="Created Date" contentMode="HTML" immediate="true"/>
                                <TextField id="createdDate" enabled="true" immediate="true" /> 
                         
                            </CssLayout>
                                         
                                         
                        </VerticalLayout>
                        
                    </Panel>
                    <Panel caption="Search Criteria" id="searchPanel" styleName="rightsummary" width="100%" >
                        <VerticalLayout styleName="width-auto" >
                            <CssLayout id="CustForecastSection" width="810px" >
                                <Label value="Item Id" contentMode="HTML" immediate="true"/>
                                <TextField id="itemId" enabled="true" immediate="true" />                                                    
                                <Label value="Company Id" contentMode="HTML" immediate="true"/>
                                <TextField id="companyId" enabled="true" immediate="true" /> 
                                <Label value="Forecast Year" contentMode="HTML" immediate="true"/>
                                <TextField id="custforecastYear" enabled="true" immediate="true" />                          
                                <Label value="Forecast Month" contentMode="HTML" immediate="true"/>
                                <TextField id="forecastMonth" enabled="true" immediate="true" />
                                 
                                <Label value="Deduction Id" contentMode="HTML" immediate="true"/>
                                <TextField id="deductionId" enabled="true" immediate="true" />                                                    
                                <Label value="Deduction Category" contentMode="HTML" immediate="true"/>
                                <ComboBox id="deductionCategory" nullSelectionAllowed="true" inputPrompt="-Select One" immediate="true" />  
                                <Label value="Deduction Type" contentMode="HTML" immediate="true"/>
                                <ComboBox id="deductionType" nullSelectionAllowed="true" inputPrompt="-Select One" immediate="true" />                          
                                <Label value="Deduction Program Type" contentMode="HTML" immediate="true"/>
                                <ComboBox id="deductionProgramType" nullSelectionAllowed="true" inputPrompt="-Select One" immediate="true" />  
                                
                                <Label value="Forecast Name" contentMode="HTML" immediate="true"/>
                                <TextField id="custForecastName" enabled="true" immediate="true" />                                                    
                                <Label value="Forecast Version" contentMode="HTML" immediate="true"/>
                                <TextField id="custForecastVersion" enabled="true" immediate="true" /> 
                                <Label value="Batch ID" contentMode="HTML" immediate="true"/>
                                <TextField id="batchId" enabled="true" immediate="true" />                          
                                <Label value="Country" contentMode="HTML" immediate="true"/>
                                <TextField id="custCountry" enabled="true" immediate="true" /> 
                         
                            </CssLayout>
                            <HorizontalLayout id="custBtnSection" styleName="responsiveTabGrid">
                                <Button id="searchBtn" caption="SEARCH" immediate="true" />
                                <Button id="custResetBtn" caption="RESET" immediate="true" />
                            </HorizontalLayout>
                                         
                                         
                        </VerticalLayout>
                    </Panel>
                    <Panel id="massUpdatePanel" caption="Mass Update"  styleName="width-auto" width="100%" >
                        <CssLayout  id="cssLayt" immediate="true" width="878px" styleName="minWidth10px" >
                            <OptionGroup id="massUpdate" enabled="true" immediate="true" styleName = "horizontal" /> 
                            <Label value="Field" contentMode="HTML" immediate="true"/>
                            <ComboBox id="fieldName" nullSelectionAllowed="true" inputPrompt="-Select One" immediate="true" width="200px"/>  
                            <HorizontalLayout immediate="true" width="283px">
                                <Label value="Value" contentMode="HTML" immediate="true"/>
                                <TextField id="value" enabled="true" immediate="true" /> 
                                <c:CustomTextField id="itemNoSearch" styleName="searchText" />
                                <PopupDateField id="startDate" immediate="true"/>
                            </HorizontalLayout>
                            <Button id="populate" caption="POPULATE" immediate="true" />
                               
                        </CssLayout>
                                  
                    </Panel>
                    <Panel caption= "Details" >
                        <VerticalLayout id="detailsTable">
               
                        </VerticalLayout>      
                    </Panel>
                    <HorizontalLayout id="buttonPanel" spacing="true" styleName="responsiveTabGrid">
                        <Button id="viewBtn" caption="View" immediate="true" />
                        <Button id="addLine" caption="ADD LINE" immediate="true" />
                        <Button id="remove" caption="REMOVE LINE" immediate="true" />
                        <Button id="save" caption="SAVE" immediate="true" />
                        <Button id="resetBtn" caption="RESET" immediate="true" />
                        <Button id="excelExportDetail" immediate="true" primaryStyleName="link" />
                    </HorizontalLayout>
                            
                </VerticalLayout>
            </Panel>
            
        </HorizontalLayout>
        <HorizontalLayout spacing="true" margin="true">
            <Button id="select" caption="SELECT" immediate="true" />
            <Button id="close" caption="CLOSE" immediate="true" />
        </HorizontalLayout>
    </VerticalLayout>
   
</Panel>