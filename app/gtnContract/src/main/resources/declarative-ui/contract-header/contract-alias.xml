<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout spacing="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.extfilteringtable" xmlns:c="urn:import:org.asi.ui.customtextfield">
	<Panel caption="Alias Information">
		<VerticalLayout id="aliasInfoLayout" spacing="true" margin="true">
			<HorizontalLayout styleName="responsiveTabGrid">
				<CssLayout id="cssLayout" width="100%" height="100%">
				
					<Label id="tradingPartnerLabel" value="Trading Partner" contentMode="HTML"  />
					<c:CustomTextField id="tradingName" styleName="searchicon" inputPrompt=""/>
					
					<Label id="contractAliasNoLabel" value="Contract Alias No" contentMode="HTML" />
					<TextField id="contractAliasNo"  immediate="true" />
					
					<Label id="startDateLabel" value="Start Date" contentMode="HTML" />
					<PopupDateField id="aliasStartDate"  immediate="true" />
					
					<Label id="contractAliasTypeLabel" value="Contract Alias Type" contentMode="HTML" />
					<ComboBox id="contractAliasType"  immediate="true" />
					
					<Label id="contractAliasNameLabel" value="Contract Alias Name" contentMode="HTML" />
					<TextField id="contractAliasName"  immediate="true" />
					
					<Label id="endDateLabel" value="End Date" contentMode="HTML" />
					<PopupDateField id="aliasEndDate"  immediate="true" />
				
				</CssLayout>
			</HorizontalLayout>
			<Button id="aliasAdd" caption="Add" enabled="true" immediate="true"/>
		</VerticalLayout>
	</Panel>
	
	<Panel id="tablePanel" caption="Results">
		<b:ExtFilterTable id="aliasResultsTable" />
	</Panel>
	<HorizontalLayout id="BtnLayout">
		<Button id="aliasRemove" caption="Remove"/>
		<Button id="aliasExport" styleName="link"/>
	</HorizontalLayout>
		
</VerticalLayout>