<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling" xmlns:c="urn:import:org.asi.ui.customtextfield" >

    <VerticalLayout margin="true" spacing="true" >
        <Panel caption="Item Search"  >
           
            <CssLayout id="cssLayout" immediate="true"   width="100%" height="100%" styleName = "width-auto" >
                <HorizontalLayout  styleName="spaceLayout">     
                    <Label value="System ID" contentMode="HTML" immediate="true"/>
                    <TextField id="systemId" enabled="true" immediate="true" /> 
                    <Label value="Item Name" contentMode="HTML" immediate="true"/>
                    <TextField id="itemName" enabled="true" immediate="true" /> 
                
                    <Label value="Item Type" contentMode="HTML" />
                    <ComboBox id="itemType" immediate="true" />
                        
                    <Label value="Therapy Class" contentMode="HTML" />
                    <ComboBox id="therapyClass" immediate="true" />
                    <Label value="NDC 9" contentMode="HTML" immediate="true"/>
                    <TextField id="ndc9" enabled="true" immediate="true" /> 
                    <Label value="Identifier Type" contentMode="HTML" />
                    <ComboBox id="identifierType" immediate="true" />
                </HorizontalLayout  >
                <HorizontalLayout  styleName="spaceLayout">
                    <Label value="Item #" contentMode="HTML" immediate="true"/>
                    <TextField id="itemNo" enabled="true" immediate="true" /> 
                    <Label value="Item Desc" contentMode="HTML" immediate="true"/>
                    <TextField id="itemDesc" enabled="true" immediate="true" /> 
                
                    <Label value="Status" contentMode="HTML" />
                    <ComboBox id="itemStatus" immediate="true" />
                    <Label value="Brand" contentMode="HTML" />
                    <ComboBox id="brand" immediate="true" />
                    <Label value="NDC 8" contentMode="HTML" immediate="true"/>
                    <TextField id="ndc8" enabled="true" immediate="true" /> 
                    <Label value="Identifier" contentMode="HTML" immediate="true"/>
                    <TextField id="identifier" enabled="true" immediate="true" /> 
                </HorizontalLayout>
                <HorizontalLayout spacing="true" margin="true"  >
                    <Button id="search" caption="SEARCH" immediate="true"/>
                    <Button id="reset" caption="RESET" immediate="true" />
                </HorizontalLayout  >
            </CssLayout>

        </Panel>
        <Panel caption="Results" >
            <VerticalLayout id="tableLayout">
               
            </VerticalLayout>  
        </Panel>
        <GridLayout spacing="true" margin="true" immediate="true" rows="2" columns="2" >
            <Button id="select" caption="SELECT" immediate="true" />
            <Button id="close" caption="CLOSE" immediate="true" />
        </GridLayout>
    </VerticalLayout>
    
</Panel>
