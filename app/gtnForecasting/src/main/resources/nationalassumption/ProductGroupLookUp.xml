<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout spacing="true" margin="true"  styleName="bootstrap-forecast">
        <Panel caption="Search Criteria" width="100%">
              <VerticalLayout spacing="true" margin="true" height = "100px">
            <GridLayout spacing="true" margin="false" rows="2" columns="2"
                                    immediate="true">
                <Label value="Product Group Name:" contentMode="HTML" width="150px" />
                <TextField id="productGroupName" inputPrompt="" />
                <Label value="Product Group No:" contentMode="HTML" width="150px"/>
                <TextField id="productGroup" inputPrompt="" />
            </GridLayout>
              </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="search" caption="SEARCH" immediate="true" />
            <Button id="reset" caption="RESET" immediate="true" />
        </HorizontalLayout>
        <Panel caption="Results" height = "100%">
            <VerticalLayout id = "resultsTableLayout" spacing="true" margin="true" width="100%" height = "100%">
            
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
            <Button id="select" caption="SELECT" immediate="true" />
            <Button id="cancel" caption="CANCEL" immediate="true" />
            <Button id="resetTable" caption="RESET" immediate="true" />
        </HorizontalLayout>
    </VerticalLayout>

</Panel>