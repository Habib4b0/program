<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="bsHistoryVerticalLayout" spacing="true"
                    margin="true" immediate="true" styleName="width-auto">
        <Panel id="bsHistoryPanel1" caption="Selection Criteria">
            <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="bsSummaryLayout" immediate="true" columns="8" rows="3">
                    <Label caption="Company: " contentMode="HTML" />
                    <TextField id="companyId" immediate="true" styleName="baserate-disabled" enabled="false"/>
                    <Label caption="Disc/Acct Type: " contentMode="HTML" />
                    <TextField id="acctType" immediate="true" styleName="baserate-disabled" enabled="false"/>
                    <Label caption="Customer/Group: " contentMode="HTML" />
                    <TextField id="customerGroup"  immediate="true" styleName="baserate-disabled" enabled="false"/>
                    <Label caption="Product/Group: " contentMode="HTML" />
                    <TextField id="productGroup" immediate="true" styleName="baserate-disabled" enabled="false" />
                    <Label caption="Market Type: " contentMode="HTML" />
                    <TextField id="marketType" immediate="true" styleName="baserate-disabled" enabled="false"/>
                    <Label caption="Disc/Acct Sub-Type: " contentMode="HTML" />
                    <TextField id="acctSubType" immediate="true" styleName="baserate-disabled" enabled="false"/>
                    <Label caption="Contract: " contentMode="HTML" />
                    <TextField id="contractId" immediate="true" styleName="baserate-disabled" enabled="false"/>
                    <Label caption="Product: " contentMode="HTML" />
                    <TextField id="productName" immediate="true" styleName="baserate-disabled" enabled="false"/>
                </GridLayout>
            </HorizontalLayout>
        </Panel>
        <Panel id="bsHistorySelectionPanel1" caption="Base Rate History Selection">
            <HorizontalLayout id="horizontalLayout2" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="bsMassUpdateLayout" immediate="true" columns="8" rows="1" >
                    <Label caption="View:" contentMode="HTML" id="viewlabel"  />
                    <OptionGroup multiSelect="false" id="histSelectionRadio" immediate="true" enable="true" styleName = "horizontal"/>
                    <Label caption="Date Range:" id="daterange" contentMode="HTML" />
                    <Label caption="From Date: "  id="fromdatelabel"   contentMode="HTML" />
                    <PopupDateField id="fromDate" dateFormat="dd/mm/yyyy" />
                    <Label caption="To Date: " contentMode="HTML" id="todatelabel"  />
                    <PopupDateField id="toDate" dateFormat="dd/mm/yyyy"  />
                    <Button id="filterBtn" caption="FILTER" />
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
        <Panel id="bsHistoryPanel2" caption="Summary">
            <VerticalLayout >
                <VerticalLayout id="brVerHistoryTableLayout">
                <HorizontalLayout id="brHistoryTableLayout" spacing="true" margin="false" immediate="true">
                </HorizontalLayout>
                </VerticalLayout>
                <HorizontalLayout>
                    <Button id="excelBtn" primaryStyleName="link"></Button>   
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
