<Panel caption="Item Family Plan Search" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:customTable="urn:import:org.asi.ui.extfilteringtable" 
       xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling">  
    <VerticalLayout spacing="true" margin="true">
        <errorMsg:ErrorLabel id="errorLB" />
        <HorizontalLayout styleName="responsiveTabGrid">
            <CssLayout id="cssLayout" width="100%" height="100%">
                <Label id="itemFamilyplanIdLB" value="IFP ID"  contentMode="HTML" immediate="true"   />
                <TextField id="itemFamilyplanId" enabled="true" immediate="true" />
            
                <Label id="itemFamilyplanNoLB" value="IFP No"  contentMode="HTML" immediate="true"   />
                <TextField id="itemFamilyplanNo" enabled="true" immediate="true" />
            
                <Label id="itemFamilyplanNameLB" value="IFP Name"  contentMode="HTML" immediate="true"   />
                <TextField id="itemFamilyplanName" enabled="true" immediate="true" />
            
                <Label id="itemFamilyplanStatusLB" value="IFP Status"  contentMode="HTML" immediate="true"  />
                <ComboBox id="itemFamilyplanStatus" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />
          
                <Label id="itemFamilyplanTypeLB" value="IFP Type"  contentMode="HTML" immediate="true"  />
                <ComboBox id="itemFamilyplanType" enable="true" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />
            </CssLayout>
        </HorizontalLayout>
        <HorizontalLayout styleName="responsiveTabGrid">
            <CssLayout id="cssLayoutButton" width="100%" height="100%">
                <Button id="search" caption="Search" />
                <Button id="reset" caption="Reset" />
            </CssLayout>
        </HorizontalLayout>
       
        <VerticalLayout id="tableLayout">
            <HorizontalLayout id="controlLayout"/>
        </VerticalLayout>
        <HorizontalLayout styleName="responsiveTabGrid">
            <CssLayout width="100%" height="100%">
                <Button id="selectBtn" caption="Select" />
                <Button id="closeBtn" caption="Close" />
            </CssLayout>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>