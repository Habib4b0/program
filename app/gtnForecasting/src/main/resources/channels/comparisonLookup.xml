<?xml version="1.0" encoding="UTF-8"?>
<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout width="100%">

        <Panel caption="Projection Search" width="100%" height="269px">
            <GridLayout columns="2"
                        rows="1">

                <GridLayout margin="true" spacing="true" columns="6"
                            rows="3">

                    <Label caption="WorkFlow Status:" contentMode="HTML" />
                    <ComboBox id="workFlowStatus" nullSelectionAllowed="false" inputPrompt="-Select One-"
                              immediate="true" styleName="comboxsize" />
                    <Label caption="Market Type:" contentMode="HTML" />
                    <TextField id="marketType" inputPrompt="" />
                    <Label caption="Brand:" contentMode="HTML" />
                    <TextField id="brand" inputPrompt="" />
                    <Label caption="Projection Name:" contentMode="HTML" />
                    <TextField id="projectionName" inputPrompt="" />
                    <Label caption="Customer:" contentMode="HTML" />
                    <TextField id="customer" inputPrompt="" />
                    <Label caption="NDC #:" contentMode="HTML" />
                    <TextField id="ndc" inputPrompt="" />
                    <Label caption="Description:" contentMode="HTML" />
                    <TextField id="description" inputPrompt="" />
                    <Label caption="Contract:" contentMode="HTML" />
                    <TextField id="contract" inputPrompt="" />
                    <Label caption="NDC Name:" contentMode="HTML" />
                    <TextField id="ndcName" inputPrompt="" />
                </GridLayout>

                <Panel id="timeperiod" caption="Created Date">
                    <GridLayout id="gridLayout" spacing="true" margin="true"
                                immediate="true" columns="2" rows="2">
                        <Label caption="From: " contentMode="HTML" />
                        <PopupDateField id="fromDate" dateFormat="dd/M/yyyy" />
                        <Label caption="To: " contentMode="HTML" />
                        <PopupDateField id="toDate" dateFormat="dd/M/yyyy" />
                    </GridLayout>
                </Panel>
            </GridLayout>
        </Panel>

        <HorizontalLayout margin="true"
                          spacing="true">
            <Button caption="SEARCH" id="searchBtn" />
            <Button caption="RESET" id="resetBtn" />
        </HorizontalLayout>
        
                           
            <Panel id="availablePanel" caption="Results">
            <VerticalLayout id="availableVertical" margin="false" spacing="false" >
<!--                <a:ExtFilterTable  styleName="table-header-normal"
                                       id="resultTableId" width="1100px" immediate="true" height="200px" />-->
                </VerticalLayout>
            </Panel>
        
        <HorizontalLayout margin="false"
                          spacing="false">
            <Button id="addBtn" caption="ADD" immediate="true" />

        </HorizontalLayout>
        <VerticalLayout  id="seletedVertical" margin="false"
                         spacing="false"  >
            <Panel id="selectedPanel" caption="Projections">
           
                <a:ExtFilterTable id="projectionTable" styleName="table-header-normal"
                                      width="1100px" immediate="true" height="200px" />
            </Panel>
        </VerticalLayout>

        <HorizontalLayout margin="true"
                          spacing="true">
            <Button caption="SUBMIT" id="submitBtn" />
            <Button caption="RESET" id="projectionResetBtn" />
            <Button caption="CLOSE" id="closeBtn" />
            <Button caption="REMOVE" id="removeBtn" />

        </HorizontalLayout>
    </VerticalLayout>
</Panel>