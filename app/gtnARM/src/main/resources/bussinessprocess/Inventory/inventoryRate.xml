<Panel>
    <VerticalLayout spacing="true"  margin="true" immediate="true">
        <Panel  margin="true" immediate="true" spacing="true" caption="Data Selection">
            <VerticalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
                <GridLayout spacing="true" id="dataSelecionGrid"
                            immediate="true" columns="10" rows="1">
                    <Label caption="Deduction Level : " id="deductionLevel" contentMode="HTML" />
                    <ComboBox id="deductionLevelDdlb" nullSelectionAllowed="true"
                              immediate="true" />
                    <Label caption=" Deduction Value : "  contentMode="HTML" />
                    <ComboBox id="deductionValueDdlb" nullSelectionAllowed="true"
                              immediate="true" />
                    <Label caption=" Rate Basis : " contentMode="HTML" />
                    <ComboBox id="rateBasisDdlb" nullSelectionAllowed="true"
                              immediate="true" />
                    <Label caption=" Rate Frequency : " contentMode="HTML" />
                    <ComboBox id="rateFrequencyDdlb" nullSelectionAllowed="true"
                              immediate="true" />
                    <Label caption=" Rate Period : " contentMode="HTML" />
                    <ComboBox id="ratePeriodDdlb" nullSelectionAllowed="true"
                              immediate="true" />
                </GridLayout>
            </VerticalLayout>
        </Panel>  
        <HorizontalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
            <Button id="reset" caption="RESET" />
            <Button id="generate" caption="GENERATE" />
        </HorizontalLayout> 
    </VerticalLayout>
</Panel>