                <Button id="searchBtn" caption="SEARCH" immediate="true"/>
                <Button id="resetBtn" caption="RESET" immediate="true" />
            </CssLayout>
        </HorizontalLayout>
                    
        <Panel caption="Results"  >
            <VerticalLayout id="tableLayout">
                <HorizontalLayout id="controlLayout"/>
            </VerticalLayout>            
        </Panel>
        <HorizontalLayout id="footerButtons" spacing="true" margin="false" styleName="responsiveTabGrid" >
            <CssLayout immediate="true" width="100%" height="100%">
                <Button id="addBtn" caption="ADD" immediate="true"/>
                <Button id="editBtn" caption="EDIT" immediate="true" />
                <Button id="viewBtn" caption="VIEW" immediate="true" />
                <Button id="deleteBtn" caption="DELETE" visible="false" immediate="true" />
                <Button id="copyBtn" caption="COPY" visible="false" immediate="true" />
                <Button id="reset" caption="RESET" visible="false" immediate="true" />
                <Button id="excel" immediate="true" primaryStyleName="link" />
                <Button id="exportBtn" caption="EXPORT" visible="false" immediate="true" />
            </CssLayout>
        </HorizontalLayout>
    </VerticalLayout>
