<Panel>
    <VerticalLayout styleName="responsiveTabGrid" margin="true" spacing="true" >
    
                    
        
        <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid">
            <VerticalLayout>
                <Label id="fromDateLB" value="From Date: " contentMode="HTML" />
                <InlineDateField id="creationDateFrom" styleName="comboxsize" enable="true" immediate="true" />
            </VerticalLayout>
            
            <VerticalLayout>
                <Label id="toDateLB" value="To Date: " contentMode="HTML" />
                <InlineDateField id="creationDateTo" styleName="comboxsize" enable="true" immediate="true" />
            </VerticalLayout>
        </HorizontalLayout>
    
        <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid">
            <Button id="submitBtn" caption="SUBMIT" immediate="true"></Button>
            <Button id="closeBtn" caption="CLOSE" immediate="true"></Button>
        </HorizontalLayout>
        
    </VerticalLayout>
</Panel>
