<?xml version="1.0" encoding="UTF-8"?>


<Panel >

    <VerticalLayout margin="true" spacing="true"  immediate="true">

        <Panel  width="85%" height="530px" caption="Notes">
            <VerticalLayout margin="true" spacing="true"  immediate="true">
                <GridLayout spacing="true" rows="2" columns="2" >
                    <Label caption="Reason Code: " contentMode="HTML" width="127px"/>
                    <ComboBox id="reasonCode" immediate="true" />
                    <Label caption="Enter New Note: " contentMode="HTML" width="127px"/>
                    <TextArea id="newNotes" description="Enter New Notes" rows="7" width="45em" componentAlignment="TOP_RIGHT"/>
                </GridLayout>
                <HorizontalLayout id="hlayout">  
                    <Label caption=" " contentMode="HTML" width="665px"/>
                    <Button id="addNotesBtn" caption="ADD NOTE"/>
                </HorizontalLayout>
                <GridLayout spacing="true" rows="1" columns="2">
                    <Label caption="Notes History: " contentMode="HTML" width="127px"/>
                    <TextArea id="notesHistory" rows="7" width="45em"  componentAlignment="TOP_RIGHT"/>
                </GridLayout>
                <HorizontalLayout spacing="true"  margin="false">
                    <Button id="wordPngImage" primaryStyleName="link"></Button>
                    <Button id="pdfPngImage" primaryStyleName="link"></Button>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>

        <Panel width="85%" caption="Attachments">

            <VerticalLayout margin="true" spacing="true"  immediate="true">
                <HorizontalLayout  margin="false" spacing="true"  immediate="true"> 
                    <Label caption="Add Attachment: " contentMode="HTML" width = "120px" />
                    <VerticalLayout id="layout" immediate="true"></VerticalLayout>
                </HorizontalLayout>
                <GridLayout immediate="true" rows="1" columns="2"  margin="false" spacing="true">
                    <Label caption="Attachments: " contentMode="HTML" width = "120px"/>
                    <Table styleName="table-header-normal" id="table" height="140px" width="500px" immediate="true" />
                </GridLayout>
                
                <HorizontalLayout margin="false" spacing="fase"  immediate="true">
                    <Label caption=" " contentMode="HTML" width="549px" />
                    <Button id="removeBtn" caption="REMOVE"/>
                </HorizontalLayout>
               
            </VerticalLayout>
        </Panel>

    </VerticalLayout>


</Panel>