<?xml version="1.0" encoding="UTF-8"?>
<Panel    xmlns:p="urn:vaadin:parent" >
    <VerticalLayout  spacing="true" margin="true" immediate="true" width="100%" >
        <Panel height="100%">
            <VerticalLayout styleName = "width-auto" spacing="false" margin="true" immediate="true" width="100%">
                <HorizontalLayout  spacing="true"  immediate="true">
                    <Label caption="Tree View Name:" contentMode="HTML" /> 
                    <TextField id="treeViewName" inputPrompt="" immediate="true" />
                </HorizontalLayout>
          
                <GridLayout rows="1" columns="2" spacing="true" immediate="true">
                    <VerticalLayout spacing="true" margin="false" immediate="true">
                        <HorizontalLayout  spacing="true" immediate="true">
                            <Table id="customerHierarchy"  caption="Customer Hierarchy" width="275px" height="310px"  immediate="true" styleName="table-header-normal" />
           
                            <VerticalLayout spacing="true" immediate="true">
                                <Label caption="" hieght="97px" contentMode="HTML" />
                                <Button id="customerRight" caption="&gt;"></Button>
                                <Button id="customerLeft" caption="&lt;"></Button>
                            </VerticalLayout>
                        </HorizontalLayout>
           
          
                        <HorizontalLayout  spacing="true" immediate="true">
                    
                            <Table id="productHierarchy"  caption="Product Hierarchy" width="275px" height="310px"  immediate="true" styleName="table-header-normal" />
                            <VerticalLayout spacing="true" immediate="true">
                                <Label caption="" hieght="97px" contentMode="HTML" />
                                <Button id="productRight" caption="&gt;"></Button>
                                <Button id="productLeft" caption="&lt;"></Button>
                            </VerticalLayout>
                        </HorizontalLayout>
                    </VerticalLayout>
                    <HorizontalLayout  spacing="false" margin="false" immediate="true">
                        <Table id="treeStructure" caption=" Tree Structure" styleName="table-header-normal" height="655px"  width="575px" immediate="true" selectable="true" />        
                    </HorizontalLayout>
                </GridLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout  spacing="true" margin="false" immediate="true">
            <Button id="saveBtn" caption="SAVE"></Button>
            <Button id="selectBtn" caption="SELECT"></Button>
            <Button id="closeBtn" caption="CLOSE"></Button>
            
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
      