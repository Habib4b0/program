<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel" xmlns:c="urn:import:org.asi.ui.custommenubar">
    <VerticalLayout id="mainVerticalLayout" spacing="false" margin="true" immediate="true" >
        <Panel id="dataSelectionPanel" styleName = "forecast-tab" caption="Data Selection">
            <VerticalLayout styleName = "width-auto"  margin="true">  
                <HorizontalLayout spacing="true" margin="false">   
                    <HorizontalLayout id="horizontalLayout" spacing="true" margin="false" immediate="true" >
                        <VerticalLayout>
                            <GridLayout  spacing="true" margin="false" immediate="true" rows="2" columns="2" >
                                <Label value="Frequency: " contentMode="HTML" width="80px" styleName="labelresultalign" />
                                <ComboBox id="frequencyDdlb" styleName="comboxsize" immediate="true" />  
                                <Label caption="History: " contentMode="HTML" styleName="labelresultalign" />
                                <ComboBox id="historyDdlb" immediate="true" enabled="true"  styleName="comboxsize" nullSelectionAllowed = "false"  />                         
                            </GridLayout>
                        </VerticalLayout>
                    
                        <VerticalLayout>
                            <GridLayout spacing="true" margin="false" immediate="true" rows="2" columns="2" >
                                <Label id="variablesLabel" caption="Variables:" contentMode="HTML" styleName="labelresultalign" />
                                <c:CustomMenuBar id="customMenuBar" styleName="custommenumulticheck"/>                   
                                <Label caption="Price Basis:" contentMode="HTML"  styleName="labelresultalign" />
                                <ComboBox id="priceBasisDdlb" enabled="true" nullSelectionAllowed = "false" width="180px" />                  
                            </GridLayout>
                        </VerticalLayout>
                        <Button id="exclusionDetails" caption="Exclusion Details :" />    
                    </HorizontalLayout>         
                    <Panel caption="Time Period" id="timePeriodPanel">                          
                        <HorizontalLayout spacing="true" margin="true" immediate="true" >
                            <Label value="From: " contentMode="HTML" width="80px" styleName="labelresultalign"  />
                            <ComboBox id="fromDdlb" immediate="true" nullSelectionAllowed = "false" />
                            <Label value="To: " contentMode="HTML" width="80px" styleName="labelresultalign" />
                            <ComboBox id="toDdlb" immediate="true" nullSelectionAllowed = "false" />
                        </HorizontalLayout>                           
                    </Panel>
                </HorizontalLayout>     
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="true"> 
            <Button id="resetBtn" caption="RESET"/>
            <Button id="generateBtn" caption="GENERATE"/>            
        </HorizontalLayout>               
        <Panel caption="Sales Results" id="tablePanel">
            <VerticalLayout id="verticalLayout" spacing="false" margin="false" immediate="true">
                <VerticalLayout id="tableVerticalLayout" spacing="false" margin="false" immediate="true"/>                          
                              
            </VerticalLayout>
        </Panel>
        <VerticalLayout  spacing="true" margin="false" immediate="true">
            <Button id="excelBtn" primaryStyleName="link" ></Button>  	
        </VerticalLayout>
    </VerticalLayout>
</Panel>