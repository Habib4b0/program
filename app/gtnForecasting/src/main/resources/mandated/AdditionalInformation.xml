<?xml version="1.0" encoding="UTF-8"?>


<Panel >

    <VerticalLayout margin="true" spacing="true"  immediate="true" styleName="bootstrap-forecast">

        <Panel  width="85%" height="515px" caption="Notes ">
            <VerticalLayout margin="true" styleName = "width-auto" spacing="true"  immediate="true">
                <GridLayout spacing="true" rows="1" columns="2" >
                    <Label value="Enter New Note: " contentMode="HTML" width="127px"/>
                    <TextArea id="newNotes" description="Enter New Notes" rows="7" width="45em" componentAlignment="TOP_RIGHT"/>
                </GridLayout>
                <HorizontalLayout id="hlayout">  
                    <Label value=" " contentMode="HTML" width="665px"/>
                    <Button id="addNotesBtn" caption="ADD NOTE"/>
                </HorizontalLayout>
                <GridLayout spacing="true" rows="1" columns="2">
                    <Label value="Notes History: " contentMode="HTML" width="127px"/>
                    <TextArea id="notesHistory" rows="7" width="45em"  componentAlignment="TOP_RIGHT"/>
                </GridLayout>
                <HorizontalLayout spacing="true"  margin="false">
                    <Button id="wordBtn" primaryStyleName="link"></Button>
                    <Button id="pdfBtn" primaryStyleName="link"></Button>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>

        <Panel width="85%" caption="Attachments">

            <VerticalLayout styleName = "width-auto" margin="true" spacing="true"  immediate="true">
                <HorizontalLayout  margin="false" spacing="true"  immediate="true"> 
                    <Label value="Add Attachment: " contentMode="HTML" width = "122px" />
                    <VerticalLayout id="layout" immediate="true"></VerticalLayout>
                </HorizontalLayout>
                <GridLayout immediate="true" rows="1" columns="2"  margin="false" spacing="true">
                    <Label value="Attachments: " contentMode="HTML" width = "120px"/>
                    <Table styleName="table-header-normal" id="resultsTable" height="140px" width="500px" immediate="true" />
                </GridLayout>
                
                <HorizontalLayout margin="false" spacing="fase"  immediate="true">
                    <Label value=" " contentMode="HTML" width="549px" />
                    <Button id="removeBtn" caption="REMOVE"/>
                </HorizontalLayout>
               
            </VerticalLayout>
        </Panel>

    </VerticalLayout>


</Panel>