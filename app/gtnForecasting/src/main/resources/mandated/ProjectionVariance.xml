<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout margin="true" spacing="true" styleName="bootstrap-forecast">
        <Panel caption="Projection Variance Selection" margin="false"
                       spacing="true" width="100%" height="240px">
             <VerticalLayout margin="true" styleName="width-auto">
            <GridLayout rows="2" columns="1" margin="false" spacing="true" height="157px">
                <GridLayout spacing="true" rows="2"
                                            columns="9">
                    <Label value="Comparison: " contentMode="HTML"  />
                    <b:CustomTextField id="comparison" styleName="searchicon" 
                                                           immediate="true" enable="true" width="178px" />

                    <Label value="Level: " contentMode="HTML" />
                    <OptionGroup id="level" multiSelect="false" enabled="true" 
                                                     immediate="true" styleName = "horizontal"/>
                    <Label value="Projection Period Order:" contentMode="HTML"
                                               width="167px" />
                    <OptionGroup id="projectionPeriodOrder" multiSelect="false"
                                                     enabled="true" immediate="true" styleName = "horizontal"/>
                    <Label value="Date Range:" contentMode="HTML" width="94px"  />
                    <Label value="From:" contentMode="HTML" />
                    <ComboBox id="fromDate" nullSelectionAllowed="true"
                                                  immediate="true"/>

                    <Label value="Frequency:" contentMode="HTML" width="135px"/>
                    <ComboBox id="frequency" nullSelectionAllowed="false"
                                                  immediate="true"/>

                    <Label value="Discount Level:" contentMode="HTML" width="111px"/>
                    <OptionGroup id="discountLevel" enabled="true" immediate="true" contentMode="HTML" styleName = "horizontal"/>
                    <Label value="Pivot View:" contentMode="HTML" />
                    <OptionGroup id="pivotView" multiSelect="false"
                                                     enabled="true" immediate="true" styleName = "horizontal" />
                    <Label value="" contentMode="HTML" />
                    <Label value="To: " contentMode="HTML" width="51px"/>
                    <ComboBox id="toDate" nullSelectionAllowed="true"
                                                  immediate="true"/>
                </GridLayout>
                <HorizontalLayout spacing="true">
                    <Label value="Variable Category: " contentMode="HTML"
                                               width="135px" />
                    <OptionGroup id="variableCategory" multiSelect="true"
                                                     enabled="true" immediate="true" />                   
                    <Label value="Variables: " contentMode="HTML" width="70px" />
                    <OptionGroup id="variables" multiSelect="true" enabled="true"
                                                     immediate="true" />
                </HorizontalLayout>
            </GridLayout>
            </VerticalLayout>
        </Panel>
        
        <HorizontalLayout margin="true"  spacing="true"  styleName="component-layout">
            <Button id="generateBtn" caption="GENERATE"></Button>
            <Button id="resetBtn" caption="RESET"></Button>
             <HorizontalLayout margin="true"  spacing="true"  styleName="component-layout">
            <Label caption="Level: " contentMode="HTML" />
            <ComboBox id="levelDdlb" nullSelectionAllowed="true"/>
            </HorizontalLayout>
            <Button id="expandBtn" caption="EXPAND"></Button>
            <Button id="collapseBtn" caption="COLLAPSE"></Button>
          <HorizontalLayout margin="true"  spacing="true"  styleName="component-layout">
                <Label caption="Level Filter: " contentMode="HTML"  width="90px" />
            <ComboBox id="levelFilter" nullSelectionAllowed="true"
                      immediate="true" styleName="comboxsize"/>
            </HorizontalLayout>
              <HorizontalLayout margin="true"  spacing="true"  styleName="component-layout">
            <Label caption="View: " contentMode="HTML"></Label>
            <OptionGroup multiSelect="false" id="view" enabled="true"
                                 immediate="true" styleName = "horizontal"/>
                 </HorizontalLayout>
                 <HorizontalLayout margin="true"  spacing="true"  styleName="component-layout">
            <ComboBox id="customDdlb" nullSelectionAllowed="true"
                                  immediate="true" enabled="false"/>
                 </HorizontalLayout>
            <Button id="newBtn" caption="NEW" enabled="false"></Button>
            <Button id="editViewBtn" caption="EDIT" enabled="false" ></Button>
        </HorizontalLayout>

        <Panel id="tablePanel" caption="Period Pivot View">
            <VerticalLayout id="tableVerticalLayout" spacing="true"
                                        margin="true" immediate="true">                
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false">
                    <Button id="excelBtn" primaryStyleName="link"></Button>
                    <Button id="graphBtn" primaryStyleName="link"></Button>
         </HorizontalLayout>
    </VerticalLayout>

</Panel>