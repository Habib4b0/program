	<bean id="sysSessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="sysDataSource" />
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.jdbc.batch_size">100</prop>
				<prop key="hibernate.connection.autocommit">false</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>/com/stpl/gtn/gtn2o/ws/xml/user/User.hbm.xml</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/user/UsersGroups.hbm.xml</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/user/UsersRoles.hbm.xml</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/role/Role.hbm.xml</value>
			</list>
		</property>
	</bean>

	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:jboss/datasources/jdbc/appDataPool" />
		<property name="lookupOnStartup" value="true" />
	</bean>
	<bean id="sysDataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="java:jboss/datasources/jdbc/infraDataPool" />
		<property name="lookupOnStartup" value="true" />
	</bean>

	<bean id="databaseService"
		class="com.stpl.gtn.gtn2o.ws.forecast.service.GtnWsReturnsDatabaseService">
		<property name="sessionFactory" ref="sessionFactory"></property>
		<property name="gtnFrameworkSqlQueryEngine" ref="gtnFrameworkSqlQueryEngine"></property>
	</bean>
	<bean id="gtnFrameworkQueryEngineMain"
		class="com.stpl.gtn.gtn2o.queryengine.engine.GtnFrameworkQueryEngineMain">
	</bean>
	<bean id="gtnFrameworkSqlQueryEngine"
		class="com.stpl.gtn.gtn2o.queryengine.engine.GtnFrameworkSqlQueryEngine">
		<property name="sessionFactory" ref="sessionFactory"></property>
		<property name="queryLogger" ref="queryLogger"></property>
	</bean>
	<bean id="queryLogger"
		class="com.stpl.gtn.gtn2o.ws.logger.GtnQueryLogger">
	</bean>
</beans>

