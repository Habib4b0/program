<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel">
    <VerticalLayout spacing="false" margin="true" immediate="true" >

        <Panel id="panel1"  styleName = "forecast-tab" caption="Sales Projection Selection">
            <VerticalLayout styleName = "width-auto"  margin="true">                      
                <HorizontalLayout spacing="true" margin="false">
                    <Label caption="Frequency: " contentMode="HTML" />
                    <ComboBox id="frequency" nullSelectionAllowed="true"
                              immediate="true" styleName="comboxsize"/>
                    <Label caption="Actuals/Projections: " contentMode="HTML" />
                    <OptionGroup multiSelect="false" id="actualOrProj" styleName="horizontal"
                                 enabled="true" immediate="true" />
                    <Label caption="Projection Period Order: " contentMode="HTML" width = "165px"/>
                    <OptionGroup multiSelect="false" id="periodOrder"
                                 enabled="true" immediate="true" styleName="horizontal"/>
                </HorizontalLayout>                
                <HorizontalLayout spacing="true" margin="false">
                    <Label caption="History Time Interval: " contentMode="HTML" immediate="true" width = "200px"/>
                    <Label caption="From : " contentMode="HTML" immediate="true"/>
                    <ComboBox id="from" nullSelectionAllowed="true"
                              immediate="true" inputPrompt="-Select One-" styleName="comboxsize"/>
                    <Label caption="To : " contentMode="HTML" immediate="true"/>
                    <ComboBox id="to" nullSelectionAllowed="true"
                              inputPrompt="-Select One-" immediate="true" styleName="comboxsize"/>
                    <Label caption="Variables : " id="variablesLabel" contentMode="HTML" immediate="true"/>
                    <OptionGroup multiSelect="true" id="variables"
                                 enabled="true" immediate="true" styleName="horizontal"/>
                </HorizontalLayout>                
            </VerticalLayout>
        </Panel> 
        <HorizontalLayout spacing="true" margin="false">
            <Button id="generateBtn" caption="GENERATE"  />
            <Button id="resetBtn" caption="RESET"  /> 
        </HorizontalLayout>
        <Panel styleName = "forecast-tab" caption="Alternate History-Contract Holder">
            <!--<VerticalLayout styleName = "width-auto"  margin="true">-->      
            <VerticalLayout id="historyAllocationLayout" spacing="true" margin="false" immediate="true">
                <HorizontalLayout id="gridLayout" columns="3" rows="1" spacing="true">
                    <Button id="allocate" caption="ALLOCATE"  />
                    <Button id="export" primaryStyleName="link"  /> 
                </HorizontalLayout>
            </VerticalLayout>
            <!--</VerticalLayout>-->
        </Panel> 
    </VerticalLayout>
</Panel>
