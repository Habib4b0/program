<VerticalLayout margin="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield">
    
    <HorizontalLayout id="hLayout" styleName="responsiveTabGrid">
        <CssLayout id="cssLayout" width="100%" height="100%">
        
            <Label id="itemFamilyplanIdLB" value="IFP ID" styleName= "mandatory" contentMode="HTML" />
            <TextField id="itemFamilyplanId" inputPrompt="" />
        
            <Label id="itemFamilyplanNoLB" value="IFP No" styleName= "mandatory" contentMode="HTML" />
            <TextField id="itemFamilyplanNo" inputPrompt="" />
        
            <Label id="itemFamilyplanNameLB" value="IFP Name" styleName= "mandatory" contentMode="HTML" />
            <TextField id="itemFamilyplanName" inputPrompt="" />
        
        
                    
            <Label id="itemFamilyplanStatusLB" value="IFP Status" styleName= "mandatory" contentMode="HTML" />
            <ComboBox id="itemFamilyplanStatus" nullSelectionAllowed="false"
                      inputPrompt="-Select One" immediate="true" /> 


            <Label id="itemFamilyplanStartDateLB" styleName= "mandatory" value="IFP Start Date"
                   contentMode="HTML" />
            <PopupDateField id="itemFamilyplanStartDate" />  
                    
            
            <Label id="itemFamilyplanEndDateLB" value="IFP End Date"
                   contentMode="HTML" />
            <PopupDateField id="ifpEndDate" />  
                    
                    
            <Label id="itemFamilyplanDesignationLB" value="IFP Designation" contentMode="HTML" />
            <ComboBox id="ifpDesignation" nullSelectionAllowed="false"
                      inputPrompt="-Select One" immediate="true" /> 
            
            <Label id="parentItemFamilyplanIdLB" value="Parent IFP ID" contentMode="HTML"  />
            <b:CustomTextField id="parentIfpId" styleName="searchicon" />
                                       
            <Label id="parentItemFamilyplanNameLB" value="Parent IFP Name" contentMode="HTML"  />
            <b:CustomTextField id="parentIfpName" styleName="searchicon" /> 
            
            <Label id="itemFamilyplanTypeLB" value="IFP Type" contentMode="HTML" />
            <ComboBox id="ifpType" nullSelectionAllowed="false"
                      inputPrompt="-Select One" immediate="true" /> 
            
            
            <Label id="createdByLB" value="Created By" contentMode="HTML" />
            <TextField id="createdBy" inputPrompt="" />
        
            <Label id="createdDateLB" value="Created Date"
                contentMode="HTML" />
            <PopupDateField id="createdDate" />  
            
            <Label id="itemFamilyplanCategoryLB" value="IFP Category" contentMode="HTML" />
            <ComboBox id="ifpCategory" nullSelectionAllowed="false"
                      inputPrompt="-Select One" immediate="true" />     
            
            <Label id="modifiedByLB" value="Modified By" contentMode="HTML" />
            <TextField id="modifiedBy" inputPrompt="" />
        
        
            <Label id="modifiedDateLB" value="Modified Date"
                   contentMode="HTML" />
            <PopupDateField id="modifiedDate" />  
                  
            
        </CssLayout>
    </HorizontalLayout>
</VerticalLayout>
