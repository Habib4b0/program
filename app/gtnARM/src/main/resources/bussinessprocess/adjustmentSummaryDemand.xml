<Panel xmlns:c="urn:import:org.asi.ui.custommenubar">
    <VerticalLayout spacing="true" margin="true" immediate="true"  styleName="forecast-dataselection" >
        
        <Panel id="panel1" caption="Adjustment Selection"  >

            <HorizontalLayout id="horizontalLayout" spacing="true" margin="true">
                <VerticalLayout>
                    <HorizontalLayout spacing="true" immediate="true">
                        <Label caption="Frequency:" id="frequency" contentMode="HTML" width="73px"/>
                        <ComboBox id="frequencyDdlb" nullSelectionAllowed="true"
                                  immediate="true" width="185px"/>
                        <Label caption="Deduction Level:" contentMode="HTML" width="112px"/>
                        <ComboBox id="deductionLevelDdlb" width="185px"/>
                        
                        <Label value="View:" contentMode="HTML" width="47px"/>
                        <OptionGroup multiSelect="false" id="view" immediate="true" enable="true" styleName = "horizontal"/>
                    </HorizontalLayout>
                    
                    <HorizontalLayout spacing="true" immediate="true">   
                        <Label caption="Variables:" contentMode="HTML" width="73px"/>
                        <c:CustomMenuBar id="variables" styleName="custommenumulticheck custommenumulticheckAlignment" />

                        <Label caption="Deduction Value:" contentMode="HTML" width="112px"/>
                        <c:CustomMenuBar id="deductionValue" styleName="custommenumulticheck custommenumulticheckAlignment" />
                        
                        <Label value="GL Impact Date:"  contentMode="HTML" width="113px"/>
                        <PopupDateField id="glImpactDate" dateFormat="dd/mm/yyyy" immediate="true" enable="true" styleName = "horizontal"/>
                 
                    </HorizontalLayout>
                    
                </VerticalLayout>
                <Panel id="timeperiod" caption="Period Range">
                    <VerticalLayout  spacing = "true" margin = "true" >
                        <GridLayout id="gridLayout" immediate="true" columns="4" rows="1">
                            <Label caption="From:" contentMode="HTML" width="50px"/>
                            <ComboBox id="fromDate" width="178px" />
                            <Label caption="To:" contentMode="HTML" width="40px" styleName="labelresultalign"/>
                            <ComboBox id="toDate" width="178px" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>
        </Panel>
        
        <HorizontalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
            <Button id="reset" caption="RESET" />
            <Button id="generate" caption="GENERATE" />
        </HorizontalLayout> 
       
    </VerticalLayout>
</Panel>
    