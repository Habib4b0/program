<VerticalLayout  margin="true" spacing="true" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield"
                xmlns:customTable="urn:import:org.asi.ui.extfilteringtable">
    <Panel id="identifierInfoLayout" caption="Identifier Information" >
        <VerticalLayout margin="true">
            <HorizontalLayout id="hLayout" styleName="responsiveTabGrid">
         
                <CssLayout id="cssLayout" width="100%" height="100%">
                    
                    <Label id="itemIrtQualifierNameLB" styleName= "mandatory" value="Item Qualifier Name" contentMode="HTML" />
                    <ComboBox id="itemIrtQualifierNameDDLB" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                    <Label id="itemIdentifierLB" styleName= "mandatory" value="Item Identifier" contentMode="HTML" />
                    <TextField id="itemIdentifier" inputPrompt="" />
                    <Label id="identifierStatusLB" styleName= "mandatory" value="Identifier Status" contentMode="HTML" />
                    <ComboBox id="identifierStatus" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                    <Label id="startDateLB" styleName= "mandatory" value="Identifier Start Date"
                           contentMode="HTML" />
                    <PopupDateField id="startDate" />  
                    <Label id="endDateLB" value="Identifier End Date"
                           contentMode="HTML" />
                    <PopupDateField id="endDate" />  
                    <Label id="entityCodeLB" value="Entity Code No" contentMode="HTML"  />
                    <b:CustomTextField id="entityCode" styleName="searchicon" 
                                       immediate="true" enable="true" />
                    <Label id="entityCodeNameLB" value="Entity Code Name" contentMode="HTML" />
                    <b:CustomTextField id="entityCodeName" immediate="true" enable="true" />
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>
    <HorizontalLayout id="attachBtnLayout" spacing="true" >
     <Button id="btnPopulate" caption="Attach" />
      </HorizontalLayout> 
<VerticalLayout id= "tablePanel">
    <Panel  caption="Results" >
        <customTable:ExtFilterTable id="table" immediate="true" /> 
    </Panel>
    <!--<Label  value="   " contentMode="HTML" />-->
    <HorizontalLayout id="BtnLayout">
        <Button id="removeBtn" caption="Remove" />
        <Button id="excelExport"  />
    </HorizontalLayout>       
</VerticalLayout>
</VerticalLayout>
