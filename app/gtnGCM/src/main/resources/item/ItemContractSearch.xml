<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" styleName="adjustCaption">
   
            <VerticalLayout width="100%"  margin="true" spacing="true">
                <Panel caption="Search Criteria" width="100%">
                    <VerticalLayout spacing="true" margin="true" styleName = "width-auto">
                        <GridLayout id="contractSearchGrid"  spacing="true" columns="8"
                                    rows="4" styleName = "forecast-tab" >
                            <Label caption="Contract Number:"  contentMode="HTML"/>
                            <TextField id="contractNo" />
                            <Label caption="Contract Name:" contentMode="HTML"/>
                            <TextField id="contractName" />
                            <Label caption="Contract Holder:" contentMode="HTML"/>
                            <TextField id="contractHolder" />
                            <Label caption="Market Type:" contentMode="HTML"/>
                            <ComboBox id="marketType" styleName="comboxsize" width="205px" />
                            <Label caption="Company Family Plan No:" contentMode="HTML"/>
                            <b:CustomTextField id="companyFamilyPlanNo" styleName="searchText"/>
                            <Label caption="Item Family Plan No:" contentMode="HTML"/>
                            <b:CustomTextField id="itemFamilyPlanNo" styleName="searchText" />
                            <Label caption="Price Schedule No:" contentMode="HTML"/>
                            <b:CustomTextField id="priceScheduleNo" styleName="searchText"/>
                            <Button caption="All Items:" id="allItemsButton" styleName="link" width="147px" />
                            <ComboBox id="allItems"  styleName="comboxsize" width="205px"/>
                            <Label caption="Rebate Schedule Id:" contentMode="HTML"/>
                            <TextField id="rebateScheduleId" />
                            <Label caption="Rebate Schedule Name:" contentMode="HTML"/>
                            <TextField id="rebateScheduleName" />
                            <Label caption="Rebate Schedule  Type:" contentMode="HTML"/>
                            <ComboBox id="rebateScheduleType" styleName="comboxsize" width="205px"/>
                            <Label caption="RAR Category:" contentMode="HTML"/>
                            <ComboBox id="rarCategory" styleName="comboxsize" width="205px"/>
                            <Label caption="Rebate Schedule No:" contentMode="HTML"/>
                            <TextField id="rebateScheduleNo" />
                            <Label caption="Rebate Schedule Category" contentMode="HTML"/>
                            <ComboBox id="rebateScheduleCategory"  styleName="comboxsize" width="205px"/>
                            <Label caption="Rebate Program Type:" contentMode="HTML"/>
                            <ComboBox id="rebateProgramType"  styleName="comboxsize" width="205px"/>
                            <Label caption="Rebate Schedule Alias:" contentMode="HTML"/>
                            <TextField id="rebateScheduleAlias" />       
                        </GridLayout>
                        <HorizontalLayout spacing="true">
                            <Button id="reset1" caption="RESET"/>
                            <Button id="search" caption="SEARCH"/>
                        </HorizontalLayout>
                    </VerticalLayout>
                  
                </Panel>         
                <Panel id="MassUpdatePanel1" caption="Mass Update">
                    <HorizontalLayout id="horizontalLayout3" spacing="true" margin="true" immediate="true">
                        <GridLayout spacing="true"  id="MassUpdateLayout" immediate="true" columns="11" rows="1">
                            <OptionGroup multiSelect="false" id="massUpdateRadio" immediate="true" enable="true" styleName = "horizontal"/>
                            <Label caption="Field:" contentMode="HTML" />
                            <ComboBox id="field" immediate="true" width="199px" />
                            <Label caption="Value:"  id="valuelabel" contentMode="HTML" />
                            <ComboBox id="massUpdateValue" immediate="true" />
                            <b:CustomTextField id="massUpdateText"/>
                            <Label  id="startdatelabel" contentMode="HTML" />
                            <PopupDateField id="massStartDate" dateFormat="MM/dd/yyyy" styleName="align-center"/>
                            <Label  id="enddatelabel" contentMode="HTML" />
                            <PopupDateField id="massEndDate" dateFormat="MM/dd/yyyy" styleName="align-center"/>
                            <Button id="populateBtn" caption="POPULATE" />
                        </GridLayout>
                
                    </HorizontalLayout>
                </Panel>
                <Panel id="Available Contracts" caption="Available Contracts">
                    <VerticalLayout margin="false" styleName = "width-auto"
                                    spacing="true" >
                           
                        <VerticalLayout id="contractVertical" margin="false" 
                                        spacing="true" >
                            <!--<Table id="currentContract1" width="1100px" immediate="true" height="200px"/>-->
                            <!--      <a:ExtFilterTable  styleName="table-header-normal"
                            id="currentContractTable" width="1100px" immediate="true" height="200px" />-->
                        </VerticalLayout>
                        <HorizontalLayout margin="true" spacing="false">
                            <Button caption="RESET" id="reset2" />
                            <HorizontalLayout id="exportLayout" styleName = "width-auto">  
                            </HorizontalLayout>   
                            <Button caption="SUBMIT" id="submit" />
                            <Button caption="" id="export" />
                        </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
            </VerticalLayout>
       
</Panel>
 
