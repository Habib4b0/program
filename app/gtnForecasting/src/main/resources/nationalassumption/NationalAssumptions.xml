<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" caption="Price Type Projection" width="145%" styleName="textbold">
    <VerticalLayout spacing="true" margin="true" immediate="true"
                    width="145%">

        <HorizontalLayout spacing="true" margin="true"
                          immediate="true">
            <GridLayout spacing="true" margin="false" immediate="true"
                        rows="2" columns="2">
                <Label caption="Price Type: " contentMode="HTML" />
                <ComboBox id="priceTypeDdlb" nullSelectionAllowed="false"
                          immediate="true" />
                 <Label caption="Growth Compounding:" contentMode="HTML" />
                <OptionGroup id="cpiCompounding" enabled="true"
                                         immediate="true"  styleName="horizontal" />
            </GridLayout>

            <Panel caption="Baseline Period Range">
                 <HorizontalLayout spacing="true" margin="true"
                          immediate="true">
                <GridLayout spacing="true" margin="false" immediate="true"
                            rows="1" columns="4" width="599px" height="32px">
                    <Label caption="Start Period:" contentMode="HTML" width="56px"/>
                    <ComboBox id="baselineStartPeriod" nullSelectionAllowed="true"
                               inputPrompt="-Select One-" immediate="true"/>

                    <Label caption="End Period: " contentMode="HTML" width="56px"/>
                    <ComboBox id="baselineEndPeriod" nullSelectionAllowed="true"
                              inputPrompt="-Select One-" immediate="true"/>
                </GridLayout>
        </HorizontalLayout>
            </Panel>

            <Panel caption="Rolling Average Period Range">
                 <HorizontalLayout spacing="true" margin="true"
                          immediate="true">
                <GridLayout spacing="true" margin="false" immediate="true"
                            rows="1" columns="4" width="599px" height="32px">
                    <Label caption="Start Period:" contentMode="HTML" width="55px"/>
                    <ComboBox id="rollingStartPeriod" nullSelectionAllowed="true"
                              inputPrompt="-Select One-" immediate="true" />
                    <Label caption="End Period: " contentMode="HTML" width="55px"/>
                    <ComboBox id="rollingEndPeriod" nullSelectionAllowed="true"
                              inputPrompt="-Select One-" immediate="true" />
                </GridLayout>
                 </HorizontalLayout>
            </Panel>

        </HorizontalLayout>

        <HorizontalLayout spacing="true" margin="false"
                          immediate="true" >
            <Panel caption="Baseline Calculation" styleName="textbold">
                <HorizontalLayout spacing="true" margin="true"
                                  immediate="true">

                    <Panel caption="Baseline Methodology" styleName="na-baseline-methodology" width = "50%" height="227px">
                        <VerticalLayout spacing="true" margin="true"
                                        immediate="true" height="216px">
                            <OptionGroup id="baselineMethodology" enabled="true"
                                         immediate="true" styleName="vetrical" />
                        </VerticalLayout>
                    </Panel>
                        <VerticalLayout caption="Periods for Baseline" id="vLayout" spacing="false" margin="false" width = "50%" height="227px">
                         
                        </VerticalLayout>
                </HorizontalLayout>
            </Panel>

            <Panel caption="Forecast Calculation"  immediate="true" styleName="textbold">
                <HorizontalLayout spacing="true" margin="true"
                                  immediate="true" height="288px">
                    <Panel caption="Forecast Methodology" width="88%" height="260px">
                            <GridLayout id="forecastMethodologyLayout" spacing="false" margin="false" immediate="true"
                                        rows="7" columns="2">
                            </GridLayout>
                    </Panel>
                        <VerticalLayout caption="Periods for Rolling Average" id="vLayoutAvg" spacing="false" margin="false" height="227px">
                        </VerticalLayout>
                    <Panel caption="Effective Date" width="88%">
                        <GridLayout spacing="true" margin="true" immediate="true"
                                    rows="2" columns="2"  height= "216px" width="332px">

                            <Label caption="Start Period:" contentMode="HTML" width="64px"/>
                            <ComboBox id="effectiveStartPeriod"
                                      nullSelectionAllowed="true" inputPrompt="-Select One-" immediate="true"/>

                            <Label caption="End Period:" contentMode="HTML" />
                            <ComboBox id="effectiveEndPeriod" nullSelectionAllowed="true"
                                      inputPrompt="-Select One-" immediate="true" />
                        </GridLayout>
                    </Panel>
                </HorizontalLayout>

            </Panel>
        </HorizontalLayout>
		
        <HorizontalLayout spacing="true" margin="false"
                          immediate="true">
            <Button id="populateBtn" caption="POPULATE" />
            <Button id="resetBtn" caption="RESET" />
            <Button id="ndcBtn" caption="NEW NDC" />
        </HorizontalLayout>
			
        <HorizontalLayout spacing="true" margin="false"
                          immediate="true">
            <Table id="priceTypesTable" pageLength="8" immediate="true"
                   caption="Price Types" width="1606px" styleName="textbold"/>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
