<VerticalLayout id="root" spacing="true" margin="true" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield"
                xmlns:customTable="urn:import:org.asi.ui.extfilteringtable"
                xmlns:errorMsg="urn:import:com.stpl.app.ui.errorhandling"   >      
    <errorMsg:ErrorLabel id="errorLB" />
    
    <Panel id="priceInfoLayout" caption="Price Information" >
        <VerticalLayout margin="true">
            <HorizontalLayout id="hLayout" styleName="responsiveTabGrid">
                <CssLayout id="cssLayout" width="100%" height="100%">
                    
                    <Label id="itemPricingQualifierNameLB" styleName= "mandatory" value="Pricing Qualifier Name" contentMode="HTML" />
                    <ComboBox id="itemPricingQualifierNameDDLB" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                    <Label id="itemPriceLB" styleName= "mandatory" value="Item Price" contentMode="HTML" />
                    <TextField id="itemPrice" inputPrompt="" />
                    
                    <Label id="pricingCodeStatusLB" styleName= "mandatory"  value="Pricing Status" contentMode="HTML" />
                    <ComboBox id="pricingCodeStatus" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                    
                    <Label id="itemUomLB" styleName= "mandatory" value="Item UOM"
                           contentMode="HTML" />
                    <ComboBox id="itemUom" nullSelectionAllowed="false"
                              inputPrompt="-Select One" immediate="true" /> 
                    
                     <Label id="startDateLB" styleName= "mandatory" value="Start Date"
                           contentMode="HTML" />
                    <PopupDateField id="startDate" />  
                    
                    <Label id="endDateLB" value="End Date"
                           contentMode="HTML" />
                    <PopupDateField id="endDate" />  
                    
                    
                    
                    <Label id="entityCodeLB" value="Entity Code" contentMode="HTML"  />
                    <b:CustomTextField id="entityCode" styleName="searchicon" 
                                       immediate="true" enable="true" />
                    <Label id="entityCodeNameLB" value="Entity Code Name" contentMode="HTML" />
                    <b:CustomTextField id="entityCodeName" immediate="true" enable="true" />
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>
     <HorizontalLayout id="attachBtnLayout" spacing="true" >
    <Button id="btnPopulate" caption="Attach" />
    </HorizontalLayout>
    <Panel id="tablePanel" caption="Results" >
        <customTable:ExtFilterTable id="pricingTable" immediate="true" /> 
    </Panel>
    <!--<Label  value="   " contentMode="HTML" />-->
    <HorizontalLayout id="BtnLayout">
        <Button id="removeBtn" caption="Remove" />
        <Button id="excelExport"  />
    </HorizontalLayout>       
</VerticalLayout>
