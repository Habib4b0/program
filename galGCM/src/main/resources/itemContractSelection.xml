<Panel id="startingPanel" xmlns:a="urn:import:org.asi.ui.extfilteringtable"  >
    <VerticalLayout  id="mainLayout" margin="false"
                         spacing="false"  >
        <Panel caption="Selection Criteria" >
            <HorizontalLayout margin="true"
                                          spacing="true" >
                <Label Value="Item No: " contentMode="HTML" width="57px" />
                <TextField id="itemNo" inputPrompt="" />

                <Label Value="Item Name: " contentMode="HTML" width="78px" />
                <TextField id="itemName" inputPrompt="" />

                <Label Value="Item Desc: " contentMode="HTML" width="70px" />
                <TextField id="itemDesc" inputPrompt="" />

                <Label Value="Therapeutic Class: " contentMode="HTML" width="124px"/>
                <TextField id="therapeuticClass" inputPrompt="" />

                <Label Value="Brand: " contentMode="HTML" width="45px"/>
                <TextField id="brand" inputPrompt="" />

            </HorizontalLayout>
        </Panel>

        <Panel  caption="Item Search" width="100%" >
            <VerticalLayout  id="searchCri" margin="false"
                                         spacing="false"  >
                <HorizontalLayout margin="true"
                                                  spacing="true">

                    <GridLayout columns="2"
                                                    rows="1" spacing="true">
                        <GridLayout margin="true" spacing="true" columns="6"
                                                            rows="4">

                            <Label Value="Contract Holder:" contentMode="HTML" width="110px" />
                            <TextField id="contractHolder" inputPrompt="" />

                            <Label Value="Market Type:" contentMode="HTML" width="87px" />
                            <ComboBox id="marketType"  nullSelectionAllowed="true" inputPrompt="-Select One-"
                                                                  immediate="true" styleName="comboxsize"/>

                            <Label Value="Company Family Plan:" contentMode="HTML" width="147px"/>
                            <TextField id="cfp" inputPrompt="" />

                            <Label Value="Contract No:" contentMode="HTML" width="84px" />
                            <TextField id="contractNo" inputPrompt="" />

                            <Label Value="Start Date: " contentMode="HTML" width="71px" />
                            <PopupDateField id="startDate" dateFormat="dd/M/yyyy" />

                            <Label Value="Item Family Plan:" contentMode="HTML" width="114px" />
                            <TextField id="ifp" inputPrompt="" />

                            <Label Value="Contract Name:" contentMode="HTML" width="105px" />
                            <TextField id="contractName" inputPrompt="" />

                            <Label Value="End Date: " contentMode="HTML" width="65px" />
                            <PopupDateField id="endDate" dateFormat="dd/M/yyyy" />

                            <Label Value="Price Schedule:" contentMode="HTML" width="103px" />
                            <TextField id="priceSchedule" inputPrompt="" />

                            <Label Value="Customer No:" contentMode="HTML" width="92px" />
                            <TextField id="customerNo" inputPrompt="" />

                            <Label Value="Customer Name:" contentMode="HTML" width="113px" />
                            <TextField id="customerName" inputPrompt="" />

                            <Label Value="Rebate Schedule:" contentMode="HTML" width="117px"/>
                            <TextField id="rebateSchedule" inputPrompt="" />
                        </GridLayout>
                        <Panel id="aliasDetails" caption="Alias Details">
                            <GridLayout id="gridLayout" spacing="true" margin="true"
                                                                    immediate="true" columns="4" rows="2">
                                <Label Value="Type: " contentMode="HTML" />
                                <ComboBox id="typeDdlb" nullSelectionAllowed="false" inputPrompt="-Select One-"
                                                                          immediate="true" styleName="comboxsize" />
                                <Label Value="From: " contentMode="HTML" />
                                <PopupDateField id="fromDate" dateFormat="dd/M/yyyy" />

                                <Label Value="Number:" contentMode="HTML" />
                                <TextField id="number" inputPrompt="" /> 

                                <Label Value="To: " contentMode="HTML" />
                                <PopupDateField id="toDate" dateFormat="dd/M/yyyy" />
                            </GridLayout>
                        </Panel>
                    </GridLayout>
                </HorizontalLayout>
                <HorizontalLayout margin="true" spacing="false">
                    <Button caption="RESET" id="resetBtn" />
                    <Button caption="SEARCH" id="searchBtn" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel id="MassUpdatePanel1" caption="Mass Update">
            <HorizontalLayout id="horizontalLayout3" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="MassUpdateLayout" immediate="true" columns="10" rows="1">
                    <OptionGroup multiSelect="false" id="massUpdateRadio" immediate="true" enable="true" styleName = "horizontal"/>
                    <Label Value="Field:" contentMode="HTML" />
                    <ComboBox id="field" immediate="true" width="150px"/>
                    <Label Value="Value:" contentMode="HTML" />
                    <TextField id="massUpdateValue" immediate="true" width="150px"/>
                    <Label Value="Start Date: " contentMode="HTML" />
                    <PopupDateField id="massStartDate" dateFormat="dd/mm/yyyy" />
                    <Label Value="End Date: " contentMode="HTML" />
                    <PopupDateField id="massEndDate" dateFormat="dd/mm/yyyy" />
                    <Button id="populateBtn" caption="POPULATE" />
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
        
        <Panel id="currentDetails" caption="Add Item Details">
            <VerticalLayout id="contractVertical" margin="false"
                                    spacing="true" >
                <Table id="currentContractTable" width="1100px" immediate="true" height="200px"/>
                <!--      <a:ExtFilterTable  styleName="table-header-normal"
                id="currentContractTable" width="1100px" immediate="true" height="200px" />-->
                    
                <HorizontalLayout margin="true" spacing="false">
                    <Button caption="RESET" id="resetBtncur" />
                    <Button caption="SUBMIT" id="submitBtncur" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel id="componentinformation" caption="Component Information">
            <VerticalLayout id="componentsVertical" margin="false"
                                    spacing="true" >
                <GridLayout margin="true" spacing="true" columns="10"
                                            rows="2">
                    <Label Value="Component Selection:" contentMode="HTML" />
                    <ComboBox id="componentselection" immediate="true" width="150px"/>
                    <Label Value="RS Number:" contentMode="HTML" width="110px" />
                    <TextField id="rsNumber" inputPrompt="" /> 

							<Label Value="Status :" contentMode="HTML" width="110px" />
							<TextField id="status" inputPrompt="" />                                   
                
							<Label Value="Rebate Frequency:" contentMode="HTML" width="110px" />
							<TextField id="rebateFrequency" inputPrompt="" />
      <Label Value="Start Date: " contentMode="HTML" width="71px" />
                            <PopupDateField id="componentstartDate" dateFormat="dd/M/yyyy" />
              <Label Value="RS ID:" contentMode="HTML" width="110px" />
	<TextField id="rsId" inputPrompt="" />                                   
               <Label Value="RS Name:" contentMode="HTML" width="110px" />
		<TextField id="rsName" inputPrompt="" />                                   
                 <Label Value="RAR Type" contentMode="HTML" width="110px" />
                <TextField id="rarType" inputPrompt="" />                                   
                <Label Value="Basis :" contentMode="HTML" width="110px" />
		<TextField id="basis" inputPrompt="" />                                   
                <Label Value="End Date: " contentMode="HTML" width="65px" />
                  <PopupDateField id="componentendDate" dateFormat="dd/M/yyyy" />
                </GridLayout>
                <Table id="componentinforamtiontable" width="1100px" immediate="true" height="200px"/>
               <Button caption="EXPORT" id="exportBtn" />

             
                                 
            </VerticalLayout>
        </Panel>
           <HorizontalLayout margin="true"
                                          spacing="true">
             <Button caption="CLOSE" id="closeBtn" />
              <Button caption="NEXT" id="nextBtn" />    
           </HorizontalLayout>
    </VerticalLayout>
</Panel>

