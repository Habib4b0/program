<Panel xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui">
    <VerticalLayout margin="true" spacing = "true" width="100%" height="100%">
       
        <Panel caption="Details" width="100%" height="100%">
            <VerticalLayout spacing="true">
                <Panel id="addPanel" width="100%" height="100%" >
                    <HorizontalLayout id="horizontalDetailsLayout" spacing="true" margin="true">
                        <Label id="labelMassUpdate" value="Mass Update :" immediate="true"   />
            
                        <Label id="labelField" value="Field" immediate="true"   />
                        <ComboBox id="massfieldDdlb" enabled="true" immediate="true" />
            
                        <Label id="labelValue" value="Value" immediate="true"  />
                        <TextField id="massValue" enable="true" immediate="true" />
                    
                        <ComboBox id="massValueDdlb" enable="true" immediate="true" />
                        <Button id="populateBtn" caption="POPULATE" />
                        <Label value="" immediate="true" width="100px" />
                        <Label id="labelView" value="View" immediate="true"  />
                        <OptionGroup id="viewOpg" enable="true" immediate="true" styleName="horizontal" width="245px"/>
                    </HorizontalLayout>
                </Panel>
                <VerticalLayout  id="resultsTableLayout" width="100%" height="100%">
                </VerticalLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout id="searchFormLayout" spacing="true">
            <Button id="addBtn" caption="ADD" />
            <Button id="editBtn" caption="EDIT" />
            <Button id="viewBtn" caption="VIEW" />
            <Button id="copyBtn" caption="COPY" />
            <Button id="deleteBtn" caption="DELETE" />
            <Button id="excelBtn" />
        </HorizontalLayout>
        <HorizontalLayout id="addFormLayout" width="100%" spacing="true">
            <Button id="resetLineBtn" caption="RESET" />
            <Button id="addLineBtn" caption="ADD LINE" />
            <Button id="removeLineBtn" caption="REMOVE LINE" />
            <Button id="copyLineBtn" caption="COPY LINE" />
            <Button id="saveBtn" caption="SAVE" />
            <Button id="closeBtn" caption="CLOSE" />
            <Button id="exportBtn" caption="" styleName="rightalignbutton"/>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
