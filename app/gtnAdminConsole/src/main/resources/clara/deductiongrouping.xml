<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling">

   <VerticalLayout margin="true" spacing="true" >
        <p:ErrorLabel id="errorMsg"/>
        <Panel caption="Data Panel">
            <VerticalLayout  id="Deduction Grouping" styleName = "responsiveTabGrid">
                <HorizontalLayout spacing="true" styleName="responsiveTabGrid" >
                    <CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
			
                        <Label id="discountNameLb" value="Discount Name" contentMode="HTML" immediate="true"/>
			<TextField id="discountName" enabled="true" immediate="true" />
			
                        <Label id="discountNoLb" value="Discount No"  contentMode="HTML" immediate="true"/>
			<TextField id="discountNo" enabled="true" immediate="true" />
			
                        <Label id="discountDescLb" value="Discount Desc" contentMode="HTML" immediate="true"/>
			<TextField id="discountDesc" enabled="true" immediate="true" /> 
                 </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>  
        
        <Panel caption="Search Panel" id = "searchPanel">
            <VerticalLayout  id="searchVLayout" styleName = "responsiveTabGrid">
                <HorizontalLayout spacing="true" styleName="responsiveTabGrid" >
                    <CssLayout id="searchCssLayout" immediate="true" width="100%" height="100%">
                        
                           <Label id="contractNoLb" value="Contract No" contentMode="HTML" immediate="true"/>
			<TextField id="contractNo" enabled="true" immediate="true" />
                        
                         <Label id="contractNameLb" value="Contract Name" contentMode="HTML" immediate="true"/>
			<TextField id="contractName" enabled="true" immediate="true" />
                        
                         <Label id="itemNoLb" value="Item No" contentMode="HTML" immediate="true"/>
			<TextField id="itemNo" enabled="true" immediate="true" />
                        
                         <Label id="itemNameLb" value="Item Name" contentMode="HTML" immediate="true"/>
			<TextField id="itemName" enabled="true" immediate="true" />
                        
                        <Label id="customerNoLb" value="Customer No" contentMode="HTML" immediate="true"/>
			<TextField id="customerNo" enabled="true" immediate="true" />
                        
                        <Label id="customerNameLb" value="Customer Name" contentMode="HTML" immediate="true"/>
			<TextField id="customerName" enabled="true" immediate="true" />
                        
                          <Label id="tradingPartnerLb" value="Trading Partner" contentMode="HTML" immediate="true"/>
			<TextField id="tradingPartner" enabled="true" immediate="true" />
                        
                        <Label id="marketTypeLb" value="Market Type" contentMode="HTML"  />
                        <ComboBox id="contractType" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />  
                        
                         <Label id="categoryTypeLb" value="Category Type" contentMode="HTML"  />
                        <ComboBox id="categoryType" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" /> 
                        
                        <Label id="programTypeLb" value="Program Type" contentMode="HTML"  />
                        <ComboBox id="programType" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />  
                        
                        <Label id="udc2DdlbLb" value="UDC2" contentMode="HTML"  />
                        <ComboBox id="udc2Ddlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />   
                        
                           <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid" >
            <CssLayout immediate="true" width="100%" height="100%">
                <Button id="searchBtn" caption="SEARCH" immediate="true"/>
                <Button id="resetButton" caption="RESET" immediate="true" />
            </CssLayout>
            </HorizontalLayout>       
                                                                                                                            
                 </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        
        
        <Panel caption="Available Rebate" id = "availableRebatePanel" >
            <VerticalLayout id="tableLayout">
                <HorizontalLayout id="controlLayout"/>
            </VerticalLayout>            
        </Panel>
        
          <HorizontalLayout id = "addBtnsHLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
            <CssLayout immediate="true" width="100%" height="100%">
                <Button id="addBtn" caption="ADD" immediate="true"/>
                <Button id="addallBtn" caption="ADD ALL" immediate="true" />
                 <Button id="availableRebateExport" immediate="true" primaryStyleName="link" />
            </CssLayout>
        </HorizontalLayout>
        
         <Panel caption="Selected Rebate"  >
            <VerticalLayout id="tableLayout1">
                <HorizontalLayout id="controlLayout1"/>
            </VerticalLayout>            
        </Panel>
        
        <HorizontalLayout id = "removeBtnsHLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
            <CssLayout immediate="true" width="100%" height="100%">
                <Button id="removeBtn" caption="REMOVE" immediate="true"/>
                <Button id="removeallBtn" caption="REMOVE ALL" immediate="true" />
                <Button id="selectedRebateExport" immediate="true" primaryStyleName="link" />         
            </CssLayout>
        </HorizontalLayout> 
        
          <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid" >
            <CssLayout immediate="true" width="100%" height="100%">
                <Button id="backBtn"  caption="BACK" immediate="true"/>
                <Button id="resetBtn" caption="RESET" immediate="true"/> 
                <Button id="saveBtn" caption="SAVE" immediate="true"/>
            </CssLayout>
        </HorizontalLayout>
                                                   
    </VerticalLayout>
</Panel>