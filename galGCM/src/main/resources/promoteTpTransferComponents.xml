<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <HorizontalLayout id="horizonatalLayout1" spacing="false" margin="false" immediate="true">
        <VerticalLayout id="transferCompVerticalLayout" spacing="true" margin="true" immediate="true">
            <Panel id="transferCompPanel" caption="Contract Component Results " width="900px">
                <HorizontalLayout>
                    <VerticalLayout>
                        <VerticalLayout id="transferCompPanelTableLayout" spacing="true" margin="false" immediate="true">
                        </VerticalLayout>
                        <HorizontalLayout>
                            <Button id="excelBtn1" primaryStyleName="link"/>
                            <Button id="populateBtn1" caption="POPULATE" />
                            <Label caption="Component Type: " contentMode="HTML" />
                            <ComboBox id="componentTypeDdlb" immediate="true" width="205px"/>
                        </HorizontalLayout>
                    </VerticalLayout>
                </HorizontalLayout>
            </Panel>
            <Panel id="componentInformationPanel" caption="Component Information" width="900px">
                <HorizontalLayout id="componentInformationHorizaontalLayout" spacing="true" margin="true" immediate="true">
                    <GridLayout spacing="true"  id="componentInfoRebateLayout" immediate="true" columns="6" rows="3">
                        <Label caption="RS ID: " contentMode="HTML" />
                        <TextField id="rebateScheduleId" immediate="true" />
                        <Label caption="Status: " contentMode="HTML" />
                        <TextField id="status" immediate="true" />
                        <Label caption="Rebate Frequency: " contentMode="HTML" />
                        <TextField id="rebateFrequency" immediate="true" />
                        <Label caption="RS Number: " contentMode="HTML" />
                        <TextField id="rsNumber" immediate="true" />
                        <Label caption="Start Date: " contentMode="HTML" />
                        <TextField id="startDate" immediate="true" />
                        <Label caption="RAR Type: " contentMode="HTML" />
                        <TextField id="rarType" immediate="true" />
                        <Label caption="RS Type: " contentMode="HTML" />
                        <TextField id="rsType" immediate="true" />
                        <Label caption="RS Name: " contentMode="HTML" />
                        <TextField id="rsName" immediate="true" />
                        <Label caption="End Date: " contentMode="HTML" />
                        <TextField id="endDate" immediate="true" />
                        <Label caption="Basis: " contentMode="HTML" />
                        <TextField id="basis" immediate="true" />
                    </GridLayout>
                    <GridLayout spacing="true"  id="componentInfoIfpLayout" immediate="true" columns="6" rows="2">
                        <Label caption="IFP ID:" contentMode="HTML" />
                        <TextField id="ifpId" immediate="true" />
                        <Label caption="IFP Number:" contentMode="HTML" />
                        <TextField id="ifpNo" immediate="true" />
                        <Label caption="IFP Name:" contentMode="HTML" />
                        <TextField id="ifpName" immediate="true" />
                        <Label caption="IFP Status:" contentMode="HTML" />
                        <TextField id="ifpStatus" immediate="true"  />
                        <Label caption="IFP Start Date:" contentMode="HTML" />
                        <TextField id="ifpStartDate" immediate="true" />
                        <Label caption="File Name:" contentMode="HTML" />
                        <TextField id="ifpfileName" immediate="true" />
                    </GridLayout>
                    <GridLayout spacing="true"  id="componentInfoPsLayout" immediate="true" columns="6" rows="2">
                        <Label caption="PS ID:" contentMode="HTML" />
                        <TextField id="psId" immediate="true" />
                        <Label caption="PS Number:" contentMode="HTML" />
                        <TextField id="psNo" immediate="true" />
                        <Label caption="PS Name:" contentMode="HTML" />
                        <TextField id="psName" immediate="true" />
                        <Label caption="PS Status:" contentMode="HTML" />
                        <TextField id="psStatus" immediate="true" />
                        <Label caption="PS Start Date:" contentMode="HTML" />
                        <TextField id="psStartDate" immediate="true" />
                        <Label caption="File Name:" contentMode="HTML" />
                        <TextField id="psfileName" immediate="true" />
                    </GridLayout>
                </HorizontalLayout>
            </Panel>
            <Panel id="componentDetailsPanel" caption="Component Details" width="900px">
                <VerticalLayout>
                    <VerticalLayout id="componentDetailsTableLayout" spacing="true" margin="false" immediate="true">
                    </VerticalLayout>
                    <HorizontalLayout>
                        <Button id="excelBtn2" primaryStyleName="link"/>
                        <Button id="addToTreeBtn1" caption="ADD TO TREE" />
                         <OptionGroup multiSelect="false" id="componentitems" immediate="true" enable="true" styleName = "horizontal"/>
<!--                        <CheckBox id="companyFamilyPlan" immediate="true" />
                        <Label caption="Company Family Plan" contentMode="HTML" />
                        <CheckBox id="itemFamilyPlan" immediate="true" />
                        <Label caption="Item Family Plan" contentMode="HTML" />
                        <CheckBox id="priceSchedule" immediate="true" />
                        <Label caption="Price Schedule" contentMode="HTML" />
                        <CheckBox id="rebateSchedule" immediate="true" />
                        <Label caption="Rebate Schedule" contentMode="HTML" />-->
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
        </VerticalLayout>
        <VerticalLayout id="contractDashboardVerticalLayout" spacing="true" margin="true" immediate="true">
            <Panel id="contractDashboardResultsPanel" caption="Contract Dashboard Results " width="650px">
                <VerticalLayout>
                    <!--                    <VerticalLayout id="contractDashboardResultsTableLayout" spacing="true" margin="false" immediate="true">
                    </VerticalLayout>-->
                    <TreeTable id="dashboardResultsTable" 
                               styleName="table-header-normal"  pageLength="8" immediate="true" />
                    <HorizontalLayout>
                        <Button id="removeBtn2" caption="REMOVE" />
                        <Button id="populateBtn2" caption="POPULATE" />
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
            <Panel id="contractComponentDetailsPanel" caption="Contract Component Details" spacing="true" width="650px">
                <VerticalLayout spacing="true" immediate="true">
                    <GridLayout spacing="true"  id="cfpDetailsGrid" immediate="true" columns="4" rows="1">
                        <Label caption="CFP No:" contentMode="HTML" />
                        <TextField id="cfpDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                        <Label caption="CFP Name:" contentMode="HTML" />
                        <TextField id="cfpDetailsName" inputPrompt="" immediate="true" visible="true"/>
                    </GridLayout>
                    <GridLayout spacing="true"  id="ifpDetailsGrid" immediate="true" columns="4" rows="1">
                        <Label caption="IFP No:" contentMode="HTML" />
                        <TextField id="ifpDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                        <Label caption="IFP Name:" contentMode="HTML" />
                        <TextField id="ifpDetailsName" inputPrompt="" immediate="true" visible="true"/>
                    </GridLayout>
                    <GridLayout spacing="true"  id="psDetailsGrid" immediate="true" columns="4" rows="1">
                        <Label caption="PS No:" contentMode="HTML" />
                        <TextField id="psDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                        <Label caption="PS Name:" contentMode="HTML" />
                        <TextField id="psDetailsName" inputPrompt="" immediate="true" visible="true"/>
                    </GridLayout>
                    <GridLayout spacing="true"  id="rsDetailsGrid" immediate="true" columns="4" rows="1">
                        <Label caption="RS No:" contentMode="HTML" />
                        <TextField id="rsDetailsNo" inputPrompt="" immediate="true" visible="true"/>
                        <Label caption="RS Name:" contentMode="HTML" />
                        <TextField id="rsDetailsName" inputPrompt="" immediate="true" visible="true"/>
                    </GridLayout>
                    <HorizontalLayout>
                        <a:ExtFilterTable id="contractComponentDetailsTable"  height="470px" pageLength="8" immediate="true" />
                    </HorizontalLayout>
                </VerticalLayout>
            </Panel>
        </VerticalLayout>
    </HorizontalLayout>
</Panel>
