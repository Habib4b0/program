<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling" xmlns:a="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout spacing="true" margin="true" immediate="true" >
        <Panel caption="File Information">
            <VerticalLayout styleName = "responsiveTabGrid">
                <HorizontalLayout spacing="true" styleName="responsiveGridFileMgntSearch" margin="true" >
                    <CssLayout id="cssLayout" immediate="true" styleName="minWidth50px"  width="100%" height="100%">
                        <HorizontalLayout  styleName="spaceLayout"> 
                            <Label value="File Type" contentMode="HTML" />
                            <TextField id="fileType"  immediate="true" />
                            <Label value="File Name" contentMode="HTML" />
                            <TextField id="fileName"  immediate="true" />
                            <Label value="Country" contentMode="HTML" />
                            <TextField id="country"  immediate="true" />  
                            <Label value="Version" contentMode="HTML" />
                            <TextField id="version"  immediate="true" />
                        </HorizontalLayout  >
                        <HorizontalLayout  styleName="spaceLayout">
                            <Label value="Effective Date" contentMode="HTML" />
                            <TextField id="effectiveDate"  immediate="true" />
                            <Label value="Active From" contentMode="HTML" />
                            <TextField id="activeDateFrom"  immediate="true" />
                            <Label value="Active To" contentMode="HTML" />
                            <TextField id="activeDateTo"  immediate="true" />           
                        </HorizontalLayout  >
                    </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel caption="Summary- Auto Update History">
            <VerticalLayout id="summaryTableLayout">
                <HorizontalLayout id="summaryControlLayout"/>
            </VerticalLayout>
        </Panel> 
        <Panel caption="Details- Auto Update History">
            <VerticalLayout id="detailsTableLayout">
                <HorizontalLayout id="detailsControlLayout"/>
            </VerticalLayout>
        </Panel> 
        <HorizontalLayout spacing="true" margin="false">
            <Button id="close" caption="CLOSE" immediate="true"/>
            <Button id="excelExport" immediate="true" primaryStyleName="link" />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>