<?xml version="1.0" encoding="UTF-8"?>
<VerticalLayout styleName="custom-margin" spacing="true" immediate="true" width="100%" height="100%" 
                xmlns:b="urn:import:org.asi.ui.customtextfield" xmlns:c="urn:import:org.asi.ui.customcombobox" >
    <!--xmlns:ef="urn:import:com.stpl.ifs.ui"-->
    
	<Panel caption="Summary Search">
		<VerticalLayout margin="true" immediate="true">
			<HorizontalLayout immediate="true" styleName="responsiveTabGrid">
				<CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
				
                                        <Label id="businessProcessLb" value="Business Process" styleName="mandatory" contentMode="HTML" />
					<c:CustomComboBox id="businessProcess" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                                        
                                        <Label id="workflowIdLb" value="Workflow ID" contentMode="HTML" />
					<TextField id="workflowId" enabled="true" />
                                        
                                        <Label id="createdDateFromLb" value="Created-From" contentMode="HTML" />
					<PopupDateField id="creationDateRangeFrom" styleName="comboxsize" enable="true" immediate="true" />
                                        
                                        <Label id="approvedDateFromLb" value="Approved-From" contentMode="HTML" />
					<PopupDateField id="approvedDateRangeFrom" styleName="comboxsize" enable="true" immediate="true" />
					
                                        <Label id="privateViewLb" value="Private View" contentMode="HTML" immediate="true" />
					<b:CustomTextField id="privateView" enabled="true" immediate="true" />
                                        
                                        <Label id="workflowNameLb" value="Workflow Name" contentMode="HTML" />
					<TextField id="workflowName" enabled="true" />
                                        
                                        <Label id="createdDateToLb" value="Created-To" contentMode="HTML" />
					<PopupDateField id="creationDateRangeTo" styleName="comboxsize" enable="true" immediate="true" />
                                        
                                        <Label id="approvedDateToLb" value="Approved-To" contentMode="HTML" />
					<PopupDateField id="approvedDateRangeTo" styleName="comboxsize" enable="true" immediate="true" />
					
					<Label id="publicViewLb" value="Public View" contentMode="HTML" immediate="true"/>
					<b:CustomTextField id="publicView" enabled="true" immediate="true" />
					
<!--					<Label id="statusLb" value="Status" contentMode="HTML" />
					<c:CustomComboBox id="status" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
					
                                        <Label id="businessUnitLb" value="Business Unit" contentMode="HTML" />
                                        <c:CustomComboBox id="businessUnit" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />-->

                                        <Label id="workflowDescriptionLb" value="Workflow Description" contentMode="HTML" />
                                        <TextField id="workflowDescription" enabled="true" />

                                        <Label id="createdByLb" value="Created By" contentMode="HTML" />
                                        <b:CustomTextField id="createdBy" styleName="comboxsize" enable="true" immediate="true" />

                                        <Label id="approvedByLb" value="Approved By" contentMode="HTML" />
                                        <b:CustomTextField id="approvedBy" styleName="comboxsize" enable="true" immediate="true" />
                                        
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>
        
    <Panel caption="Detail Search" id = "detailSearch">
        <VerticalLayout margin="true" immediate="true">
            <HorizontalLayout immediate="true" styleName="responsiveTabGrid">
                <CssLayout id="cssLayout1" immediate="true" width="100%" height="100%">
				
                    <Label id="contractIdLb" value="Contract ID" contentMode="HTML" immediate="true" />
                    <TextField id="contractId" enabled="true" immediate="true" />
					
                    <Label id="contractNoLb" value="Contract No" contentMode="HTML" immediate="true"/>
                    <TextField id="contractNo" enabled="true" immediate="true" />
					
                    <Label id="contractNameLb" value="Contract Name" contentMode="HTML" />
                    <TextField id="contractName" enabled="true" immediate="true" />
                                        
                    <Label id="contractTypeLb" value="Contract Type" contentMode="HTML" />
                    <c:CustomComboBox id="contractType" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
					
                    <Label id="companyIdLb" value="Company ID" contentMode="HTML" immediate="true" />
                    <TextField id="companyId" enabled="true" immediate="true" />
					
                    <Label id="companyNoLb" value="Company No" contentMode="HTML" immediate="true"/>
                    <TextField id="companyNo" enabled="true" immediate="true" />
					
                    <Label id="companyNameLb" value="Company Name" contentMode="HTML" />
                    <TextField id="companyName" enabled="true" immediate="true" />
					
                    <Label id="deductionLevelLb" value="Deduction Level" contentMode="HTML" />
                    <c:CustomComboBox id="deductionLevel" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
                                        
                    <Label id="itemIdLb" value="Item ID" contentMode="HTML" immediate="true" />
                    <TextField id="itemId" enabled="true" immediate="true" />
					
                    <Label id="itemNoLb" value="Item No" contentMode="HTML" immediate="true"/>
                    <TextField id="itemNo" enabled="true" immediate="true" />
					
                    <Label id="itemNameLb" value="Item Name" contentMode="HTML" />
                    <TextField id="itemName" enabled="true" immediate="true" />
					
                    <Label id="deductionValueLb" value="Deduction Value" contentMode="HTML" />
                    <c:CustomComboBox id="deductionValue" styleName="comboxsize" enable="true" nullSelectionAllowed="true" immediate="true" />
					
                </CssLayout>
            </HorizontalLayout>
        </VerticalLayout>
    </Panel>
        
    <HorizontalLayout immediate="true" styleName="responsiveTabGrid">
        <CssLayout id="cssLayoutBtn" immediate="true" width="100%" height="100%">
            <Button id = "search" caption = "SEARCH"/>
            <Button id = "reset" caption = "RESET"/>
            <Button id = "saveProfile" caption = "SAVE PROFILE"/>
        </CssLayout>
    </HorizontalLayout>
					
    <Panel caption="Results">
        <VerticalLayout margin="true" immediate="true" id = "resultslayout">
            <HorizontalLayout id="controlLayout"/>
        </VerticalLayout>
    </Panel>
        
    <HorizontalLayout immediate="true" styleName="responsiveTabGrid">
        <!-- If any new component is added, Changes to be made in InboxDashboard.java-->
        <CssLayout id="cssLayoutBottom" immediate="true" width="100%" height="100%">
            <Button id = "history" caption = "HISTORY"/>
            <Button id = "open" caption = "OPEN"/>
            <Button id = "view" caption = "VIEW"/>
            <Button id = "excelBtn"/>
        </CssLayout>
    </HorizontalLayout>
					
</VerticalLayout> 