<?xml version="1.0" encoding="UTF-8"?>
<Panel    xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout  spacing="true"   immediate="true" margin="true" >
        <Panel spacing="true"  immediate="true">
            <HorizontalLayout spacing="true"  immediate="true">   
                <GridLayout columns="2" rows="2" spacing="true" immediate="true">
                    <Panel caption="view" immediate="true" spacing="true">
                        <HorizontalLayout  spacing="true" margin="true" immediate="true">
                            <OptionGroup multiSelect="false" id="componentitems" immediate="true" enable="true" styleName = "horizontal"/> 
                            <Button id="generatebtn" caption="Generate" />
                        </HorizontalLayout>
                   
                    </Panel>
                    <Panel caption="Selection" immediate="true" >
                        <HorizontalLayout  spacing="true" margin="true" immediate="true"  width="1200px">
                            <GridLayout spacing="true"   immediate="true" columns="6" rows="1" >
                                <Label value="Business Unit: " contentMode="HTML" width="150px" styleName="acctmandatoryfields"/>
                                <ComboBox id="businessUnit" immediate="true" width="205px"/>  
                                <Label value="Deduction Type: " contentMode="HTML" width="150px" styleName="acctmandatoryfields"/>
                                <ComboBox id="programType" immediate="true" width="205px"/>
                                <Label value="Deduction Sub-Type: " contentMode="HTML" width="154px" styleName="acctmandatoryfields"/>
                                <ComboBox id="programsubType" immediate="true" width="205px"/>
                                <Label value="Frequency: " contentMode="HTML" styleName="acctmandatoryfields"/>
                                <ComboBox id="frequency" immediate="true" width="205px"/>
                            </GridLayout>
                        </HorizontalLayout> 
                    </Panel>
                    <Panel spacing="true"  immediate="true"  width="360px" Height="890px">
                        <VerticalLayout id='resultLayout'  spacing="true"   immediate="true" >
                            
                        </VerticalLayout> 
                    </Panel>
                    <VerticalLayout spacing="true">
                        <HorizontalLayout  spacing="true"  immediate="true">
                            <Button id="resetbtnmain" caption="RESET" />
                        </HorizontalLayout> 
                        <Panel  spacing="true" immediate="true" width="1200px" Height="870px">
                            <VerticalLayout id="main" spacing="true" immediate="true"   width="100%" Height="100%">
                               
                            </VerticalLayout>
                        </Panel>
                      
                    </VerticalLayout>
                </GridLayout>
            </HorizontalLayout>
        </Panel>
    </VerticalLayout>

</Panel>