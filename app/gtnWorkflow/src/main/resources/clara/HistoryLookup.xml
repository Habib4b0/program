<?xml version="1.0" encoding="UTF-8"?>
<Panel>
    <VerticalLayout id="verticalLayout" xmlns:ef="urn:import:org.asi.ui.extfilteringtable">
        <HorizontalLayout margin="true" spacing="true" width="100%"> 
            <Panel caption="Summary" margin="true" width="100%">
                <GridLayout id="hLayout" columns="22" rows="1" spacing="true" margin="true">
                    
                    <Label id="companyIdLb" value="Company ID"  contentMode="HTML" />
                    <TextField id="companyId" inputPrompt="" />
                    
                    <Label id="companyNoLb" value="Company No"  contentMode="HTML" />
                    <TextField id="companyNo" inputPrompt="" />
                    
                    <Label id="companyNameLb" value="Company Name"  contentMode="HTML" />
                    <TextField id="companyName" inputPrompt="" />
                    
                    <Label id="businessIdLb" value="Business Unit ID"  contentMode="HTML" />
                    <TextField id="businessUnitId" inputPrompt="" />
                    
                    <Label id="businessNoLb" value="Business Unit No"  contentMode="HTML" />
                    <TextField id="businessUnitNo" inputPrompt="" />
                    	
                    <Label id="businessNameLb" value="Business Unit Name"  contentMode="HTML" />
                    <TextField id="businessUnitName" inputPrompt="" />
                    
                    <Label value="Business Process"  contentMode="HTML" />
                    <TextField id="businessProcess" inputPrompt="" />
                
                    <Label value="Workflow ID" contentMode="HTML" />
                    <TextField id="workflowid" inputPrompt="" />
                
                    <Label value="Workflow Name"  contentMode="HTML" />
                    <TextField id="workflowName" immediate="true"/>
                    
                    <Label id="workflowDesLb" value="Workflow Desc"  contentMode="HTML" />
                    <TextField id="workflowDes" inputPrompt="" />
                    
                </GridLayout>
            </Panel>     
        </HorizontalLayout>
        
        <HorizontalLayout id="detailsTable" margin="true" spacing="true" width="50%">
            <Panel caption="History Details" id="tablepanel">
                <VerticalLayout margin="true" immediate="true" id = "resultslayout">
                    <HorizontalLayout id="controlLayout"/>
                </VerticalLayout>
            </Panel>
            <Panel caption="Attachment Details" id="tablepanel1">
                <VerticalLayout margin="true" immediate="true" id = "resultslayout1">
                    <ef:ExtFilterTable id="table" />
                </VerticalLayout>
            </Panel>
            
        </HorizontalLayout>     
         
        <HorizontalLayout margin="true" >
            <Button id="excelExport" immediate="true"/>
            <Button id="closebtn" caption="CLOSE" immediate="true"/>
    
        </HorizontalLayout>
   
    </VerticalLayout>
</Panel>




