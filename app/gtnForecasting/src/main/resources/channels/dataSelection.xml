<Panel  xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout  spacing="true" margin="true" immediate="true">
        <Panel id="panel1" caption="Projection Option">

            <HorizontalLayout id="horizontalLayout" spacing="true" margin="true"
                              immediate="true">

                <GridLayout spacing="true"  id="dsLayout"
                            immediate="true" columns="4" rows="3">
                    <Label value="Mode: " contentMode="HTML" />
                    <OptionGroup multiSelect="false" id="modeOption"
                                 immediate="true" enable="true" styleName = "horizontal"/>
                    <Label caption="Projection Name: " contentMode="HTML" />
                    <TextField id="projectionName"  width = "178px" ></TextField>

                    <Label caption="Private Views: " contentMode="HTML" />
                    <b:CustomTextField id="privateView" styleName="searchicon" />
                    <Label caption="Description: " contentMode="HTML" />
                    <TextField id="descriptionText"  width = "178px" />

                    <Label caption="Public Views: " contentMode="HTML" />
                    <b:CustomTextField id="publicView" styleName="searchicon" />
                    <Label caption="Discount: " contentMode="HTML" />
                    <ComboBox id="discountNative"
                              nullSelectionAllowed="true" description="Select One" />

                </GridLayout>

                <Panel id="timeperiod" caption="Time period">
                    <VerticalLayout  spacing = "true" margin = "true" >
                    <GridLayout id="gridLayout" spacing="true" 
                                immediate="true" columns="2" rows="2">
                        <Label caption="From: " contentMode="HTML" />
                        <ComboBox id="fromDate" dateFormat="dd/mm/yyyy" />
                        <Label caption="To: " contentMode="HTML" />
                        <ComboBox id="toDate" dateFormat="dd/mm/yyyy" />
						
                    </GridLayout>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>
        </Panel>

        <Panel id="csPanel" caption="Customer Selection">
            <VerticalLayout id="csVerticalLayout" spacing="true"
                            margin="true" immediate="true">
                <GridLayout spacing="true" id="csGridLayout"
                            immediate="true" columns="8" rows="1">
                    <Label caption="Hierarchy: " contentMode="HTML" />
                    <b:CustomTextField id="customerHierarchy" styleName="searchicon" width = "260px"/>
                    <Label value="Relationship: " contentMode="HTML" ></Label>
                    <ComboBox id="customerRelationEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" width = "240px"/>
                    <Label caption="Forecast Level: " contentMode="HTML" />
                    <ComboBox id="customerLevel" immediate="true"
                              description="Select One" width= " 339px"/>
                    <Label caption="Customer Group: " contentMode="HTML" />
                    <b:CustomTextField id="customerGroup" styleName="searchicon" />
                </GridLayout>

                <Panel id="csTable">
                    <VerticalLayout immediate="true" spacing="true" margin="true">
                        <HorizontalLayout spacing="true" 
                                          immediate="true">
                            <Label caption="Level: " contentMode="HTML" />
                            <ComboBox id="customerInnerLevel" immediate="true"
                                      description="Select One" width="240px"/>
                        </HorizontalLayout>
                        <GridLayout spacing="true" id="csGTable" 
                                    immediate="true" columns="3" rows="1">
							
                            <a:ExtFilterTable id="availableCustomer" width="400px" height="300px"  immediate="true"/>
                            <VerticalLayout spacing="true" 
                                            immediate="true">
                                <Button id="nextBtn" caption="&gt;" width="50px"></Button>
                                <Button id="preBtn" caption="&lt;" width="50px"></Button>
                                <Button id="allBtn" caption="ALL" width="50px"></Button>
                            </VerticalLayout>
                            <TreeTable id="selectedCustomer" width="400px"
                                                  styleName="table-header-normal" height="300px"  pageLength="8" immediate="true" selectable="true" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
            </VerticalLayout>
        </Panel>

        <Panel caption="Product Selection">
            <VerticalLayout spacing="true" margin="true"
                            immediate="true">
                <HorizontalLayout>
                    <GridLayout spacing="true"  immediate="true"
                            columns="2" rows="1">
                        <Label caption="Company: " contentMode="HTML" />
                        <ComboBox id="CompanyP" immediate="true"
                              description="Select one" />
                    </GridLayout>
                    <TextField id="companyView" immediate = "true" visible="false"/>
                </HorizontalLayout>
                <!--<HorizontalLayout>-->
                    <!--<VerticalLayout>-->
                        <GridLayout spacing="true" immediate="true" columns="8" rows="1">
                            <Label caption="Hierarchy: " contentMode="HTML" />
                            <b:CustomTextField id="productHierarchy" styleName="searchicon" width="240px"/>
                            <Label value="Relationship: " contentMode="HTML" width="100px" ></Label>
                            <ComboBox id="productRelationEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" width="240px"/>
                            <Label caption="Forecast Level: " contentMode="HTML" />
                            <ComboBox id="levelNativeP" immediate="true"
                              description="Select one" width="240px"/>

                            <Label caption="Product Group: " contentMode="HTML" />
                            <b:CustomTextField id="productGroup" styleName="searchicon" />

                        </GridLayout>
                    <!--</VerticalLayout>-->
                <!--</HorizontalLayout>-->
                        <Panel>
                            <VerticalLayout immediate="true"  spacing="true" margin="true">
                                <HorizontalLayout spacing="true" 
                                          immediate="true">
                                    <Label caption="Level: " contentMode="HTML" />
                                    <ComboBox id="innerLevelNativeP" immediate="true"
                                      description="Select One" width="240px"/>
                                </HorizontalLayout>
                                <GridLayout spacing="true" immediate="true" 
                                    columns="3" rows="1">
                                    <a:ExtFilterTable id="availableProduct" width="400px"
                                              styleName="table-header-normal" height="300px" pageLength="8" immediate="true" />
                                    <VerticalLayout spacing="true" 
                                            immediate="true">
                                        <Button id="nextBtnforProduct" caption="&gt;" width="50px"></Button>
                                        <Button id="preBtnforProduct" caption="&lt;" width="50px"></Button>
                                        <Button id="allBtnforProduct" caption="ALL" width="50px"></Button>
                                    </VerticalLayout>
                                    <TreeTable styleName="table-header-normal" id="selectedProduct" width="400px"
                                                  height="300px" pageLength="8" immediate="true" />
                                </GridLayout>
                            </VerticalLayout>
                        </Panel>
                    </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
