<Panel  xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" >
    
    <VerticalLayout>
            <Panel caption="Monitors Result Table">
                <VerticalLayout id="monitorsTable" spacing="true" margin="false" immediate="true">
                    <!--                <a:ExtFilterTable id="resultTable" caption="Results" selectable="true" immediate="true" />-->
                </VerticalLayout>
            </Panel>
            <Panel caption="Monitor Editor">    
                <GridLayout id="monitorEditor" spacing="true" margin="true" immediate="true" columns="2" rows="2">
                    <Panel caption="Monitor Information">

                        <GridLayout id="monitorInformation" spacing="true" margin="true" immediate="true" columns="2" rows="5">

                            <Label caption="Process Name:" contentMode="HTML" spacing="true" />
                            <TextField id="processName"  immediate="true" width="197px" />

                            <Label caption="Process Type:" contentMode="HTML" spacing="true" />
                            <ComboBox multiSelect="false" id="processType"  immediate="true" enable="true" styleName = "horizontal" width="207px"/>

                            <Label caption="Calendar:" contentMode="HTML" spacing="true" />
                            <ComboBox id="calendar" immediate="true" width="207px"/>
                            
                            <Label caption="Start Date:" contentMode="HTML" spacing="true" />
                            <PopupDateField id="startDate" immediate="true" dateFormat="dd/mm/yyyy" />
                            
                            <Label caption="End Date:" contentMode="HTML" spacing="true" />
                            <PopupDateField id="endDate" immediate="true" dateFormat="dd/mm/yyyy" />

                        </GridLayout>  

                    </Panel>
                    <Panel caption="Run Times">

                        <GridLayout id="RunTimes" spacing="true" margin="true" immediate="true" columns="5" rows="3">

                            <Label caption="Run 1:"/>
                            <ComboBox multiSelect="false" id="hours1" immediate="true"/>
                            <Label caption="Hours"/>
                            <ComboBox multiSelect="false" id="minutes1" immediate="true"/>
                            <Label caption="Minutes"/>

                            <Label caption="Run 2:"/>
                            <ComboBox multiSelect="false" id="hours2" immediate="true"/>
                            <Label caption="Hours"/>
                            <ComboBox multiSelect="false" id="minutes2" immediate="true"/>
                            <Label caption="Minutes"/>

                            <Label caption="Run 3:"/>
                            <ComboBox multiSelect="false" id="hours3" immediate="true"/>
                            <Label caption="Hours"/>
                            <ComboBox multiSelect="false" id="minutes3" immediate="true"/>
                            <Label caption="Minutes"/>
                        </GridLayout>

                    </Panel>  
                </GridLayout>
            </Panel>          
        <HorizontalLayout>
            <Button caption="ADD" id="addBtn" immediate="true" />
            <Button caption="UPDATE" id="updateBtn" immediate="true"/>   
        </HorizontalLayout>
    </VerticalLayout>
</Panel>