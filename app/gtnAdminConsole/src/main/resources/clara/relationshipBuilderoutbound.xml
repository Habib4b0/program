<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling">
    <VerticalLayout margin="true" spacing="true" >
        <p:ErrorLabel id="errorMsg"/>   
    
    
       
        <Panel caption="Search Criteria">
            <VerticalLayout  id="searchLayout" styleName = "bootstrap-search-criteria">
                <!--<HorizontalLayout spacing="true" styleName="responsiveTabGrid" >-->
                    <GridLayout id="cssLayout" columns="4" rows="4" spacing="true" immediate="true">
                        <Label id="relationshipNameLB" value="Relationship Name" contentMode="HTML" />
                        <TextField id="relationshipName" inputPrompt="" />
                        <Label id="hierarchyNameLB" value="Hierarchy Name" contentMode="HTML" />
                        <ComboBox id="hierarchyNameDDLB" nullSelectionAllowed="false"
                                  inputPrompt="-Select One" immediate="true" width="206px" /> 
                        <Label id="relationshipDescriptionLB" value="Relationship Description" contentMode="HTML" />
                        <TextField id="relationshipDescription" inputPrompt="" />
                        <Label id="startDateFromLB" value="Start Date From"
                               contentMode="HTML" />
                        <PopupDateField id="startDateFrom" /> 
                        <Label id="startDateToLB" value="Start Date To"
                               contentMode="HTML" />
                        <PopupDateField id="startDateTo" />      
                        <Label id="relationshipTypeLB" value="Relationship Type" contentMode="HTML" />
                        <OptionGroup multiSelect="false" id="relationshipType" immediate="true" enable="true" styleName = "horizontal"/>    
                        <Label id="creationDateFromLB" value="Creation Date From"
                               contentMode="HTML" />
                        <PopupDateField id="creationDateFrom" /> 
                        <Label id="creationDateToLB" value="Creation Date To"
                               contentMode="HTML" />
                               <PopupDateField id="creationDateTo" /> 
                                </GridLayout>
                                 <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid" >
                            <!--<CssLayout immediate="true" spacing="true" width="100%" height="100%">-->
                                <Button id="searchBtn" caption="SEARCH" immediate="true"/>
<!--                                 <Button id="auditSearchBtn" caption="AUDIT SEARCH" immediate="true" />-->
                            <!--</CssLayout>-->
                        </HorizontalLayout>                       
                   
                <!--</HorizontalLayout>-->
            </VerticalLayout>
        </Panel>
     
                    
        <Panel caption="Results"  >
            <VerticalLayout id="tableLayout">
                <HorizontalLayout id="controlLayout"/>
            </VerticalLayout>            
        </Panel>
        <HorizontalLayout id= "buttonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
            <Button id="outboundBtn" caption="GENERATE OUTBOUND" immediate="true"/>
            <Button id="closeBtn" caption="CLOSE" immediate="true"/>
        </HorizontalLayout>
    </VerticalLayout>
</Panel>