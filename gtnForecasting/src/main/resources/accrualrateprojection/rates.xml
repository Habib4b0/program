<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel">
    <VerticalLayout id="mainVerticalLayout" spacing="true" margin="true" immediate="true" >
        <Panel id="dataSelectionPanel" styleName = "forecast-tab" caption="Data Selection">
            <VerticalLayout styleName = "width-auto"  margin="true">  
                <HorizontalLayout spacing="true" margin="false">   
                    <GridLayout id="gridLayout" spacing="true" margin="false" immediate="true" rows="2" columns="4" >
                        <Label value="Frequency: " contentMode="HTML" styleName="labelresultalign" />
                        <ComboBox id="frequencyDdlb" immediate="true" />
                        <Label caption="Rate Basis:" contentMode="HTML" styleName="labelresultalign" />
                        <ComboBox id="rateBasisDdlb" enabled="true"  styleName="comboxsize" nullSelectionAllowed = "true" />                  
                        <Label caption="History: " contentMode="HTML" styleName="labelresultalign"/>
                        <ComboBox id="historyDdlb" enabled="true"  styleName="comboxsize" nullSelectionAllowed = "true" />
                        <Label id="Variables" caption="Variable:" contentMode="HTML" styleName="labelresultalign"/>
                        <OptionGroup  multiSelect="true" id="variables" enabled="true" styleName="horizontal"/>
                    </GridLayout>          
                    <Panel caption="Time Period" id="timePeriodPanel">                          
                        <HorizontalLayout spacing="true" margin="true" immediate="true" >
                            <Label value="From: " contentMode="HTML" width="80px" />
                            <ComboBox id="fromDdlb" immediate="true" />
                            <Label value="To: " contentMode="HTML" width="80px" />
                            <ComboBox id="toDdlb" immediate="true" />
                        </HorizontalLayout>                           
                    </Panel>
                </HorizontalLayout>     
            </VerticalLayout>
        </Panel>
        <HorizontalLayout spacing="true" margin="false"> 
            <Button id="resetBtn" caption="RESET"/>
            <Button id="generateBtn" caption="GENERATE"/>            
        </HorizontalLayout>               
        <Panel caption="Rate Results" id="tablePanel">            
            <VerticalLayout id="tableVerticalLayout" spacing="false" margin="false" immediate="true"/>                                                                  
        </Panel>	
        <Button id="excelBtn" primaryStyleName="link"/>
    </VerticalLayout>
</Panel>