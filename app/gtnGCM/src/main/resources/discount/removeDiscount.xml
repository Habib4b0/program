<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="removeVerticalLayout"
                    immediate="true">
        <!-- First Panel-->
        <Panel caption="Selection Criteria">
            <HorizontalLayout  margin="true"> 
                <Label caption="Contract No: " contentMode="HTML" />
                <TextField id="contractNo" inputPrompt="" enabled="false" />
                   
                <Label caption="Contract Name: " contentMode="HTML" />
                <TextField id="contractName" inputPrompt="" enabled="false"/>
                   
                <Label caption="Contract Type " contentMode="HTML" />
                <TextField id="contractType" inputPrompt="" enabled="false"/>
                   
                <Label caption="Start Date: " contentMode="HTML" />
                <TextField id="contractStartDate" inputPrompt="" enabled="false"/>
                   
                <Label caption="End Date " contentMode="HTML" />
                <TextField id="contractEndDate" inputPrompt="" enabled="false"/>

            </HorizontalLayout>
        </Panel>
        
        <!-- Second Panel-->
        <Panel caption="Contract Processing Dashboard" margin="true">
            <VerticalLayout width="100%">
                <HorizontalLayout width="100%">
            
                    <VerticalLayout width="60%">
                        <Panel caption="Component Selection" width="100%" height="10%">
                            <HorizontalLayout  margin="true"> 
                                <HorizontalLayout>
                                    <Label caption="Search Field: " contentMode="HTML" />
                                    <ComboBox id="searchField" immediate="true" width="205px" />
                                    <Label caption="Search Value: " contentMode="HTML" />
                                    <TextField id="searchValue" inputPrompt="" />
                                </HorizontalLayout>
                                <HorizontalLayout>
                                    <Button caption="Search" id="searchBtn" />
                                </HorizontalLayout>
                            </HorizontalLayout>
                            
                        </Panel>
                        <Panel caption="Component Results" width="100%" height="30%">
                            <VerticalLayout styleName="width-auto" >
                                <VerticalLayout id="componentResultsLayout" >
                                </VerticalLayout>
                                <HorizontalLayout>
                                    <Button caption="POPULATE" id="populateBtn" />                            
                                </HorizontalLayout>
                            </VerticalLayout>
                    
                        </Panel>
                        <Panel caption="Component Information"  width="100%" height="30%">
                            <GridLayout spacing="true" columns="10" rows="4">

                                <Label caption="RS ID:" contentMode="HTML" />
                                <TextField id="rsId" inputPrompt="" />
                     
                                <Label caption="Status:" contentMode="HTML" />
                                <TextField id="status" inputPrompt="" />
                    
                                <Label caption="Rebate Frequency:" contentMode="HTML" />
                                <TextField id="rebateFrequency" inputPrompt="" />
                    
                                <Label caption="RS Number:" contentMode="HTML" />
                                <TextField id="rsNumber" inputPrompt="" />
                    
                                <Label caption="Start Date: " contentMode="HTML" />
                                <PopupDateField id="startDate" dateFormat="dd/M/yyyy" />
                    
                                <Label caption="RAR Type:" contentMode="HTML" />
                                <TextField id="rarType" inputPrompt="" />
                    
                                <Label caption="RS Name:" contentMode="HTML" />
                                <TextField id="rsName" inputPrompt="" />
                    
                                <Label caption="End Date: " contentMode="HTML" />
                                <PopupDateField id="endDate" dateFormat="dd/M/yyyy" />
                    
                                <Label caption="Basis:" contentMode="HTML" />
                                <TextField id="basis" inputPrompt="" />
                                
                                 <Label caption="Rs Type:" contentMode="HTML" />
                                <TextField id="rsType" inputPrompt="" />
                                
                                 <Label caption="Rs Program Type:" contentMode="HTML" />
                                <TextField id="rsProgramType" inputPrompt="" />
                 
                                 <Label caption="Rs Category:" contentMode="HTML" />
                                <TextField id="rsCategory" inputPrompt="" />
                 
                                 <Label caption="Payment Frequency :" contentMode="HTML" />
                                <TextField id="paymentFrequency" inputPrompt="" />
                 
                                 <Label caption="Rebate Plan Level :" contentMode="HTML" />
                                <TextField id="rebatePlanLevel" inputPrompt="" />
                  
                            </GridLayout>
                        </Panel>
                        <Panel caption="Component Details - Selected Items" height="30%" width="100%">
                            <VerticalLayout styleName="width-auto">
                            <VerticalLayout id="selectedTableLayout"
                                    immediate="true" >
                                <!--                    <a:ExtFilterTable id="selectedTable"
                                caption="" width="100%" immediate="true" height="100%" />-->
                            </VerticalLayout>
                            </VerticalLayout>
                        </Panel>
                    </VerticalLayout>
               
                    <VerticalLayout width="40%">
                        <Panel caption="Contract DashBoard Results" width="100%"  height="60%">
                            <VerticalLayout>
                                <VerticalLayout id="dashBoardTableLayout"
                                                width="100%"   immediate="true" >
                                </VerticalLayout>
                                <HorizontalLayout width="100px">
                                    <Button caption="REMOVE" id="removeBtn" />
                                    <Button caption="REMOVE ALL" id="removeAllBtn" />
                                    <Button caption="POPULATE" id="populateBtn2" />
                                </HorizontalLayout>
                            </VerticalLayout>

                        </Panel>
                        <Panel caption="Contract Component Details" width="100%"  height="60%">
                            <VerticalLayout styleName="width-auto">
                                <HorizontalLayout margin="true">
                                    <Label id="fromCDLabelNo" Value="Rebate Schedule No:" contentMode="HTML" />
                                    <TextField id="fromCDNo" inputPrompt="" immediate="true" visible="true" width="140px"/>
                                    <Label id="fromCDLabelName" value="Rebate Schedule Name:" contentMode="HTML" />
                                    <TextField id="fromCDName" inputPrompt="" immediate="true" visible="true" width="140px"/>
                                </HorizontalLayout>
                                <VerticalLayout id="contractComponentsLayout"
                                                width="100%"    immediate="true" >
                                </VerticalLayout>

                            </VerticalLayout>

                        </Panel>
                    </VerticalLayout>
            </HorizontalLayout>
                
            
            </VerticalLayout>
        </Panel>
        <HorizontalLayout>
<!--            <Button caption="NEXT" id="nextBtn" />
            <Button caption="CLOSE" id="closeBtn" />-->
                            
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
