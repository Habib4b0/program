<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.paged.ExtPagedTable" xmlns:p="urn:vaadin:parent" id="mainPanel">
    <VerticalLayout id="mainVerticalLayout" spacing="false" margin="true" immediate="true" >
        <Panel id="exclusiondetails" styleName = "forecast-tab" caption="Exclusion Details">
            <VerticalLayout styleName = "width-auto"  margin="true">  
                <HorizontalLayout spacing="true" margin="ture">
                <Label value="File Name :" contentMode="HTML" />
                <ComboBox id="filenameDdlb" immediate="true" nullSelectionAllowed = "false" />
                </HorizontalLayout>
                  <Label value=" " contentMode="HTML" />   
                <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                    <HorizontalLayout id="availableTableLayout" spacing="true" margin="ture"/>
                    <!--<a:ExtFilterTable  width="400px" height="300px" id="availableTable" styleName="table-header-normal" immediate="true" selectable="true"/>-->
                    <GridLayout id="customerBtnLayout" spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                        <Button id="moveRightBtn" caption="&gt;" width="50px"></Button>
                        <Button id="moveLeftBtn" caption="&lt;" width="50px"></Button>
                        <Button id="allBtn" caption="ALL" width="50px"></Button>
                    </GridLayout>
                    <HorizontalLayout id="selectedTableLayout" spacing="true" margin="ture"/>
                    <!--<a:ExtFilterTable id="selectedTable" width="400px" height="300px" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />-->
                </GridLayout>   
                    
            </VerticalLayout>
        </Panel>        
                
        <HorizontalLayout id="buttonLay" spacing="true" margin="true">
            <Button id="submitBtn" caption="SUBMIT" />
            <Button id="resetBtn"  caption="RESET" />
            <Button id="closeBtn" caption="CLOSE" />
        </HorizontalLayout>                                     	
    </VerticalLayout>
</Panel>