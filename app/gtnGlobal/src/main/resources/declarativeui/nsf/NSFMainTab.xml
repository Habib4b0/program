<?xml version="1.0" encoding="UTF-8"?>

<VerticalLayout  spacing="true" xmlns:el="urn:import:com.stpl.app.ui.errorhandling" xmlns:p="urn:vaadin:parent" >
    <el:ErrorLabel id="errorMsg" />      
    <VerticalLayout  id = "informationLayout" >
        <Panel id="panel" caption="Formula Information" >
            <HorizontalLayout  margin="true" >
                <HorizontalLayout id="cssLayout">
                    <Label id="formulaIdLb" value="Formula ID" styleName="mandatory" contentMode="HTML" />
                    <TextField id="formulaId"  immediate="true" enabled="true"/>
                    <Label id="formulaNoLb" value="Formula No" styleName="mandatory" contentMode="HTML" />
                    <TextField id="formulaNo"  immediate="true" enabled="true"/>
                    <Label id="formulaNameLb" value="Formula Name" styleName="mandatory" contentMode="HTML" />
                    <TextField id="formulaName"  immediate="true" enabled="true"/>
                    <Label id="formulaCategoryLb" value="Formula Category"  contentMode="HTML" />
                    <ComboBox id="formulaCategory" enable="true"  immediate="true"/>
                </HorizontalLayout>
            </HorizontalLayout>
        </Panel>   
    </VerticalLayout>        
    <TabSheet id="tabSheet" immediate="true" height="1540px"/>

    <HorizontalLayout id="buttonLayout" spacing="true" margin="true" immediate="true">

        <Button id="saveBtn" caption="SAVE" enabled="true" immediate="true" />

        <Button id="backBtn" caption="BACK" enabled="true" immediate="true" />

    </HorizontalLayout>
</VerticalLayout>
