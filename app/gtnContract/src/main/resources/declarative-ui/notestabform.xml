
<VerticalLayout id="vlayout" margin="true" spacing="true" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable" xmlns:eh="urn:import:com.stpl.app.contract.ui">
	<HorizontalLayout>
		<eh:ErrorLabel id="errorMsg" />
		<Panel  styleName="attachmentpanel">
			<VerticalLayout margin="true">
				<VerticalLayout>
					<CssLayout width="100%" height="100%">
						<VerticalLayout>
							<Label value="Enter New Note" styleName="noteslabel" />
							<TextArea id="newNotes" styleName="addInfoText" />
							<VerticalLayout styleName="addInfoBtnSpace">
								<Button id="addNote" caption="ADD NOTE" />
							</VerticalLayout>
						</VerticalLayout>

					</CssLayout>
				</VerticalLayout>

				<VerticalLayout>
					<CssLayout width="100%" height="100%">
						<VerticalLayout>
							<Label value="Notes History" styleName="noteshistory" />
							<TextArea id="notesHistory" styleName="addInfoText" />
							<HorizontalLayout id="imageLayout">
							
							</HorizontalLayout>
						</VerticalLayout>
					</CssLayout>
				</VerticalLayout>
			</VerticalLayout>


		</Panel>
		<Panel caption="Attachments" styleName="attachmentpanel">
			<VerticalLayout id="vv1" margin="true">
				<HorizontalLayout immediate="true">
					<Label value="Filename" styleName="mandatory" contentMode="HTML" immediate="true" styleName="filenamelable" />
					<TextField id="fileNameField" enabled="true" immediate="true" />
				</HorizontalLayout>

				<HorizontalLayout immediate="true">
					<CssLayout id="cssLayout1" immediate="true" width="100%" height="100%">
						
					</CssLayout>
				</HorizontalLayout>

				<HorizontalLayout immediate="true">
					<CssLayout id="cssLayout2" immediate="true" width="100%" height="100%">
						<Label value="Attachments" contentMode="HTML" immediate="true" styleName="attachment" />
						<VerticalLayout spacing="true">
							<ef:ExtFilterTable id="table" />
							<Button id="remove" caption="REMOVE" immediate="true" />
						</VerticalLayout>
					</CssLayout>

				</HorizontalLayout>

			</VerticalLayout>

		</Panel>


	</HorizontalLayout>
</VerticalLayout>



