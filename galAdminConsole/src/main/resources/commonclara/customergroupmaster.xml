<?xml version="1.0" encoding="UTF-8"?>

<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling">
    <VerticalLayout margin="true" spacing="true" >
        <p:ErrorLabel id="errorMsg"/>
        <Panel caption="Customer Group Information" >
            <VerticalLayout  id="customerGroupInformation" styleName = "responsiveTabGrid">
                <HorizontalLayout spacing="true" styleName="responsiveTabGrid" >
                    <CssLayout id="cssLayout" immediate="true" width="100%" height="100%">
			
                        <Label id="customerGroupNameLb" value="Customer Group Name" styleName="mandatory" contentMode="HTML" immediate="true"/>
			<TextField id="customerGroupName" enabled="true" immediate="true" />
			
                        <Label id="customerGroupNoLb" value="Customer Group No" styleName="mandatory" contentMode="HTML" immediate="true"/>
			<TextField id="customerGroupNo" enabled="true" immediate="true" />
			
                        <Label id="customerGroupDescLb" value="Customer Group Desc" styleName="mandatory" contentMode="HTML" immediate="true"/>
			<TextField id="customerGroupDesc" enabled="true" immediate="true" /> 
                 </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>  
        
       <Panel id="customerSearchpanel" caption="Customer Search">
            <VerticalLayout  id="customerSearch" styleName = "responsiveTabGrid">
                <HorizontalLayout spacing="true" styleName="responsiveTabGrid" >
                    <CssLayout id="isCssLayout" immediate="true" width="100%" height="100%">
			
                        <Label id="customerNoLb" value="Customer No" contentMode="HTML" immediate="true"/>
			<TextField id="customerNo" enabled="true" immediate="true" />
			
                        <Label id="tradeClassDdlbLb" value="Trade Class" contentMode="HTML"  />
                        <ComboBox id="tradeClassDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />                       		    			
		
                        <Label id="customerStatusDdlbLb" value="Customer Status" contentMode="HTML"  />
                        <ComboBox id="customerStatusDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />                       		    			
			
                        <Label id="stateLb" value="State" contentMode="HTML"  />
                        <ComboBox id="stateDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />                       		    			
                        
                        <Label id="customerNameLb" value="Customer Name" contentMode="HTML" immediate="true"/>
			<TextField id="customerName" enabled="true" immediate="true" />
  
                        <Label id="customerTypeLb" value="Customer Type" contentMode="HTML"  />
                        <ComboBox id="customerTypeDdlb" nullSelectionAllowed="false" inputPrompt="-Select One" immediate="true" />                       		    			
			
                        <Label id="cityLb" value="City" contentMode="HTML"  />
                        <TextField id="city" enabled="true" immediate="true" />
			
                        <Label id="zipCodeLb" value="Zip Code" contentMode="HTML" immediate="true"/>
			<TextField id="zipCode" enabled="true" immediate="true" /> 
                        
                        
           <HorizontalLayout id="searchButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
          
                <Button id="searchBtn" caption="SEARCH" immediate="true"/>
                <Button id="resetBtn" caption="RESET" immediate="true" />
         
            </HorizontalLayout>       
                                                                                                                            
                 </CssLayout>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        
        <Panel id="resultpanel" caption="Results"  >
            <VerticalLayout id="tableLayout">
                <HorizontalLayout id="controlLayout"/>
            </VerticalLayout>            
        </Panel>
        
          <HorizontalLayout id="includeButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
           
                <Button id="addBtn" caption="ADD" immediate="true"/>
                <Button id="addallBtn" caption="ADD ALL" immediate="true" />
                 <Button id="excel" immediate="true" primaryStyleName="link" />
          
        </HorizontalLayout>
        
        <Panel id="selectedcustomerpanel" caption="Selected Customers"  >
            <VerticalLayout id="tableLayout1">
                <HorizontalLayout id="controlLayout1"/>
            </VerticalLayout>            
        </Panel>
        
         <HorizontalLayout id="excludeButtonLayout" spacing="true" margin="false" styleName="responsiveTabGrid" >
           
                <Button id="removeBtn" caption="REMOVE" immediate="true"/>
                <Button id="removeallBtn" caption="REMOVE ALL" immediate="true" />
                <Button id="excel1" immediate="true" primaryStyleName="link" />         
        
        </HorizontalLayout>
        
          <HorizontalLayout id="excludeButtonLayout1" spacing="true" margin="false" styleName="responsiveTabGrid" >
          
                <Button id="backBtn"  caption="BACK" immediate="true"/>
                <Button id="savetBtn" caption="SAVE" immediate="true"/>
                <Button id="resetbutton" caption="RESET" immediate="true"/>                
      
        </HorizontalLayout>
                                                   
    </VerticalLayout>
</Panel>