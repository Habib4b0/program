
<VerticalLayout margin="true" caption="Processing Option" spacing="true" width="100%" height="100%" xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:org.asi.ui.extfilteringtable"
	xmlns:c="urn:import:org.asi.ui.customcombobox">
	<HorizontalLayout id="hlayout" immediate="true" styleName="responsiveTabGrid">
		<CssLayout id="cssLayout" spacing="true" immediate="true" width="100%" height="100%">

                    <Label id="rebateProcessingTypeLB" value="Rebate Processing Type" contentMode="HTML" immediate="true" />

                    <c:CustomComboBox id="rebateProcessingType" styleName="comboxsize" enable="false" nullSelectionAllowed="true" immediate="true" />	

                   <Label id="validationProfileLb" value="Validation Profile" contentMode="HTML" immediate="true" />

                    <c:CustomComboBox id="validationProfile" styleName="comboxsize" enable="false" nullSelectionAllowed="true" immediate="true" />

                    <Label id="interestBearingIndicatorLB" value="Interest Bearing Indicator"  contentMode="HTML" immediate="true" />

                    <c:CustomComboBox id="interestBearingIndicator" styleName="comboxsize" enable="false" nullSelectionAllowed="true" immediate="true" />
                    
                    <Label id="interestBearingBasisLB" value="Interest Bearing Basis" contentMode="HTML" immediate="true" />

                    <c:CustomComboBox id="interestBearingBasis" styleName="comboxsize" enable="false" nullSelectionAllowed="true" immediate="true" />

		</CssLayout>

	</HorizontalLayout>	

        <HorizontalLayout id="hlayout2" spacing="true" margin="true" immediate="true">
            <!-- 		<CssLayout spacing="true" immediate="true" width="100%" height="100%"> -->
            <VerticalLayout spacing="true" styleName="custom-margin" id="availableRulesTableLayout">                
                <ef:ExtFilterTable id="availableRulesTable" />
                <Label id="availableRecordCountLB" contentMode="HTML" immediate="true" />
            </VerticalLayout>

            <VerticalLayout id="verticalButtonLayout">
                <Button id="moveRight" immediate="true" />

                <Button id="moveLeft" immediate="true" />

                <Button id="moveAll" immediate="true" />

                <Button id="removeAll" immediate="true" />
            </VerticalLayout>
            <VerticalLayout spacing="true" styleName="custom-margin" id="selectedRulesTableLayout">                
                <ef:ExtFilterTable id="selectedRulesTable" />
                <Label id="selectedRecordCountLB" contentMode="HTML" immediate="true" />
            </VerticalLayout>
            <!-- 		</CssLayout> -->
        </HorizontalLayout>

</VerticalLayout>