<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:p="urn:vaadin:parent" xmlns:b="urn:import:org.asi.ui.customtextfield">
    <VerticalLayout spacing = "true" margin = "true" styleName="forecast-dataselection" >
        <Panel id="panel1" caption="Projection Options"  >

            <HorizontalLayout id="horizontalLayout" spacing="true" margin="true" immediate="true">
                <VerticalLayout>
                    <GridLayout spacing="false" margin="false" immediate="true" columns="2" rows="1" styleName = "ds-rt-margin">
                        <Label value="Mode: " contentMode="HTML"  width="50px" />
                        <OptionGroup multiSelect="false" id="modeOptionEdit" immediate="true" enable="true" styleName = "horizontal">
                        </OptionGroup>
                    </GridLayout>
                    <GridLayout spacing="false" margin="false" immediate="true" columns="4" rows="2">
                        <Label value="Private Views: " contentMode="HTML" width="100px" />
                        <b:CustomTextField id="privateViewText" styleName="searchText" inputPrompt=""/>

                        <Label value="Projection Name: " contentMode="HTML" />
                        <TextField id="projectionNameText"></TextField>


                        <Label value="Public Views: " contentMode="HTML" width="100px" />
                        <b:CustomTextField id="publicViewText" styleName="searchText" inputPrompt=""/>

                        <Label value="Description: " contentMode="HTML" />
                        <TextField id="descriptionText" ></TextField>

                    </GridLayout>
                </VerticalLayout>
                <Panel id="timeperiod" caption="Time Period">
                    <VerticalLayout  spacing = "true" margin = "true" >
                        <GridLayout id="gridLayout" immediate="true" columns="4" rows="1">
                            <Label value="From: " contentMode="HTML" width="50px"/>
                            <ComboBox id="fromDateEdit" />
                            <Label value="To: " contentMode="HTML" width="40px"/>
                            <ComboBox id="toDateEdit" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
            </HorizontalLayout>
        </Panel>


        <Panel caption="Customer Selection"  spacing="true" styleName="ds-selection">
            <VerticalLayout  spacing = "true" margin = "true" styleName = "width-auto" >
                <HorizontalLayout immediate="true">
                    <GridLayout  spacing="false" immediate="true" columns="8" rows="1">
                        <Label value="Hierarchy:" contentMode="HTML" width="80px" />
                        <b:CustomTextField id="customerHierarchyEdit" styleName="searchText" inputPrompt="" />
                        <Label value="Relationship:" contentMode="HTML" width="100px" ></Label>
                        <ComboBox id="customerRelationEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                        <Label value="Forecast Level:" contentMode="HTML" width="105px" />
                        <ComboBox id="customerlevelEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                        <Label value="Customer Group:" contentMode="HTML"   width="120px" />
                        <b:CustomTextField id="customerGPEdit" styleName="searchText"/>
                    </GridLayout>
                </HorizontalLayout>

                <!--panel inserted--> 
                <Panel>
                    <VerticalLayout margin = "true" spacing = "true" >           
                        <HorizontalLayout>
                            <GridLayout spacing="false" immediate="true" columns="2" rows="1">
                                <Label value="Level:" contentMode="HTML" width="50px" ></Label>
                                <ComboBox id="levelDDLBEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                            </GridLayout>
                        </HorizontalLayout>
                        <HorizontalLayout>
                            <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                                <a:ExtFilterTable  width="400px" height="300px" id="availableCustomerEdit" styleName="table-header-normal" immediate="true" selectable="true"/>
                                <GridLayout  spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                                    <Button id="moveLeftBtn" caption="&gt;" width="50px"></Button>
                                    <Button id="moveRightBtn" caption="&lt;" width="50px"></Button>
                                    <Button id="allBtn" caption="ALL" width="50px"></Button>
                                </GridLayout>
                                <TreeTable id="selectedCustomerEdit" width="400px" height="300px" styleName="table-header-normal"  pageLength="8" immediate="true" selectable="true" />
                            </GridLayout>
                        </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
                <!-- panel inserted -->


            </VerticalLayout>
        </Panel>

        <Panel id="panel3" caption="Product Selection"  styleName="ds-selection" >
            <VerticalLayout spacing="true" margin="true"  styleName = "width-auto">
                <!--<GridLayout id="grid3" spacing="false" columns="4" rows="2"immediate="true">-->
                <HorizontalLayout>
                    <GridLayout spacing="false" immediate="true" columns="2" rows="1">
                        <Label value="Company:" contentMode="HTML"  width="80px" />
                        <TextField id="companyView" immediate = "true" />
                    </GridLayout>    
                    <ComboBox id="companyEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" visible="false"/> 
                </HorizontalLayout>
                <HorizontalLayout>
                    <VerticalLayout>
                        <GridLayout spacing="false" immediate="true" columns="8" rows="1">
                            <Label value="Hierarchy:" contentMode="HTML" width="80px" />
                            <b:CustomTextField id="productHierarchyEdit" styleName="searchText" inputPrompt="" />
                            <Label value="Relationship:" contentMode="HTML" width="100px" ></Label>
                            <ComboBox id="productRelationEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                            <!--            <Label value="" contentMode="HTML" styleName="adjust"/>	 -->
                            
                            <Label value="Forecast Level:" contentMode="HTML" width="105px" />
                            <ComboBox id="productlevelEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                            <Label value="Product Group:" contentMode="HTML"  width="110px" />
                            <b:CustomTextField id="productGPEdit" styleName="searchText" />   
                        </GridLayout>                 
                    </VerticalLayout>               
                </HorizontalLayout>
                                     
                                       
                <!--</GridLayout>-->
                <Panel>
                    <VerticalLayout margin = "true" spacing = "true" >
                        <HorizontalLayout id="hLayout3" spacing="true" margin="false" >
                            <GridLayout  spacing="false" margin="false" immediate="true" columns="2" rows="1">
                                <Label value="Level:" contentMode="HTML" width="50px" ></Label>
                                <ComboBox id="productlevelDdlbEdit" nullSelectionAllowed="true" styleName = "comboxsize" immediate = "true" />
                            </GridLayout>
                        </HorizontalLayout>
                        <HorizontalLayout >
                            <VerticalLayout >
                                <GridLayout  spacing="true" margin="false" immediate="true" columns="3" rows="1">
                                    <a:ExtFilterTable id="availableProductEdit" width="400px" height="300px" styleName="table-header-normal" immediate="true" selectable="true" />
                                    <GridLayout  spacing="true" margin="false" immediate="true" columns="1" rows="3" p:componentAlignment="MIDDLE_CENTER">
                                        <Button id="moveLeftProduct" caption="&gt;" width="50px"></Button>
                                        <Button id="moveRightProduct" caption="&lt;" width="50px"></Button>
                                        <Button id="allProductBtn" caption="ALL" width="50px"></Button>
                                    </GridLayout>
                                    <TreeTable id="selectedProductEdit" width="400px" styleName="table-header-normal" height="300px" pageLength="8" immediate="true" selectable="true" />
                                </GridLayout>
                            </VerticalLayout>                       
                        </HorizontalLayout>
                    </VerticalLayout>
                </Panel>
                                
                <!--  </VericalLayout>   </Panel> -->
				
                <!--panel Ends -->
            </VerticalLayout>

        </Panel>
    </VerticalLayout>

</Panel>
