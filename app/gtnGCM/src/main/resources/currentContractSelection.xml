<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="mainPanel">
    <VerticalLayout id="promoteTpToChVerticalLayout" spacing="true"
                    margin="true" immediate="true" width="100%" height="100%">
        <Panel id="promoteTpToChPanel1" caption="Selection Criteria">
            <HorizontalLayout id="horizontalLayout1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="promoteTpToChLayout1" immediate="true" columns="10" rows="1">
                    <Label caption="Company No: " contentMode="HTML" />
                    <TextField id="companyNo" immediate="true" />
                    <Label caption="Company Name: " contentMode="HTML" />
                    <TextField id="companyName" immediate="true" />
                    <Label caption="Company Type: " contentMode="HTML" />
                    <TextField id="companyType" immediate="true" width="205px"/>
                    <Label caption="Company Category: " contentMode="HTML" />
                    <TextField id="companyCategory" immediate="true" width="205px"/>
                    <Label caption="Trade Class: " contentMode="HTML" />
                    <TextField id="tradeClass" immediate="true" width="205px"/>
                </GridLayout>
            </HorizontalLayout>
        </Panel>
        <Panel id="promoteTpToChPanel2" caption="Trading Partner Search">
            <VerticalLayout id="horizontalLayout2" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="promoteTpToChLayout2" immediate="true" columns="8" rows="3">
                    <Label caption="Contract No: " contentMode="HTML" />
                    <TextField id="contractNo" immediate="true" />
                    <Label caption="Contract Name: " contentMode="HTML" />
                    <TextField id="contractName" immediate="true" />
                    <Label caption="Contract Holder: " contentMode="HTML" />
                    <b:CustomTextField id="contractHolder" immediate="true" styleName="searchicon"/>
                    <Label caption="Market Type: " contentMode="HTML" />
                    <ComboBox id="marketType" immediate="true" width="205px"/>
                    <Label caption="Rebate Schedule ID: " contentMode="HTML" />
                    <TextField id="rebateScheduleId" immediate="true" />
                    <Label caption="Rebate Schedule Name: " contentMode="HTML" />
                    <TextField id="rebateScheduleName" immediate="true" />
                    <Label caption="Rebate Schedule Type: " contentMode="HTML" />
                    <ComboBox id="rebateScheduleType" immediate="true" width="205px"/>
                    <Label caption="RAR Category: " contentMode="HTML" />
                    <ComboBox id="rarCategory" immediate="true" width="205px"/>
                    <Label caption="Rebate Schedule No: " contentMode="HTML" />
                    <TextField id="rebateScheduleNo" immediate="true" />
                    <Label caption="Rebate Schedule Category: " contentMode="HTML" />
                    <ComboBox id="rebateScheduleCategory" immediate="true" width="205px" />
                    <Label caption="Rebate Program Type: " contentMode="HTML" />
                    <ComboBox id="rebateProgramType" immediate="true" width="205px" />
                    <Label caption="Rebate Schedule Alias: " contentMode="HTML" />
                    <TextField id="rebateScheduleAlias" immediate="true" />
                </GridLayout>
                <HorizontalLayout>
                    <Button id="resetBtn1" caption="RESET"/>
                    <Button id="searchBtn" caption="SEARCH" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel id="bsMassUpdatePanel1" caption="Mass Update">
            <HorizontalLayout id="horizontalLayout3" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="bsMassUpdateLayout" immediate="true" columns="10" rows="1">
                    <OptionGroup multiSelect="false" id="massUpdateRadio" immediate="true" enable="true" styleName = "horizontal"/>
                    <Label caption="Field:" contentMode="HTML" />
                    <ComboBox id="fieldDdlb" immediate="true" width="150px"/>
                    <Label caption="Value:" contentMode="HTML" />
                    <TextField id="massUpdateValue" immediate="true" width="150px"/>
                    <Label caption="Start Date: " contentMode="HTML" />
                    <PopupDateField id="massStartDate" dateFormat="dd/mm/yyyy" />
                    <Label caption="End Date: " contentMode="HTML" />
                    <PopupDateField id="massEndDate" dateFormat="dd/mm/yyyy" />
                    <Button id="populateBtn" caption="POPULATE" />
                </GridLayout>
                
            </HorizontalLayout>
        </Panel>
        <Panel id="currentTradingPartnerPanel" caption="Current Trading Partner-Details ">
            <VerticalLayout>
                <VerticalLayout id="currTradingPartnerTableLayout" spacing="true" margin="false" immediate="true">
                </VerticalLayout>
                <HorizontalLayout>
                    <Button id="excelBtn1" primaryStyleName="link"/>
                    <Button id="resetBtn2" caption="RESET" />
                    <Label caption="Transfer Sales Projection: " contentMode="HTML" />
                    <OptionGroup multiSelect="false" id="salesProjectionRadio" immediate="true" enable="true" styleName = "horizontal"/>
                    <Button id="submitBtn" caption="SUBMIT" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
     <Panel id="componentInfoPanel" caption="Component Information ">
            <VerticalLayout id="componentInfoLayout" spacing="true" margin="true" immediate="true">
                <HorizontalLayout id="componentInfoHorizontalLayout" spacing="true" margin="true" immediate="true" styleName = "width-auto">
                <GridLayout spacing="true"  id="componentInfoGridLayout" immediate="true" columns="10" rows="3">
                    <Label caption="Component Selection: " contentMode="HTML" />
                    <ComboBox id="componentSelection" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true"/>
                    <Label   id="rsIdLabel" caption="RS ID: " contentMode="HTML" />
                    <TextField id="rsId" immediate="true" /> 
                    <Label id="rsNumberLabel" caption="RS Number: " contentMode="HTML" />
                    <TextField id="rsNumber" immediate="true" />
                    <Label id="rsNameLabel" caption="RS Name: " contentMode="HTML" />
                    <TextField id="rsName" immediate="true" />
                    <Label id="statusLabel" caption="Status: " contentMode="HTML" />
                    <TextField id="status" immediate="true" />
                    <Label id="startDateLabel" caption="Start Date: " contentMode="HTML" />
                    <TextField id="startDate" immediate="true" />
                    <Label id="endDateLabel" caption="End Date: " contentMode="HTML" />
                    <TextField id="endDate" immediate="true" /> 
                    <Label id="rebateFrequencyLabel" caption="Rebate Frequency: " contentMode="HTML" />
                    <TextField id="rebateFrequency" immediate="true" />
                    <Label  id="rarTypeLabel" caption="RAR Type: " contentMode="HTML" />
                    <TextField id="rarType" immediate="true" />
                    <Label   id="basisLabel"  caption="Basis: " contentMode="HTML" />
                    <TextField id="basis" immediate="true" />
                   <Label   id="rsProgrmtypeLabel"  caption="RS Program Type: " contentMode="HTML" />
                    <TextField id="RSProgramType" immediate="true" />
                    <Label   id="rsCategoryLabel"  caption="RS Category: " contentMode="HTML" />
                    <TextField id="RSCategory" immediate="true" /> 
                    <Label   id="paymentFrequencyLabel"  caption="Payment Frequency: " contentMode="HTML" />
                    <TextField id="PaymentFrequency" immediate="true" />
                    <Label   id="rebatePlanLevelLabel"  caption="Rebate Plan level: " contentMode="HTML" />
                    <TextField id="RebatePlanlevel" immediate="true" />
                </GridLayout>
                </HorizontalLayout>
                <VerticalLayout id="componentInfoPanelTableLayout" spacing="true" margin="false" immediate="true">
                </VerticalLayout>
                <HorizontalLayout  margin = "true">
                    <Button id="excelBtn2" primaryStyleName="link"/>
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
    </VerticalLayout>
</Panel>
