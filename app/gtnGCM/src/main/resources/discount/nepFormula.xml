<!--<Panel xmlns:p="urn:import:com.stpl.app.ui.errorhandling">--> 


<Panel id="mainPanel"
   xmlns:c="urn:import:org.asi.ui.customcombobox">
    <VerticalLayout margin="true" spacing="true" id="mainLayout">
        
        <Panel caption="Search Criteria" width="100%" spacing="true">			
            <GridLayout id="searchLayout" margin="true" spacing="true" columns="6" rows="2">
		
                <Label value="Net Sales Formula Type"  contentMode="HTML" />
                <ComboBox id="netSalesFormulaType" nullSelectionAllowed="false" immediate="true" />
                <Label caption="Net Sales Formula ID: " contentMode="HTML" />
                <TextField id="formulaId" inputPrompt="" immediate="true"/>
                <Label caption="Net Sales Formula NO: " contentMode="HTML" />
                <TextField id="formulaNo" inputPrompt="" immediate="true"/>
                <Label caption="Net Sales Formula Name: " contentMode="HTML" />
                <TextField id="formulaName" inputPrompt="" immediate="true"/>     
                
            </GridLayout>

        </Panel>     
    
        <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid">
            <Button id="searchBtn" caption="SEARCH" immediate="true" ></Button>
            <Button id="resetBtn" caption="RESET" immediate="true" ></Button>
        </HorizontalLayout>
        
        <Panel id="panelid" caption="Results" width="100%" height="100%" >
            <VerticalLayout id="vertiLayout">
            <VerticalLayout id="tableLayout">
            </VerticalLayout>   
            <HorizontalLayout id="controlLayout"/> 
            </VerticalLayout>        
        </Panel>
        
        <HorizontalLayout spacing="true" margin="false" styleName="responsiveTabGrid">
            <Button id="selectBtn" caption="SELECT" immediate="true"></Button>
            <Button id="closeBtn" caption="CLOSE" immediate="true"></Button>
        </HorizontalLayout>
        
    </VerticalLayout>
</Panel>
