<?xml version="1.0" encoding="UTF-8"?>
<Panel  xmlns:table="urn:import:org.asi.ui.extfilteringtable" xmlns:a="urn:import:org.asi.ui.extfilteringtable" xmlns:b="urn:import:org.asi.ui.customtextfield" id="CC" >
    <VerticalLayout id="copycontractNCVerticalLayout" spacing="true"
                    margin="true" immediate="true">
					
        <Panel id="copycontractNCPanel1" caption="Contract Header Details">
           <VerticalLayout spacing="true">
            <HorizontalLayout id="horizontalLayoutNC1" spacing="true" margin="true" immediate="true">
                <GridLayout spacing="true"  id="copycontractNCgridLayout1" immediate="true" columns="6" rows="4" width="1100px">
                    <Label value="Contract ID: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px"/>
                    <TextField id="contractid" immediate="true" width="185px"/>
                    <Label value="Contract Name: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px" />
                    <TextField id="contractname" immediate="true" width="185px"/>  
                    <Label value="Start Date: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px"/>
                    <PopupDateField id="startdate" immediate="true" width="185px"/>
                    <Label value="Contract No: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px"/>
                    <TextField id="contractno" immediate="true" width="185px"/>
                    <Label value="Market Type: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px"/>
                    <ComboBox id="markettype" immediate="true" width="185px"/>
                    <Label value="End Date: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px"/>
                    <PopupDateField id="enddate" immediate="true" width="185px"/>
                    <Label value="Contract Holder: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML"  width="130px"/>
<!--                    <TextField id="contracthHolder" immediate="true" />-->
                    <b:CustomTextField id="contracthHolder" styleName="searchicon" inputPrompt="" width="185px"/> 
                    <Label value="Contract Status: &lt;span style='color: #ed473b;'&gt;*&lt;/span&gt;" contentMode="HTML" width="130px"/>
                    <ComboBox id="contractStatus" immediate="true" width="185px"/>
                    <Label caption=" " contentMode="HTML" />
                    <Label caption=" " contentMode="HTML" />
                    <Button id="populate" caption="POPULATE" alignment="BOTTOM_LEFT" />
                </GridLayout>
                <Panel id="aliasNC" caption="Alias Details">
                    <VerticalLayout  spacing = "true" margin = "true" >
                        <GridLayout id="gridLayoutaliasNC" spacing="true" 
                                    immediate="true" columns="4" rows="2">
                            <Label value="Type:" contentMode="HTML" width="130px"/>
                            <ComboBox id="typeNC" immediate="true" width="185px"/>
                            <Label value="Start Date:" contentMode="HTML" width="130px" />
                            <PopupDateField id="aliasStartDate" immediate="true" width="185px" />
                            <Label value="Number:" contentMode="HTML" width="130px"/>
                            <TextField id="aliasNumber"  immediate="true" width="185px" />
                            <Label value="End Date:" contentMode="HTML" width="130px"/>
                            <PopupDateField id="aliasEndDate" immediate="true" width="185px" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel> 
            </HorizontalLayout> 
            <HorizontalLayout id="multiContractLayout">
            </HorizontalLayout> 
             <HorizontalLayout id="multiContractButtons" spacing="true">
            <Button id="resetBtn" caption="RESET" alignment="BOTTOM_LEFT" />
            <Button id="removeBtn" caption="REMOVE" alignment="BOTTOM_LEFT" />
            <Button id="populateBtn" caption="POPULATE" alignment="BOTTOM_LEFT" />
            </HorizontalLayout> 
	</VerticalLayout>
        </Panel>
        <Panel immediate="true" spacing="true" margin="true">
        <VerticalLayout id="main" 
                         immediate="true">
        </VerticalLayout>
        </Panel>
        <HorizontalLayout>
            <Button id="CREATE" caption="CREATE" alignment="BOTTOM_LEFT" />
            <Button id="CLOSE" caption="CLOSE" alignment="BOTTOM_LEFT" />
        </HorizontalLayout>  
    </VerticalLayout>
</Panel>

