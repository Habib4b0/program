<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns:a="urn:import:org.asi.ui.extfilteringtable.freezetable" id="mainPanel"  xmlns:b="urn:import:org.asi.ui.customtextfield"  xmlns:c="urn:import:org.asi.ui.customcombobox" xmlns:d="urn:import:org.asi.ui.custommenubar" >
    <VerticalLayout spacing="true" margin="true" immediate="true">	
        <Panel width="100%">
            <VerticalLayout immediate="true">
                <Panel caption="PPA Projection Selection">
                    <VerticalLayout styleName = "width-auto" margin="true" spacing="true" immediate="true">
                        <GridLayout spacing="true" margin="false" id="dsLayout"
                                    immediate="true" columns="4" rows="2" styleName="forecast-tab">
                            <Label value="Frequency: " contentMode="HTML" />
                            <ComboBox id="frequencyDdlb" nullSelectionAllowed="true" immediate="true" styleName="comboxsize"/>
                            <Label Value="Date Range" contentMode="HTML"/>
                            <GridLayout columns="4" rows="1">
                                <Label Value="From: " contentMode="HTML" width="50px"/>
                                <ComboBox id="fromDateDdlb" immediate="true" styleName="comboxsize"/>
                                <Label Value="To: " contentMode="HTML" width="40px"/>
                                <ComboBox id="toDateDdlb" immediate="true" styleName="comboxsize"/>
                            </GridLayout>
                            <Label value="Variables" contentMode="HTML" />
                            <!--<ComboBox id="variablesDdlb" nullSelectionAllowed="true" immediate="true" styleName="comboxsize"/> -->
                            <d:CustomMenuBar id="customMenuBar" styleName="custommenumulticheck"/>
                            
                            <Label value="Projection Period Order" contentMode="HTML" width="175px"/>
                            <OptionGroup multiSelect="false" id="projectionPeriodOrderOpg" immediate="true" enable="true" styleName = "horizontal"/>
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
                <HorizontalLayout id="buttonLayout" spacing="true"  styleName="component-layout">
                    <Button id="generateBtn" caption="GENERATE"/>
                    <Button id="resetBtn" caption="RESET"/>
                    
                </HorizontalLayout>
                <Panel caption="Mass Update"  styleName = "forecast-tab"  width="100%">
                    <VerticalLayout styleName = "width-auto"   margin="true">   
                        <GridLayout rows="1" columns="15" margin="false" spacing="true"> 
                            <OptionGroup id="massUpdate" enabled="true" immediate="true" styleName="horizontal" />
                            <Label caption="Field: " contentMode="HTML" />
                            <ComboBox id="fieldDdlb" enabled="true" immediate="true" styleName="comboxsize"/>
                            <Label caption="Value: " contentMode="HTML" />
                             <c:CustomComboBox id="valueDdlb" styleName="comboxsize" 
                                           immediate="true" enable="true" nullSelectionAllowed = "true" />
                            <c:CustomComboBox id="massGroup" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                            <TextField id="valueTxt" inputPrompt="" immediate="true" visible="false"/>
                            <PopupDateField id="massDate" immediate="true" visible="false"/>
                             <b:CustomTextField id="massLookup" styleName="searchText" immediate="true" visible="false"/>
                            <Label id="lblStart" caption="Start Period: " contentMode="HTML" width = "120px" />
                            <ComboBox id="startPeriod" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                            <Label id="lblEnd" caption="End Period: " contentMode="HTML" width = "120px"/>
                            <ComboBox id="endPeriod" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                            <Button id="populate" caption="POPULATE" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>
                <Panel caption="Results" styleName = "forecast-tab"  width="100%"> 
                    <VerticalLayout styleName = "width-auto" margin="true">   
                            <GridLayout rows="1" columns="8" margin="false" spacing="true" styleName = "forecast-tab" > 
                            <Label caption="Level: " contentMode="HTML" styleName="labelresultalign"/>
                            <ComboBox id="levelDdlb" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed="true" />
                            <Button id="expand" caption="EXPAND" />
                            <Button id="collapse" caption="COLLAPSE" />
                            <Label caption="Group: " id="groupLabel" contentMode="HTML" styleName="labelresultalign"/>
                            <Label caption="Level Filter: " contentMode="HTML" styleName="labelresultalign" width = "100px"/>
                            <ComboBox id="levelFilterDdlb" enabled="true" immediate="true" styleName="comboxsize" nullSelectionAllowed = "true" />
                        </GridLayout>
                    </VerticalLayout>
                </Panel>  
              <VerticalLayout spacing="false" margin="false" immediate="true">
                <VerticalLayout spacing="false" margin="false"
                                immediate="true" id="tableLayout"  styleName="projectionTable">
				    </VerticalLayout>
                    <HorizontalLayout spacing="false" margin="false" immediate="true">
                        <Button id="excelExport" StyleName="link" />
                    </HorizontalLayout>
                </VerticalLayout>
                <!--</Panel>-->  
            </VerticalLayout>

        </Panel>
    </VerticalLayout>
</Panel>
      
       
       
       
       
       
       
       
       
       
       
       
       
       
       
       
