<?xml version="1.0" encoding="UTF-8"?>
<Panel xmlns="urn:import:com.vaadin.ui" xmlns:p="urn:vaadin:parent" xmlns:ef="urn:import:com.stpl.ifs.ui" xmlns:ct="urn:import:org.asi.ui.customtextfield"
       xmlns:eft="urn:import:org.asi.ui.extfilteringtable">
    <VerticalLayout margin = "true" spacing = "true" width="100%" height="100%"> 
        <Panel caption = "View"  spacing="true" width="100%" height="100%">
            <VerticalLayout spacing="true" margin="true" immediate="true">
                <HorizontalLayout spacing="true" immediate="true">
                    <Label  value="Private View:" immediate="true" />
                    <ct:CustomTextField id="privateView" enable="true" immediate="true" width="205px"/>
            
                    <Label  value="Public View:" immediate="true" />
                    <ct:CustomTextField id="publicView" enable="true" immediate="true" width="205px"/>
                </HorizontalLayout>
            </VerticalLayout>            
        </Panel>
        <Panel  margin="true" immediate="true" spacing="true" caption="Search Criteria">
            <VerticalLayout margin="true" immediate="true" spacing="true">
                <HorizontalLayout spacing="true" id="dataSelecionGrid"
                            immediate="true">
                    <Label caption="Customer Group Name:" contentMode="HTML" />
                    <TextField id="customerGroupName" immediate="true" inputPrompt="" />
                    <Label caption="Customer Group #:" contentMode="HTML" />
                    <TextField id="customerGroup" immediate="true" inputPrompt="" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel> 
        <HorizontalLayout margin="true" immediate="true" spacing="true">
            <Button id="search" caption="SEARCH" />
            <Button id="reset" caption="RESET" />
        </HorizontalLayout>
        <Panel caption = "Results">
            <VerticalLayout>
                <VerticalLayout id="inventoryTableLayout"  width="100%" immediate="true">
               
                </VerticalLayout >
                <HorizontalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
                    <Button id="add" caption="ADD" />
                    <Button id="addall" caption="ADD ALL" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <Panel caption = "Inventory Calculation">
            <VerticalLayout>
                <VerticalLayout id="inventoryCalculationLayout" immediate="true">
               
                </VerticalLayout >
                <HorizontalLayout margin="true" immediate="true" spacing="true" styleName = "width-auto">
                    <Button id="remove" caption="REMOVE" />
                    <Button id="removeall" caption="REMOVE ALL" />
                </HorizontalLayout>
            </VerticalLayout>
        </Panel>
        <HorizontalLayout id="buttonLay" spacing="true" margin="false">
            <Button id="submitBtn" caption="SUBMIT" />
            <Button id="resetBtn" caption="RESET" />
            <Button id="closeBtn" caption="CLOSE" />
            <Button id="saveViewBtn" caption="SAVE VIEW" />
            <Button id="deleteViewBtn" caption="DELETE VIEW " />
        </HorizontalLayout>
    </VerticalLayout>
</Panel>
   