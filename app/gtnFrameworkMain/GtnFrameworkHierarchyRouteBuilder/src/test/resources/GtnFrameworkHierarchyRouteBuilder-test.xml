<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">


	<bean id="sqlQueryEngine"
		class="com.stpl.gtn.gtn2o.queryengine.engine.GtnFrameworkSqlQueryEngine">
		<property name="sessionFactory" ref="sessionFactory"></property>
		<property name="queryLogger" ref="queryLogger"></property>
	</bean>
	<bean id="frameworkEntityMasterBean"
		class="com.stpl.gtn.gtn2o.hierarchyroutebuilder.bean.GtnFrameworkEntityMasterBean"
		init-method="initSetup">
		<property name="gtnSqlQueryEngine" ref="sqlQueryEngine"></property>
	</bean>

	<bean id="frameworkHierarchyServiceImpl"
		class="com.stpl.gtn.gtn2o.hierarchyroutebuilder.service.GtnFrameworkHierarchyServiceImpl">
		<property name="entityMasterBean" ref="frameworkEntityMasterBean"></property>
	</bean>
	<bean id="queryLogger" class="com.stpl.gtn.gtn2o.ws.logger.GtnQueryLogger">
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.jdbc.batch_size">100</prop>
				<prop key="hibernate.connection.autocommit">false</prop>
				<prop key="default_entity_mode">dynamic-map</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>/com/stpl/gtn/gtn2o/ws/xml/hierarchyroutebuilder/HierarchyEntityMaster.hbm.xml
				</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/hierarchyroutebuilder/HierarchySingleColumnRelation.hbm.xml
				</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/hierarchyroutebuilder/HierarchyTableMaster.hbm.xml
				</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/hierarchyroutebuilder/HierarchyTableRelation.hbm.xml
				</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/hierarchyroutebuilder/HierarchyTypeTableRelation.hbm.xml
				</value>
				<value>/com/stpl/gtn/gtn2o/ws/xml/hierarchyroutebuilder/HierarchyRestrictionMaster.hbm.xml
				</value>
			</list>
		</property>
	</bean>
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
		<property name="url"
			value="jdbc:sqlserver://10.4.48.18:1433;databaseName=BPIGTN_AGN_APPL7_TST" />
		<property name="username" value="bpigtn_agn_tst" />
		<property name="password" value="vedM\4C~WKZ5s6U*" />
	</bean>
</beans>