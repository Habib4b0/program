<?xml version="1.0" encoding="UTF-8"?>

<Panel  xmlns:p="urn:vaadin:parent">
    <VerticalLayout margin="true" spacing="true" width="100%" styleName="bootstrap-forecast">
        <!-- First Panel -->

        <Panel caption="Discount Projection Result Section" width="100%"
               margin="true" spacing="true">

            <VerticalLayout margin="true" styleName="width-auto">
                <GridLayout margin="false" spacing="true"
                        rows="2" columns="8">
                    <Label value="Frequency:" contentMode="HTML" width="60px" />
                    <ComboBox id="frequency" nullSelectionAllowed="true"
                          immediate="true" />
                    <Label value="Pivot View:" contentMode="HTML" width="89px" />
                    <OptionGroup id="pivotView" multiSelect="false" enabled="true"
                             immediate="true"/>
                    <Label value="Projection Period Order:" contentMode="HTML"
                       width="168px" />
                    <OptionGroup id="periodOrder" multiSelect="false"
                             enabled="true" immediate="true"/>
                    <Label value="Therapeutic Class:" contentMode="HTML" width="130px" />
                    <ComboBox id="therapeuticClass" nullSelectionAllowed="false"
                          inputPrompt="-Select One" immediate="true"  />
                    <Label value="History:" contentMode="HTML" />
                    <ComboBox id="history" nullSelectionAllowed="true"
                          immediate="true" />
                    <Label value="Actuals/Projections: " contentMode="HTML"
                       width="118px" />
                    <OptionGroup id="actualOrProj" multiSelect="false"
                             enabled="true" immediate="true"/>
                    <Label value="" contentMode="HTML"/>
                    <Label value="" contentMode="HTML" />
                    <Label value="Brand" contentMode="HTML" />
                    <ComboBox id="brand" nullSelectionAllowed="false"
                          inputPrompt="-Select One" immediate="true" />
                </GridLayout>
            </VerticalLayout>      
        </Panel>

        <HorizontalLayout spacing="true">
            <Button id="generateBtn" caption="GENERATE" immediate="true" />
            <Button id="resetBtn" caption="RESET" immediate="true" />
        </HorizontalLayout>
        <Panel id="tablePanel" caption="Period Pivot View" margin="true"
               spacing="true">
            <VerticalLayout id="verticalLayout" spacing="true"
                           margin="true" immediate="true">
                <VerticalLayout id="tableVerticalLayout" spacing="true"
                             margin="false" immediate="true">
                </VerticalLayout>        
           
                <Button id="excel" immediate="true" primaryStyleName="link" />
           
            </VerticalLayout>        
        </Panel>
	
    </VerticalLayout>
</Panel>
