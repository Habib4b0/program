<?xml version="1.0" encoding="UTF-8"?>
<Panel    xmlns:p="urn:vaadin:parent">

 <VerticalLayout styleName = "width-auto" spacing="true" margin="true" caption="Contract"
			immediate="true">
<HorizontalLayout  spacing="true" immediate="true">
		
  <Panel caption="Contract">

      <VerticalLayout spacing="true" margin="true" caption="Contract"
			immediate="true">
		<Panel caption="Search Criteria">
			<GridLayout spacing="true" margin="true" immediate="true" rows="3" columns="2">
			    <Label caption="Customer: " contentMode="HTML" />
                <ComboBox id="customerDdlb" enabled="true" immediate="true" styleName="comboxsize" />
                 <Label caption="Contract Number:" contentMode="HTML" /> 
                 <TextField id="contractNo" inputPrompt="" immediate="true"/>
                 <Label caption="Contract Name:" contentMode="HTML" /> 
                 <TextField id="contractName" inputPrompt="" immediate="true"/>  
		   </GridLayout>
	    </Panel>
			 <HorizontalLayout spacing="true" immediate="true">
			      <Button id="searchContranct" caption="SEARCH"></Button>
			      <Button id="resetContract" caption="RESET"></Button>
			</HorizontalLayout>
			
			<Panel caption="Results">
                 <Table id="contractResultsTable" width="400px" height="200px"  immediate="true"/>		
			</Panel>
		 </VerticalLayout>
	  	</Panel>
		
			
			<!-- Brand -->
			
		<Panel caption="Brand">
			<VerticalLayout spacing="true" margin="true" caption="Contract"
		    	immediate="true">
			  <Panel caption= "Search Criteria" height="250px">
			    <HorizontalLayout spacing="true" margin="true" immediate="true">
			      <Label caption="Brand Search:" contentMode="HTML" /> 
                  <TextField id="brandSearch" inputPrompt="" immediate="true" />
                </HorizontalLayout>
			</Panel>
			
			<HorizontalLayout spacing="true" immediate="true">
			      <Button id="searchBrand" caption="SEARCH"></Button>
			      <Button id="resetBrand" caption="RESET"></Button>
			</HorizontalLayout>
			
			<Panel caption="Results">
                 <Table id="brandResultsTable" width="400px" height="200px"  immediate="true"/>		
			</Panel>
			</VerticalLayout>
			</Panel>
			</HorizontalLayout>
			  <HorizontalLayout spacing="true" immediate="true">
			     <Button id="importBtn" caption="IMPORT"></Button>
			     <Button id="closeBtn" caption="CLOSE"></Button>
			  </HorizontalLayout> 
			 	</VerticalLayout>
			</Panel>